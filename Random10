SELECT TOP 20
    ISNULL(DB_NAME(t.dbid), 'Ad-hoc/System') AS [데이터베이스명],
    SUBSTRING(t.text, (qs.statement_start_offset/2)+1,
        ((CASE qs.statement_end_offset
          WHEN -1 THEN DATALENGTH(t.text)
          ELSE qs.statement_end_offset
          END - qs.statement_start_offset)/2) + 1) AS [실행된_쿼리문],
    qs.execution_count AS [총_실행횟수],
    (qs.total_worker_time / 1000) AS [총_CPU사용시간_ms],
    (qs.total_worker_time / qs.execution_count / 1000) AS [평균_CPU사용시간_ms],
    qs.total_logical_reads AS [논리적_읽기수_메모리부하],
    qs.last_execution_time AS [마지막_실행시간]
FROM sys.dm_exec_query_stats qs
CROSS APPLY sys.dm_exec_sql_text(qs.sql_handle) t
ORDER BY qs.total_worker_time DESC; -- CPU 사용 시간 기준 정렬