    return render_template('settings.html') # settings.html ÌååÏùºÏù¥ templates Ìè¥ÎçîÏóê ÏûàÏñ¥Ïïº Ìï®

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=5000, debug=True)
