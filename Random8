                    <h3 id="stat-week">0</h3>
                </div>
                <div class="stat-card" style="border-left-color: #ff0070;">
                    <small class="text-secondary">MONTHLY</small>
                    <h3 id="stat-month">0</h3>
                </div>
                <hr>
                <a href="/settings" class="btn btn-dark w-100 mt-3">âš™ï¸ Settings</a>
            </div>
            <div class="col-md-10 p-5">
                <h2 class="mb-4 text-white">Project Overviews</h2>
                <div class="project-table table-responsive">
                    <table class="table table-dark table-hover mb-0">
                        <thead>
                            <tr><th>Group</th><th>Project Name</th><th>Status</th><th>Rule</th><th>Action</th></tr>
                        </thead>
                        <tbody>
                            {% for p in projects %}
                            <tr>
                                <td class="text-info fw-bold">{{ p.GroupName }}</td>
                                <td>{{ p.DisplayName }}</td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>{{ p.LastRuleName or '-' }}</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-info" onclick="openVSCode('{{p.IPAddress}}','{{p.Account}}','{{p.FullPath}}')">VSCode</button>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script>
        function loadStats() {
            fetch('/api/stats/dashboard').then(r=>r.json()).then(data=>{
                document.getElementById('stat-day').innerText = data.counts.day.cnt;
                document.getElementById('stat-week').innerText = data.counts.week.cnt;
                document.getElementById('stat-month').innerText = data.counts.month.cnt;
            });
        }
        function openVSCode(ip, account, path) {
            fetch('/api/open_vscode', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ip, account, path})
            });
        }
        document.addEventListener('DOMContentLoaded', loadStats);
    </script>
</body>
</html>
