import os
import re
from pathlib import Path
import sys

def patch_remmina_theme():
    # 1. Remmina ë°ìŠ¤í¬í†± íŒŒì¼ ìœ„ì¹˜ ì°¾ê¸° (ìš°ë¶„íˆ¬ ë²„ì „ì— ë”°ë¼ ì´ë¦„ì´ ë‹¤ë¥¼ ìˆ˜ ìˆìŒ)
    possible_paths = [
        Path("/usr/share/applications/org.remmina.Remmina.desktop"),
        Path("/usr/share/applications/remmina.desktop")
    ]
    
    source_path = None
    for p in possible_paths:
        if p.exists():
            source_path = p
            break
            
    if not source_path:
        print("ì˜¤ë¥˜: Remmina ì„¤ì¹˜ ê²½ë¡œë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.")
        return

    # 2. ì‚¬ìš©ìë³„ ë¡œì»¬ ì• í”Œë¦¬ì¼€ì´ì…˜ ì„¤ì • ê²½ë¡œ ì •ì˜
    dest_dir = Path.home() / ".local/share/applications"
    dest_path = dest_dir / source_path.name

    # í´ë”ê°€ ì—†ìœ¼ë©´ ìƒì„±
    dest_dir.mkdir(parents=True, exist_ok=True)

    try:
        # 3. ì›ë³¸ íŒŒì¼ ì½ê¸°
        with open(source_path, 'r', encoding='utf-8') as f:
            content = f.read()

        # 4. Exec ë¼ì¸ ìˆ˜ì • (GTK_THEME=Adwaita:light í™˜ê²½ë³€ìˆ˜ ì¶”ê°€)
        # ì˜ˆ: Exec=remmina %U -> Exec=env GTK_THEME=Adwaita:light remmina %U
        new_content = re.sub(
            r'(^Exec=)(.*remmina)',
            r'\1env GTK_THEME=Adwaita:light \2',
            content,
            flags=re.MULTILINE
        )

        # 5. ìˆ˜ì •ëœ ë‚´ìš©ì„ ì‚¬ìš©ì ë¡œì»¬ ê²½ë¡œì— ì €ì¥
        with open(dest_path, 'w', encoding='utf-8') as f:
            f.write(new_content)

        # ì‹¤í–‰ ê¶Œí•œ ë¶€ì—¬
        dest_path.chmod(0o755)

        # ë°ìŠ¤í¬í†± ë°ì´í„°ë² ì´ìŠ¤ ì—…ë°ì´íŠ¸ (ì•„ì´ì½˜ ì¦‰ì‹œ ë°˜ì˜ìš©)
        os.system("update-desktop-database " + str(dest_dir))

        print(f"âœ… ì„±ê³µ: Remminaê°€ ì´ì œ í•­ìƒ [ë¼ì´íŠ¸ ëª¨ë“œ]ë¡œ ì‹¤í–‰ë©ë‹ˆë‹¤.")
        print(f"ğŸ“ ìƒì„±ëœ íŒŒì¼: {dest_path}")
        print("â„¹ï¸ Remminaë¥¼ ì™„ì „íˆ ì¢…ë£Œ í›„ ë‹¤ì‹œ ì‹¤í–‰í•´ì£¼ì„¸ìš”.")

    except Exception as e:
        print(f"âŒ ì˜¤ë¥˜ ë°œìƒ: {e}")

if __name__ == "__main__":
    patch_remmina_theme()
