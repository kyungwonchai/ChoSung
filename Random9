@app.route('/')
def index():
    conn = get_db_connection()
    cursor = conn.cursor(as_dict=True)
    cursor.execute("SELECT IPAddress, Account, DisplayName, FullPath, CONVERT(VARCHAR, LastUpdated, 120) as LastUpdated FROM FolderIndex ORDER BY LastUpdated DESC")
    rows = cursor.fetchall()
    conn.close()

    # [여기가 문제의 원인이었습니다]
    # 데이터를 HTML로 보내기 전에, 서버단에서 미리 윈도우 경로(\)를 리눅스/웹 친화적인 (/)로 싹 바꿉니다.
    # 이렇게 하면 자바스크립트가 '\'를 보고 탈출문자로 오해해서 지워버리는 일이 아예 발생하지 않습니다.
    for row in rows:
        if row['FullPath'] and '\\' in row['FullPath']:
            row['FullPath'] = row['FullPath'].replace('\\', '/')
            
    return render_template('index.html', folders=rows)