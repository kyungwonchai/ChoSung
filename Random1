using DevExpress.XtraDiagram;
using System;
using System.Windows.Forms;

namespace DiagramSaveLoadExample
{
    public partial class MainForm : Form
    {
        private DiagramControl diagramControl;

        public MainForm()
        {
            InitializeComponent();
            InitializeDiagramControl();
        }

        private void InitializeDiagramControl()
        {
            diagramControl = new DiagramControl();
            diagramControl.Dock = DockStyle.Fill;
            Controls.Add(diagramControl);
        }

        private void SaveButton_Click(object sender, EventArgs e)
        {
            SaveDiagramToFile("diagram.xml");
            MessageBox.Show("다이어그램이 성공적으로 저장되었습니다.");
        }

        private void LoadButton_Click(object sender, EventArgs e)
        {
            LoadDiagramFromFile("diagram.xml");
            MessageBox.Show("다이어그램이 성공적으로 불러왔습니다.");
        }

        private void SaveDiagramToFile(string filePath)
        {
            diagramControl.ExportToXml(filePath);
        }

        private void LoadDiagramFromFile(string filePath)
        {
            diagramControl.ImportFromXml(filePath);
        }
    }
}
