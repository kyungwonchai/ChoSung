private void barLineChart_MouseClick(object sender, MouseEventArgs e)
{
    // 마우스 클릭 위치의 HitInfo를 가져옵니다.
    ChartHitInfo hitInfo = barLineChart.CalcHitInfo(e.X, e.Y);

    // 클릭한 위치에 SeriesPoint가 있는지 확인합니다.
    if (hitInfo.InSeries)
    {
        SeriesPoint point = hitInfo.SeriesPoint;
        // SeriesPoint의 Argument는 X축 값입니다.
        MessageBox.Show($"클릭한 날짜: {point.Argument}");
    }
}

// 이전 코드...

barLineChart.MouseClick += barLineChart_MouseClick;
