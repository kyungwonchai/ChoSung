private void deleteButton_Click(object sender, EventArgs e)
{
    string fileToDelete = textBox2.Text;

    if (!string.IsNullOrEmpty(fileToDelete) && File.Exists(fileToDelete))
    {
        DialogResult result = MessageBox.Show("정말로 이 파일을 삭제하시겠습니까?", "파일 삭제", MessageBoxButtons.YesNo);

        if (result == DialogResult.Yes)
        {
            File.Delete(fileToDelete);
            RefreshFileList();
            textBox1.Clear();
            textBox2.Clear();
        }
    }
    else
    {
        MessageBox.Show("삭제할 파일을 선택해주세요.");
    }
}
