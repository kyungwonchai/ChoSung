private void PlayFile(int index)
{
    if (index >= 0 && index < playbackFiles.Count)
    {
        string filePath = playbackFiles[index];
        _mediaPlayer.Play(filePath);
        lblCurrentFile.Text = Path.GetFileName(filePath); // 파일명 표시

        // 트랙바 초기화
        trackBar.Value = 0;
    }
}
