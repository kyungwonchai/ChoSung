// 전체 텍스트 서식 초기화
Document document = richEditControl1.Document;
CharacterProperties cp = document.BeginUpdateCharacters(0, document.Text.Length);
cp.BackColor = Color.Transparent; // 배경색을 초기화합니다.
document.EndUpdateCharacters(cp);

// 특정 문자열을 검색하고 해당 부분에 색상 입히기
string searchString = "abcd"; // 검색하려는 문자열입니다.
DocumentRange[] ranges = document.FindAll(searchString, SearchOptions.None);
foreach (DocumentRange range in ranges)
{
    cp = document.BeginUpdateCharacters(range);
    cp.BackColor = Color.Yellow; // 이 부분의 배경색을 변경합니다.
    document.EndUpdateCharacters(cp);
}
