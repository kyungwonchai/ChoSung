using LockerManagementApp.Models; // LockerAssignment ëª¨ë¸ ì‚¬ìš©
using System;
using System.Globalization;
using System.Windows;
using System.Windows.Data; // IMultiValueConverter ì‚¬ìš©
using System.Windows.Media; // Brush, Brushes ì‚¬ìš©
using System.Diagnostics; // Debug ì‚¬ìš©

namespace LockerManagementApp.Infrastructure
{
    /// <summary>
    /// í˜„ì¬ ì…€ì˜ ê°’/ì»¬ëŸ¼ê³¼ ì„ íƒëœ ì…€ì˜ ê°’/ì»¬ëŸ¼ì„ ë¹„êµí•˜ì—¬ ë°°ê²½ìƒ‰ì„ ê²°ì •í•˜ëŠ” IMultiValueConverter ì…ë‹ˆë‹¤.
    /// </summary>
    public class HighlightCellConverter : IMultiValueConverter
    {
        // í•˜ì´ë¼ì´íŠ¸ ìƒ‰ìƒ
        private static readonly Brush HighlightBrush = Brushes.Yellow;
        // ê¸°ë³¸ ë°°ê²½ìƒ‰ (ë˜ëŠ” íˆ¬ëª…)
        private static readonly Brush DefaultBrush = Brushes.Transparent; // ë˜ëŠ” nullì´ë‚˜ DependencyProperty.UnsetValue

        public object Convert(object[] values, Type targetType, object parameter, CultureInfo culture)
        {
            // values ë°°ì—´ ì˜ˆìƒ:
            // [0]: í˜„ì¬ ì…€ì˜ ê°’ (cellData.Value)
            // [1]: í˜„ì¬ ì…€ì˜ ì»¬ëŸ¼ í•„ë“œëª… (cellData.Column.FieldName)
            // [2]: ViewModelì˜ ì„ íƒëœ ì…€ ê°’ (SelectedCellValue)
            // [3]: ViewModelì˜ ì„ íƒëœ ì…€ ì»¬ëŸ¼ í•„ë“œëª… (SelectedCellColumnFieldName)

            if (values == null || values.Length < 4 ||
                values[1] == null || !(values[1] is string currentFieldName) || // í˜„ì¬ ì»¬ëŸ¼ ì´ë¦„
                values[3] == null || !(values[3] is string selectedFieldName) || // ì„ íƒëœ ì»¬ëŸ¼ ì´ë¦„
                string.IsNullOrEmpty(selectedFieldName)) // ì„ íƒëœ ì»¬ëŸ¼ì´ ì—†ìœ¼ë©´ í•˜ì´ë¼ì´íŠ¸ ì•ˆ í•¨
            {
                return DefaultBrush; // ë˜ëŠ” DependencyProperty.UnsetValue;
            }

            // í˜„ì¬ ì…€ì˜ ì»¬ëŸ¼ì´ ì„ íƒëœ(í¬ì»¤ìŠ¤ëœ) ì»¬ëŸ¼ê³¼ ë™ì¼í•œì§€ í™•ì¸
            if (currentFieldName == selectedFieldName)
            {
                object currentValue = values[0];
                object selectedValue = values[2];

                // í˜„ì¬ ì…€ ê°’ê³¼ ì„ íƒëœ ì…€ ê°’ì´ ê°™ì€ì§€ ë¹„êµ (null ì²˜ë¦¬ í¬í•¨)
                if (Equals(currentValue, selectedValue))
                {
                    // ê°™ìœ¼ë©´ í•˜ì´ë¼ì´íŠ¸ ìƒ‰ìƒ ë°˜í™˜
                    return HighlightBrush;
                }
            }

            // ì¡°ê±´ì— ë§ì§€ ì•Šìœ¼ë©´ ê¸°ë³¸ ë°°ê²½ìƒ‰ ë°˜í™˜
            return DefaultBrush; // ë˜ëŠ” DependencyProperty.UnsetValue;
        }

        public object[] ConvertBack(object value, Type[] targetTypes, object parameter, CultureInfo culture)
        {
            // ì—­ë³€í™˜ì€ í•„ìš”í•˜ì§€ ì•ŠìŒ
            throw new NotImplementedException();
        }
    }
}
