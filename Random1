SELECT 
    기간,
    구분,
    MAX(입력시간) AS 최근_입력시간,
    SEC_TO_TIME(AVG(TIME_TO_SEC(흐름기변))) AS 평균_흐름기변,
    SEC_TO_TIME(AVG(TIME_TO_SEC(이형_B안정화))) AS 평균_이형_B안정화,
    SEC_TO_TIME(AVG(TIME_TO_SEC(이형_T안정화))) AS 평균_이형_T안정화,
    SEC_TO_TIME(AVG(TIME_TO_SEC(MAOI_B안정화))) AS 평균_MAOI_B안정화,
    SEC_TO_TIME(AVG(TIME_TO_SEC(MAOI_T안정화))) AS 평균_MAOI_T안정화,
    SEC_TO_TIME(AVG(TIME_TO_SEC(SPanTIme))) AS 평균_SPanTIme,
    SEC_TO_TIME(AVG(TIME_TO_SEC(전공정흐름))) AS 평균_전공정흐름,
    SEC_TO_TIME(AVG(TIME_TO_SEC(후공정흐름))) AS 평균_후공정흐름
FROM view_mch_monthdetail
GROUP BY 기간, 구분;
