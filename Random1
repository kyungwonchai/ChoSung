                        <TextBlock Grid.Row="1" Grid.Column="0" x:Name="Date1" Style="{StaticResource DateCellStyle}" Padding="10"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" x:Name="Date2" Style="{StaticResource DateCellStyle}" Padding="10"/>
                        <TextBlock Grid.Row="3" Grid.Column="0" x:Name="Date3" Style="{StaticResource DateCellStyle}" Padding="10"/>
                        <TextBlock Grid.Row="4" Grid.Column="0" x:Name="Date4" Style="{StaticResource DateCellStyle}" Padding="10"/>

                        <TextBlock Grid.Row="1" Grid.Column="1" Text="1" Style="{StaticResource NumberCellStyle}" Padding="10"/>
