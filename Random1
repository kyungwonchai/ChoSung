private void cardView1_CustomDrawCardField(object sender, DevExpress.XtraGrid.Views.Base.RowCellCustomDrawEventArgs e)
{
    if (e.Column.FieldName == "ColumnB")
    {
        if (e.CellValue != null && e.CellValue is byte[])
        {
            byte[] imageData = (byte[])e.CellValue;

            using (MemoryStream stream = new MemoryStream(imageData))
            {
                Image image = Image.FromStream(stream);

                // 이미지 크기 조정
                int desiredWidth = 300; // 원하는 가로 크기로 변경
                int desiredHeight = 300; // 원하는 세로 크기로 변경
                Image resizedImage = ResizeImage(image, desiredWidth, desiredHeight);

                // 이미지 그리기
                e.Graphics.DrawImage(resizedImage, e.Bounds);

                e.Handled = true;
            }
        }
    }
}

private Image ResizeImage(Image image, int width, int height)
{
    Bitmap resizedImage = new Bitmap(width, height);
    using (Graphics graphics = Graphics.FromImage(resizedImage))
    {
        graphics.DrawImage(image, 0, 0, width, height);
    }
    return resizedImage;
}
