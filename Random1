private void TableView_CellValueChanged(object sender, DevExpress.Xpf.Grid.CellValueChangedEventArgs e)
{
    var view = sender as DevExpress.Xpf.Grid.TableView;
    if (view == null)
        return;

    // Get the focused row
    var focusedRow = view.Grid.CurrentItem;

    // Cast the focused row to the appropriate data type
    if (focusedRow is YourRowType row)
    {
        // 여기에서 row를 DataRow 또는 본래의 데이터 타입으로 사용 가능
    }
}
