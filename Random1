using DevExpress.XtraRichEdit.API.Native;

// 리치 텍스트 컨트롤 초기화 후 스타일 설정
richEditControl.Loaded += (s, e) =>
{
    var document = richEditControl.Document;

    // 기본 문서 서식 설정
    document.BeginUpdate();
    document.DefaultCharacterProperties.ForeColor = System.Windows.Media.Colors.White; // 글자색 흰색
    document.DefaultParagraphProperties.BackColor = System.Windows.Media.Colors.Black; // 배경 검정색
    document.EndUpdate();
};
