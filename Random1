using DevExpress.LookAndFeel;
using DevExpress.XtraEditors;

// 특정 컨트롤에 스킨 스타일을 적용하는 메서드
private void ApplySkinStyleToControl(Control targetControl, UserLookAndFeel skin)
{
    // 컨트롤에 대한 스킨 스타일을 설정
    LookAndFeelHelper.ForceDefaultLookAndFeelChanged();
    LookAndFeelHelper.DefaultLookAndFeel.SetStyle(skin, false);
    LookAndFeelHelper.ForceDefaultLookAndFeelChanged();

    // 컨트롤을 다시 그리기 위해 Invalidate 호출
    targetControl.Invalidate(true);
}

// 사용 예시
private void ApplySkinStyle()
{
    // 원하는 스킨 스타일을 설정
    UserLookAndFeel skin = new UserLookAndFeel(this);

    // 특정 컨트롤에 스킨 스타일 적용
    ApplySkinStyleToControl(button1, skin);
}
