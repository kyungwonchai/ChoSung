using System;
using System.Diagnostics;
using System.Windows.Forms;

namespace FileExecutionExample
{
    public partial class MainForm : Form
    {
        public MainForm()
        {
            InitializeComponent();
        }

        private void OpenFileButton_Click(object sender, EventArgs e)
        {
            string filePath = @"C:\Path\To\Your\File.pbit"; // 실행할 파일의 경로

            try
            {
                Process.Start(filePath);
            }
            catch (Exception ex)
            {
                MessageBox.Show("파일을 실행하는 동안 오류가 발생했습니다: " + ex.Message);
            }
        }
    }
}
