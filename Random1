Function AvgTime(rng As Range) As Date
    Dim sumTime As Date
    Dim countTime As Long
    Dim cell As Range
    
    sumTime = 0
    countTime = 0
    
    For Each cell In rng
        If IsDate(cell.Value) Then
            sumTime = sumTime + cell.Value
            countTime = countTime + 1
        End If
    Next cell
    
    If countTime > 0 Then
        AvgTime = sumTime / countTime
    Else
        AvgTime = 0
    End If
End Function
