using DevExpress.Xpf.Grid;
using System;
using System.Data.SqlClient;

namespace YourNamespace
{
    public partial class YourWindow : Window
    {
        public YourWindow()
        {
            InitializeComponent();
        }

        private void ButtonA_Click(object sender, RoutedEventArgs e)
        {
            // 행이 선택되어 있는지 확인
            if (gridControl.SelectedItem != null)
            {
                // 사용자에게 행을 추가할 것인지 확인
                MessageBoxResult result = MessageBox.Show("행을 추가하시겠습니까?", "행 추가", MessageBoxButton.YesNo);
                if (result == MessageBoxResult.Yes)
                {
                    // 선택된 행의 데이터 가져오기
                    YourRowType selectedRow = (YourRowType)gridControl.SelectedItem;
                    
                    // 새 행 데이터 생성
                    YourRowType newRow = new YourRowType()
                    {
                        ColumnA = (Convert.ToInt32(selectedRow.ColumnA) + 1).ToString(),
                        확정일 = selectedRow.확정일,
                        구분 = selectedRow.구분,
                        라인 = selectedRow.라인
                    };
                    
                    // 새 행을 데이터에 추가
                    yourData.Add(newRow);
                    
                    // DB에 행 추가
                    using (SqlConnection connection = new SqlConnection("YourConnectionString"))
                    {
                        connection.Open();
                        
                        string insertQuery = "INSERT INTO YourTable (ColumnA, 확정일, 구분, 라인) VALUES (@ColumnA, @확정일, @구분, @라인)";
                        using (SqlCommand command = new SqlCommand(insertQuery, connection))
                        {
                            command.Parameters.AddWithValue("@ColumnA", newRow.ColumnA);
                            command.Parameters.AddWithValue("@확정일", newRow.확정일);
                            command.Parameters.AddWithValue("@구분", newRow.구분);
                            command.Parameters.AddWithValue("@라인", newRow.라인);
                            
                            command.ExecuteNonQuery();
                        }
                    }
                }
            }
        }
    }

    public class YourRowType
    {
        public string ColumnA { get; set; }
        public DateTime 확정일 { get; set; }
        public string 구분 { get; set; }
        public string 라인 { get; set; }
    }
}
