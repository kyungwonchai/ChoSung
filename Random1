import os

def get_latest_txt_file(path):
    files = [f for f in os.listdir(path) if os.path.isfile(os.path.join(path, f)) and f.endswith('.txt')]
    if not files:
        return None  # 경로에 확장자가 .txt인 파일이 없는 경우 None 반환
    latest_file = max(files, key=lambda f: os.path.getmtime(os.path.join(path, f)))
    return os.path.join(path, latest_file)

# 예시 사용법
path = '/path/to/files'  # 실제 경로로 변경해야 합니다.
latest_file = get_latest_txt_file(path)
if latest_file:
    print("최신 텍스트 파일:", latest_file)
else:
    print("경로에 .txt 파일이 없습니다.")
