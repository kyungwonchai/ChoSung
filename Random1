private void gridView_CellValueChanged(object sender, DevExpress.Xpf.Grid.CellValueChangedEventArgs e)
{
    // GridView 객체를 가져옵니다.
    var view = sender as DevExpress.Xpf.Grid.TableView;

    // 변경된 셀의 행 핸들과 컬럼 이름을 가져옵니다.
    int rowHandle = e.RowHandle;
    string columnName = e.Column.FieldName;

    // 특정 셀의 값을 업데이트
    view.Grid.SetCellValue(rowHandle, columnName, e.Value);

    // ... 나머지 로직
}
