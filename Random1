using System;
using MySql.Data.MySqlClient;

class Program
{
    static void Main()
    {
        string connString = "Your Connection String Here";
        using (MySqlConnection conn = new MySqlConnection(connString))
        {
            conn.Open();

            // 행 수를 가져오는 쿼리
            MySqlCommand cmdRowCount = new MySqlCommand("SELECT COUNT(*) FROM YourTable", conn);
            int rowCount = Convert.ToInt32(cmdRowCount.ExecuteScalar());

            Console.WriteLine($"Total Rows: {rowCount}");

            // 행 수가 n개 이상일 경우 다음 처리로 넘어가는 로직
            int n = 10; // 원하는 행 수
            if (rowCount >= n)
            {
                // 다음 처리 로직
                Console.WriteLine("다음 처리로 넘어갑니다.");
            }
            else
            {
                Console.WriteLine("행 수가 n개 이상이 아닙니다.");
            }
        }
    }
}
