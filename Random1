import bpy
import os
import sys

# 스크립트 파일이 있는 디렉토리를 sys.path에 추가 (필요한 경우)
script_dir = os.path.dirname(bpy.data.filepath) # 현재 열려있는 .blend 파일 기준
if script_dir not in sys.path:
    sys.path.append(script_dir)

# 이제 my_utils 모듈을 임포트합니다.
import my_utils # .py 확장자는 제외하고 파일 이름만 사용합니다.

# my_utils.py 에 정의된 함수와 클래스 사용
my_utils.say_hello("Blender User")

custom_object = my_utils.MyCustomClass(123)
custom_object.print_value()

# 특정 함수나 클래스만 임포트할 수도 있습니다.
