// 도넛 차트 생성
ChartControl doughnutChart = new ChartControl();
Series DDSeries1 = new Series("DDSeries1", ViewType.Doughnut);

// 데이터 행에서 수행 횟수와 실패 횟수를 가져옵니다.
int attempts = int.Parse(dt.Rows[0]["수행횟수"].ToString());
int failures = int.Parse(dt.Rows[0]["실패횟수"].ToString());

// 각 시리즈 포인트에 대해 값을 설정하고, LegendText 속성을 설정합니다.
SeriesPoint point1 = new SeriesPoint("Attempts", attempts);
point1.LegendText = $"성공율: {attempts}%";
DDSeries1.Points.Add(point1);

SeriesPoint point2 = new SeriesPoint("Failures", failures);
point2.LegendText = $"실패: {failures}%";
DDSeries1.Points.Add(point2);

doughnutChart.Series.Add(DDSeries1);
