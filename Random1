는 예제 코드입니다:

csharp
코드 복사
using System;

public class Logger
{
    public void LogWithUniqueKey()
    {
        // 함수 시작 시 새로운 Guid를 생성하여 고유 키로 사용
        Guid uniqueKey = Guid.NewGuid();
        
        // 함수 시작 로그
        Log($"Function Start - Key: {uniqueKey}");

        try
        {
            // 함수 내부 로직 수행
            // 여기에 함수의 주요 기능을 넣으면 됩니다.
        }
        finally
        {
            // 함수 종료 로그
            Log($"Function End - Key: {uniqueKey}");
        }
    }

    private void Log(string message)
    {
        // 여기서는 단순하게 콘솔에 출력하도록 했지만, 실제 로그를 파일이나 시스템에 남길 수 있습니다.
        Console.WriteLine($"{DateTime.Now}: {message}");
    }
}

// 사용 예시
class Program
{
    static void Main(string[] args)
    {
        Logger logger = new Logger();
        logger.LogWithUniqueKey();
    }
}