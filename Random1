// 콤보박스에 물품 품명 채우기
using (SqlConnection connection = new SqlConnection(connectionString))
{
    connection.Open();
    SqlCommand cmd = new SqlCommand("SELECT PartName FROM VISA_PartManage", connection);
    SqlDataReader reader = cmd.ExecuteReader();

    while (reader.Read())
    {
        comboBoxEdit1.Properties.Items.Add(reader["PartName"].ToString());
    }
    
    connection.Close();
}

// 수량은 1~10까지
for (int i = 1; i <= 10; i++)
{
    comboBoxEdit2.Properties.Items.Add(i.ToString());
}
comboBoxEdit2.SelectedIndex = 0; // 기본값 1
