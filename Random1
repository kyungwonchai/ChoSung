using System;
using System.Threading;
using System.Windows.Forms;

namespace SingleInstanceApp
{
    static class Program
    {
        static Mutex mutex = new Mutex(true, "{E6123AFB-BD31-48F3-8A14-99684D8FAF37}");

        [STAThread]
        static void Main()
        {
            if (mutex.WaitOne(TimeSpan.Zero, true))
            {
                Application.EnableVisualStyles();
                Application.SetCompatibleTextRenderingDefault(false);
                Application.Run(new YourForm()); // YourForm은 실제 폼 클래스 이름으로 변경해주세요.
                mutex.ReleaseMutex();
            }
            else
            {
                MessageBox.Show("이미 실행 중인 프로그램이 있습니다.");
            }
        }
    }
}
