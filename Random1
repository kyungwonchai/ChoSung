private void Form1_Load(object sender, EventArgs e)
{
    // RadioButton 초기화
    InitializeRadioButtons();
}

private void InitializeRadioButtons()
{
    // RadioButton 1
    RadioButton radioButton1 = new RadioButton();
    radioButton1.Text = "입고";
    radioButton1.Location = new Point(10, 10);
    radioButton1.CheckedChanged += RadioButton_CheckedChanged;
    Controls.Add(radioButton1);

    // RadioButton 2
    RadioButton radioButton2 = new RadioButton();
    radioButton2.Text = "출고";
    radioButton2.Location = new Point(120, 10);
    radioButton2.CheckedChanged += RadioButton_CheckedChanged;
    Controls.Add(radioButton2);

    // RadioButton 3
    RadioButton radioButton3 = new RadioButton();
    radioButton3.Text = "신청";
    radioButton3.Location = new Point(230, 10);
    radioButton3.CheckedChanged += RadioButton_CheckedChanged;
    Controls.Add(radioButton3);
}

private void RadioButton_CheckedChanged(object sender, EventArgs e)
{
    // 모든 RadioButton의 색상 초기화
    foreach (Control control in Controls)
    {
        if (control is RadioButton radioButton)
        {
            radioButton.BackColor = DefaultBackColor;
        }
    }

    // 선택된 RadioButton의 색상 변경
    if (sender is RadioButton selectedRadioButton)
    {
        selectedRadioButton.BackColor = Color.Yellow;
    }
}
