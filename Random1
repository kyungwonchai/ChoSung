from flask import Flask, request, jsonify, render_template

app = Flask(__name__)

@app.route('/', methods=['GET', 'POST'])
def index():
    if request.method == 'POST':
        password = request.form.get('password')
        if password == 'kw1111':
            if 'buttonA' in request.form:
                # 버튼 A를 클릭한 경우, 성공 메시지를 JSON 형태로 반환합니다.
                return jsonify({'message': '성공'})
            elif 'buttonB' in request.form:
                # 버튼 B를 클릭한 경우, 다른 동작을 수행하도록 할 수 있습니다.
                return '버튼 B를 클릭했습니다.'
            else:
                return '버튼을 클릭하세요.'
        else:
            return '비밀번호가 올바르지 않습니다.'
    else:
        return render_template('index.html')

if __name__ == '__main__':
    app.run()
