  <dxg:GridControl ItemsSource="{Binding Items}"
                         AutoGenerateColumns="AddNew"                         
                         SelectionMode="Row">
            <dxg:GridControl.Resources>
                <ControlTemplate x:Key="{dxgt:GridRowThemeKey ResourceKey=RowTemplate, IsThemeIndependent=True}" TargetType="dxg:RowControl">
                    <Border BorderBrush="Transparent" x:Name="RowContentBorder">
                        <Grid>
                            <Border x:Name="Background" Background="{TemplateBinding Background}" />
                            <Border x:Name="BottomLine" Height="1" Background="{TemplateBinding BorderBrush}" VerticalAlignment="Bottom"/>
                            <Grid x:Name="PART_LayoutPanel"/>
                            <Border x:Name="FocusBorder" BorderBrush="Transparent"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="dxg:DataViewBase.IsMouseOver" Value="True">
                            <Setter TargetName="FocusBorder" Property="BorderBrush" Value="Red" />
                            <Setter TargetName="FocusBorder" Property="BorderThickness" Value="3" />
                        </Trigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsSelected}" Value="True" />
                                <Condition Binding="{Binding IsFocused}" Value="True" />
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="FocusBorder" Property="BorderBrush" Value="Yellow" />
                            <Setter TargetName="FocusBorder" Property="BorderThickness" Value="3" />
                        </MultiDataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsSelected}" Value="True" />
                                <Condition Binding="{Binding IsFocused}" Value="False" />
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="FocusBorder" Property="BorderBrush" Value="Green" />
                            <Setter TargetName="FocusBorder" Property="BorderThickness" Value="3" />
                        </MultiDataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </dxg:GridControl.Resources>
            <dxg:GridControl.View>
                <dxg:TableView NavigationStyle="Row"/>
            </dxg:GridControl.View>
        </dxg:GridControl>