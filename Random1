private void OnBandLoaded(object sender, RoutedEventArgs e)
{
    GridControlBand band = sender as GridControlBand;
    if (band != null)
    {
        foreach (GridColumn column in band.Columns)
        {
            // 헤더 가운데 정렬
            Style headerStyle = new Style(typeof(GridColumnHeader));
            headerStyle.Setters.Add(new Setter(HorizontalContentAlignmentProperty, HorizontalAlignment.Center));

            // 셀 가운데 정렬
            Style cellStyle = new Style(typeof(GridCellData));
            cellStyle.Setters.Add(new Setter(HorizontalAlignmentProperty, HorizontalAlignment.Center));
            
            // 숫자일 경우 오른쪽 정렬
            if (column.FieldType == typeof(int) || column.FieldType == typeof(decimal) || column.FieldType == typeof(double))
            {
                cellStyle.Setters.Add(new Setter(HorizontalAlignmentProperty, HorizontalAlignment.Right));
            }

            column.HeaderStyle = headerStyle;
            column.CellStyle = cellStyle;
        }
    }
}
