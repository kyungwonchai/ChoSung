import ipywidgets as widgets
from IPython.display import display

# 웹 애플리케이션의 콜백 함수
def on_button_click(b):
    output.clear_output()
    with output:
        print("버튼이 클릭되었습니다!")

# 버튼 생성
button = widgets.Button(description="클릭하세요!")
button.on_click(on_button_click)

# 출력을 위한 위젯 생성
output = widgets.Output()

# 버튼과 출력 위젯을 디스플레이
display(button, output)
