private void Form_Load(object sender, EventArgs e)
{
    foreach (var page in ribbonControl1.Pages)
    {
        foreach (var group in page.Groups)
        {
            foreach (BarItemLink item in group.ItemLinks)
            {
                item.Item.ItemClick += AllItems_ItemClick;
            }
        }
    }
}

private void AllItems_ItemClick(object sender, ItemClickEventArgs e)
{
    splashScreenManager1.ShowWaitForm();
    
    // 아이템별 동작 코드를 여기에 추가하세요.
    
    // SplashScreenManager의 종료는 작업 수행 코드 내에서 알맞게 처리하시면 됩니다.
}
