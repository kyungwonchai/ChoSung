RecorderOptions options = new RecorderOptions
{
    RecorderMode = RecorderMode.Video, // 녹화 모드 (영상, 오디오 또는 둘 다)
    IsThrottlingDisabled = false, // 프레임 제한 여부
    IsHardwareEncodingEnabled = false, // 하드웨어 인코딩 사용 여부
    IsLowLatencyEnabled = false, // 낮은 지연 시간 모드 사용 여부
    IsMp4FastStartEnabled = false, // MP4 빠른 시작 사용 여부
    AudioOptions = new AudioOptions // 오디오 옵션 설정
    {
        Bitrate = AudioBitrate.bitrate_128kbps,
        Channels = 2,
        IsAudioEnabled = true // 오디오 녹화 활성화 여부
    },
    VideoOptions = new VideoOptions // 비디오 옵션 설정
    {
        BitrateMode = BitrateControlMode.UnconstrainedVBR,
        Bitrate = 8000,
        Framerate = 60,
        IsFixedFramerate = true,
        EncoderProfile = H264Profile.Main
    },
    MouseOptions = new MouseOptions // 마우스 옵션 설정
    {
        IsMouseClicksDetected = true, // 마우스 클릭 감지 여부
        ClickColor = "#FFFF00" // 마우스 클릭 색상
    }
};
