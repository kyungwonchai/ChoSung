<Application x:Class="YourNamespace.App"
             ...
             xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking">
    <Application.Resources>
        <!-- DocumentPanel 타이틀 바 스타일 -->
        <Style TargetType="{x:Type dxdo:DocumentPanel}">
            <Setter Property="CaptionHeight" Value="30"/>
            <Setter Property="CaptionForeground" Value="Black"/>
            <Setter Property="CaptionBackground" Value="LightGray"/>
            <Style.Triggers>
                <Trigger Property="IsActive" Value="True">
                    <Setter Property="CaptionBackground" Value="Blue"/>
                    <Setter Property="CaptionForeground" Value="Yellow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
