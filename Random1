using System;
using System.Windows.Media;
using DevExpress.Xpf.Grid;

namespace LockRowAndChangeColor
{
    public partial class MainWindow : Window
    {
        public MainWindow()
        {
            InitializeComponent();
        }

        private void LockAndChangeColor(int keyValue)
        {
            TableView tableView = gridControl1.View as TableView;
            if (tableView != null)
            {
                foreach (var rowHandle in tableView.VisibleRowHandles)
                {
                    var rowData = tableView.GetRow(rowHandle) as YourDataItemType; // YourDataItemType에 실제 데이터 아이템 타입을 사용하세요.
                    if (rowData != null && rowData.key1 == keyValue)
                    {
                        tableView.SetRowCellValue(rowHandle, "AllowFocus", false); // 행 잠금
                        tableView.SetRowCellValue(rowHandle, "BackgroundColor", Colors.Yellow); // 배경색 변경
                    }
                }
            }
        }

        private void Button_Click(object sender, RoutedEventArgs e)
        {
            LockAndChangeColor(511162);
        }
    }
}
