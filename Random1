using System;
using System.Data;
using System.Data.SqlClient;

namespace ExecuteNonQueryExample
{
    class Program
    {
        static void Main(string[] args)
        {
            string connectionString = "Data Source=서버주소;Initial Catalog=데이터베이스명;User ID=아이디;Password=비밀번호";
            
            using (SqlConnection connection = new SqlConnection(connectionString))
            {
                connection.Open();

                using (SqlCommand command = new SqlCommand("저장프로시저_이름", connection))
                {
                    command.CommandType = CommandType.StoredProcedure;

                    // 저장 프로시저의 출력 파라미터를 설정합니다.
                    SqlParameter outputParam = new SqlParameter("@결과값", SqlDbType.Int)
                    {
                        Direction = ParameterDirection.Output
                    };
                    command.Parameters.Add(outputParam);

                    // 쿼리 실행
                    command.ExecuteNonQuery();

                    // 출력 파라미터에서 값을 가져옵니다.
                    int result = (int)command.Parameters["@결과값"].Value;
                    Console.WriteLine("반환된 값: " + result);
                }
            }
        }
    }
}
