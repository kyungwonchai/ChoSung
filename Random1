// 도넛 차트 생성
ChartControl doughnutChart = new ChartControl();
Series DDSeries1 = new Series("DDSeries1", ViewType.Doughnut);

// 데이터 행에서 수행 횟수와 실패 횟수를 가져옵니다.
int attempts = int.Parse(dt.Rows[0]["수행횟수"].ToString());
int failures = int.Parse(dt.Rows[0]["실패횟수"].ToString());

// 시리즈 포인트를 생성하고 범례 텍스트 패턴을 설정합니다.
DDSeries1.LegendTextPattern = "성공율: {A}: {V}%";
DDSeries1.Points.Add(new SeriesPoint("Attempts", attempts));

Series DDSeries2 = new Series("DDSeries2", ViewType.Doughnut);
DDSeries2.LegendTextPattern = "실패: {A}: {V}%";
DDSeries2.Points.Add(new SeriesPoint("Failures", failures));

doughnutChart.Series.Add(DDSeries1);
doughnutChart.Series.Add(DDSeries2);
