public Form1()
{
    InitializeComponent();
    webView21.CoreWebView2Ready += WebView21_CoreWebView2Ready;
    webView21.Source = new Uri("https://example.com"); // 원하는 URL로 설정
}

private void WebView21_CoreWebView2Ready(object sender, EventArgs e)
{
    webView21.CoreWebView2.AcceleratorKeyPressed += CoreWebView2_AcceleratorKeyPressed;
}

private void CoreWebView2_AcceleratorKeyPressed(object sender, CoreWebView2AcceleratorKeyPressedEventArgs e)
{
    if (e.VirtualKey == 67 && e.KeyEventKind == CoreWebView2KeyEventKind.SystemKeyDown && e.IsControlKeyDown)
    {
        MessageBox.Show("Ctrl+C를 눌렀습니다.");
        e.Handled = true; // 이벤트가 처리되었음을 알립니다.
    }
}
