using System;
using System.Data.SqlClient;

namespace YourNamespace
{
    public class YourForm : Form
    {
        private string connectionString = "Data Source=YourServer;Initial Catalog=YourDatabase;Integrated Security=True";

        // 필드(스칼라 값)를 읽어오는 메서드
        private object ReadScalarValueFromTable()
        {
            object scalarValue = null;

            using (SqlConnection connection = new SqlConnection(connectionString))
            {
                string query = "SELECT YourField FROM tbl1";

                using (SqlCommand command = new SqlCommand(query, connection))
                {
                    connection.Open();

                    scalarValue = command.ExecuteScalar();

                    connection.Close();
                }
            }

            return scalarValue;
        }

        // 필드(스칼라 값)를 읽어와서 사용하는 예시 메서드
        private void ExampleMethod()
        {
            object value = ReadScalarValueFromTable();

            if (value != null)
            {
                // 필드(스칼라 값) 사용 예시
                string fieldValue = value.ToString();
                // ...
            }
        }
    }
}
