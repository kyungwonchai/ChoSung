private void PlayFile(string filePath)
{
    // 기존 MediaPlayer 정리
    videoView1.SourceProvider.MediaPlayer.Stop();

    // 새로운 MediaPlayer 객체 생성
    var newMediaPlayer = new MediaPlayer(_libVLC);

    // Media 설정
    var media = new Media(_libVLC, filePath, FromType.FromPath);
    newMediaPlayer.Media = media;

    // videoView1에 새로운 MediaPlayer 설정
    videoView1.SourceProvider.MediaPlayer = newMediaPlayer;

    // 재생 시작
    newMediaPlayer.Play();

    // 파일명 표시
    lblCurrentFile.Text = Path.GetFileName(filePath);
}
