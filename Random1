using DevExpress.XtraGrid.Views.Grid; // GridView 사용을 위해 추가

// GridView의 높이를 계산하여 GridControl의 높이를 조절하는 함수
private void AdjustGridControlHeight()
{
    GridView gridView = gridControl1.MainView as GridView;
    if (gridView != null)
    {
        int headerHeight = gridView.ColumnPanelHeight + gridView.ViewRect.Height;
        int dataHeight = gridView.RowCount * gridView.RowHeight;
        int verticalScrollBarHeight = gridControl1.VScrollBarPresence == DevExpress.XtraGrid.ScrollBarPresence.Visible ? SystemInformation.VerticalScrollBarWidth : 0;

        int totalHeight = headerHeight + dataHeight + verticalScrollBarHeight;

        gridControl1.Height = totalHeight;
    }
}

// GridControl의 높이를 데이터에 맞게 조절합니다.
AdjustGridControlHeight();
