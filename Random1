from pdf2image import convert_from_path
from PIL import Image
import pyperclip
from io import BytesIO

# PDF 파일 경로
pdf_path = 'path_to_your_protected_pdf_file.pdf'

# PDF 파일의 첫 페이지를 이미지로 변환
pages = convert_from_path(pdf_path, first_page=0, last_page=1, dpi=300)

# 첫 번째 페이지 가져오기
first_page = pages[0]

# 이미지 포맷 변환
output = BytesIO()
first_page.save(output, format='PNG')
png_data = output.getvalue()

# 이미지를 클립보드에 복사
pyperclip.copy(png_data)

print("The first page of the PDF has been copied to the clipboard as an image.")
