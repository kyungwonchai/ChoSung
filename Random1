# 4. Flask ë¼ìš°íŒ… ë° ì›¹ì„œë²„
# ==========================================
@app.route('/')
def index():
    return render_template('index.html')

@app.route('/api/status')
def get_status():
    conn = pymssql.connect(**DB_CONFIG)
    cursor = conn.cursor(as_dict=True)
    # Master Table ê¸°ë°˜ìœ¼ë¡œ Join í•˜ì—¬ ìˆ˜ì‹  ì—¬ë¶€ í™•ì¸
    cursor.execute("""
        SELECT m.agvName, c.*, s.batteryLevel as spec_lvl_min, s2.maxValue as spec_temp_max
        FROM agv_master m
        LEFT JOIN agv_current c ON m.agvName = c.agvName
        CROSS JOIN (SELECT minValue FROM agv_specs WHERE columnName='batteryLevel') s
        CROSS JOIN (SELECT maxValue FROM agv_specs WHERE columnName='batteryTemperature') s2
    """)
    rows = cursor.fetchall()
    
    # ìˆ˜ì‹  ì—¬ë¶€ íŒë‹¨ (ìµœê·¼ 30ì´ˆ ì´ë‚´ ë°ì´í„°ê°€ ì™”ëŠ”ì§€)
    now = datetime.now()
    for row in rows:
        if row['lastReceived']:
            row['is_online'] = (now - row['lastReceived']).total_seconds() < 30
            row['lastReceived'] = row['lastReceived'].strftime('%Y-%m-%d %H:%M:%S')
        else:
            row['is_online'] = False
            
    # Specs ì •ë³´ë„ ê°™ì´ ë³´ëƒ„
    cursor.execute("SELECT * FROM agv_specs")
    specs = {r['columnName']: {'min': r['minValue'], 'max': r['maxValue']} for r in cursor.fetchall()}
    
    conn.close()
    return jsonify({'data': rows, 'specs': specs})

@app.route('/api/update_spec', methods=['POST'])
def update_spec():
    req = request.json
    if req.get('password') != ADMIN_PASSWORD:
        return jsonify({'success': False, 'msg': 'ë¹„ë°€ë²ˆí˜¸ í‹€ë¦¼'}), 401
    
    conn = pymssql.connect(**DB_CONFIG)
    cursor = conn.cursor()
    cursor.execute("UPDATE agv_specs SET minValue=%s, maxValue=%s WHERE columnName=%s",
                   (req['min'], req['max'], req['col']))
    conn.commit()
    conn.close()
    return jsonify({'success': True})

@app.route('/api/logs/<agvName>')
def get_logs(agvName):
    conn = pymssql.connect(**DB_CONFIG)
    cursor = conn.cursor(as_dict=True)
    # ìµœê·¼ 24ì‹œê°„ ë¡œê·¸
    cursor.execute("""
        SELECT batteryLevel, batteryTemperature, logTime 
        FROM agv_logs 
        WHERE agvName = %s AND logTime > DATEADD(day, -1, GETDATE())
        ORDER BY logTime ASC
    """, (agvName,))
    rows = cursor.fetchall()
    conn.close()
    return jsonify(rows)

