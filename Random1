private List<string> lista; // DB에서 값을 읽어올 리스트

// 신호를 받았을 때 호출되는 함수
private void OnSignalReceived(object sender, EventArgs e)
{
    // lista 업데이트 로직
    // ...

    gridControl1.RefreshData();
}

private void tableView1_CustomCellStyle(object sender, DevExpress.Xpf.Grid.GridCellItemEventArgs e)
{
    if (e.Column.FieldName != "key1") return;

    string cellValue = e.CellValue as string;
    if (cellValue != null && lista.Contains(cellValue))
    {
        e.Appearance.Background = Brushes.Yellow;
        e.Appearance.Foreground = Brushes.Black;
    }
}
