using System.Windows.Forms;
using System.IO;

// HTML 텍스트
string htmlText = "<h1>This is a heading</h1><p>This is a paragraph.</p>";

// 임시 HTML 파일 생성
string tempHtmlFile = Path.GetTempFileName() + ".html";
File.WriteAllText(tempHtmlFile, htmlText);

// RichTextBox 생성
RichTextBox richTextBox = new RichTextBox();

// HTML 파일을 RichTextBox에 삽입
richTextBox.LoadFile(tempHtmlFile, RichTextBoxStreamType.RichText);

// HTML 파일 삭제
File.Delete(tempHtmlFile);

// RichTextBox 내용 출력
Console.WriteLine(richTextBox.Text);
