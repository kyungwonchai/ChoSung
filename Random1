Sub ClearNegativeCells()
    Dim ws As Worksheet
    Set ws = ThisWorkbook.Sheets("Sheet1") ' 사용할 시트명을 적절히 조정하세요.

    Dim cell As Range
    Dim toClear As Range

    ' 범위 내에서 0 미만인 셀을 찾기
    For Each cell In ws.Range("E58:E154")
        If cell.Value < 0 Then
            If toClear Is Nothing Then
                Set toClear = cell
            Else
                Set toClear = Union(toClear, cell)
            End If
        End If
    Next cell

    ' 찾은 셀들을 한 번에 빈 값으로 설정
    If Not toClear Is Nothing Then
        toClear.Value = ""
    End If
End Sub
