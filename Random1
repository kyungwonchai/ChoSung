private void gridView_CellValueChanged(object sender, DevExpress.Xpf.Grid.CellValueChangedEventArgs e)
{
    // GridView 객체를 가져옵니다.
    var view = sender as DevExpress.Xpf.Grid.TableView;

    // 현재 변경된 셀의 행 객체를 가져옵니다.
    var row = view.Grid.GetRow(e.RowHandle);

    // 행을 DataRow로 변환 (데이터 소스가 DataTable인 경우)
    DataRow dataRow = ((DataRowView)row).Row;

    // 특정 컬럼의 값을 가져옵니다.
    object value = dataRow["ColumnName"]; 

    // ... 나머지 로직
}
