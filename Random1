using System;
using System.Diagnostics;
using System.IO;
using System.Threading;

namespace ScheduledExecution
{
    class Program
    {
        static void Main(string[] args)
        {
            string filePath = @"c:\start11.txt";

            if (File.Exists(filePath))
            {
                string[] lines = File.ReadAllLines(filePath);

                foreach (string line in lines)
                {
                    string[] parts = line.Split('^');
                    if (parts.Length == 2)
                    {
                        string programPath = parts[0].Trim();
                        if (int.TryParse(parts[1].Trim(), out int delaySeconds))
                        {
                            // 지정된 시간(초 단위) 동안 대기
                            Thread.Sleep(delaySeconds * 1000);

                            // 프로그램 실행
                            ExecuteFile(programPath);
                        }
                        else
                        {
                            Console.WriteLine($"오류: '{line}'에서 지연 시간을 구문 분석할 수 없습니다.");
                        }
                    }
                    else
                    {
                        Console.WriteLine($"오류: '{line}'은 올바른 형식이 아닙니다. (예: programPath^delaySeconds)");
                    }
                }
            }
            else
            {
                Console.WriteLine($"오류: '{filePath}' 파일을 찾을 수 없습니다.");
            }
        }

        static void ExecuteFile(string filePath)
        {
            try
            {
                Process process = new Process
                {
                    StartInfo = new ProcessStartInfo
                    {
                        FileName = filePath,
                        RedirectStandardOutput = true,
                        UseShellExecute = false,
                        CreateNoWindow = true,
                    }
                };

                process.Start();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"파일 실행 중 오류 발생: {ex.Message}");
            }
        }
    }
}
