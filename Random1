using UnityEngine;
using UnityEngine.UI;

public class ButtonClickHandler : MonoBehaviour
{
    public string imageTag = "Tagimg1";
    public Sprite newImage; // 변경할 이미지를 직접 할당합니다.

    public void OnButtonClick()
    {
        // 태그로 이미지 컨트롤을 찾습니다.
        GameObject[] imageControls = GameObject.FindGameObjectsWithTag(imageTag);

        if (imageControls.Length > 0)
        {
            // 이미지 컨트롤의 이미지를 변경합니다.
            foreach (GameObject imageControl in imageControls)
            {
                Image imageComponent = imageControl.GetComponent<Image>();
                if (imageComponent != null)
                {
                    // 이미지를 변경합니다.
                    imageComponent.sprite = newImage;
                }
            }
        }
    }
}
