using System;
using System.Windows;
using DevExpress.Xpf.Editors;

namespace YourNamespace
{
    public partial class MainWindow : Window
    {
        // 가정: 변수B와 변수C는 bool 타입입니다.
        private bool 변수B = false; // 이 변수의 값에 따라 체크 동작이 제어됩니다.
        private bool 변수C = false; // 이 변수의 값에 따라 체크 해제 동작이 제어됩니다.

        public MainWindow()
        {
            InitializeComponent();
        }

        private void CheckEdit_EditValueChanging(object sender, EditValueChangingEventArgs e)
        {
            CheckEdit checkEdit = sender as CheckEdit;

            if (checkEdit != null)
            {
                bool? newValue = e.NewValue as bool?;
                
                // 체크 동작을 제어합니다.
                if (newValue == true && !변수B)
                {
                    e.Cancel = true; // 변수B가 false이면 체크 동작을 취소합니다.
                }
                
                // 체크 해제 동작을 제어합니다.
                if (newValue == false && !변수C)
                {
                    e.Cancel = true; // 변수C가 false이면 체크 해제 동작을 취소합니다.
                }
            }
        }
    }
}
