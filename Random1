들도 XAML에 포함시켜 드리겠습니다.

XAML:

xml

<Window x:Class="YourNamespace.YourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core">
    <Grid>
        <!-- 호가정일 -->
        <Border BorderBrush="Black" BorderThickness="2" Margin="0,0" Width="300">
            <StackPanel>
                <Label Content="호가정일(날짜)" Width="300" Height="30" Background="SkyBlue" HorizontalContentAlignment="Center" BorderBrush="Black" BorderThickness="0,0,0,1" />
                <dx:ComboBoxEdit Name="menuc_SelectedDate" Width="300" Height="50" Background="White" ItemsSource="{Binding Menuc_Dates}" SelectedItem="{Binding Menuc_SelectedDate}" />
            </StackPanel>
        </Border>

        <!-- 보드유형 -->
        <Border BorderBrush="Black" BorderThickness="2" Margin="0,90" Width="300">
            <StackPanel>
                <Label Content="보드유형" Width="300" Height="30" Background="SkyBlue" HorizontalContentAlignment="Center" BorderBrush="Black" BorderThickness="0,0,0,1" />
                <dx:ComboBoxEdit Name="menuc_SelectedBoardType" Width="300" Height="50" Background="White" ItemsSource="{Binding Menuc_BoardTypes}" SelectedItem="{Binding Menuc_SelectedBoardType}" />
            </StackPanel>
        </Border>

        <!-- 라인 -->
        <Border BorderBrush="Black" BorderThickness="2" Margin="0,180" Width="300">
            <StackPanel>
                <Label Content="라인" Width="300" Height="30" Background="SkyBlue" HorizontalContentAlignment="Center" BorderBrush="Black" BorderThickness="0,0,0,1" />
                <dx:ComboBoxEdit Name="menuc_SelectedLine" Width="300" Height="50" Background="White" ItemsSource="{Binding Menuc_Lines}" SelectedItem="{Binding Menuc_SelectedLine}" />
            </StackPanel>
        </Border>

        <!-- 계획상태 -->
        <Border BorderBrush="Black" BorderThickness="2" Margin="0,270" Width="300">
            <StackPanel>
                <Label Content="계획상태" Width="300" Height="30" Background="SkyBlue" HorizontalContentAlignment="Center" BorderBrush="Black" BorderThickness="0,0,0,1" />
                <dx:ComboBoxEdit Name="menuc_SelectedStatus" Width="300" Height="50" Background="White" ItemsSource="{Binding Menuc_Statuses}" SelectedItem="{Binding Menuc_SelectedStatus}" />
            </StackPanel>
        </Border>

    </Grid>
</Window>

C#:

csharp

// 이전의 코드에 추가적으로 변수와 프로퍼티들을 확장했습니다.

private ObservableCollection<string> menuc_Lines;
private ObservableCollection<string> menuc_Statuses;
private string menuc_SelectedLine;
private string menuc_SelectedStatus;

public ObservableCollection<string> Menuc_Lines
{
    get { return menuc_Lines; }
    set { menuc_Lines = value; OnPropertyChanged("Menuc_Lines"); }
}

public ObservableCollection<string> Menuc_Statuses
{
    get { return menuc_Statuses; }
    set { menuc_Statuses = value; OnPropertyChanged("Menuc_Statuses"); }
}

public string Menuc_SelectedLine
{
    get { return menuc_SelectedLine; }
    set { menuc_SelectedLine = value; OnPropertyChanged("Menuc_SelectedLine"); }
}

public string Menuc_SelectedStatus
{
    get { return menuc_SelectedStatus; }
    set { menuc_SelectedStatus = value; OnPropertyChanged("Menuc_SelectedStatus"); }
}

// Constructor 부분
public YourWindow()
{
    InitializeComponent();

    Menuc_Dates = new ObservableCollection<string>() { "2023-01-01", "2023-01-02" };
    Menuc_BoardTypes = new ObservableCollection<string>() { "ALL", "Main", "Sec<PRE" };
    Menuc_Lines = new ObservableCollection<string>() { "S1", "S2", "S3", "S4", "S5", "S6", "S7", "S8", "S9", "S10", "I1", "I2", "I3", "I4", "I5" };
    Menuc

