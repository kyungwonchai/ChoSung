using System;
using System.Windows.Media;
using DevExpress.Xpf.Grid;

namespace LockRowAndChangeColor
{
    public partial class MainWindow : Window
    {
        public MainWindow()
        {
            InitializeComponent();

            // TableView의 특정 행을 잠그고 배경색을 변경하는 예제입니다.
            gridControl1.Loaded += GridControl1_Loaded;
        }

        private void GridControl1_Loaded(object sender, RoutedEventArgs e)
        {
            TableView tableView = gridControl1.View as TableView;
            if (tableView != null)
            {
                // 행을 잠그고 배경색을 변경할 조건을 체크하는 이벤트 핸들러 등록
                tableView.RowStyle += TableView_RowStyle;
            }
        }

        private void TableView_RowStyle(object sender, RowStyleEventArgs e)
        {
            // 현재 행의 데이터 가져오기
            DataRowView row = e.Row as DataRowView;
            if (row != null)
            {
                // key1 컬럼 값이 511162인 경우
                if (row["key1"].ToString() == "511162")
                {
                    // 행을 잠그고 배경색을 노란색으로 변경
                    e.Appearance.BackColor = Colors.Yellow;
                    e.AllowFocus = false; // 행 잠금
                }
            }
        }
    }
}
