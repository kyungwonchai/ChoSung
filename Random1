private void UpdateSpecificColumnInDatabase()
{
    string connectionString = "Data Source=YourServer;Initial Catalog=YourDatabase;User ID=YourUser;Password=YourPassword";
    using (SqlConnection connection = new SqlConnection(connectionString))
    {
        connection.Open();

        // 수정된 행만 찾습니다.
        DataRow[] modifiedRows = dataTable.Select(null, null, DataViewRowState.ModifiedCurrent);

        foreach (DataRow row in modifiedRows)
        {
            using (SqlCommand command = new SqlCommand("YourUpdateStoredProcedureName", connection))
            {
                command.CommandType = CommandType.StoredProcedure;

                // 파라미터를 설정합니다. 예를 들어, 업데이트할 컬럼과 ID 컬럼
                command.Parameters.AddWithValue("@YourColumnName", row["YourColumnName"]);
                command.Parameters.AddWithValue("@YourIDColumn", row["YourIDColumn"]);

                command.ExecuteNonQuery();
            }
        }
    }
}
