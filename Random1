TextBox textBox = new TextBox();
textBox.Multiline = true;
textBox.ScrollBars = ScrollBars.Vertical;
textBox.ReadOnly = true;
textBox.TextChanged += TextBox_TextChanged;
textBox.Size = new Size(200, textBox.GetPreferredSize(new Size(200, int.MaxValue)).Height);

private void TextBox_TextChanged(object sender, EventArgs e)
{
    TextBox textBox = (TextBox)sender;
    int lineCount = textBox.GetLineFromCharIndex(textBox.TextLength) + 1;
    int lineHeight = TextRenderer.MeasureText("A", textBox.Font).Height;
    textBox.Height = lineHeight * lineCount;
}
