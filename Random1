public DataTable GetDataFromDatabaseAndSort()
{
    DataTable dataTable = new DataTable();

    // 데이터베이스에서 데이터를 가져오는 코드
    // ...

    // DataTable 정렬
    dataTable.DefaultView.Sort = "Line1 ASC"; // "Line1 DESC"로 변경하면 내림차순 정렬
    dataTable = dataTable.DefaultView.ToTable();

    return dataTable;
}
