using System.Windows.Media;  // Brush와 ImageBrush를 사용하기 위해 필요

public MainWindow()
{
    InitializeComponent();
    
    // 배경 이미지를 설정
    ImageBrush bgBrush = new ImageBrush();
    bgBrush.ImageSource = new BitmapImage(new Uri("pack://application:,,,/Images/background.jpg"));
    bgBrush.Stretch = Stretch.Fill;
    
    // Window의 Background 속성에 ImageBrush 설정
    this.Background = bgBrush;
}
