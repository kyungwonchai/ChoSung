private void UpdateDataInDatabase(DataRow row)
{
    string connectionString = "YourConnectionString"; // 데이터베이스 연결 문자열
    string tableName = "YourTableName"; // 테이블 이름
    string columnName = "수정1"; // 수정할 컬럼 이름

    using (SqlConnection connection = new SqlConnection(connectionString))
    {
        connection.Open();

        string query = $"UPDATE {tableName} SET {columnName} = @Value WHERE ID = @ID"; // ID는 해당 테이블의 기본 키 컬럼

        using (SqlCommand command = new SqlCommand(query, connection))
        {
            command.Parameters.AddWithValue("@Value", row[columnName]);
            command.Parameters.AddWithValue("@ID", row["ID"]); // ID 값에 해당하는 컬럼명 사용

            command.ExecuteNonQuery();
        }
    }
}
