<dxg:GridControl Name="gridControl1">
    <dxg:GridControl.View>
        <dxg:TableView>
            <dxg:TableView.CellStyle>
                <Style TargetType="dxg:GridCellContentPresenter">
                    <!-- 기본은 가운데 정렬 -->
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Style.Triggers>
                        <!-- 데이터 타입이 숫자일 경우 우측 정렬 -->
                        <DataTrigger Binding="{Binding Value, Converter={StaticResource NumericTypeConverter}}" Value="True">
                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </dxg:TableView.CellStyle>
        </dxg:TableView>
    </dxg:GridControl.View>
    <!-- 컬럼 설정 등 -->
</dxg:GridControl>
