private void gridView1_CustomDrawCell(object sender, DevExpress.XtraGrid.Views.Base.RowCellCustomDrawEventArgs e)
{
    if (e.Column.FieldName == "Quantity1")
    {
        if (e.CellValue.ToString() == "1")
        {
            Rectangle cellBounds = e.Bounds;
            LinearGradientBrush brush = new LinearGradientBrush(cellBounds, Color.White, Color.LightBlue, LinearGradientMode.Vertical);
            e.Cache.FillRectangle(brush, cellBounds);
            e.Appearance.ForeColor = Color.Blue; // 글자 색상을 파란색으로 설정
        }
    }
}
