private void gridControl1_MouseUp(object sender, MouseButtonEventArgs e)
{
    // 현재 클릭한 셀의 행과 열을 가져옵니다.
    GridHitInfo hitInfo = gridControl1.CalcHitInfo(e.GetPosition(gridControl1));
    
    if (hitInfo.InRow)
    {
        // 행이 선택되었을 경우 편집 창을 띄웁니다.
        int rowHandle = hitInfo.RowHandle;
        YourDataModel selectedItem = (YourDataModel)gridControl1.GetRow(rowHandle);
        
        // 편집 창 열기
        EditWindow editWindow = new EditWindow(selectedItem);
        if (editWindow.ShowDialog() == true)
        {
            // Save 버튼을 누른 경우, 데이터를 업데이트
            gridControl1.RefreshData();
        }
    }
}
