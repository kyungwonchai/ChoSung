using DevExpress.XtraEditors;

// ...

// ListControl1, ListControl2, ListControl3 등 여러 개의 ListControl을 선택하여 스타일을 적용
ControlCollection controls = new ControlCollection();
controls.Add(ListControl1);
controls.Add(ListControl2);
controls.Add(ListControl3);
// 필요한 만큼 컨트롤을 추가해주세요

// 스타일 적용
foreach (ListControl control in controls)
{
    control.Appearance.BackColor = System.Drawing.Color.Yellow;
    control.Appearance.Options.UseBackColor = true;
    control.Appearance.ForeColor = System.Drawing.Color.Black;
    control.Appearance.Font = new System.Drawing.Font(control.Appearance.Font, System.Drawing.FontStyle.Bold);
    control.Appearance.Options.UseBackColor = true;
    control.Appearance.BackColor2 = System.Drawing.Color.White;
    control.Appearance.GradientMode = System.Drawing.Drawing2D.LinearGradientMode.Vertical;
}
