private void gridView1_RowCellClick(object sender, DevExpress.XtraGrid.Views.Grid.RowCellClickEventArgs e)
{
    if (e.Button == MouseButtons.Left)
    {
        // 클릭된 셀의 행 인덱스와 컬럼명을 가져옵니다.
        int rowIndex = e.RowHandle;
        string columnName = e.Column.FieldName;

        // 특정 컬럼에 대한 처리를 수행합니다.
        if (columnName == "BukumCode")
        {
            // 선택한 행의 부쿰코드 값을 가져옵니다.
            string bukumCode = gridView1.GetRowCellValue(rowIndex, columnName).ToString();

            // 가져온 값을 사용하여 추가적인 작업을 수행합니다.
            // 예시: 가져온 값 출력
            Console.WriteLine("선택한 셀 값: " + bukumCode);
        }
    }
}
