// 마스터 컨트롤의 탭이 선택되었을 때 이벤트 핸들러
private void masterTabControl_SelectedPageChanged(object sender, TabPageChangedEventArgs e)
{
    // 마스터 컨트롤의 선택된 탭 인덱스 가져오기
    int selectedIndex = masterTabControl.SelectedTabPageIndex;

    // 서브 컨트롤의 탭 선택
    if (selectedIndex >= 0 && selectedIndex < subTabControl.TabPages.Count)
    {
        subTabControl.SelectedTabPageIndex = selectedIndex;
    }
}
