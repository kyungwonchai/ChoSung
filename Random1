from apa102_pi.driver import apa102
import time

# LED 개수 설정
num_leds = 4

# APA102 드라이버 초기화
strip = apa102.APA102(num_led=num_leds)

# 색상 설정 (빨강, 초록, 파랑, 흰색)
colors = [(255, 0, 0), (0, 255, 0), (0, 0, 255), (255, 255, 255)]

for i in range(num_leds):
    strip.set_pixel(i, *colors[i], brightness=31)

strip.show()
time.sleep(2)

# 끄기