// 차트 축 설정
DevExpress.XtraCharts.XYDiagram diagram = (DevExpress.XtraCharts.XYDiagram)chart.Diagram;
DevExpress.XtraCharts.DateTimeScaleOptions scaleOptions = (DevExpress.XtraCharts.DateTimeScaleOptions)diagram.AxisX.DateTimeScaleOptions;
scaleOptions.MeasureUnit = DevExpress.XtraCharts.DateTimeMeasureUnit.Minute;
scaleOptions.GridAlignment = DevExpress.XtraCharts.DateTimeGridAlignment.Minute;

// 시간 범위를 '00:00'에서 '23:59'로 설정하고, Auto 모드를 사용하여 시작 및 종료 시간을 데이터에 맞게 자동으로 조정
diagram.AxisX.WholeRange.Auto = true;

// 축 레이블 포맷 설정
diagram.AxisX.Label.TextPattern = "{A:HH:mm}";
