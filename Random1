using System;
using System.Reflection;

namespace TryCatchExample
{
    class Program
    {
        static void Main(string[] args)
        {
            try
            {
                // 예외를 발생시킵니다.
                throw new Exception("이것은 테스트 예외입니다.");
            }
            catch (Exception ex)
            {
                string functionName = MethodBase.GetCurrentMethod().Name;
                Console.WriteLine($"함수 {functionName}에서 예외가 발생했습니다: {ex.Message}");
            }
        }
    }
}
