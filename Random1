private void Form1_Load(object sender, EventArgs e)
{
    // RadioGroup에 버튼 추가
    radioGroup1.Properties.Items.Add(new DevExpress.XtraEditors.Controls.RadioGroupItem(0, "입고"));
    radioGroup1.Properties.Items.Add(new DevExpress.XtraEditors.Controls.RadioGroupItem(1, "출고"));
    radioGroup1.Properties.Items.Add(new DevExpress.XtraEditors.Controls.RadioGroupItem(2, "신청"));
}

private void btnSave_Click(object sender, EventArgs e)
{
    int selectedIndex = radioGroup1.SelectedIndex;

    if (selectedIndex == 0)
    {
        // 입고 처리
    }
    else if (selectedIndex == 1)
    {
        // 출고 처리
    }
    else if (selectedIndex == 2)
    {
        // 신청 처리
    }
}
