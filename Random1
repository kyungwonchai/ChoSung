using System;
using System.Threading;

namespace ThreadExample
{
    class Program
    {
        // 전역 스레드 변수
        static Thread myThread;

        static void Main(string[] args)
        {
            StartThread();
            // 스레드를 잠시 실행 후 종료
            Thread.Sleep(2000);
            StopAndRestartThread();
        }

        static void StartThread()
        {
            myThread = new Thread(new ThreadStart(Run));
            myThread.Start();
        }

        static void StopAndRestartThread()
        {
            // 스레드가 살아있다면 종료
            if (myThread != null && myThread.IsAlive)
            {
                myThread.Abort(); // Abort는 .NET Core에서 사용 불가능
                myThread.Join(); // 스레드가 완전히 종료될 때까지 대기
            }

            // 스레드를 새로 시작
            StartThread();
        }

        static void Run()
        {
            while (true)
            {
                Console.WriteLine("Running...");
                Thread.Sleep(1000);
            }
        }
    }
}
