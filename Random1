using PdfiumViewer;
using System.Drawing.Imaging;
using System.IO;

namespace PDFToImageConverter
{
    class Program
    {
        static void Main(string[] args)
        {
            string pdfFilePath = "your_pdf_file_path.pdf";
            string outputFolder = "output_folder_path";

            var document = PdfDocument.Load(pdfFilePath);

            for (int i = 0; i < document.PageCount; i++)
            {
                var image = document.Render(i, 300, 300, true); // DPI 설정을 300으로 하였습니다.
                var outputFilePath = Path.Combine(outputFolder, $"Page{i+1}.jpg");
                image.Save(outputFilePath, ImageFormat.Jpeg);
            }
        }
    }
}
