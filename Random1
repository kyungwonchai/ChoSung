private void RepositoryButtonEdit_ButtonClick(object sender, ButtonPressedEventArgs e)
{
    int rowHandle = gridView1.FocusedRowHandle;

    switch (e.Button.Tag.ToString())
    {
        case "Request":
            // 신청 버튼 클릭 시 동작
            // 특정 행의 데이터를 처리하는 로직 작성
            string productCodeRequest = gridView1.GetRowCellValue(rowHandle, "ProductCode").ToString();
            // 신청 처리 로직 작성
            break;
        case "Receipt":
            // 입고 버튼 클릭 시 동작
            // 특정 행의 데이터를 처리하는 로직 작성
            string productCodeReceipt = gridView1.GetRowCellValue(rowHandle, "ProductCode").ToString();
            // 입고 처리 로직 작성
            break;
        case "Shipment":
            // 출고 버튼 클릭 시 동작
            // 특정 행의 데이터를 처리하는 로직 작성
            string productCodeShipment = gridView1.GetRowCellValue(rowHandle, "ProductCode").ToString();
            // 출고 처리 로직 작성
            break;
        default:
            break;
    }
}
