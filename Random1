using System.Windows.Threading;
// ...

private async void ShowTemporaryAlert()
{
    SplashScreenManager.CreateThemed(new DXSplashScreenViewModel { Title = "경고", Subtitle = "이것은 경고입니다!" })
                        .ShowOnStartup();

    await Task.Delay(5000);  // 5초 동안 대기

    Dispatcher.Invoke(() =>
    {
        SplashScreenManager.CloseOnStartup();
    });
}
