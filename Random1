using DevExpress.XtraGrid.Views.Grid;

private void gridView1_CustomDrawCell(object sender, DevExpress.XtraGrid.Views.Base.RowCellCustomDrawEventArgs e)
{
    GridView view = sender as GridView;

    if (e.Column.FieldName == "컬럼B")
    {
        string columnAColorString = Convert.ToString(view.GetRowCellValue(e.RowHandle, "컬럼A색상"));

        // 문자열을 Color로 변환
        Color columnAColor;
        if (columnAColorString.Equals("회색", StringComparison.OrdinalIgnoreCase))
            columnAColor = Color.Gray;
        else
            columnAColor = Color.Empty; // 또는 다른 기본 색상을 지정

        Color actualColor = e.Appearance.BackColor;

        if (columnAColor != Color.Gray && actualColor != Color.Gray)
        {
            // 컬럼B의 색상 변경 코드
            e.Appearance.BackColor = Color.Yellow;
            e.Appearance.ForeColor = Color.Black;
        }
    }
}
