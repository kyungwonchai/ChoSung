import pandas as pd
import pymssql

# MSSQL 서버 정보 설정
server = '서버주소'
database = '데이터베이스명'
username = '사용자이름'
password = '비밀번호'

# pymssql 연결 설정
conn = pymssql.connect(server=server, user=username, password=password, database=database)

# SQL 쿼리 작성
query = 'SELECT * FROM 테이블명'

# 데이터를 DataFrame으로 가져오기
df = pd.read_sql_query(query, conn)

# 연결 종료
conn.close()

# DataFrame 확인
print(df.head())
