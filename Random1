using DevExpress.XtraNavBar;
using DevExpress.XtraEditors;

// SplitContainerControl을 포함하는 폼 또는 사용자 정의 컨트롤
private SplitContainerControl splitContainerControl1;
private NavBarControl navBarControl1;

// NavBarControl의 Item 클릭 이벤트 핸들러
private void navBarControl1_LinkClicked(object sender, NavBarLinkEventArgs e)
{
    if (e.Link.Item.Caption == "햄버거 메뉴") // 햄버거 메뉴 아이템의 캡션에 따라 조건 설정
    {
        splitContainerControl1.SplitterPosition = 400;
    }
}
