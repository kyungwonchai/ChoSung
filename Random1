import bpy

# 모든 오브젝트 삭제
bpy.ops.object.select_all(action='DESELECT')
bpy.ops.object.select_all(action='SELECT')
bpy.ops.object.delete()

# 3D 텍스트 생성
bpy.ops.object.text_add(location=(0, 0, 1))
text_object = bpy.context.object
text_object.data.body = "보고서1"

# 텍스트 두껍게
text_object.data.extrude = 0.05

# 텍스트 색상 변경 (검정색)
material_black = bpy.data.materials.new(name="Black_Material")
material_black.diffuse_color = (0, 0, 0, 1)
text_object.data.materials.append(material_black)

# 조명 추가
bpy.ops.object.light_add(type='POINT', location=(0, 0, 3))

# 렌더 설정
bpy.context.scene.render.image_settings.file_format = 'SVG'
bpy.context.scene.render.filepath = "/path/to/save/image.svg"

# 렌더링
bpy.ops.render.render(write_still=True)
