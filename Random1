public partial class MainForm : Form
{
    // ... 기존 코드 ...

    // 재생/일시정지 버튼 클릭 이벤트
    private void btnPlayPause_Click(object sender, EventArgs e)
    {
        if (videoView1.MediaPlayer.IsPlaying) // 재생 중이면
        {
            videoView1.MediaPlayer.Pause(); // 일시정지
            btnPlayPause.Text = "재생"; // 버튼 텍스트 변경
        }
        else // 일시정지 상태면
        {
            double position = trackBar1.Value / (double)trackBar1.Maximum;
            videoView1.MediaPlayer.Position = position; // 트랙바 위치에 따른 재생 위치 설정
            videoView1.MediaPlayer.Play(); // 재생
            btnPlayPause.Text = "일시정지"; // 버튼 텍스트 변경
        }
    }

    // ... 기존 코드 ...
}
