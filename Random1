private void btnUpdateRecipients_Click(object sender, EventArgs e)
{
    DataTable dataTable = (DataTable)gridControl1.DataSource;

    foreach (DataRow row in dataTable.Rows)
    {
        string id = row["ID"].ToString();
        string address = row["Address"].ToString();
        string method = row["Method"].ToString();

        // 데이터베이스에 업데이트 쿼리 실행
        UpdateRecipient(id, address, method);
    }

    MessageBox.Show("수정된 내용이 반영되었습니다.", "알림", MessageBoxButtons.OK, MessageBoxIcon.Information);
}

private void UpdateRecipient(string id, string address, string method)
{
    // 데이터베이스에 업데이트 쿼리 실행하는 로직 작성
    // 예를 들어, SqlConnection, SqlCommand 등을 사용하여 데이터베이스에 연결하고 쿼리를 실행할 수 있음
    // 이 예시에서는 ID, Address, Method 값을 사용하여 쿼리를 작성하여 데이터베이스에 반영하는 것을 가정

    string connectionString = "your_connection_string";
    string query = $"UPDATE Recipients SET Address = '{address}', Method = '{method}' WHERE ID = '{id}'";

    using (SqlConnection connection = new SqlConnection(connectionString))
    {
        connection.Open();

        using (SqlCommand command = new SqlCommand(query, connection))
        {
            command.ExecuteNonQuery();
        }
    }
}
