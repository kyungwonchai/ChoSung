using System;
using System.Drawing;
using System.Windows.Forms;
using DevExpress.XtraEditors;

namespace WinFormsApp
{
    public partial class MainForm : Form
    {
        public MainForm()
        {
            InitializeComponent();
        }

        private void ChangeBackgroundColorOfButtons()
        {
            // 일괄적으로 변경할 ARGB 배경색을 설정합니다.
            Color newBackgroundColor = Color.FromArgb(255, 165, 0, 0); // 진보라 (Red: 165, Green: 0, Blue: 0, Alpha: 255)

            // MainForm의 컨트롤들 중 SimpleButton의 배경색을 변경합니다.
            foreach (Control control in this.Controls)
            {
                if (control is SimpleButton simpleButton)
                {
                    simpleButton.Appearance.BackColor = newBackgroundColor;
                }
            }
        }

        private void buttonChangeColor_Click(object sender, EventArgs e)
        {
            ChangeBackgroundColorOfButtons();
        }
    }
}
