private void chartControl_MouseClick(object sender, MouseEventArgs e)
{
    DevExpress.XtraCharts.ChartControl chartControl = sender as DevExpress.XtraCharts.ChartControl;
    if (chartControl == null) return;

    DevExpress.XtraCharts.ChartHitInfo hitInfo = chartControl.CalcHitInfo(e.X, e.Y);
    if (hitInfo.HitTest == DevExpress.XtraCharts.HitTest.Series)
    {
        DevExpress.XtraCharts.Series series = hitInfo.Series;
        string seriesName = series.Name;

        MessageBox.Show($"시리즈명: {seriesName}");
    }
}
