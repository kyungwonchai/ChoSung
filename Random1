using System;
using System.Data;
using System.Data.SqlClient;

class Program
{
    static void Main()
    {
        // Create a new SqlCommand object
        SqlCommand command = new SqlCommand();
        
        // Add some parameters to the command
        command.Parameters.Add(new SqlParameter("@Parameter1", SqlDbType.Int)).Value = 1;
        command.Parameters.Add(new SqlParameter("@Parameter2", SqlDbType.VarChar)).Value = "Test";
        command.Parameters.Add(new SqlParameter("@Parameter3", SqlDbType.DateTime)).Value = DateTime.Now;

        // Print all parameters
        PrintCommandParameters(command);
    }

    static void PrintCommandParameters(SqlCommand command)
    {
        foreach (SqlParameter parameter in command.Parameters)
        {
            Console.WriteLine($"Parameter Name: {parameter.ParameterName}");
            Console.WriteLine($"Parameter Type: {parameter.SqlDbType}");
            Console.WriteLine($"Parameter Value: {parameter.Value}");
            Console.WriteLine($"Parameter Direction: {parameter.Direction}");
            Console.WriteLine();
        }
    }
}
