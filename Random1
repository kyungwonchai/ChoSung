using DevExpress.Xpf.Grid;
using System.Collections.Generic;
using System.Windows.Media;

// MainWindow.xaml.cs 파일에 이 코드를 추가합니다.
public partial class MainWindow : Window
{
    public MainWindow()
    {
        InitializeComponent();
        // 데이터 초기화 및 그리드 바인딩 코드는 여기에 추가됩니다.
        
        // 이벤트 핸들러 등록
        tableView.CellStyle += TableView_CellStyle;
    }

    private List<string> lista = new List<string> { "Value1", "Value2", "Value3" };

    private void TableView_CellStyle(object sender, GridCellStyleEventArgs e)
    {
        if (e.Column.FieldName != "key1") return; // key1 필드만 대상으로 합니다.

        object cellValue = e.Value;

        if (cellValue != null && lista.Contains(cellValue.ToString()))
        {
            e.Appearance.Background = Brushes.Yellow;
            e.Appearance.Foreground = Brushes.Black;
        }
    }
}
