using DevExpress.Xpf.Core;
using System.Windows;

namespace YourNamespace
{
    public partial class MainWindow : Window
    {
        public MainWindow()
        {
            InitializeComponent();
        }

        private void ShowSplashAndCustomWindow_Click(object sender, RoutedEventArgs e)
        {
            // 스프래시 창 띄우기
            SplashScreenManager.Show(typeof(MySplashScreen));

            // 커스텀 창 인스턴스 생성
            var customWindow = new CustomWindow();

            // 스프래시 창의 위치 가져오기
            var splashWindow = SplashScreenManager.SplashWindow;
            if (splashWindow != null)
            {
                // 커스텀 창 위치 설정: 스프래시 창 바로 아래
                customWindow.Left = splashWindow.Left;
                customWindow.Top = splashWindow.Top + splashWindow.Height;
            }

            customWindow.Show();
        }
    }
}
