  private void TableView_CustomRowStyle(object sender, RowStyleEventArgs e)
        {
            if (e.Row is LogMessage logMessage)
            {
                // Time1이 현재 시각으로부터 1시간 이내인지 확인
                if ((DateTime.Now - logMessage.Time1).TotalHours <= 1)
                {
                    // 배경색을 보라색 그라데이션으로 설정
                    e.Background = new LinearGradientBrush(Colors.Purple, Colors.DarkPurple, 45);
                }
            }
        }