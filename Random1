using DevExpress.XtraBars;
using DevExpress.XtraBars.Ribbon;
using DevExpress.XtraEditors;
using System;
using System.Collections.Generic;
using System.Drawing;
using System.Windows.Forms;

private void SearchControl1_TextChanged(object sender, EventArgs e)
{
    string searchText = SearchControl1.Text.ToLower();

    // 필터링된 아이템을 툴팁 형태로 표시합니다.
    ShowFilteredItemsAsTooltips(searchText);
}

private void ShowFilteredItemsAsTooltips(string searchText)
{
    List<BarItem> filteredItems = new List<BarItem>();

    // 필터링된 아이템을 수집합니다.
    foreach (RibbonPage page in ribbonControl1.Pages)
    {
        foreach (RibbonPageGroup group in page.Groups)
        {
            foreach (BarItemLink itemLink in group.ItemLinks)
            {
                BarItem item = itemLink.Item;
                if (item != null && item.Caption.ToLower().Contains(searchText))
                {
                    filteredItems.Add(item);
                }
            }
        }
    }

    // 툴팁 컨트롤을 생성하고 아이템들을 툴팁으로 추가합니다.
    ToolTip tooltip = new ToolTip();
    tooltip.ToolTipTitle = "Filtered Items";
    tooltip.UseFading = true;
    tooltip.UseAnimation = true;
    tooltip.IsBalloon = true;

    foreach (BarItem item in filteredItems)
    {
        string tooltipText = $"{item.Caption}";
        tooltip.SetToolTip(SearchControl1, tooltipText);
    }

    // 툴팁을 표시합니다.
    tooltip.Show("", SearchControl1, SearchControl1.Width, SearchControl1.Height, 3000);
}
