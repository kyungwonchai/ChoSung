using System.Runtime.InteropServices;

class Program
{
    [DllImport("user32.dll")]
    static extern void mouse_event(int dwFlags, int dx, int dy, int dwData, int dwExtraInfo);

    private const int MOUSEEVENTF_WHEEL = 0x0800;
    private const int WHEEL_DELTA = 120; // 한 번의 마우스 휠 동작을 나타냅니다.

    static void Main()
    {
        // 마우스 휠을 10번 아래로 돌립니다.
        for (int i = 0; i < 10; i++)
        {
            mouse_event(MOUSEEVENTF_WHEEL, 0, 0, -WHEEL_DELTA, 0); // 마이너스 값은 아래로 스크롤을 의미합니다.
        }
    }
}
