public MainWindow()
{
    InitializeComponent();
    gridControl1.LostFocus += GridControl1_LostFocus;
}

private void GridControl1_LostFocus(object sender, RoutedEventArgs e)
{
    // 현재 편집 중인 셀이 있을 경우, 변경 사항을 커밋합니다.
    var view = gridControl1.View as DevExpress.Xpf.Grid.TableView;
    if (view.IsEditing)
    {
        view.CommitEditing();
    }
}
