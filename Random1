chartControl1.MouseClick += ChartControl1_MouseClick;

private void ChartControl1_MouseClick(object sender, MouseEventArgs e)
{
    // 클릭한 위치에 대한 HitInfo를 가져옵니다.
    var hitInfo = chartControl1.CalcHitInfo(e.Location);

    // HitInfo가 SeriesPoint를 가리키고 있는지 확인합니다.
    if (hitInfo.InSeriesPoint)
    {
        var series = hitInfo.Series; // 클릭한 시리즈
        var point = hitInfo.SeriesPoint; // 클릭한 시리즈 포인트

        // 시리즈의 이름과 x축 값을 출력합니다.
        MessageBox.Show($"시리즈 이름: {series.Name}, x축 값: {point.Argument}");
    }
}
