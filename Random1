import glob
import os

# 특수 문자를 포함한 폴더 경로
folder_path = r'C:\glob .igoob\[folder]'

# 특수 문자를 처리하여 경로 생성
escaped_path = glob.escape(folder_path)

# txt 파일들을 가져오기 위한 경로 패턴 생성
txt_pattern = os.path.join(escaped_path, '*.txt')

# 파일들을 가져온 후, 정렬 없이 첫 번째 파일 선택
files = glob.glob(txt_pattern)
first_file = files[0]

print(first_file)
