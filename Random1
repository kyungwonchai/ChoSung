Sub UpdateGColumnAndCopy()
    Dim ws As Worksheet, tempSheet As Worksheet
    Dim i As Long
    Dim pp As Long

    Set ws = ThisWorkbook.Sheets("당주계획")
    Set tempSheet = ThisWorkbook.Sheets("임시1")
    pp = 500 ' 예시로 500을 사용

    ' G열의 병합 해제
    ws.Columns("G:G").UnMerge

    ' G열의 빈 셀을 상단의 값으로 채움
    For i = 2 To pp
        If IsEmpty(ws.Cells(i, "G").Value) Then
            ws.Cells(i, "G").Value = ws.Cells(i - 1, "G").Value
        End If
    Next i

    ' 임시1 시트의 지정된 열에 G열 데이터 복사
    Dim destColumns As Variant
    destColumns = Array("B", "E", "H", "K", "N", "Q", "T")

    For i = LBound(destColumns) To UBound(destColumns)
        ws.Range(ws.Cells(2, "G"), ws.Cells(pp, "G")).Copy Destination:=tempSheet.Cells(2, destColumns(i))
    Next i
End Sub
