private void cardView_CustomDrawCardField(object sender, DevExpress.XtraGrid.Views.Base.RowCellCustomDrawEventArgs e)
{
    CardView cardView = sender as CardView;
    if (e.Column.FieldName == "이미지컬럼")
    {
        Image image = e.CellValue as Image;
        if (image != null)
        {
            int width = 150; // 이미지 컬럼의 가로 크기
            int height = 100; // 이미지 컬럼의 세로 크기
            int x = e.Bounds.X + (e.Bounds.Width - width) / 2;
            int y = e.Bounds.Y + (e.Bounds.Height - height) / 2;
            e.Graphics.DrawImage(image, new Rectangle(x, y, width, height));
            e.Handled = true;
        }
    }
}
