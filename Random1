# 파일 경로 설정
rules_file_path = r"C:\agent\rules.txt"  # 변경 규칙 파일
source_file_path = r"C:\agent\source.txt"  # 원본 파일
output_file_path = r"C:\agent\output.txt"  # 결과 파일

# 원본 파일 읽기
with open(source_file_path, "r", encoding="utf-8") as source_file:
    file_content = source_file.read()

# 변경 규칙 파일 처리
with open(rules_file_path, "r", encoding="utf-8") as rules_file:
    for line in rules_file:
        # 각 줄을 공백으로 나눔
        parts = line.strip().split()
        if len(parts) == 2:
            target, replacement = parts  # 치환 대상과 치환 값
            # 원본 내용에서 치환 대상 -> 치환 값
            file_content = file_content.replace(target, replacement)

# 변경된 내용을 결과 파일로 저장
with open(output_file_path, "w", encoding="utf-8") as output_file:
    output_file.write(file_content)

print(f"처리가 완료되었습니다. 결과는 {output_file_path}에 저장되었습니다.")
