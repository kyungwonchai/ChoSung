SELECT
    'temp' AS Measurement,
    SUM(CASE WHEN module = 'Module1' THEN temp ELSE 0 END) AS Module1,
    SUM(CASE WHEN module = 'Module2' THEN temp ELSE 0 END) AS Module2,
    SUM(CASE WHEN module = 'Module3' THEN temp ELSE 0 END) AS Module3
    -- 계속해서 필요한 모듈을 추가합니다.
FROM table1
GROUP BY 'temp'
UNION ALL
SELECT
    'humid' AS Measurement,
    SUM(CASE WHEN module = 'Module1' THEN humid ELSE 0 END) AS Module1,
    SUM(CASE WHEN module = 'Module2' THEN humid ELSE 0 END) AS Module2,
    SUM(CASE WHEN module = 'Module3' THEN humid ELSE 0 END) AS Module3
    -- 계속해서 필요한 모듈을 추가합니다.
FROM table1
GROUP BY 'humid'
UNION ALL
SELECT
    'dust' AS Measurement,
    SUM(CASE WHEN module = 'Module1' THEN dust ELSE 0 END) AS Module1,
    SUM(CASE WHEN module = 'Module2' THEN dust ELSE 0 END) AS Module2,
    SUM(CASE WHEN module = 'Module3' THEN dust ELSE 0 END) AS Module3
    -- 계속해서 필요한 모듈을 추가합니다.
FROM table1
GROUP BY 'dust';
