private Bitmap CaptureWebView2ToBitmap(WebView2 webView)
{
    // 컨트롤의 크기에 맞는 비트맵을 생성합니다.
    Bitmap bitmap = new Bitmap(webView.Width, webView.Height);

    // Graphics.FromImage 함수를 사용하여 비트맵에 그릴 수 있는 Graphics 객체를 가져옵니다.
    using (Graphics g = Graphics.FromImage(bitmap))
    {
        // DrawToBitmap 함수를 사용하여 WebView2 컨트롤을 비트맵에 그립니다.
        // 첫 번째 매개변수는 대상 비트맵, 두 번째 매개변수는 비트맵 내에서 그릴 영역입니다.
        webView.DrawToBitmap(bitmap, new Rectangle(0, 0, webView.Width, webView.Height));
    }

    // 생성된 비트맵을 반환합니다.
    return bitmap;
}
