using DevExpress.XtraGrid.Views.Grid;

private void gridView1_CustomDrawCell(object sender, DevExpress.XtraGrid.Views.Base.RowCellCustomDrawEventArgs e)
{
    GridView view = sender as GridView;

    if (e.Column.FieldName == "체크경과시간")
    {
        int checkTime = Convert.ToInt32(view.GetRowCellValue(e.RowHandle, "체크경과시간"));
        if (checkTime >= 5)
        {
            e.Appearance.BackColor = Color.Yellow;
            e.Appearance.ForeColor = Color.Black;
        }
    }
    else if (e.Column.FieldName == "IP주소")
    {
        string ipAddress = Convert.ToString(view.GetRowCellValue(e.RowHandle, "IP주소"));
        if (e.Appearance.BackColor == SystemColors.Control && !string.IsNullOrEmpty(ipAddress) && ipAddress.ToLower() != "회색")
        {
            e.Appearance.BackColor = SystemColors.Control;
            e.Appearance.ForeColor = SystemColors.ControlText;
        }
    }
}
