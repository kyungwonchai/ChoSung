private void gridControl_CellValueChanging(object sender, DevExpress.Xpf.Grid.CellValueChangedEventArgs e) {
    // e.RowHandle을 사용하여 현재 행을 참조
    // e.Column을 사용하여 현재 변경되고 있는 열을 확인
    if (e.Column.FieldName == "YourFieldName") { // 'YourFieldName'을 해당 필드 이름으로 변경하세요.
        var oldValue = (int)gridControl.GetCellValue(e.RowHandle, e.Column);
        var newValue = (int)e.Value;

        if (newValue > oldValue) {
            // 새 값이 이전 값보다 크면 실행될 코드
            MessageBox.Show("새로운 값이 이전 값보다 큽니다.");
        }
    }
}
