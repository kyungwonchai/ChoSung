import matplotlib.pyplot as plt
import matplotlib.font_manager as fm

# 한글 폰트 경로 설정
font_path = '/usr/share/fonts/truetype/nanum/NanumBarunGothic.ttf'  # 나눔고딕 폰트 경로를 사용하세요

# 한글 폰트 설정
fontprop = fm.FontProperties(fname=font_path)
plt.rcParams['font.family'] = fontprop.get_name()

# Plot the bar chart
plt.bar(df['과제명'], df['경과일'])
plt.xlabel('과제명', fontproperties=fontprop)
plt.ylabel('경과일', fontproperties=fontprop)
plt.title('과제별 경과일', fontproperties=fontprop)
plt.xticks(rotation=45, fontproperties=fontprop)
plt.show()
