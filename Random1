  public TaskManager()
        {
            Tasks = new ObservableCollection<TaskModel>();
            LoadTasks();  // 초기 데이터 로드
        }

        // 기존 데이터를 불러오는 메서드
        public void LoadTasks()
        {
            // 예: 데이터베이스에서 작업을 가져오는 코드
            var existingTasks = databaseService.GetAllTasks();
            Tasks.Clear();
            foreach (var task in existingTasks)
            {
                Tasks.Add(task);
            }
        }