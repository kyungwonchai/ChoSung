using System;
using System.Threading;
using System.Windows.Forms;

namespace YourNamespace
{
    public partial class MainForm : Form
    {
        private readonly object lockObj = new object();

        public MainForm()
        {
            InitializeComponent();
        }

        private void MainForm_Load(object sender, EventArgs e)
        {
            // 폼 로드 시, 로그용 Timer 실행
            Timer logTimer = new Timer();
            logTimer.Interval = 1000;  // 로그를 갱신할 주기 (예: 1초)
            logTimer.Tick += LogTimer_Tick;
            logTimer.Start();
        }

        private void LogTimer_Tick(object sender, EventArgs e)
        {
            // Timer 이벤트 발생 시, 로그 추가 및 리스트박스 업데이트
            AddLog("데이터 처리 완료");
        }

        private void AddLog(string log)
        {
            lock (lockObj)
            {
                // 현재 시간과 로그 상태를 함께 기록
                string logEntry = $"{DateTime.Now}: {log}";

                // 리스트박스에 로그 추가
                listBox1.Invoke(new Action(() =>
                {
                    listBox1.Items.Add(logEntry);

                    // 리스트박스의 아이템 개수가 500개를 초과할 경우 가장 오래된 로그 제거
                    if (listBox1.Items.Count > 500)
                    {
                        listBox1.Items.RemoveAt(0);
                    }
                }));
            }
        }

        private void ProcessData()
        {
            // 데이터 처리 로직...

            // 예시: 로그 추가
            AddLog("데이터 처리 완료");
        }

        private void buttonProcess_Click(object sender, EventArgs e)
        {
            // 데이터 처리 버튼 클릭 시
            Thread thread = new Thread(ProcessData);
            thread.Start();
        }
    }
}
