private void gridView1_MouseDown(object sender, MouseEventArgs e)
{
    GridView view = sender as GridView;
    if (view == null) return;

    // 마우스 오른쪽 버튼 클릭 시에만 동작하도록 조건 추가
    if (e.Button != MouseButtons.Right) return;

    // 클릭한 셀 가져오기
    GridHitInfo hitInfo = view.CalcHitInfo(e.Location);
    if (!hitInfo.InRowCell) return;

    // 컬럼 헤더와 값을 가져오기
    string columnName = hitInfo.Column.FieldName;
    string columnCaption = hitInfo.Column.Caption;
    object cellValue = view.GetRowCellValue(hitInfo.RowHandle, hitInfo.Column);

    // 가져온 값 사용하기
    MessageBox.Show($"컬럼 헤더: {columnCaption}\n컬럼 이름: {columnName}\n셀 값: {cellValue}");
}
