using DevExpress.XtraEditors.Controls;

// SpinEdit 컨트롤을 생성하여 폼에 추가
SpinEdit spinEdit = new SpinEdit();
spinEdit.Properties.Buttons.AddRange(new EditorButton[] {
    new EditorButton(ButtonPredefines.Combo)}); // 상하 화살표 버튼 추가
spinEdit.Properties.TextEditStyle = TextEditStyles.DisableTextEditor; // 텍스트 편집 비활성화
spinEdit.Properties.IsFloatValue = false; // 정수 값만 허용
spinEdit.Properties.MinValue = 0; // 최소값 설정
spinEdit.Properties.MaxValue = 100; // 최대값 설정
spinEdit.Properties.Increment = 1; // 증감 단위 설정
spinEdit.ValueChanged += SpinEdit_ValueChanged; // 값 변경 이벤트 핸들러 등록

// SpinEdit 컨트롤을 수량 입력 칸에 배치
gridControl1.RepositoryItems.Add(spinEdit);
gridView1.Columns["Quantity1"].ColumnEdit = spinEdit;
