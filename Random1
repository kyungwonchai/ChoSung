richEditControl1.Document.BeginUpdate();

// 텍스트를 삽입합니다.
richEditControl1.Document.AppendText("여기에 텍스트를 입력합니다.");

// 이미지를 클립보드에서 가져옵니다.
Image imageFromClipboard = Clipboard.GetImage();
if (imageFromClipboard != null)
{
    // InlineShape을 사용하여 이미지를 삽입합니다.
    InlineShape inlineShape = richEditControl1.Document.Images.InsertPicture(richEditControl1.Document.Range.End, imageFromClipboard);
    inlineShape.FloatWrapType = FloatWrapType.None; // 이미지와 텍스트가 겹치지 않도록 하기 위해 Wrap을 None으로 설정합니다.
    richEditControl1.Document.AppendText(" "); // 이미지와 텍스트 사이에 공백을 추가합니다.
}

richEditControl1.Document.EndUpdate();
