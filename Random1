using System;
using System.Data;
using System.Data.SqlClient;
using System.Windows.Forms;
using DevExpress.XtraGrid.Views.Grid;

namespace YourNamespace
{
    public partial class MainForm : Form
    {
        private SqlConnection connection;
        private SqlDataAdapter dataAdapter;
        private DataTable dataTable;

        public MainForm()
        {
            InitializeComponent();
        }

        private void MainForm_Load(object sender, EventArgs e)
        {
            string connectionString = "Data Source=YOUR_SERVER;Initial Catalog=mySMD_DB2;User ID=YOUR_USERNAME;Password=YOUR_PASSWORD";
            string query = "SELECT no1, 구역, 관리자정보, 날짜설정값, 메일주소 FROM MaksFilterMailling";

            connection = new SqlConnection(connectionString);
            dataAdapter = new SqlDataAdapter(query, connection);
            dataTable = new DataTable();

            // 데이터 가져오기
            dataAdapter.Fill(dataTable);

            // GridControl에 데이터 바인딩
            gridControl1.DataSource = dataTable;
        }

        private void btnSave_Click(object sender, EventArgs e)
        {
            try
            {
                // 변경 내용을 데이터베이스에 저장
                dataAdapter.Update(dataTable);
                MessageBox.Show("변경 내용이 저장되었습니다.");
            }
            catch (Exception ex)
            {
                MessageBox.Show("변경 내용을 저장하는 동안 오류가 발생했습니다: " + ex.Message);
            }
        }

        private void btnDelete_Click(object sender, EventArgs e)
        {
            // 선택한 행 삭제
            int[] selectedRows = ((GridView)gridControl1.MainView).GetSelectedRows();

            if (selectedRows.Length > 0)
            {
                if (MessageBox.Show("선택한 행을 삭제하시겠습니까?", "확인", MessageBoxButtons.YesNo) == DialogResult.Yes)
                {
                    foreach (int rowHandle in selectedRows)
                    {
                        if (rowHandle >= 0)
                        {
                            ((GridView)gridControl1.MainView).DeleteRow(rowHandle);
                        }
                    }
                }
            }
            else
            {
                MessageBox.Show("선택한 행이 없습니다.");
            }
        }

        private void btnAdd_Click(object sender, EventArgs e)
        {
            // 새로운 행 추가
            DataRow newRow = dataTable.NewRow();
            dataTable.Rows.Add(newRow);
        }
    }
}
