using System.Drawing;
using System.Drawing.Printing;
using System.Windows.Forms;

// ...

private void btnPrintPreview_Click(object sender, EventArgs e)
{
    // Panel1의 크기를 인쇄용지 크기로 조정
    panel1.Width = (int)(printDocument.DefaultPageSettings.PrintableArea.Width * 100 / printDocument.DefaultPageSettings.PrinterResolution.X);
    panel1.Height = (int)(printDocument.DefaultPageSettings.PrintableArea.Height * 100 / printDocument.DefaultPageSettings.PrinterResolution.Y);

    // Panel1의 내용을 이미지로 만들기
    Bitmap previewImage = SavePanelAsImage(panel1);

    // Panel2에 이미지 표시
    panel2.BackgroundImage = previewImage;

    // Panel2에 이미지를 가운데에 맞춤
    panel2.BackgroundImageLayout = ImageLayout.Center;
}

private Bitmap SavePanelAsImage(Panel panel)
{
    // Panel 컨트롤의 크기만큼의 비트맵 생성
    Bitmap bitmap = new Bitmap(panel.Width, panel.Height);

    // Panel의 내용을 비트맵에 그리기
    panel.DrawToBitmap(bitmap, new Rectangle(0, 0, panel.Width, panel.Height));

    return bitmap;
}
