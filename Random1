using System;
using System.Data.SqlClient;

public class Program
{
    public static void Main()
    {
        string query = "SELECT * FROM 테이블명 WHERE 열명 = @파라미터1";
        SqlCommand command = new SqlCommand(query);
        command.Parameters.AddWithValue("@파라미터1", "값");

        PrintQueryWithParameters(command);
    }

    public static void PrintQueryWithParameters(SqlCommand command)
    {
        string completeQuery = command.CommandText;

        foreach (SqlParameter parameter in command.Parameters)
        {
            string parameterName = parameter.ParameterName;
            string parameterValue = parameter.Value.ToString();

            completeQuery = completeQuery.Replace(parameterName, parameterValue);
        }

        Console.WriteLine(completeQuery);
    }
}
