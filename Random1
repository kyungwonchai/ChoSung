 foreach (var rowHandle in gridView.GetRowHandles())
        {
            var abcValue = Convert.ToInt32(gridView.GetCellValue(rowHandle, "ColumnABC"));
            
            foreach (GridColumn column in gridView.VisibleColumns)
            {
                if (column.FieldName != "ColumnABC")
                {
                    int columnValue = Convert.ToInt32(gridView.GetCellValue(rowHandle, column.FieldName));
                    int result = columnValue - abcValue;
                    
                    // 여기서 result 값을 사용하거나 저장할 수 있습니다.
                    Console.WriteLine($"Row {rowHandle}, Column {column.FieldName}: {result}");
                }
            }
        }