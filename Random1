private void UpdateListBoxBackground()
{
    int sheetCount = spreadsheetControl2.Document.Worksheets.Count;
    if (sheetCount >= 2)
    {
        // 시트가 2개 이상일 때 #ff222222와 #ffeecc11 그라데이션 적용
        var gradientBrush = new LinearGradientBrush();

        // 위에서 아래로 그라디언트 방향 설정
        gradientBrush.StartPoint = new Point(0, 0); // 그라디언트 시작점 (위쪽)
        gradientBrush.EndPoint = new Point(0, 1);   // 그라디언트 끝점 (아래쪽)

        // 문자열 색상 코드로 Color 객체 변환
        Color color1 = (Color)ColorConverter.ConvertFromString("#ff222222");
        Color color2 = (Color)ColorConverter.ConvertFromString("#ffeecc11");

        // GradientStop에 변환한 Color 추가
        gradientBrush.GradientStops.Add(new GradientStop(color1, 0.0));
        gradientBrush.GradientStops.Add(new GradientStop(color2, 1.0));

        sheetListBox.Background = gradientBrush;
    }
    else
    {
        // 시트가 1개 이하일 때 기본 배경색으로 설정
        sheetListBox.Background = Brushes.White;
    }
}
