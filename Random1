        Title="Custom ScrollBar" Height="400" Width="300">
    <Window.Resources>
        <!-- ScrollBar의 Thumb 부분 배경색 및 공백 제거 -->
        <Style TargetType="ScrollBar">
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Width" Value="16"/>
                </Trigger>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Height" Value="16"/>
                </Trigger>
            </Style.Triggers>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Track Name="PART_Track"
                                   IsDirectionReversed="True"
                                   Focusable="False"
                                   VerticalAlignment="Stretch"
                                   HorizontalAlignment="Stretch">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineUpCommand" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" />
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb BorderBrush="Transparent" BorderThickness="0" Margin="0">
                                        <!-- Thumb의 배경을 그라데이션으로 채움 -->
                                        <Thumb.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#FF007AFF" Offset="0.0"/>
                                                <GradientStop Color="#FF00BFFF" Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Thumb.Background>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineDownCommand" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" />
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

