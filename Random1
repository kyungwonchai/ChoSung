using Microsoft.Web.WebView2.Core;

// ...

webView.CoreWebView2InitializationCompleted += (sender, e) =>
{
    // 웹 뷰 초기화 완료 시 실행될 코드
    webView.CoreWebView2.DefaultTextEncoding = "UTF-8"; // 필요한 경우 인코딩을 지정합니다.
    webView.CoreWebView2.DefaultFontSize = 14; // 필요한 경우 폰트 크기를 조정합니다.
    webView.CoreWebView2.DefaultFontFamily = "나눔고딕"; // 설치한 한국어 폰트를 지정합니다.
};

// ...
