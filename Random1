using System;
using System.IO;

class Program
{
    static void Main()
    {
        string fullPath = @"c:\abc\folder1\file.txt";
        string firstDirectory = GetFirstDirectory(fullPath);
        Console.WriteLine(firstDirectory);
    }

    static string GetFirstDirectory(string path)
    {
        // Get the root directory (e.g. c:\) and combine it with the first directory name.
        string root = Path.GetPathRoot(path);
        string firstSubdirectory = Path.Combine(root, path.Substring(root.Length).Split(Path.DirectorySeparatorChar)[0]);
        return firstSubdirectory;
    }
}
