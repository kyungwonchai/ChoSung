import pandas as pd
from sqlalchemy import create_engine, text

# 접속 정보
username = '사용자이름'
password = '비밀번호'
server = '서버주소'
port = '포트번호'
database = '데이터베이스이름'

# Database String URI 생성
uri = f"mssql+pyodbc://{username}:{password}@{server}:{port}/{database}?driver=SQL+Server+Native+Client+11.0"

# SQLAlchemy의 Connectable 객체 생성
engine = create_engine(uri)

# SQL 쿼리 실행 및 결과를 DataFrame으로 담기
query = text("SELECT 업체PN FROM PLM뿌품")
df = pd.read_sql(query, engine)

# DataFrame 출력
print(df)
