using System;
using System.Data;
using System.Data.SqlClient;

namespace YourNamespace
{
    public class YourForm : Form
    {
        private string connectionString = "Data Source=YourServer;Initial Catalog=YourDatabase;Integrated Security=True";

        // 데이터를 읽어오는 메서드
        private DataTable ReadDataFromTable()
        {
            DataTable dataTable = new DataTable();

            using (SqlConnection connection = new SqlConnection(connectionString))
            {
                string query = "SELECT * FROM tbl1";

                using (SqlCommand command = new SqlCommand(query, connection))
                {
                    connection.Open();

                    SqlDataReader reader = command.ExecuteReader();

                    dataTable.Load(reader);

                    connection.Close();
                }
            }

            return dataTable;
        }

        // 데이터를 읽어와서 사용하는 예시 메서드
        private void ExampleMethod()
        {
            DataTable table = ReadDataFromTable();

            foreach (DataRow row in table.Rows)
            {
                // 행 데이터 사용 예시
                string column1 = row["Column1"].ToString();
                int column2 = Convert.ToInt32(row["Column2"]);
                // ...
            }
        }
    }
}
