private void OnBandLoaded(object sender, RoutedEventArgs e)
{
    GridControlBand band = sender as GridControlBand;
    if (band != null)
    {
        foreach (GridColumn column in band.Columns)
        {
            var template = new DataTemplate();
            var textBlock = new FrameworkElementFactory(typeof(TextBlock));
            textBlock.SetBinding(TextBlock.TextProperty, new Binding("Content"));
            textBlock.SetValue(TextBlock.HorizontalAlignmentProperty, HorizontalAlignment.Center);
            template.VisualTree = textBlock;

            Style headerStyle = new Style(typeof(GridColumnHeader));
            headerStyle.Setters.Add(new Setter(GridColumnHeader.TemplateProperty, template));

            column.HeaderStyle = headerStyle;
        }
    }
}
