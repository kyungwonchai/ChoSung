private DataRowView ConvertDataRowToDataRowView(DataRow dataRow)
{
    DataTable dataTable = dataRow.Table;
    DataView dataView = new DataView(dataTable);
    DataRowView foundRowView = null;

    foreach (DataRowView rowView in dataView)
    {
        if (rowView.Row == dataRow)
        {
            foundRowView = rowView;
            break;
        }
    }

    return foundRowView;
}
