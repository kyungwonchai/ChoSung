<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:local="clr-namespace:WpfApp"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <!-- 탭 헤더 스타일 -->
        <Style x:Key="LeftTabHeaderStyle" TargetType="dx:DXTabItem">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type dx:DXTabItem}">
                        <Border
                            Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            CornerRadius="3"
                            Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="Yellow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <dx:DXTabControl
            TabStripPlacement="Left"
            TabHeaderStyle="{StaticResource LeftTabHeaderStyle}">
            <!-- 탭 항목 정의 -->
            <dx:DXTabItem Header="Tab 1">
                <TextBlock Text="Content of Tab 1" Margin="20"/>
            </dx:DXTabItem>
            <dx:DXTabItem Header="Tab 2">
                <TextBlock Text="Content of Tab 2" Margin="20"/>
            </dx:DXTabItem>
            <dx:DXTabItem Header="Tab 3">
                <TextBlock Text="Content of Tab 3" Margin="20"/>
            </dx:DXTabItem>
        </dx:DXTabControl>
    </Grid>
</Window>
