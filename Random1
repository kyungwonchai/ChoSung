using System;
using System.Threading;
using System.Windows;

namespace WpfApp
{
    public partial class App : Application
    {
        static Mutex mutex = new Mutex(true, "{E0524B12-4C1C-46E2-B009-38A0D4A89B24}");

        protected override void OnStartup(StartupEventArgs e)
        {
            if (mutex.WaitOne(TimeSpan.Zero, true))
            {
                base.OnStartup(e);
                MainWindow mainWindow = new MainWindow();
                mainWindow.Show();
                mutex.ReleaseMutex();
            }
            else
            {
                MessageBox.Show("이미 실행 중인 애플리케이션 인스턴스가 있습니다.");
                this.Shutdown();
            }
        }
    }
}
