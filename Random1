using DevExpress.Xpf.Grid;
using System;
using System.Data;
using System.Data.SqlClient;
using System.Windows;
using System.Windows.Media;

namespace YourNamespace
{
    public partial class MainWindow : Window
    {
        public MainWindow()
        {
            InitializeComponent();
            tableView.CustomRowAppearance += TableView_CustomRowAppearance;
        }

        private void TableView_CustomRowAppearance(object sender, CustomRowAppearanceEventArgs e)
        {
            if (e.RowHandle == GridControl.InvalidRowHandle)
                return;

            DataRow row = ((DataRowView)gridControl1.GetRow(e.RowHandle)).Row;
            int key2Value = (int)row["key2"];

            // 여기서 key1 값을 어떻게 가져올지는 구현에 따라 다름
            if (/* key1 값과 key2Value가 일치하면 */)
            {
                e.Result = new SolidColorBrush(Colors.Yellow);
                e.Handled = true;
            }
        }
    }
}
