using System;
using System.Data.SqlClient;

namespace SqlCommandExample
{
    class Program
    {
        static void Main(string[] args)
        {
            string connectionString = "Data Source=서버주소;Initial Catalog=데이터베이스명;User ID=아이디;Password=비밀번호";
            using (SqlConnection connection = new SqlConnection(connectionString))
            {
                connection.Open();
                string query = "SELECT 컬럼명 FROM 테이블명 WHERE 조건";

                using (SqlCommand command = new SqlCommand(query, connection))
                {
                    using (SqlDataReader reader = command.ExecuteReader())
                    {
                        if (reader.Read())
                        {
                            int result = reader.GetInt32(0); // 첫 번째 컬럼의 int 값을 가져옵니다.
                            Console.WriteLine("읽어온 int 값: " + result);
                        }
                        else
                        {
                            Console.WriteLine("데이터가 없습니다.");
                        }
                    }
                }
            }
        }
    }
}
