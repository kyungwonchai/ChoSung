public class PercentageValueConverter : IValueConverter
{
    public object Convert(object value, Type targetType, object parameter, CultureInfo culture)
    {
        // Assuming value is the number or fraction you need to convert to a percentage
        double number = (double)value;
        return number * 100; // Convert fraction to percentage
    }

    public object ConvertBack(object value, Type targetType, object parameter, CultureInfo culture)
    {
        throw new NotImplementedException();
    }
}

// In your GridControl setup:
public void SetupGridControl()
{
    foreach (GridColumn column in gridControl.Columns)
    {
        if (column.FieldName.StartsWith("20"))
        {
            var progressBar = new ProgressBar();
            Binding binding = new Binding("YourDataFieldName")
            {
                Converter = new PercentageValueConverter()
            };
            progressBar.SetBinding(ProgressBar.ValueProperty, binding);
            column.CellTemplate = new DataTemplate(() => progressBar);
        }
    }
}
