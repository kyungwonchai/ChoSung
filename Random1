C#

using System;
using System.Diagnostics;
using System.Runtime.InteropServices;
using System.Threading.Tasks;
using System.Windows; // WPF ê¸°ë³¸ ë„¤ì„ìŠ¤í˜ì´ìŠ¤

namespace WpfBrowserLauncher
{
    public partial class MainWindow : Window
    {
        // Windows API í•¨ìˆ˜ ì„ ì–¸ (ë³€ê²½ ì—†ìŒ)
        [DllImport("user32.dll", SetLastError = true)]
        private static extern bool MoveWindow(IntPtr hWnd, int X, int Y, int nWidth, int nHeight, bool bRepaint);

        public MainWindow()
        {
            InitializeComponent();
        }

        // ë²„íŠ¼ í´ë¦­ ì´ë²¤íŠ¸ í•¸ë“¤ëŸ¬ (async í‚¤ì›Œë“œ ì¶”ê°€)
        private async void LaunchButton_Click(object sender, RoutedEventArgs e)
        {
            // ğŸ’¡ 1. ì—¬ê¸°ì— ë‘ ê°œì˜ ì›¹ ì£¼ì†Œë¥¼ ì…ë ¥í•˜ì„¸ìš”.
            string urlLeft = "https://www.google.com";
            string urlRight = "https://www.naver.com";

            // UI ì—…ë°ì´íŠ¸ ë° ë¹„í™œì„±í™”
            launchButton.IsEnabled = false;
            statusTextBlock.Text = "ë¸Œë¼ìš°ì €ë¥¼ ì‹¤í–‰í•˜ê³  ì •ë ¬í•˜ëŠ” ì¤‘ì…ë‹ˆë‹¤...";

            // 2. ì£¼ ëª¨ë‹ˆí„° í•´ìƒë„ ê°€ì ¸ì˜¤ê¸° (WPF ë°©ì‹)
            double screenWidth = SystemParameters.PrimaryScreenWidth;
            double screenHeight = SystemParameters.PrimaryScreenHeight;

            // 3. ë¸Œë¼ìš°ì € ì‹¤í–‰ ë° ìœ„ì¹˜ ì¡°ì •ì„ ë¹„ë™ê¸°ì ìœ¼ë¡œ ìˆ˜í–‰
            await LaunchAndPositionBrowserAsync(urlLeft, 0, 0, (int)(screenWidth / 2), (int)screenHeight);
            await LaunchAndPositionBrowserAsync(urlRight, (int)(screenWidth / 2), 0, (int)(screenWidth / 2), (int)screenHeight);

            statusTextBlock.Text = "ì™„ë£Œë˜ì—ˆìŠµë‹ˆë‹¤! 2ì´ˆ í›„ì— í”„ë¡œê·¸ë¨ì„ ì¢…ë£Œí•©ë‹ˆë‹¤.";

            // 4. ì ì‹œ í›„ ì• í”Œë¦¬ì¼€ì´ì…˜ ìë™ ì¢…ë£Œ
            await Task.Delay(2000);
            this.Close();
        }

        /// <summary>
        /// ë¸Œë¼ìš°ì €ë¥¼ ë¹„ë™ê¸°ì ìœ¼ë¡œ ì‹¤í–‰í•˜ê³  ì°½ ìœ„ì¹˜ë¥¼ ì¡°ì •í•˜ëŠ” í•¨ìˆ˜ (WinForms ë²„ì „ê³¼ ê±°ì˜ ë™ì¼)
        /// </summary>
        private async Task<bool> LaunchAndPositionBrowserAsync(string url, int x, int y, int width, int height)
        {
            try
            {
                var psi = new ProcessStartInfo(url) { UseShellExecute = true };
                Process process = Process.Start(psi);

                // í”„ë¡œì„¸ìŠ¤ê°€ ë©”ì¸ ì°½ í•¸ë“¤ì„ ê°€ì§ˆ ë•Œê¹Œì§€ ë¹„ë™ê¸°ì ìœ¼ë¡œ ëŒ€ê¸°
                int timeoutMilliseconds = 8000;
                var stopwatch = Stopwatch.StartNew();
                while (process.MainWindowHandle == IntPtr.Zero && stopwatch.ElapsedMilliseconds < timeoutMilliseconds)
                {
                    await Task.Delay(100);
                    process.Refresh();
                }

                if (process.MainWindowHandle != IntPtr.Zero)
                {
                    MoveWindow(process.MainWindowHandle, x, y, width, height, true);
                    return true;
                }
                else
                {
                    statusTextBlock.Text = $"{url} ì°½ì„ ì°¾ëŠ” ë° ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.";
                    return false;
                }
            }
            catch (Exception ex)
            {
                MessageBox.Show($"ì˜¤ë¥˜ ë°œìƒ: {ex.Message}");
                return false;
            }
        }
    }
}
