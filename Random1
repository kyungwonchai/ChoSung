using System;
using System.Windows.Forms;
using DevExpress.XtraEditors;
using DevExpress.XtraLayout;

public partial class MainForm : XtraForm
{
    public MainForm()
    {
        InitializeComponent();

        // XtraTablePanel 생성
        XtraTablePanel tablePanel = new XtraTablePanel();
        tablePanel.Dock = DockStyle.Fill;
        tablePanel.Rows.Add(new RowDefinition(SizeType.AutoSize));
        tablePanel.Rows.Add(new RowDefinition(SizeType.Percent, 50));
        tablePanel.Rows.Add(new RowDefinition(SizeType.Percent, 50));
        tablePanel.Columns.Add(new ColumnDefinition(SizeType.Percent, 100));
        this.Controls.Add(tablePanel);

        // 2번째 행과 3번째 행 사이에 분할기를 위한 XtraSplitContainer 생성
        XtraSplitContainer splitContainer = new XtraSplitContainer();
        splitContainer.Dock = DockStyle.Fill;
        tablePanel.AddControl(splitContainer, 0, 1);
        tablePanel.SetColumnSpan(splitContainer, 1);
        tablePanel.SetRowSpan(splitContainer, 2);
        tablePanel.SetContentAlignment(splitContainer, System.Drawing.ContentAlignment.MiddleCenter);

        // 분할기 컨트롤에 컨트롤들을 추가합니다.
        // splitContainer.Panel1에 원하는 컨트롤들을 추가합니다.
        // splitContainer.Panel2에 원하는 컨트롤들을 추가합니다.
        // ...

        // 분할기 컨트롤의 분할 위치 조정
        splitContainer.SplitPosition = tablePanel.Height / 2;
    }
}
