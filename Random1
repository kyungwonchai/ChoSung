public void DisposeUserControl(UserControl userControl)
{
    // 1. 유저 컨트롤 내부에서 리소스 정리
    if (userControl is MediaPlayerControl mediaPlayerControl)
    {
        mediaPlayerControl.DisposeMediaPlayer();
    }

    // 2. 부모 컨트롤에서 유저 컨트롤 제거
    panel1.Controls.Remove(userControl);

    // 3. 유저 컨트롤 객체 리소스 해제
    userControl.Dispose();
}
