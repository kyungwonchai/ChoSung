// MSSQL 데이터베이스 연결
SqlConnection conn = new SqlConnection("Data Source=serverName;Initial Catalog=dbName;User ID=username;Password=password");
conn.Open();

// SQL 질의문을 이용하여 데이터 가져오기
SqlCommand cmd = new SqlCommand("SELECT * FROM yourTable", conn);
SqlDataAdapter da = new SqlDataAdapter(cmd);
DataTable dt = new DataTable("yourTable");
da.Fill(dt);

// DataGrid에 데이터 바인딩
yourDataGrid.ItemsSource = dt.DefaultView;

// 초기에 모든 컬럼을 읽기 전용으로 설정
foreach (DataGridColumn column in yourDataGrid.Columns)
{
    column.IsReadOnly = true;
}

// ButtonA 클릭 이벤트 핸들러
private void ButtonA_Click(object sender, RoutedEventArgs e)
{
    // 버튼A 클릭 시 'yourEditableColumnName' 컬럼을 편집 가능하게 설정
    DataGridColumn editableColumn = yourDataGrid.Columns.First(c => c.Header.ToString() == "yourEditableColumnName");
    if (editableColumn != null)
    {
        editableColumn.IsReadOnly = false;
    }
}
