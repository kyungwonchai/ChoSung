Sub 필터와_정렬()

    ' 필터 해제
    If ActiveSheet.AutoFilterMode Then
        ActiveSheet.AutoFilterMode = False
    End If

    ' 3번째 열에서 "S"로 시작하는 행 필터링
    ActiveSheet.Range("A3").AutoFilter Field:=3, Criteria1:="S*"

    ' 4번째 열에서 숫자 값이 0보다 큰 행 필터링
    ActiveSheet.Range("A3").AutoFilter Field:=4, Criteria1:=">0"

    ' 정렬 - 4번째 열을 기준으로 큰 숫자에서 작은 숫자 순서로
    ActiveSheet.AutoFilter.Sort.SortFields.Clear
    ActiveSheet.AutoFilter.Sort.SortFields.Add Key:=Range("D4"), SortOn:=xlSortOnValues, Order:=xlDescending, DataOption:=xlSortNormal

    ' 필터 해제
    ActiveSheet.AutoFilterMode = False

End Sub
