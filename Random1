private void GridControl_MouseUp(object sender, MouseButtonEventArgs e)
{
    var hitInfo = gridControl.CalcHitInfo(e.GetPosition(gridControl));
    if (hitInfo.InRowCell)
    {
        gridControl.CurrentColumn = hitInfo.Column;
        gridControl.View.FocusedRowHandle = hitInfo.RowHandle;
        gridControl.View.ShowEditor();
    }
}
