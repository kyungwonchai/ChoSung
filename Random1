// PivotGridControl의 CustomDrawRowHeaderCell 이벤트 핸들러 등록
pivotGridControl1.CustomDrawRowHeaderCell += PivotGridControl1_CustomDrawRowHeaderCell;

// CustomDrawRowHeaderCell 이벤트 핸들러 구현
private void PivotGridControl1_CustomDrawRowHeaderCell(object sender, DevExpress.XtraPivotGrid.PivotCustomDrawRowHeaderCellEventArgs e)
{
    e.Appearance.Options.UseTextOptions = true;
    e.Appearance.TextOptions.WordWrap = WordWrap.Wrap;
    e.Appearance.TextOptions.VAlignment = DevExpress.Utils.VertAlignment.Center;

    int rowHeight = 40; // 원하는 행 높이로 수정

    // 필요에 따라 추가적인 로직 수행
    // ...

    e.RowHeight = rowHeight; // 행 높이 설정
    e.Handled = true;
}
