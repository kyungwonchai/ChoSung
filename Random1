import pymssql

# MSSQL 서버 연결 설정
server = 'your_server'
port = 1433  # 사용하려는 포트로 대체
database = 'your_database'
username = 'your_username'
password = 'your_password'
conn = pymssql.connect(server, port=port, user=username, password=password, database=database)

# INSERT 문 실행
table_name = 'your_table'
column1 = 'value1'
column2 = 'value2'

with conn.cursor() as cursor:
    insert_query = f"INSERT INTO {table_name} (column1, column2) VALUES (%s, %s)"
    cursor.execute(insert_query, (column1, column2))

    conn.commit()

# 연결 종료
conn.close()
