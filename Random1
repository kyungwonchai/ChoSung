using DevExpress.XtraCharts;
// ...

// CustomDrawSeriesPoint 이벤트 처리
chartControl.CustomDrawSeriesPoint += ChartControl_CustomDrawSeriesPoint;

// CustomDrawSeriesPoint 이벤트 핸들러
private void ChartControl_CustomDrawSeriesPoint(object sender, CustomDrawSeriesPointEventArgs e)
{
    if (e.SeriesPoint != null)
    {
        // 현재 포인트에 대한 정보 가져오기
        SeriesPoint seriesPoint = e.SeriesPoint;

        // GanttSeriesPoint로 변환
        GanttSeriesPoint ganttPoint = seriesPoint as GanttSeriesPoint;

        if (ganttPoint != null)
        {
            // 원하는 형식으로 막대 레이블 내용 변경
            string label = $"과제명: {ganttPoint.Argument}\n시작시간: {ganttPoint.DateTimeValues[0]:yyyy-MM-dd HH:mm:ss}\n종료시간: {ganttPoint.DateTimeValues[1]:yyyy-MM-dd HH:mm:ss}";

            e.LabelText = label;
        }
    }
}
