public string ConvertDecimalToLittleEndianHex(int decimalValue)
{
    // 1. 10진수를 16진수 4자리로 변환
    string hexValue = decimalValue.ToString("X4");  // 4자리 16진수 문자열로 변환 (예: 142 -> 008E)

    // 2. 리틀 엔디언 방식으로 두 자리를 교환
    string littleEndianHex = hexValue.Substring(2, 2) + hexValue.Substring(0, 2);

    return littleEndianHex;
}
