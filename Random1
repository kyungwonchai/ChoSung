public partial class MainForm : RibbonForm
{
    private BarManager barManager;

    public MainForm()
    {
        InitializeComponent();
        barManager = new BarManager();
        barManager.Form = this;

        var ribbonPage = new RibbonPage("ë©”ë‰´");
        var ribbonGroup = new RibbonPageGroup("ê¸°ëŠ¥ ë²„íŠ¼");

        // ìŠ¤íƒœí‹± ë©”ì„œë“œ ì „ë‹¬ (this ì—†ì´ ì‚¬ìš© ê°€ëŠ¥)
        var button1 = new ButtonConfig
        {
            Name = "ë²„íŠ¼1",
            Tag = "Btn1",
            Icon = "save",
            Style = BarItemPaintStyle.CaptionGlyph,
            OnClickAction = HandleStaticButtonClick  // static í•¨ìˆ˜ì´ë¯€ë¡œ this ì—†ì´ ê°€ëŠ¥
        }.CreateBarItem(barManager);

        barManager.Items.Add(button1);
        ribbonGroup.ItemLinks.Add(button1);
        ribbonPage.Groups.Add(ribbonGroup);
        ribbonControl1.Pages.Add(ribbonPage);
    }

    // static ë©”ì„œë“œ (í´ë˜ìŠ¤ ë©”ì„œë“œ)
    private static void HandleStaticButtonClick()
    {
        MessageBox.Show("ìŠ¤íƒœí‹± ë²„íŠ¼ í´ë¦­ë¨", "ì•Œë¦¼");
    }
}
