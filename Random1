private void ListControl_Drop(object sender, DragEventArgs e)
{
    var listControl = sender as ListBox;
    if (listControl != null)
    {
        // OriginalSource에서 ListBoxItem을 안전하게 가져옵니다.
        var item = e.OriginalSource as FrameworkElement;
        if (item != null)
        {
            var listBoxItem = item.DataContext as ColumnInfo;
            if (listBoxItem != null)
            {
                // listBoxItem이 null이 아닐 때만 처리를 계속합니다.
                // 드롭 처리 로직을 여기에 추가합니다.
            }
        }
    }
}
