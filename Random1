import pandas as pd

# 예시 데이터
data = {
    '과목': ['수학', '수학', '영어', '영어', '과학', '과학'],
    '성적': [90, 80, 85, 87, 92, 88],
    '참여도': [95, 85, 80, 90, 88, 85],
    '출석률': [100, 90, 95, 90, 85, 95],
    '프로젝트점수': [88, 85, 82, 89, 91, 90]
}
df = pd.DataFrame(data)

# '성적'과 '프로젝트점수'에 대해 각 '과목'별 최대값을 동시에 계산
df[['성적_최대값', '프로젝트_최대값']] = df.groupby('과목')[['성적', '프로젝트점수']].transform('max')

print(df)
