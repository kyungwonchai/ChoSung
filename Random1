public partial class MainForm : RibbonForm
{
    private BarManager barManager;

    public MainForm()
    {
        InitializeComponent();
        barManager = new BarManager();
        barManager.Form = this;

        var ribbonPage = new RibbonPage("ë©”ë‰´");
        var ribbonGroup = new RibbonPageGroup("ê¸°ëŠ¥ ë²„íŠ¼");

        // ì¸ìŠ¤í„´ìŠ¤ ë©”ì„œë“œ ì „ë‹¬ (this í•„ìš”)
        var button1 = new ButtonConfig
        {
            Name = "ë²„íŠ¼1",
            Tag = "Btn1",
            Icon = "save",
            Style = BarItemPaintStyle.CaptionGlyph,
            OnClickAction = this.HandleButton1Click  // ì—¬ê¸°ì„œ this ì¶”ê°€
        }.CreateBarItem(barManager);

        var button2 = new ButtonConfig
        {
            Name = "ë²„íŠ¼2",
            Tag = "Btn2",
            Icon = "edit",
            Style = BarItemPaintStyle.CaptionGlyph,
            OnClickAction = this.HandleButton2Click  // this ì¶”ê°€
        }.CreateBarItem(barManager);

        barManager.Items.Add(button1);
        barManager.Items.Add(button2);

        ribbonGroup.ItemLinks.Add(button1);
        ribbonGroup.ItemLinks.Add(button2);
        ribbonPage.Groups.Add(ribbonGroup);
        ribbonControl1.Pages.Add(ribbonPage);
    }

    // ì¸ìŠ¤í„´ìŠ¤ ë©”ì„œë“œ (this í•„ìš”)
    private void HandleButton1Click()
    {
        MessageBox.Show("ë²„íŠ¼1: ì €ì¥ ê¸°ëŠ¥ ì‹¤í–‰ë¨", "ì•Œë¦¼");
    }

