using System;
using System.Net;
using System.Windows.Forms;
using DevExpress.XtraRichEdit;

namespace WebPageViewer
{
    public partial class Form1 : Form
    {
        private RichEditControl richEditControl1;

        public Form1()
        {
            InitializeComponent();

            // RichEditControl 초기화
            richEditControl1 = new RichEditControl();
            richEditControl1.Dock = DockStyle.Fill;
            Controls.Add(richEditControl1);

            // 특정 웹페이지의 HTML 내용 가져오기
            string htmlContent = GetHtmlFromWebPage("http://example.com"); // 웹페이지 URL을 적절히 수정해야 합니다.

            // RichEditControl에 HTML 내용 표시
            richEditControl1.DocumentHtml = htmlContent;
        }

        // HTML 내용 가져오기 메서드 정의
        private string GetHtmlFromWebPage(string url)
        {
            using (WebClient client = new WebClient())
            {
                try
                {
                    // 웹페이지로부터 HTML 내용을 가져옴
                    string html = client.DownloadString(url);
                    return html;
                }
                catch (Exception ex)
                {
                    // 예외 처리
                    MessageBox.Show("웹페이지를 가져오는 중 오류가 발생했습니다: " + ex.Message);
                    return string.Empty;
                }
            }
        }
    }
}
