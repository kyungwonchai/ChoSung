from flask import Flask, request, jsonify

app = Flask(__name__)

@app.route('/')
def index():
    return app.send_static_file('index.html')

@app.route('/savedoodle', methods=['POST'])
def save_doodle():
    doodle_data = request.get_json()
    # 낙서 데이터와 이미지 인덱스를 활용하여 저장 로직을 구현
    # doodle_data['path']에는 그린 경로 데이터가, doodle_data['image']에는 이미지 데이터가 있음
    # 필요한 로직을 추가하여 낙서를 저장하도록 구현
    # ...
    return jsonify(message='Doodle saved successfully.')

if __name__ == '__main__':
    app.run(port=5000)
