using DevExpress.XtraRichEdit;
using System;
using System.Drawing;
using System.Windows.Forms;

// ...

private void PasteImageToRichEditControl(RichEditControl richEditControl)
{
    if (Clipboard.ContainsImage())
    {
        Image clipboardImage = Clipboard.GetImage();

        // 클립보드 이미지를 RichEditControl에 붙여넣기
        richEditControl.Document.Images.Append(clipboardImage);

        // 이미지 크기 조정 (선택 사항)
        DocumentImage insertedImage = richEditControl.Document.Images[richEditControl.Document.Images.Count - 1];
        Size imageSize = insertedImage.Size;
        double scaleFactor = 1.0;
        if (imageSize.Width > richEditControl.Width)
            scaleFactor = (double)richEditControl.Width / imageSize.Width;
        else if (imageSize.Height > richEditControl.Height)
            scaleFactor = (double)richEditControl.Height / imageSize.Height;
        if (scaleFactor < 1.0)
        {
            insertedImage.ScaleX = (float)scaleFactor;
            insertedImage.ScaleY = (float)scaleFactor;
        }
    }
}

// 사용 예시
private void btnPasteImage_Click(object sender, EventArgs e)
{
    PasteImageToRichEditControl(richEditControl1);
}
