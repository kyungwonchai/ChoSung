from sqlalchemy import create_engine

# 접속 정보
username = '사용자이름'
password = '비밀번호'
host = '서버주소'
port = '포트번호'
database = '데이터베이스이름'

# Database String URI 생성 (MSSQL 2014)
uri = f"mssql+pyodbc://{username}:{password}@{host}:{port}/{database}?driver=SQL+Server+Native+Client+11.0"

# SQLAlchemy의 connectable 객체 생성
engine = create_engine(uri)

# 예시로 연결 확인
with engine.connect() as conn:
    result = conn.execute("SELECT 1")
    print(result.scalar())
