using System;
using System.Drawing;
using System.IO;
using System.Windows.Forms;

namespace ClipboardImageToPNG
{
    public partial class MainForm : Form
    {
        private const int ChunkSize = 1024 * 1024; // 1MB

        public MainForm()
        {
            InitializeComponent();
        }

        private void btnSave_Click(object sender, EventArgs e)
        {
            if (Clipboard.ContainsImage())
            {
                Image image = Clipboard.GetImage();

                if (image != null)
                {
                    SaveFileDialog saveFileDialog = new SaveFileDialog();
                    saveFileDialog.Filter = "PNG Image|*.png";
                    saveFileDialog.Title = "Save Image";

                    if (saveFileDialog.ShowDialog() == DialogResult.OK)
                    {
                        string filePath = saveFileDialog.FileName;
                        SaveImageChunks(image, filePath);
                        MessageBox.Show("Image saved successfully.", "Save Image", MessageBoxButtons.OK, MessageBoxIcon.Information);
                    }
                }
                else
                {
                    MessageBox.Show("No image found in clipboard.", "Clipboard Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
                }
            }
            else
            {
                MessageBox.Show("No image found in clipboard.", "Clipboard Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void SaveImageChunks(Image image, string filePath)
        {
            int chunkCount = (int)Math.Ceiling((double)image.Width * image.Height / ChunkSize);

            using (FileStream fs = new FileStream(filePath, FileMode.Create))
            {
                using (BinaryWriter writer = new BinaryWriter(fs))
                {
                    writer.Write(chunkCount);

                    for (int i = 0; i < chunkCount; i++)
                    {
                        Rectangle chunkRect = new Rectangle(0, i * ChunkSize / image.Width, image.Width, ChunkSize / image.Width);
                        Bitmap chunk = new Bitmap(image.Width, ChunkSize / image.Width);
                        Graphics graphics = Graphics.FromImage(chunk);
                        graphics.DrawImage(image, new Rectangle(0, 0, chunk.Width, chunk.Height), chunkRect, GraphicsUnit.Pixel);
                        chunk.Save(writer.BaseStream, System.Drawing.Imaging.ImageFormat.Png);
                        graphics.Dispose();
                        chunk.Dispose();
                    }
                }
            }
        }
    }
}
