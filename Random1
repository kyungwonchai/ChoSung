def binary_search(arr, target):
    left, right = 0, len(arr) - 1

    while left <= right:
        # 중간 인덱스를 계산합니다.
        mid = (left + right) // 2

        # 중간 값이 타겟과 같다면 해당 인덱스를 반환합니다.
        if arr[mid] == target:
            return mid
        # 중간 값보다 타겟이 크다면 오른쪽 부분을 탐색합니다.
        elif arr[mid] < target:
            left = mid + 1
        # 중간 값보다 타겟이 작다면 왼쪽 부분을 탐색합니다.
        else:
            right = mid - 1

    # 탐색에 실패한 경우 -1을 반환합니다.
    return -1

# 사용 예시
sorted_list = [1, 3, 5, 7, 9, 11, 13, 15]
target_value = 7
result = binary_search(sorted_list, target_value)
print("인덱스:", result)  # 3이 출력될 것입니다.
