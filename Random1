TableLayoutPanel tableLayoutPanel = new TableLayoutPanel();
tableLayoutPanel.ColumnCount = 2;
tableLayoutPanel.ColumnStyles.Add(new ColumnStyle(SizeType.AutoSize));  // 라벨 컬럼
tableLayoutPanel.ColumnStyles.Add(new ColumnStyle(SizeType.Percent, 100));  // 텍스트박스 컬럼
tableLayoutPanel.AutoSize = true;

Label label1 = new Label();
label1.Text = "Label 1";
TextBox textBox1 = new TextBox();
textBox1.Multiline = true;
textBox1.ScrollBars = ScrollBars.Vertical;
textBox1.ReadOnly = true;
textBox1.TextChanged += TextBox_TextChanged;

Label label2 = new Label();
label2.Text = "Label 2";
TextBox textBox2 = new TextBox();
textBox2.Multiline = true;
textBox2.ScrollBars = ScrollBars.Vertical;
textBox2.ReadOnly = true;
textBox2.TextChanged += TextBox_TextChanged;

// TableLayoutPanel에 라벨과 텍스트박스 추가
tableLayoutPanel.Controls.Add(label1, 0, 0);
tableLayoutPanel.Controls.Add(textBox1, 1, 0);
tableLayoutPanel.Controls.Add(label2, 0, 1);
tableLayoutPanel.Controls.Add(textBox2, 1, 1);

// 부모 컨트롤에 TableLayoutPanel 추가
Controls.Add(tableLayoutPanel);

private void TextBox_TextChanged(object sender, EventArgs e)
{
    TextBox textBox = (TextBox)sender;
    textBox.Height = textBox.GetPreferredSize(new Size(textBox.Width, int.MaxValue)).Height;
}
