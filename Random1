// MainWindow.xaml.cs

public partial class MainWindow : Window
{
    public MainWindow()
    {
        InitializeComponent();

        // 이벤트 등록
        tableView1.CustomCellStyle += TableView1_CustomCellStyle;
    }

    private void TableView1_CustomCellStyle(object sender, DevExpress.Xpf.Grid.GridCellDataEventArgs e)
    {
        if (e.Column.FieldName == "Key1")
        {
            var value = e.CellValue;
            if (lista.Contains(value))
            {
                e.CellStyle = this.FindResource("YourYellowCellStyleResource") as Style;
            }
        }
    }
}
