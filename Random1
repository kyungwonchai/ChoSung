private void gridView_LostFocus(object sender, RoutedEventArgs e)
{
    var gridView = sender as DevExpress.Xpf.Grid.TableView;
    if (gridView != null)
    {
        var focusedRow = gridView.FocusedRowHandle;
        if (focusedRow != DevExpress.Xpf.Grid.GridControl.InvalidRowHandle)
        {
            var dataRow = gridView.Grid.GetRow(focusedRow) as DataRowView;
            if (dataRow != null)
            {
                // 이제 dataRow에 현재 행의 DataRow 정보가 있습니다.
            }
        }
    }
}
