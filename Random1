public class CustomClass1
{
    private static string loggedInUsername; // 로그인된 사용자명을 저장할 필드
    private static string fullName; // 사용자의 전체 이름을 저장할 필드
    private static string role; // 사용자의 권한을 저장할 필드

    public static string LoggedInUsername
    {
        get { return loggedInUsername; }
        set { loggedInUsername = value; }
    }

    public static string FullName
    {
        get { return fullName; }
        set { fullName = value; }
    }

    public static string Role
    {
        get { return role; }
        set { role = value; }
    }

    public static bool IsLoggedIn
    {
        get { return !string.IsNullOrEmpty(loggedInUsername); }
    }
}
