private void pivotGridControl1_CellClick(object sender, DevExpress.Utils.DXMouseEventArgs e)
{
    var pivotGridControl = sender as PivotGridControl;
    if (pivotGridControl == null) return;
    
    Point pt = pivotGridControl.PointToClient(Control.MousePosition);
    PivotGridHitInfo hitInfo = pivotGridControl.CalcHitInfo(pt);

    if (hitInfo.HitTest == PivotGridHitTest.Cell)
    {
        PivotDrillDownDataSource ds = hitInfo.CellInfo.CreateDrillDownDataSource();
        if (ds.RowCount > 0)
        {
            object value = ds[0]["VISA_IP"];
            MessageBox.Show(value.ToString(), "Cell Click");
        }
    }
}
