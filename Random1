using System;
using System.Windows;
using System.Windows.Media;
using DevExpress.Xpf.Grid;

namespace LockRowAndChangeColor
{
    public partial class MainWindow : Window
    {
        public MainWindow()
        {
            InitializeComponent();
        }

        private void LockAndChangeColor(int keyValue)
        {
            // TableView 객체를 가져옵니다.
            TableView tableView = gridControl1.View as TableView;
            if (tableView != null)
            {
                // 행을 순회하면서 조건을 확인합니다.
                for (int rowHandle = 0; rowHandle < tableView.Grid.VisibleRowCount; rowHandle++)
                {
                    // 실제 데이터 객체를 가져옵니다.
                    var rowData = tableView.Grid.GetRow(rowHandle) as YourDataItemType; // YourDataItemType를 실제 데이터 타입으로 교체하세요.

                    // 조건에 맞으면 셀 값을 변경합니다.
                    if (rowData != null && rowData.key1 == keyValue)
                    {
                        tableView.Grid.SetCellValue(rowHandle, "AllowFocus", false); // 행을 잠급니다.
                        tableView.Grid.SetCellValue(rowHandle, "BackgroundColor", new SolidColorBrush(Colors.Yellow)); // 배경색을 변경합니다.
                    }
                }
            }
        }

        private void Button_Click(object sender, RoutedEventArgs e)
        {
            LockAndChangeColor(511162);
        }
    }
}
