  <dxg:TableView.Resources>
                <Style TargetType="dxg:RowControl">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="dxg:RowControl">
                                <Border x:Name="PART_Border" BorderBrush="Transparent" BorderThickness="0">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <DataTrigger Binding="{Binding Path=Data.IsFocusedRow, RelativeSource={RelativeSource Self}}" Value="True">
