def alternate_row_colors(row_index):
    if row_index % 2 == 0:
        return ['background-color: #E0FFFF'] * len(df.columns)  # ì•„ì¿ ì•„ ìƒ‰ìƒ (E0FFFF)
    else:
        return ['background-color: white'] * len(df.columns)
