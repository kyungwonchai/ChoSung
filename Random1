private void Button_Click(object sender, RoutedEventArgs e)
{
    // Get the button that was clicked
    var button = sender as Button;
    if (button == null) return;

    // Access the data context, which should be the data item (row) associated with this button
    var dataItem = button.DataContext;

    // Assuming your data source is such that the row data can be directly cast to your model
    if (dataItem is YourRowType row)
    {
        // Access the value of 'abc' property
        var value = row.abc; // Make sure 'abc' is a public property of YourRowType
        MessageBox.Show($"Value in 'abc' column: {value}");
    }
}
