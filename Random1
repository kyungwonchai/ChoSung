import numpy as np
import matplotlib.pyplot as plt
import matplotlib.colors as mcolors

# 검정에서 흰색까지의 그라데이션을 생성합니다.
cmap = mcolors.LinearSegmentedColormap.from_list("", ["black","white"])

# 랜덤한 데이터를 생성하고 이를 그래프에 그립니다.
N = 5
x = np.arange(N)
y = np.random.rand(N)

plt.bar(x, y, color=cmap(y))
plt.show()
