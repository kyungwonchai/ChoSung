using System;
using System.Linq;

namespace StringManipulation
{
    class Program
    {
        static void Main(string[] args)
        {
            string originalString = "apple_orange_banana";
            string[] splittedString = originalString.Split('_');

            // 맨 마지막 요소를 제외하고 배열을 다시 가져옵니다.
            string[] resultArray = splittedString.Take(splittedString.Length - 1).ToArray();

            // 배열을 다시 하나의 문자열로 합칩니다.
            string resultString = string.Join("_", resultArray);

            Console.WriteLine(resultString);  // 출력: "apple_orange"
        }
    }
}
