public string ConvertHexToDecimalString(string hex)
{
    // 1. 입력된 16진수 문자열을 리틀 엔디안 방식으로 바이트 순서 뒤집기 (예: "8E00" -> "00E8")
    string reversedHex = ReverseHexBytes(hex);  // 바이트 순서를 뒤집음

    // 2. 첫 번째 자리 'E'와 두 번째 자리 '8'을 각각 10진수로 변환
    int firstDecimal = Convert.ToInt32(reversedHex.Substring(0, 2), 16);  // 'E8' -> 232
    int secondDecimal = Convert.ToInt32(reversedHex.Substring(2, 2), 16); // '00' -> 0

    // 3. 결과값을 문자열로 결합
    string finalResult = firstDecimal.ToString() + secondDecimal.ToString();

    return finalResult;  // 결과 반환
}

// 16진수 문자열을 바이트 단위로 뒤집는 함수
private string ReverseHexBytes(string hex)
{
    // 주어진 문자열을 2글자씩(1바이트씩) 나누어서 배열로 나눈 뒤 뒤집기
    var bytePairs = Enumerable.Range(0, hex.Length / 2)
                              .Select(i => hex.Substring(i * 2, 2))
                              .Reverse();  // 바이트 순서를 역순으로 뒤집음

    // 배열을 다시 하나의 문자열로 결합
    return string.Join("", bytePairs);
}
