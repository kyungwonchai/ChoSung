public partial class MainForm : Form
{
    // 나머지 코드는 동일합니다.

    public MainForm()
    {
        InitializeComponent();
        Core.Initialize();
        _libVLC = new LibVLC();
        _mediaPlayer = new MediaPlayer(_libVLC);

        // videoView1 컨트롤을 현재 폼의 크기와 동일하게 설정합니다.
        videoView1.Dock = DockStyle.Fill;

        // videoView1과 MediaPlayer를 연결합니다.
        videoView1.MediaPlayer = _mediaPlayer;
    }

    // 나머지 코드는 동일합니다.
}
