using DevExpress.Xpf.Grid;
using System.Collections.Generic;
using System.Linq;
// ...

public partial class MainWindow : Window
{
    public MainWindow()
    {
        InitializeComponent();
    }

    private void RearrangeBandsAndColumns(List<string> orderedNames)
    {
        int index = 0;
        foreach (var name in orderedNames)
        {
            var band = grid.Bands.FirstOrDefault(b => b.FieldName == name);
            var column = grid.Columns.FirstOrDefault(c => c.FieldName == name);
            
            if (band != null)
            {
                band.VisibleIndex = index;
            }
            else if (column != null)
            {
                column.VisibleIndex = index;
            }
            index++;
        }
    }

    // 예를 들어, 버튼 클릭 이벤트 핸들러에서 이 메서드를 호출할 수 있습니다:
    private void Button_Click(object sender, RoutedEventArgs e)
    {
        var orderedNames = new List<string> { "BandName1", "ColumnName1", "BandName2", "ColumnName2", /* ... */ };
        RearrangeBandsAndColumns(orderedNames);
    }
}
