                   VerticalAlignment="Center">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black" 
                                  Opacity="0.5" 
                                  ShadowDepth="5" 
                                  BlurRadius="10"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
