private void gridView1_RowCellStyle(object sender, DevExpress.XtraGrid.Views.Grid.RowCellStyleEventArgs e)
{
    if (e.Column.FieldName == "Quantity1")
    {
        if (e.CellValue.ToString() == "1")
        {
            e.Appearance.BackColor = Color.White; // 셀 배경색을 흰색으로 설정
            e.Appearance.Options.UseBackColor = true; // 배경색이 적용되도록 설정
            e.Appearance.BorderColor = Color.Blue; // 테두리 색상을 파란색으로 설정
            e.Appearance.Options.UseBorderColor = true; // 테두리 색상이 적용되도록 설정
            e.Appearance.Options.UseFont = true; // 글꼴 스타일이 적용되도록 설정
            e.Appearance.Font = new Font(e.Appearance.Font, FontStyle.Bold); // 글꼴을 굵게 설정
            e.Appearance.Options.UseTextOptions = true; // 셀 텍스트 옵션이 적용되도록 설정
            e.Appearance.TextOptions.HAlignment = DevExpress.Utils.HorzAlignment.Center; // 셀 텍스트를 가운데 정렬
            e.Appearance.Options.UseTextOptions = true; // 셀 텍스트 옵션이 적용되도록 설정
            e.Appearance.TextOptions.VAlignment = DevExpress.Utils.VertAlignment.Center; // 셀 텍스트를 중앙 정렬
            
            e.Appearance.ForeColor = Color.Blue; // 글자 색상을 파란색으로 설정
            e.Appearance.Options.UseForeColor = true; // 글자 색상이 적용되도록 설정
        }
    }
}
