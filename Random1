using System;
using System.Drawing;
using System.IO;
using System.Runtime.InteropServices;
using System.Windows.Forms;
using DevExpress.XtraEditors;

public partial class MainForm : Form
{
    // 이전과 같이 필요한 필드와 코드를 정의합니다.
    // DevExpress.XtraEditors.SimpleButton btnLock;
    // ...

    private void LockOrUnlockControls(bool locked)
    {
        foreach (Control control in this.Controls)
        {
            // Lock 버튼은 제외하고 나머지 컨트롤들의 Enabled 속성을 변경합니다.
            if (control != btnLock)
            {
                control.Enabled = !locked;
            }
        }
    }

    private void btnLock_Click(object sender, EventArgs e)
    {
        if (btnLock.Text == "Lock")
        {
            btnLock.Text = "Unlock";
            LockOrUnlockControls(true);  // 모든 컨트롤을 비활성화합니다.
        }
        else
        {
            btnLock.Text = "Lock";
            LockOrUnlockControls(false);  // 모든 컨트롤을 활성화합니다.
        }
    }
    // 나머지 코드는 이전과 동일합니다.
}
