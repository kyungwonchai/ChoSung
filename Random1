using DevExpress.XtraCharts;

// ...

// 조회한 테이블 데이터 예시
DataTable table = new DataTable();
table.Columns.Add("과제명", typeof(string));
table.Columns.Add("수행횟수", typeof(int));
table.Columns.Add("실패횟수", typeof(int));

// 데이터 추가 예시
table.Rows.Add("과제1", 10, 2);
table.Rows.Add("과제2", 15, 5);
table.Rows.Add("과제3", 8, 1);

// ChartControl 초기화
ChartControl chartControl = new ChartControl();

// Series 생성 및 데이터 추가
Series series = new Series("수행횟수", ViewType.SideBySideBar);
series.ArgumentDataMember = "과제명";
series.ValueDataMembers.AddRange(new string[] { "수행횟수" });
series.DataSource = table;
chartControl.Series.Add(series);

// Series 생성 및 데이터 추가
Series series2 = new Series("실패횟수", ViewType.SideBySideBar);
series2.ArgumentDataMember = "과제명";
series2.ValueDataMembers.AddRange(new string[] { "실패횟수" });
series2.DataSource = table;
chartControl.Series.Add(series2);

// 시리즈에 대한 시각적인 설정
series.LabelsVisibility = DevExpress.Utils.DefaultBoolean.True; // 막대에 값을 표시할지 여부
series.Label.TextPattern = "{V}"; // 막대에 표시될 값 형식
series2.LabelsVisibility = DevExpress.Utils.DefaultBoolean.True; // 막대에 값을 표시할지 여부
series2.Label.TextPattern = "{V}"; // 막대에 표시될 값 형식

// 막대 차트 옵션 설정
chartControl.Legend.Visibility = DevExpress.Utils.DefaultBoolean.True; // 범례 표시
chartControl.Titles.Add(new ChartTitle() { Text = "과제별 수행횟수 및 실패횟수" }); // 차트 제목

// SecondaryAxisY 설정
chartControl.Series[1].View = new SideBySideBarSeriesView();
((SideBySideBarSeriesView)chartControl.Series[1].View).AxisY = new SecondaryAxisY("Secondary AxisY");
chartControl.Series[1].View.ColorEach = true;

// ChartControl을 폼에 추가하거나 다른 컨테이너 컨트롤에 추가하여 표시
this.Controls.Add(chartControl);
