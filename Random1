// MyForm1.cs

using System;
using System.Windows.Forms;

namespace YourNamespace
{
    public partial class MyForm1 : Form
    {
        private object rowData;

        public MyForm1(object rowData)
        {
            InitializeComponent();
            this.rowData = rowData;
        }

        private void MyForm1_Load(object sender, EventArgs e)
        {
            if (rowData != null)
            {
                // 행의 정보를 추출
                string itemCode = string.Empty;
                int stockQuantity = 0;

                // 행의 데이터 구조에 따라서 값을 추출합니다.
                if (rowData is DataRowView dataRowView)
                {
                    // DataRowView를 사용하는 경우
                    itemCode = dataRowView["품목코드"].ToString();
                    stockQuantity = Convert.ToInt32(dataRowView["재고수"]);
                }
                else if (rowData is YourCustomClass yourCustomObject)
                {
                    // 사용자 정의 클래스를 사용하는 경우
                    itemCode = yourCustomObject.품목코드;
                    stockQuantity = yourCustomObject.재고수;
                }
                else
                {
                    // 기타 행의 데이터 구조에 맞게 추출
                    // 예: object에서 프로퍼티나 필드를 사용하여 추출
                }

                // 추출한 값들을 화면에 출력
                textBox1.Text = itemCode;
                textBox2.Text = stockQuantity.ToString();
            }
        }
    }
}
