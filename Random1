private void gridControl_KeyDown(object sender, KeyEventArgs e)
{
    // 현재 포커스된 셀 가져오기
    var currentCell = gridView.FocusedView.FocusedCell;

    // 컬럼 식별자나 이름 비교를 위해 Image 컬럼 식별자("ImageColumn") 사용
    if (currentCell?.ColumnInfo.Name == "ImageColumn" && Keyboard.Modifiers == ModifierKeys.Control && e.Key == Key.V)
    {
        // Ctrl+V 키 조합을 무시하고 아무 작업도 하지 않음
        e.Handled = true;
    }
}
