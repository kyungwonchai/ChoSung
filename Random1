private void SaveClipboardImageToPictures()
{
    try
    {
        if (Clipboard.ContainsImage())
        {
            // 클립보드에서 이미지 가져오기
            Image image = Clipboard.GetImage();

            // 이미지가 null이 아니라면 진행
            if (image != null)
            {
                string picturesFolderPath = Environment.GetFolderPath(Environment.SpecialFolder.MyPictures);
                string filePath = Path.Combine(picturesFolderPath, "1.jpg");

                // 이미지를 1.jpg로 저장 (덮어쓰기)
                image.Save(filePath, System.Drawing.Imaging.ImageFormat.Jpeg);

                MessageBox.Show("이미지가 성공적으로 저장되었습니다.");
            }
            else
            {
                MessageBox.Show("클립보드에 이미지가 없습니다.");
            }
        }
        else
        {
            MessageBox.Show("클립보드에 이미지가 없습니다.");
        }
    }
    catch (Exception ex)
    {
        MessageBox.Show("이미지 저장 중 오류가 발생했습니다: " + ex.Message);
    }
}
