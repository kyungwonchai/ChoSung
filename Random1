private DataTable dataTable;  // GridControl에 바인딩할 데이터 테이블
private List<int> updatedRows;  // 수정된 행을 추적하는 리스트

private void Form1_Load(object sender, EventArgs e)
{
    // 데이터 조회
    dataTable = GetDataFromDatabase();

    // GridControl에 데이터 바인딩
    gridControl1.DataSource = dataTable;

    // 수정 가능한 컬럼 설정
    gridView1.Columns["수정1"].OptionsColumn.AllowEdit = true;

    // 변경 사항을 추적하기 위한 리스트 초기화
    updatedRows = new List<int>();

    // CellValueChanged 이벤트 처리
    gridView1.CellValueChanged += gridView1_CellValueChanged;
}

private void gridView1_CellValueChanged(object sender, DevExpress.XtraGrid.Views.Base.CellValueChangedEventArgs e)
{
    // 수정된 행의 인덱스를 리스트에 추가
    if (!updatedRows.Contains(e.RowHandle))
        updatedRows.Add(e.RowHandle);
}

private void UpdateButton_Click(object sender, EventArgs e)
{
    // 수정된 행의 데이터를 DB에 업데이트
    foreach (int rowHandle in updatedRows)
    {
        DataRow row = gridView1.GetDataRow(rowHandle);
        UpdateDataInDatabase(row);  // 수정된 데이터를 DB에 업데이트하는 사용자 정의 함수
    }

    // 메시지 표시
    MessageBox.Show("데이터가 업데이트되었습니다.");

    // 변경 사항을 추적하는 리스트 초기화
    updatedRows.Clear();
}
