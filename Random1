using DevExpress.XtraEditors.Repository;

// GridView 컨트롤의 CustomRowCellEdit 이벤트를 처리합니다.
gridView1.CustomRowCellEdit += GridView1_CustomRowCellEdit;

// GridView의 특정 컬럼에 버튼과 숫자 값을 입력할 수 있는 에디터를 설정합니다.
private void GridView1_CustomRowCellEdit(object sender, DevExpress.XtraGrid.Views.Grid.CustomRowCellEditEventArgs e)
{
    if (e.Column.FieldName == "Quantity1" && e.RowHandle >= 0)
    {
        RepositoryItemSpinEdit repositorySpinEdit = new RepositoryItemSpinEdit();
        repositorySpinEdit.Buttons.AddRange(new EditorButton[] {
            new EditorButton(ButtonPredefines.Plus),
            new EditorButton(ButtonPredefines.Minus)});
        repositorySpinEdit.IsFloatValue = false; // 정수 값만 허용
        repositorySpinEdit.MinValue = 0; // 최소값 설정
        repositorySpinEdit.MaxValue = 100; // 최대값 설정

        e.RepositoryItem = repositorySpinEdit;
    }
}
