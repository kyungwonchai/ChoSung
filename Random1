<Application x:Class="YourNamespace.App"
             ...
             xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Application.Resources>
        <!-- TabItem Header Style -->
        <Style TargetType="TabItem">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Border Background="Transparent" Padding="10,3">
                            <ContentPresenter Content="{TemplateBinding Content}">
                                <ContentPresenter.Style>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="TextBlock.Foreground" Value="Black"/>
                                        <!-- 선택된 TabItem의 배경과 글씨색 변경 -->
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource AncestorType={x:Type TabItem}}}" Value="True">
                                                <Setter Property="TextBlock.Background" Value="Blue"/>
                                                <Setter Property="TextBlock.Foreground" Value="Yellow"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentPresenter.Style>
                            </ContentPresenter>
                        </Border>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
