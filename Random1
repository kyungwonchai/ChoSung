using System;
using System.Threading.Tasks;

public class ExampleClass
{
    public void SomeFunction()
    {
        // Task.Run을 사용하여 별도의 스레드에서 비동기 작업 수행
        Task.Run(async () =>
        {
            // 3초 대기
            await Task.Delay(3000);
            
            // 3초 후 실행할 코드
            Console.WriteLine("3초가 지났습니다.");
        });
    }