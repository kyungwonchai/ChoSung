import pandas as pd

# 엑셀 파일 경로
excel_file_path = 'path/to/your/excel_file.xlsx'

# 엑셀 파일 열기
df = pd.read_excel(excel_file_path, engine='openpyxl')

# 2번째 컬럼의 값 추출하여 새로운 컬럼 생성
df['컬럼D'] = df['2번째컬럼'].str.extract(r'D001\\(.*?)\\')

# 최종 결과를 CSV 파일로 내보내기
output_csv_path = 'd:/1.csv'
df.to_csv(output_csv_path, index=False)

print(f'데이터가 {output_csv_path} 파일로 저장되었습니다.')
