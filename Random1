<Window x:Class="BeautifulProgressBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Beautiful ProgressBar" Height="200" Width="400"
        Background="Black">
    <Window.Resources>
        <Style x:Key="CustomProgressBar" TargetType="ProgressBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Border Background="Transparent" CornerRadius="10" BorderThickness="1" BorderBrush="White" />
                            <Border x:Name="PART_Track" Background="Gray" CornerRadius="10" />
                            <Border x:Name="PART_Indicator" Background="LinearGradientBrush">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#FFD700" Offset="0.0" />
                                        <GradientStop Color="#FFA500" Offset="0.5" />
                                        <GradientStop Color="#FFD700" Offset="1.0" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="Gold" Direction="0" ShadowDepth="0" Opacity="0.8" BlurRadius="10"/>
                                </Border.Effect>
                                <Border.RenderTransform>
                                    <TranslateTransform X="-10" />
                                </Border.RenderTransform>
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" From="-10" To="390" Duration="0:0:2" AutoReverse="True" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <ProgressBar Style="{StaticResource CustomProgressBar}" Height="30" Width="380" HorizontalAlignment="Center" VerticalAlignment="Center" Value="70"/>
    </Grid>
</Window>
