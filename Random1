using System;
using System.Timers;
using System.Threading.Tasks;

class Program
{
    private Timer _timer;
    private DateTime _nextExecutionTime;

    public Program()
    {
        StartTimer();
    }

    private void StartTimer()
    {
        // 10ë¶„(600,000ms)ë§ˆë‹¤ ì‹¤í–‰
        _timer = new Timer(600000);
        _timer.Elapsed += async (sender, e) => await OnTimedEvent();
        _timer.AutoReset = true; // ë°˜ë³µ ì‹¤í–‰
        _timer.Enabled = true; // íƒ€ì´ë¨¸ ì‹œì‘
        _nextExecutionTime = DateTime.Now.AddMilliseconds(_timer.Interval);
    }

    private async Task OnTimedEvent()
    {
        Console.WriteLine($"í•¨ìˆ˜ ì‹¤í–‰ë¨: {DateTime.Now}");
        _nextExecutionTime = DateTime.Now.AddMilliseconds(_timer.Interval);
        await ExecuteFunction();
    }

    private async Task ExecuteFunction()
    {
        Console.WriteLine("10ë¶„ë§ˆë‹¤ ì‹¤í–‰ë˜ëŠ” async í•¨ìˆ˜ ì‹œì‘...");
        await Task.Delay(2000);
        Console.WriteLine("ë¹„ë™ê¸° ì‘ì—… ì™„ë£Œ!");
    }

    public TimeSpan GetRemainingTime()
    {
        return _nextExecutionTime - DateTime.Now;
    }

    static void Main()
    {
        Program program = new Program(); // ì¸ìŠ¤í„´ìŠ¤ ìƒì„±

        while (true)
        {
            Console.WriteLine($"ë‚¨ì€ ì‹œê°„: {program.GetRemainingTime().TotalSeconds:F0} ì´ˆ");
            Task.Delay(1000).Wait(); // 1ì´ˆë§ˆë‹¤ ê°±ì‹ 
        }
    }
}
