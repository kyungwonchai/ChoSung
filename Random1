private void barLineChart_CustomDrawSeriesPoint(object sender, CustomDrawSeriesPointEventArgs e)
{
    if (e.Series.Name == "DDSeries3")
    {
        // 포인트의 값이 100인 경우 라벨 텍스트의 색상을 하늘색으로 변경합니다.
        if (e.SeriesPoint.Values[0] == 100)
        {
            ((PointSeriesLabel)e.Series.Label).TextColor = Color.SkyBlue;
        }
        else
        {
            // 그렇지 않은 경우 라벨 텍스트의 색상을 노란색으로 유지합니다.
            ((PointSeriesLabel)e.Series.Label).TextColor = Color.Yellow;
        }
    }
}
