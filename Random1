from flask import Flask, redirect, url_for

app = Flask(__name__)

@app.route("/")
def index():
    return "This is the main page."

@app.route("/page1")
def page1():
    return "This is page 1."

@app.route("/page2")
def page2():
    return "This is page 2."

@app.route("/redirect")
def redirect_page():
    # 특정 주소로 리다이렉션
    return redirect(url_for("page1"))

if __name__ == "__main__":
    app.run()
