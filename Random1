<dxg:TableView ShowFocusedRectangle="True">
    <dxg:TableView.FocusedCellBorderTemplate>
        <ControlTemplate>
            <Border x:Name="border" BorderThickness="2">
                <ControlTemplate.Triggers>
                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxg:GridCellContentPresenter}, Path=IsEditing}" Value="True">
                        <Setter TargetName="border" Property="BorderBrush" Value="Blue"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxg:GridCellContentPresenter}, Path=IsEditing}" Value="False">
                        <Setter TargetName="border" Property="BorderBrush" Value="Red"/>
                    </DataTrigger>
                </ControlTemplate.Triggers>
            </Border>
        </ControlTemplate>
    </dxg:TableView.FocusedCellBorderTemplate>
</dxg:TableView>
