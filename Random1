using System.Diagnostics;  // Debug를 사용하기 위해 필요
// ...

async void OnEdit(string key1, string column)
{
    string message = $"Sending key1: {key1}, column: {column}";
    Debug.WriteLine(message);  // Visual Studio의 출력 창에 메시지 출력

    // 실제로 SignalR 메시지 보내는 코드
    await hubConnection.InvokeAsync("UpdateEditStatus", key1, column);
}
