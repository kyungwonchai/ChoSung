private void button1_Click(object sender, EventArgs e)
{
    // ... 기존 코드 ...

    gridView1.RowCellStyle += GridView1_RowCellStyle; // 이벤트 핸들러 추가
}

private void GridView1_RowCellStyle(object sender, DevExpress.XtraGrid.Views.Grid.RowCellStyleEventArgs e)
{
    if (e.Column.FieldName == "로그")
    {
        string logValue = gridView1.GetRowCellDisplayText(e.RowHandle, e.Column);
        if (logValue.Contains("재부팅합니다."))
        {
            e.Appearance.BackColor = Color.Yellow;
        }
        else if (logValue.Contains("로그인 완료"))
        {
            e.Appearance.BackColor = Color.LightGreen;
        }
    }
}
