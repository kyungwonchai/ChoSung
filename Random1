private void SwitchToCardView()
{
    // CardView 생성
    CardView cardView = new CardView(gridControl);

    // CardView 설정
    cardView.CardWidth = 200;
    cardView.CardHeight = 150;
    cardView.VertScrollVisibility = ScrollVisibility.Auto;

    // CardView의 CustomDrawCardCaption 이벤트 핸들러 등록
    cardView.CustomDrawCardCaption += CardView_CustomDrawCardCaption;

    // CardView를 GridControl의 메인 뷰로 설정
    gridControl.MainView = cardView;
    gridControl.LevelTree.Nodes.Clear();
}

private void CardView_CustomDrawCardCaption(object sender, CardCaptionCustomDrawEventArgs e)
{
    if (e.RowHandle != DevExpress.XtraGrid.GridControl.InvalidRowHandle)
    {
        CardView cardView = (CardView)sender;
        // 특정 컬럼의 값을 캡션으로 사용 (예시: "품명" 컬럼)
        string captionValue = cardView.GetRowCellDisplayText(e.RowHandle, "품명");
        e.CardCaption = captionValue;
    }
}
