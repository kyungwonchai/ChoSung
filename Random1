using DevExpress.XtraPivotGrid;
using DevExpress.XtraGrid;
using DevExpress.XtraGrid.Views.Base;
using DevExpress.XtraGrid.Views.Grid;

// PivotGridControl 생성 및 설정
PivotGridControl pivotGridControl1 = new PivotGridControl();
// PivotGridControl에 필드 및 데이터 설정
// ...

// Conditional Formatting 생성 및 설정
FormatConditionRuleExpression condition = new FormatConditionRuleExpression();
condition.Expression = "[VISA_IP] = '0'"; // 여기서 '0'은 예시로 사용된 값입니다.
condition.Appearance.BackColor = Color.Red;

pivotGridControl1.FormatRules.Add(condition);

// PivotGridControl 출력
pivotGridControl1.RefreshData();
