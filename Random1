using DevExpress.XtraGrid.Views.Grid;

// Assuming you have a GridControl named gridControl1
GridView gridView = gridControl1.MainView as GridView;
gridView.OptionsFind.AlwaysVisible = true;
gridView.OptionsFind.FindMode = FindMode.Always;
gridView.OptionsFind.FindFilterColumns = "ColumnName1;ColumnName2;..."; // Specify the column names you want to include in the search scope
