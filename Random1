                        <TextBox Grid.Row="3" Grid.Column="4" x:Name="NightShiftReport3" Background="White" Foreground="Black" Padding="10" LostFocus="TextBox_LostFocus"/>
                        <TextBox Grid.Row="4" Grid.Column="4" x:Name="NightShiftReport4" Background="White" Foreground="Black" Padding="10" LostFocus="TextBox_LostFocus"/>

                        <TextBox Grid.Row="1" Grid.Column="5" x:Name="CommonReport1" Background="LightSkyBlue" Foreground="Black" Padding="10" LostFocus="TextBox_LostFocus"/>
                        <TextBox Grid.Row="2" Grid.Column="5" x:Name="CommonReport2" Background="LightSkyBlue" Foreground="Black" Padding="10" LostFocus="TextBox_LostFocus"/>
                        <TextBox Grid.Row="3" Grid.Column="5" x:Name="CommonReport3" Background="LightSkyBlue" Foreground="Black" Padding="10" LostFocus="TextBox_LostFocus"/>
                        <TextBox Grid.Row="4" Grid.Column="5" x:Name="CommonReport4" Background="LightSkyBlue" Foreground="Black" Padding="10" LostFocus="TextBox_LostFocus"/>
                    </Grid>
