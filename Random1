using DevExpress.XtraDiagram;
using System.Drawing;

// ...

private void CustomizeDiagramBackground()
{
    // Diagram Control의 배경색 설정
    diagramControl1.Appearance.Diagram.BackColor = Color.DarkGray; // 배경색을 DarkGray로 설정

    // 그리드 색상 설정 (필요한 경우)
    diagramControl1.Appearance.GridLineColor = Color.LightGray; // 그리드 라인 색상을 LightGray로 설정
}
