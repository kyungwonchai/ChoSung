<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- DevExpress GridControl -->
        <dxg:GridControl AutoGenerateColumns="AddNew">
            <dxg:GridControl.View>
                <dxg:TableView>
                    <dxg:TableView.FormatConditions>
                        <!-- 헤더의 배경색 설정 -->
                        <dxg:FormatCondition FieldName="*" Expression="[Id] >= 0" PredefinedFormatName="RedText"/>
                    </dxg:TableView.FormatConditions>
                </dxg:TableView>
            </dxg:GridControl.View>
            
            <!-- 칼럼 설정 -->
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="Id" Header="ID">
                    <!-- 헤더 색상 설정 -->
                    <dxg:GridColumn.HeaderStyle>
                        <Style TargetType="dxg:BaseColumnHeader">
                            <Setter Property="Background" Value="Red"/>
                        </Style>
                    </dxg:GridColumn.HeaderStyle>
                </dxg:GridColumn>
                <dxg:GridColumn FieldName="Name" Header="이름"/>
            </dxg:GridControl.Columns>

            <!-- 밴드 설정 -->
            <dxg:GridControl.Bands>
                <dxg:GridControlBand Header="정보">
                    <!-- 헤더 색상 설정 -->
                    <dxg:GridControlBand.HeaderStyle>
                        <Style TargetType="dxg:GridControlBandHeader">
                            <Setter Property="Background" Value="Blue"/>
                        </Style>
                    </dxg:GridControlBand.HeaderStyle>
                    <dxg:GridControlBand.Columns>
                        <dxg:GridColumn FieldName="Id" />
                        <dxg:GridColumn FieldName="Name" />
                    </dxg:GridControlBand.Columns>
                </dxg:GridControlBand>
            </dxg:GridControl.Bands>
        </dxg:GridControl>
    </Grid>
</Window>
