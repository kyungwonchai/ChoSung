using DevExpress.XtraGrid.Views.Grid;

// GridView 객체 가져오기
GridView gridView = gridControl1.MainView as GridView;

// 컬럼A의 필드명 가져오기
string columnName = "컬럼A";

// 컬럼A에 대한 ColumnHandle 가져오기
int columnHandle = gridView.Columns[columnName].VisibleIndex;

// 각 행에 대한 반복문 실행
for (int rowHandle = 0; rowHandle < gridView.RowCount; rowHandle++)
{
    // 행의 값을 가져오기
    object value = gridView.GetRowCellValue(rowHandle, columnHandle);

    // 값이 60보다 큰지 확인하여 색상 변경
    if (value != null && Convert.ToInt32(value) > 60)
    {
        gridView.Appearance.Row.BackColor = Color.Yellow; // 노랑으로 변경
    }
}
