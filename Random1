// Chart control을 생성합니다.
ChartControl chartControl = new ChartControl();

// 두 개의 시리즈를 생성합니다.
Series series1 = new Series("Series 1", ViewType.Line);
Series series2 = new Series("Series 2", ViewType.Line);

// 시리즈를 차트에 추가합니다.
chartControl.Series.AddRange(new Series[] { series1, series2 });

// 시리즈들의 ArgumentScaleType을 DateTime으로 설정합니다.
series1.ArgumentScaleType = ScaleType.DateTime;
series2.ArgumentScaleType = ScaleType.DateTime;

// X축의 DateTimeScaleOptions를 설정합니다.
((XYDiagram)chartControl.Diagram).AxisX.DateTimeScaleOptions = new DateTimeScaleOptions();

// 두 시리즈가 같은 X축을 공유하도록 설정합니다.
((LineSeriesView)series1.View).AxisX = ((XYDiagram)chartControl.Diagram).AxisX;
((LineSeriesView)series2.View).AxisX = ((XYDiagram)chartControl.Diagram).AxisX;

// X축의 범위를 설정합니다 (선택적).
((XYDiagram)chartControl.Diagram).AxisX.WholeRange.SetMinMaxValues(startTime, endTime);

// 차트를 폼에 추가합니다.
this.Controls.Add(chartControl);
