using DevExpress.Xpf.Core;
// ...

private void ShowTemporaryAlert()
{
    SplashScreenManager.CreateThemed(new DXSplashScreenViewModel { Title = "경고", Subtitle = "이것은 경고입니다!" })
                        .ShowOnStartup();

    Task.Delay(3000) // 3초 후에 사라짐
        .ContinueWith(t => SplashScreenManager.CloseOnStartup());
}
