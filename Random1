// 폼 로드 이벤트 핸들러
private void Form1_Load(object sender, EventArgs e)
{
    radioGroup1.Properties.Items.Add(new DevExpress.XtraEditors.Controls.RadioGroupItem("입고", "I"));
    radioGroup1.Properties.Items.Add(new DevExpress.XtraEditors.Controls.RadioGroupItem("출고", "O"));
    radioGroup1.Properties.Items.Add(new DevExpress.XtraEditors.Controls.RadioGroupItem("신청", "R"));
}

// 저장 버튼 클릭 이벤트 핸들러
private void btnSave_Click(object sender, EventArgs e)
{
    string selectedValue = radioGroup1.EditValue as string;

    if (selectedValue == "I")
    {
        // 입고 처리
    }
    else if (selectedValue == "O")
    {
        // 출고 처리
    }
    else if (selectedValue == "R")
    {
        // 신청 처리
    }
}
