string connString = "your_connection_string";
string query = "SELECT * FROM your_table";

DataTable dt = new DataTable();

using(SqlConnection conn = new SqlConnection(connString))
{
    conn.Open();
    using(SqlCommand cmd = new SqlCommand(query, conn))
    {
        SqlDataAdapter da = new SqlDataAdapter(cmd);
        da.Fill(dt);
    }
}

// 도넛 차트 생성
ChartControl doughnutChart = new ChartControl();
Series DDSeries1 = new Series("DDSeries1", ViewType.Doughnut);

// '수행횟수'를 전체로 보고, '실패횟수'를 '수행횟수'로 나눈 값을 사용합니다.
double totalCount = Convert.ToDouble(dt.Rows[0]["수행횟수"]);
double failCount = Convert.ToDouble(dt.Rows[0]["실패횟수"]);

// SeriesPoint에 Argument와 Value를 설정
SeriesPoint seriesPoint1 = new SeriesPoint("수행", totalCount);
SeriesPoint seriesPoint2 = new SeriesPoint("실패", failCount / totalCount * 100);

// 각 포인트에 라벨을 추가
seriesPoint1.LabelPattern = "{A}: {V}회";
seriesPoint2.LabelPattern = "{A}: {V}회";

DDSeries1.Points.Add(seriesPoint1);
DDSeries1.Points.Add(seriesPoint2);

// 중앙 라벨 표시 활성화
DoughnutSeriesLabel doughnutLabel = DDSeries1.Label as DoughnutSeriesLabel;
if (doughnutLabel != null)
{
    doughnutLabel.Position = PieSeriesLabelPosition.TwoColumns;
    doughnutLabel.ColumnIndent = 5;
    doughnutLabel.TextPattern = "{A}: {V}회";
}

doughnutChart.Series.Add(DDSeries1);
this.Controls.Add(doughnutChart);

// 나머지 차트 작업...
