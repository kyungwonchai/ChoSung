private void PrintButton_Click(object sender, RoutedEventArgs e)
{
    PrintDialog printDialog = new PrintDialog();
    if (printDialog.ShowDialog() == true)
    {
        // 좌상단 여백을 위해 사용할 위치 값 (예: 20mm)
        double leftMargin = 20; // mm 단위
        double topMargin = 20; // mm 단위

        // DPI 값을 고려하여 mm에서 픽셀로 변환 (96 DPI 기준)
        double leftMarginPixels = leftMargin * 96 / 25.4; // 1인치 = 25.4mm, 1인치 = 96픽셀
        double topMarginPixels = topMargin * 96 / 25.4;

        // 프린트할 Grid를 포함하는 Visual Brush를 생성
        VisualBrush vb = new VisualBrush(grid1);

        // DrawingVisual을 생성하여 인쇄할 내용을 렌더링
        DrawingVisual dv = new DrawingVisual();
        using (DrawingContext dc = dv.RenderOpen())
        {
            // 여백을 추가한 위치에서 그리드를 그림
            dc.DrawRectangle(vb, null, new Rect(new Point(leftMarginPixels, topMarginPixels), new Size(grid1.ActualWidth, grid1.ActualHeight)));
        }

        // 인쇄 실행
        printDialog.PrintVisual(dv, "Printing Grid1 with Margins");
    }
}
