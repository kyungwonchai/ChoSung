using DevExpress.Xpf.Core;
using System.Configuration;

public partial class App : Application
{
    protected override void OnStartup(StartupEventArgs e)
    {
        base.OnStartup(e);

        // App.config에서 테마 이름을 읽어옵니다.
        var themeName = ConfigurationManager.AppSettings["ApplicationThemeName"];
        ThemeManager.ApplicationThemeName = themeName;

        // 모든 Button에 대해 스타일을 적용합니다.
        // 이 부분은 커스텀 스타일을 정의하셔서 적용하시면 됩니다.
        var customButtonStyle = new Style(typeof(Button));
        // 스타일 설정...
        ThemeManager.ApplicationTheme.SetValue(Button.StyleProperty, customButtonStyle);
    }
}
