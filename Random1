using System;
using System.IO;
using System.Net.NetworkInformation;
using System.Windows;

namespace WpfApp
{
    public partial class MainWindow : Window
    {
        public MainWindow()
        {
            InitializeComponent();
        }

        private void CheckNetworkAndGetDirectories()
        {
            string networkPath = @"\\10.22.22.22\ab";
            string ipAddress = "10.22.22.22"; // 네트워크 경로의 IP 주소

            if (PingHost(ipAddress))
            {
                // 핑이 성공하면 네트워크 폴더에서 디렉토리 목록을 가져옴
                try
                {
                    string[] directories = Directory.GetDirectories(networkPath);
                    foreach (string directory in directories)
                    {
                        MessageBox.Show($"Directory: {directory}");
                    }
                }
                catch (Exception ex)
                {
                    // 디렉토리 접근에 실패했을 때 에러 메시지 표시
                    MessageBox.Show($"Error accessing network folder: {ex.Message}");
                }
            }
            else
            {
                // 핑이 실패하면 에러 메시지 표시
                MessageBox.Show($"Ping to {ipAddress} failed. Cannot access network folder.");
            }
        }

        // IP 주소로 핑을 보내는 함수
        private bool PingHost(string ipAddress)
        {
            try
            {
                using (Ping ping = new Ping())
                {
                    PingReply reply = ping.Send(ipAddress, 1000); // 1초 동안 응답 대기
                    if (reply.Status == IPStatus.Success)
                    {
                        return true; // 핑 성공
                    }
                    else
                    {
                        return false; // 핑 실패
                    }
                }
            }
            catch (Exception ex)
            {
                // 핑에 실패했을 때 에러 메시지 표시
                MessageBox.Show($"Ping error: {ex.Message}");
                return false;
            }
        }

        // 버튼 클릭 이벤트 핸들러
        private void OnCheckNetworkFolderClick(object sender, RoutedEventArgs e)
        {
            CheckNetworkAndGetDirectories();
        }
    }
}
