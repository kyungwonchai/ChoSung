private void gridView1_CustomDrawColumnHeader(object sender, ColumnHeaderCustomDrawEventArgs e)
{
    GridView view = sender as GridView;

    // 처리할 컬럼의 인덱스 또는 이름에 따라 조건을 적절하게 변경해주십시오.
    if (e.Column.FieldName == "YourColumnName")
    {
        // 컬럼 헤더의 테두리를 굵게 설정
        e.Appearance.Options.UseBorderColor = true;
        e.Appearance.Options.UseBorderWidth = true;
        e.Appearance.BorderColor = Color.Black;
        e.Appearance.BorderWidth = 2;
    }
}

private void gridView1_CustomDrawCell(object sender, RowCellCustomDrawEventArgs e)
{
    GridView view = sender as GridView;

    // 처리할 컬럼의 인덱스 또는 이름에 따라 조건을 적절하게 변경해주십시오.
    if (e.Column.FieldName == "YourColumnName")
    {
        // 컬럼 셀의 테두리를 굵게 설정
        e.Appearance.Options.UseBorderColor = true;
        e.Appearance.Options.UseBorderWidth = true;
        e.Appearance.BorderColor = Color.Black;
        e.Appearance.BorderWidth = 2;
    }
}
