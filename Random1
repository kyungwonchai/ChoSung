[global]
# 인증서 오류 해결을 위한 trusted-host 설정
trusted-host =
    pypi.org
    pypi.python.org
    files.pythonhosted.org

# 프록시 설정 (프록시가 필요한 경우)
proxy = http://your_proxy_address:proxy_port
# 예: proxy = http://proxy.example.com:8080

# 인증서 파일 경로 (필요 시)
cert = /path/to/your/certificate.pem
# 예: cert = C:\path\to\certificate.pem (Windows의 경우)
