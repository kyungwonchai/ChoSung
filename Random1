-- INSERT에 대한 트리거
CREATE TRIGGER trg_TBlA_Insert
ON TBlA
AFTER INSERT
AS
BEGIN
    UPDATE TBlB
    SET UpdateTime = GETDATE()
    WHERE TBlB.Id = (SELECT Id FROM inserted)
END
GO

-- UPDATE에 대한 트리거
CREATE TRIGGER trg_TBlA_Update
ON TBlA
AFTER UPDATE
AS
BEGIN
    UPDATE TBlB
    SET UpdateTime = GETDATE()
    WHERE TBlB.Id = (SELECT Id FROM inserted)
END
GO

-- DELETE에 대한 트리거
-- 이미 구현하셨으나 예시를 위해 추가합니다.
CREATE TRIGGER trg_TBlA_Delete
ON TBlA
AFTER DELETE
AS
BEGIN
    UPDATE TBlB
    SET UpdateTime = GETDATE()
    WHERE TBlB.Id = (SELECT Id FROM deleted)
END
GO
