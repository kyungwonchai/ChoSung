private async void ShowCustomSplashScreen()
{
    var fluentAPI = SplashScreenManager.CreateFluent(new DXSplashScreenViewModel
    {
        Title = "경고",
        Subtitle = "이것은 경고입니다!"
    });

    fluentAPI
        .SetWaitIndicatorProperties(p => p.Caption = "기다려 주세요.")
        .ShowOnStartup();

    fluentAPI.SplashScreen.MouseLeftButtonDown += (s, e) => 
    {
        SplashScreenManager.Close(); 
    };

    await Task.Delay(5000);  // 5초 대기

    Dispatcher.Invoke(() => 
    {
        SplashScreenManager.Close(); 
    });
}
