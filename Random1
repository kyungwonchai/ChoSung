using DevExpress.Xpf.Grid;
using System;
using System.Collections.Generic;
using System.Windows;

public partial class MainWindow : Window
{
    public MainWindow()
    {
        InitializeComponent();
        this.Loaded += OnLoaded;
    }

    private void OnLoaded(object sender, RoutedEventArgs e)
    {
        // 데이터 소스 설정
        List<DataItem> dataSource = new List<DataItem>()
        {
            new DataItem() { ColumnABC = 100, Column1 = 150, Column2 = 200 },
            // 추가 데이터 항목
        };
        gridControl.ItemsSource = dataSource;

        // 데이터 소스의 각 행에 대해 반복
        foreach (DataItem item in dataSource)
        {
            int abcValue = item.ColumnABC;
            foreach (GridColumn column in gridView.Columns)
            {
                if (column.FieldName != "ColumnABC")
                {
                    int columnValue = (int)item.GetType().GetProperty(column.FieldName).GetValue(item);
                    int result = columnValue - abcValue;
                    
                    // 결과 출력
                    Console.WriteLine($"Column {column.FieldName}: {result}");
                }
            }
        }
    }
}

public class DataItem
{
    public int ColumnABC { get; set; }
    public int Column1 { get; set; }
    public int Column2 { get; set; }
    // 추가 컬럼
}
