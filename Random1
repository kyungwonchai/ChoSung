using DevExpress.XtraEditors.Controls;
using DevExpress.XtraGrid.Columns;

// GridView에 컬럼을 추가합니다.
GridColumn columnRequest = gridView1.Columns.AddVisible("Request", "신청");
GridColumn columnReceipt = gridView1.Columns.AddVisible("Receipt", "입고");
GridColumn columnShipment = gridView1.Columns.AddVisible("Shipment", "출고");

// 각 컬럼에 버튼을 포함한 에디터를 설정합니다.
RepositoryItemButtonEdit repositoryButtonEdit = new RepositoryItemButtonEdit();
repositoryButtonEdit.TextEditStyle = TextEditStyles.HideTextEditor;
repositoryButtonEdit.Buttons.AddRange(new EditorButton[] {
    new EditorButton(ButtonPredefines.Glyph, "신청", -1, true, true, false, ImageLocation.MiddleCenter, null, new DevExpress.Utils.KeyShortcut(System.Windows.Forms.Keys.None), "Request"),
    new EditorButton(ButtonPredefines.Glyph, "입고", -1, true, true, false, ImageLocation.MiddleCenter, null, new DevExpress.Utils.KeyShortcut(System.Windows.Forms.Keys.None), "Receipt"),
    new EditorButton(ButtonPredefines.Glyph, "출고", -1, true, true, false, ImageLocation.MiddleCenter, null, new DevExpress.Utils.KeyShortcut(System.Windows.Forms.Keys.None), "Shipment")
});
repositoryButtonEdit.ButtonClick += RepositoryButtonEdit_ButtonClick;

columnRequest.ColumnEdit = repositoryButtonEdit;
columnReceipt.ColumnEdit = repositoryButtonEdit;
columnShipment.ColumnEdit = repositoryButtonEdit;
