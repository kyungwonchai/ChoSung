private void gridView_ShowingEditor(object sender, DevExpress.Xpf.Grid.TreeList.TreeListShowingEditorEventArgs e)
{
    var gridView = sender as DevExpress.Xpf.Grid.TreeListView;
    if (gridView != null)
    {
        var focusedRowHandle = gridView.FocusedNode.RowHandle;
        
        // 'Key1' 컬럼의 값을 읽습니다.
        object keyValue = gridView.GetCellValue(focusedRowHandle, "Key1");
        
        if (keyValue != null)
        {
            // '편집상태' 컬럼의 값을 1로 설정합니다.
            gridView.SetCellValue(focusedRowHandle, "편집상태", 1);
            
            // MS SQL의 table1을 업데이트하는 로직
            string connectionString = "your_connection_string_here";
            using (SqlConnection connection = new SqlConnection(connectionString))
            {
                connection.Open();
                string query = "UPDATE table1 SET 편집상태 = 1 WHERE Key1 = @keyValue";
                
                using (SqlCommand command = new SqlCommand(query, connection))
                {
                    command.Parameters.AddWithValue("@keyValue", keyValue);
                    command.ExecuteNonQuery();
                }
            }
        }
    }
}
