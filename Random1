using System;
using System.Drawing;
using System.Windows.Forms;
using DevExpress.Utils;
using DevExpress.XtraDiagram;

namespace WinFormsDiagramInsertImage
{
    public partial class MainForm : DevExpress.XtraEditors.XtraForm
    {
        public MainForm()
        {
            InitializeComponent();
        }

        private void MainForm_Load(object sender, EventArgs e)
        {
            // 이미지 삽입 기능을 초기화할 때 필요한 설정을 수행합니다.
            InitializeDiagramInsert();
        }

        private void InitializeDiagramInsert()
        {
            // DiagramControl의 이미지 삽입을 활성화합니다.
            diagramControl1.OptionsImage.ImageSizeMode = ImageSizeMode.Zoom;
        }

        private void btnInsertImage_Click(object sender, EventArgs e)
        {
            try
            {
                string imagePath = @"C:\a\1.jpg"; // 이미지 파일 경로
                Image image = Image.FromFile(imagePath);

                // 이미지를 DiagramControl에 삽입합니다.
                diagramControl1.InsertImage(image, new Point(100, 100)); // 이미지 위치를 지정합니다.
            }
            catch (Exception ex)
            {
                // 이미지 삽입 중 예외가 발생할 경우 처리합니다.
                XtraMessageBox.Show("이미지 삽입 중 오류가 발생했습니다: " + ex.Message);
            }
        }
    }
}
