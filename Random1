// LayoutButtons 메서드 수정
private void LayoutButtons()
{
    for (int i = 0; i < gridView1.RowCount; i++)
    {
        GridRow row = gridView1.GetRow(i) as GridRow;
        if (row != null)
        {
            GridHitInfo selectHitInfo = gridView1.CalcHitInfo(gridView1.GridControl.PointToClient(MousePosition));
            GridCellInfo selectCellInfo = selectHitInfo.InRowCell ? selectHitInfo.Row.Cells["선택"] : null;
            if (selectCellInfo != null)
            {
                Rectangle selectRect = selectCellInfo.Bounds;
                SimpleButton selectButton = customButtons[i * 2];
                selectButton.Size = new Size(selectRect.Height, selectRect.Height);
                selectButton.Location = new Point(selectRect.Right - selectButton.Width, selectRect.Top);
                selectButton.BringToFront();
            }

            GridHitInfo deleteHitInfo = gridView1.CalcHitInfo(gridView1.GridControl.PointToClient(MousePosition));
            GridCellInfo deleteCellInfo = deleteHitInfo.InRowCell ? deleteHitInfo.Row.Cells["삭제"] : null;
            if (deleteCellInfo != null)
            {
                Rectangle deleteRect = deleteCellInfo.Bounds;
                SimpleButton deleteButton = customButtons[i * 2 + 1];
                deleteButton.Size = new Size(deleteRect.Height, deleteRect.Height);
                deleteButton.Location = new Point(deleteRect.Right - deleteButton.Width, deleteRect.Top);
                deleteButton.BringToFront();
            }
        }
    }
}
