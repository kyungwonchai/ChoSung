import streamlit as st
import pandas as pd
import pymssql

# MSSQL ì„œë²„ ì—°ê²° ì„¤ì • í•¨ìˆ˜
def get_connection():
    return pymssql.connect(
        server="YOUR_SERVER",
        user="YOUR_USER",
        password="YOUR_PASSWORD",
        database="YOUR_DATABASE"
    )

# Get_min_bestdifferent í”„ë¡œì‹œì € í˜¸ì¶œ í•¨ìˆ˜
def fetch_main_data():
    conn = get_connection()
    query = "EXEC Get_min_bestdifferent"
    df = pd.read_sql(query, conn)
    conn.close()
    return df

# í…Œì´ë¸”ì—ì„œ ìµœëŒ€ê°’ì„ ë…¸ë€ìƒ‰ìœ¼ë¡œ ê°•ì¡°í•˜ëŠ” í•¨ìˆ˜
def highlight_max(row):
    max_value = row.max()
    return ['background-color: yellow' if v == max_value else '' for v in row]

# Streamlit ì•± êµ¬ì„±
def main():
    st.set_page_config(layout="wide")
    st.title("Ranked Data Table - act2_1 ~ act2_8 Highlighting")

    # ë°ì´í„° ê°€ì ¸ì˜¤ê¸°
    main_data = fetch_main_data()
    
    # í•„ìš”í•œ ì»¬ëŸ¼ í•„í„°ë§
    act2_columns = [f'act2_{i}' for i in range(1, 9)]
    display_data = main_data[['group1', 'line1', 'model1', 'type1', 'ecn1', 'edition1'] + act2_columns]
    
    st.subheader("act2_1 ~ act2_8 ë°ì´í„° í…Œì´ë¸”")
    
    # act2 ë¶€ë¶„ì„ ìƒ‰ìƒ ê°•ì¡° (ê° í–‰ë§ˆë‹¤ ìµœëŒ€ê°’ì„ ë…¸ë€ìƒ‰ìœ¼ë¡œ í‘œì‹œ)
    styled_data = display_data.style.apply(highlight_max, subset=act2_columns, axis=1)
    
    # HTMLë¡œ ë³€í™˜í•˜ì—¬ í‘œì‹œ
    st.write(styled_data.to_html(), unsafe_allow_html=True)

if __name__ == "__main__":
    main()
