private string GetFirstLine(string input)
{
    if (string.IsNullOrEmpty(input))
    {
        return null;
    }

    string[] lines = input.Split(new[] { Environment.NewLine }, StringSplitOptions.RemoveEmptyEntries);
    if (lines.Length > 0)
    {
        return lines[0];
    }

    return null;
}
