using DevExpress.Xpf.Core;

// ...

public partial class App : Application
{
    protected override void OnStartup(StartupEventArgs e)
    {
        base.OnStartup(e);

        // 모든 컨트롤에 대한 테마 설정
        ThemeManager.ApplicationThemeName = Theme.Office2019Colorful.Name;

        // 모든 Button 컨트롤에 대한 테마 설정
        ThemeManager.ApplicationTheme.SetValue(Button.StyleProperty, /* 원하는 스타일 */);
    }
}
