using System;
using System.Data;
using System.IO;

class Program
{
    static void Main()
    {
        string filePath = "path_to_your_txt_file.txt"; // txt 파일의 경로를 설정해주세요.
        DataTable dataTable = CreateDataTableFromTxt(filePath);
    }

    public static DataTable CreateDataTableFromTxt(string filePath)
    {
        DataTable dt = new DataTable();
        string[] lines = File.ReadAllLines(filePath);

        if (lines.Length > 1)
        {
            string[] headers = lines[1].Split('\t');

            foreach (string header in headers)
            {
                if (header == "라인" || header == "모델명")
                {
                    dt.Columns.Add(header);
                }
            }

            for (int i = 2; i < lines.Length; i++)
            {
                string[] values = lines[i].Split('\t');
                DataRow row = dt.NewRow();
                int columnIndex = 0;
                foreach (string value in values)
                {
                    if (columnIndex < dt.Columns.Count)
                    {
                        row[columnIndex] = value;
                        columnIndex++;
                    }
                }
                dt.Rows.Add(row);
            }
        }
        return dt;
    }
}
