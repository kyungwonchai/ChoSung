using DevExpress.XtraCharts;
using System;
using System.Windows.Forms;

// ...

private void chartControl_MouseMove(object sender, MouseEventArgs e)
{
    ChartControl chartControl = sender as ChartControl;
    if (chartControl == null) return;

    ChartHitInfo hitInfo = chartControl.CalcHitInfo(e.X, e.Y);
    if (hitInfo.SeriesPoint != null && hitInfo.InSeries)
    {
        Series series = hitInfo.Series;
        SeriesPoint seriesPoint = hitInfo.SeriesPoint;

        string seriesName = series.Name;
        string argument = seriesPoint.Argument;

        MessageBox.Show($"시리즈명: {seriesName}\n과제명: {argument}");
    }
}
