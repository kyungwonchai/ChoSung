<script>
    fetch('/api/log_list').then(r=>r.json()).then(logs=>{
        const fails = logs.filter(l=>l.status==='FAIL').slice(0, 5);
        document.getElementById('fail-list').innerHTML = fails.map(f=>`<tr><td>${f.alias}</td><td style="color:#ff8888 !important;">${f.msg.substring(0,30)}</td><td>${f.at}</td></tr>`).join('');
        
        const apps = {};
        logs.forEach(l=>{
            if(!apps[l.alias]) apps[l.alias] = {sum:0, count:0, fails:0, last: l.at};
            if(l.status==='SUCCESS'){ apps[l.alias].sum += l.elapsed; apps[l.alias].count++; } else { apps[l.alias].fails++; }
        });
        const tbody = document.querySelector('#perf-table tbody');
        Object.keys(apps).forEach(a=>{
            const avg = (apps[a].sum / (apps[a].count||1)).toFixed(2);
            const status = apps[a].fails > 0 ? '<span style="color:red !important;">UNSTABLE</span>' : '<span style="color:#0f0 !important;">STABLE</span>';
            tbody.innerHTML += `<tr><td><b>${a}</b></td><td>${apps[a].last}</td><td>${avg}s</td><td>${status}</td></tr>`;
        });
        
        const ok = logs.filter(l=>l.status==='SUCCESS').length;
        new Chart(document.getElementById('ratioChart'), {type:'doughnut', data:{labels:['OK','FAIL'], datasets:[{data:[ok, logs.length-ok], backgroundColor:['#0f0','#f00']}]}, options:{plugins:{legend:{labels:{color:'#fff'}}}}});
    });
</script>
{% endblock %}
