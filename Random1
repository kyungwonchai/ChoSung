using System;
using System.Diagnostics;
using System.Windows.Forms;

namespace ChromeDownloadSettings
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void buttonOpenSettings_Click(object sender, EventArgs e)
        {
            // 크롬 다운로드 설정 주소
            string chromeDownloadSettingsUrl = "chrome://settings/downloads";

            // 크롬 실행
            Process.Start("chrome.exe", chromeDownloadSettingsUrl);
        }
    }
}
