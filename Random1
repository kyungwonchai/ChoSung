using System.Drawing;
using System.Windows.Forms;

// 부모 컨트롤에 패널 추가
Panel overlayPanel = new Panel();
overlayPanel.BackColor = Color.Transparent;
overlayPanel.Location = new Point(control.Left, control.Top);
overlayPanel.Size = new Size(control.Width, control.Height);
overlayPanel.Parent = parentControl;

// 패널에 Label 추가
Label label = new Label();
label.Text = "Your Text";
label.Font = new Font("Arial", 10, FontStyle.Bold);
label.ForeColor = Color.White;
label.AutoSize = true;
label.Location = new Point((overlayPanel.Width - label.Width) / 2, (overlayPanel.Height - label.Height) / 2);
overlayPanel.Controls.Add(label);
