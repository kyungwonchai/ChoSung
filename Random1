private void gridView1_RowClick(object sender, DevExpress.XtraGrid.Views.Grid.RowClickEventArgs e)
{
    // 선택한 행의 부쿠드 코드 값을 가져옵니다.
    string bukumCode = gridView1.GetRowCellValue(e.RowHandle, "BukumCode").ToString();

    // MSSQL에서 조회할 쿼리를 작성합니다.
    string query = "SELECT * FROM tbl1 WHERE BukumCode = @BukumCode";

    // 쿼리를 실행하기 위한 SqlCommand 객체를 생성합니다.
    using (SqlCommand command = new SqlCommand(query, yourSqlConnection))
    {
        // 쿼리에 파라미터를 추가합니다.
        command.Parameters.AddWithValue("@BukumCode", bukumCode);

        // 쿼리 실행 및 결과를 담을 DataTable 객체를 생성합니다.
        DataTable resultTable = new DataTable();

        // SqlDataAdapter를 사용하여 쿼리 실행 결과를 DataTable에 채웁니다.
        using (SqlDataAdapter adapter = new SqlDataAdapter(command))
        {
            adapter.Fill(resultTable);
        }

        // 조회 결과를 GridControl2에 바인딩합니다.
        gridControl2.DataSource = resultTable;
    }
}
