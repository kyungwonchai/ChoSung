private void OnMediaPlayerTimeChanged(object sender, EventArgs e)
{
    int currentTime = (int)_mediaPlayer.Time;
    int totalTime = (int)_mediaPlayer.Length;

    if (lblTime.InvokeRequired)
    {
        lblTime.Invoke(new MethodInvoker(delegate { lblTime.Text = $"{TimeSpan.FromMilliseconds(currentTime)} / {TimeSpan.FromMilliseconds(totalTime)}"; }));
    }
    else
    {
        lblTime.Text = $"{TimeSpan.FromMilliseconds(currentTime)} / {TimeSpan.FromMilliseconds(totalTime)}";
    }
}
