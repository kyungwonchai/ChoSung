  // 파일 객체를 생성합니다.
            string filePath = "c:\\test.txt";
            File.Open(filePath, FileMode.Create);

            // 파일 스트림을 생성합니다.
            StreamWriter stream = new StreamWriter(filePath, Encoding.UTF8);

            // 파일 스트림에 문자열을 비동기 방식으로 씁니다.
            stream.WriteAsync("Hello, world!");

            // 파일 스트림을 닫습니다.
            stream.Close();
