  // 에러를 특정 서버로 전송하는 메서드
    public void SendErrorToServer(string errorMessage)
    {
        try
        {
            using (Socket errorSocket = new Socket(AddressFamily.InterNetwork, SocketType.Stream, ProtocolType.Tcp))
            {
                errorSocket.Connect(new IPEndPoint(IPAddress.Parse("127.0.0.1"), 54321)); // 서버 IP와 포트를 설정하세요.
                byte[] errorData = Encoding.UTF8.GetBytes(errorMessage);
                errorSocket.Send(errorData);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error sending error message: " + ex.Message);
        }
    }