const sql = require('mssql');

// 데이터베이스 연결 설정
const config = {
    user: 'yourUsername',
    password: 'yourPassword',
    server: 'yourServer', // You can use 'localhost\\instance' to connect to named instance
    database: 'yourDatabase',
};

async function callProcedure(param1, param2, param3) {
    try {
        // 데이터베이스 연결
        await sql.connect(config);
        
        // Request 객체 생성
        const request = new sql.Request();
        
        // 입력 파라미터 추가
        request.input('param1', sql.VarChar, param1);
        request.input('param2', sql.VarChar, param2);
        request.input('param3', sql.Float, param3);
        
        // 저장 프로시저 호출
        const result = await request.execute('yourProcedureName');
        
        console.log(result);
        // 결과 처리...
    } catch (err) {
        // 에러 처리
        console.error('SQL error', err);
    }
}

// 함수 호출 예시
callProcedure('stringValue1', 'stringValue2', 123.45);
