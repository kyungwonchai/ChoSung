// 파일 저장 위치를 사용자에게 물어보기
using (System.Windows.Forms.SaveFileDialog saveFileDialog = new System.Windows.Forms.SaveFileDialog()) {
    saveFileDialog.Filter = "Excel files (*.xlsx)|*.xlsx|All files (*.*)|*.*";
    saveFileDialog.FilterIndex = 1;
    saveFileDialog.RestoreDirectory = true;
    saveFileDialog.FileName = "Employees.xlsx";

    if (saveFileDialog.ShowDialog() == System.Windows.Forms.DialogResult.OK) {
        string savePath = saveFileDialog.FileName;
        workbook.SaveDocument(savePath);
        System.Windows.Forms.MessageBox.Show("파일이 성공적으로 저장되었습니다: " + savePath, "저장 완료", System.Windows.Forms.MessageBoxButtons.OK, System.Windows.Forms.MessageBoxIcon.Information);
    }
}
