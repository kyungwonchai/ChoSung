DECLARE @query NVARCHAR(MAX) = '';

SELECT @query = @query + 
    'SELECT * FROM [' + TABLE_NAME + '] UNION ALL ' 
FROM INFORMATION_SCHEMA.TABLES 
WHERE TABLE_NAME LIKE 'LOG_%' AND TABLE_TYPE = 'BASE TABLE';

-- 마지막 UNION ALL 제거
SET @query = LEFT(@query, LEN(@query) - 10);

-- 동적 SQL 실행
EXEC sp_executesql @query;
