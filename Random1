using System;

public class StringSearch
{
    public static void Main(string[] args)
    {
        // The long string of values separated by commas
        string longString = "02,03,04,05";
        
        // The string value you're searching for
        string valueToFind = "02";
        
        // Split the longString into an array of strings based on the comma
        string[] values = longString.Split(',');
        
        // Check if the array contains the valueToFind
        bool isValuePresent = Array.Exists(values, element => element == valueToFind);
        
        if (isValuePresent)
        {
            Console.WriteLine($"{valueToFind} is included in the string.");
        }
        else
        {
            Console.WriteLine($"{valueToFind} is not included in the string.");
        }
    }
}
