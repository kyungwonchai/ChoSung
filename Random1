private void Form1_FormClosing(object sender, FormClosingEventArgs e)
{
    // 사용자가 폼을 닫을 때 호출됩니다.
    // 폼을 닫기 전에 수행해야 할 작업을 여기에 추가할 수 있습니다.

    // 사용자가 폼을 닫기를 원하지 않는 경우, 다음 코드를 사용하여 닫지 않도록 할 수 있습니다.
    // e.Cancel = true;

    // 폼을 닫을 때 추가 작업을 수행한 후에는 폼을 닫도록 허용하려면 다음 코드를 사용할 수 있습니다.
    // e.Cancel = false;
}
