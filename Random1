<Application x:Class="YourNamespace.App"
             ...
             xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking">
    <Application.Resources>
        <!-- DockLayoutManager의 Panel 탭 헤더 스타일 -->
        <Style TargetType="{x:Type dxdo:LayoutPanel}">
            <Setter Property="TabItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Border Background="LightGray" Height="30">
                            <TextBlock Text="{Binding Content.Header}" Margin="5" Foreground="Black"/>
                        </Border>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="TabItemTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <Border Background="Blue" Height="30">
                                    <TextBlock Text="{Binding Content.Header}" Margin="5" Foreground="Yellow"/>
                                </Border>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
