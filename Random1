import bpy

# 기존 객체 삭제
bpy.ops.object.select_all(action='SELECT')
bpy.ops.object.delete(use_global=False)

# 첫 번째 줄 텍스트 'MG' 생성
bpy.ops.object.text_add(location=(0, 0, 0))
text_mg = bpy.context.object
text_mg.data.body = "MG"
text_mg.name = "TextMG"
text_mg.data.extrude = 0.1  # 텍스트 깊이 설정
text_mg.location = (-1, 0, 0)

# 두 번째 줄 텍스트 'SP' 생성
bpy.ops.object.text_add(location=(0, 0, 0))
text_sp = bpy.context.object
text_sp.data.body = "SP"
text_sp.name = "TextSP"
text_sp.data.extrude = 0.1  # 텍스트 깊이 설정
text_sp.location = (-1, 0, -1)  # 위치를 아래로 조정하여 두 줄로 배치

# 텍스트에 푸른 보석 색상 재질 추가
material = bpy.data.materials.new(name="BlueGemMaterial")
material.use_nodes = True
nodes = material.node_tree.nodes
nodes["Principled BSDF"].inputs['Base Color'].default_value = (0.0, 0.1, 1.0, 1.0)  # 푸른 보석 색상
nodes["Principled BSDF"].inputs['Roughness'].default_value = 0.2
nodes["Principled BSDF"].inputs['Metallic'].default_value = 0.8

# 각 텍스트에 재질 추가
text_mg.data.materials.append(material)
text_sp.data.materials.append(material)

# 카메라 생성 및 설정
bpy.ops.object.camera_add(location=(0, -5, 0), rotation=(1.57, 0, 0))
camera = bpy.context.object
camera.data.lens = 35
camera.data.clip_end = 1000

# 카메라 설정 (텍스트가 화면을 90% 정도 채우도록)
bpy.context.scene.camera = camera

# 배경 투명 설정
bpy.context.scene.render.film_transparent = True

# 렌더링 설정
bpy.context.scene.render.image_settings.file_format = 'PNG'
bpy.context.scene.render.filepath = "//MGSP_Text_Render.png"

# 렌더링 실행
bpy.ops.render.render(write_still=True)
