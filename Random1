}

/* 입력 필드 스타일 */
.form-control {
    border: 1px solid #0288d1; /* 입력 필드 테두리 파란색 */
    color: #333333; /* 입력 텍스트 색상 */
}

.form-control:focus {
    border-color: #01579b; /* 포커스 시 테두리 짙은 파랑색 */
    box-shadow: 0 0 5px rgba(1, 87, 155, 0.5); /* 포커스 시 그림자 */
}

/* Description 셀의 텍스트 자르기 및 툴팁 */
.description-cell {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 400px;
}

/* 툴팁 스타일 */
.description-cell[title] {
    position: relative;
}

.description-cell[title]:hover::after {
    content: attr(title);
