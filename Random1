using System;
using System.IO;
using System.Windows.Forms;
using WMPLib;

namespace BlackBoxPlayer
{
    public partial class MainForm : Form
    {
        private WindowsMediaPlayer _player;
        private string[] _files;
        private int _currentFileIndex;

        public MainForm()
        {
            InitializeComponent();
            _player = new WindowsMediaPlayer();
        }

        private void MainForm_Load(object sender, EventArgs e)
        {
            LoadFiles(@"D:\kwblackbox");
        }

        private void LoadFiles(string folderPath)
        {
            _files = Directory.GetFiles(folderPath, "*.mp4");
            foreach (string file in _files)
            {
                listBoxFiles.Items.Add(Path.GetFileName(file));
            }
        }

        private void listBoxFiles_DoubleClick(object sender, EventArgs e)
        {
            if (listBoxFiles.SelectedIndex != -1)
            {
                _currentFileIndex = listBoxFiles.SelectedIndex;
                PlayFile(_files[_currentFileIndex]);
            }
        }

        private void PlayFile(string file)
        {
            _player.URL = file;
            _player.controls.play();
            _player.PlayStateChange += OnPlayStateChanged;
        }

        private void OnPlayStateChanged(int newState)
        {
            if ((WMPPlayState)newState == WMPPlayState.wmppsMediaEnded)
            {
                _currentFileIndex++;
                if (_currentFileIndex < _files.Length)
                {
                    PlayFile(_files[_currentFileIndex]);
                }
            }
        }
    }
}
