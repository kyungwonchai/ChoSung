private void textEdit3_KeyDown(object sender, KeyEventArgs e)
{
    if (e.KeyCode == Keys.Enter)
    {
        string searchKeyword = textEdit3.Text; // 검색어를 가져옵니다.

        using (SqlConnection connection = new SqlConnection(connectionString))
        {
            string query = "SELECT * FROM Memos WHERE PlainTextContent LIKE @keyword";
            using (SqlCommand command = new SqlCommand(query, connection))
            {
                command.Parameters.AddWithValue("@keyword", $"%{searchKeyword}%");
                connection.Open();
                DataTable dataTable = new DataTable();
                SqlDataAdapter adapter = new SqlDataAdapter(command);
                adapter.Fill(dataTable);

                gridControl1.DataSource = dataTable; // GridControl에 결과를 뿌립니다.
            }
        }
    }
}
