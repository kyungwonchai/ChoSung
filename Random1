private void OnCellSelected(object sender, FocusedRowChangedEventArgs e)
{
    // ... (선택된 셀의 값을 저장하는 부분)

    // 포커스 이벤트 핸들러를 연결합니다.
    TableView tableView = (TableView)sender;
    tableView.CellValueEditorLostFocus += OnCellValueEditorLostFocus;
}

private void OnCellValueEditorLostFocus(object sender, CellValueEditorLostFocusEventArgs e)
{
    TableView tableView = (TableView)sender;
    int focusedRowHandle = e.RowHandle;

    // 포커스를 잃은 셀에 대한 처리를 수행합니다.
    if (originalCellValues.ContainsKey(new GridCell(focusedRowHandle, tableView.FocusedColumn)))
    {
        CheckForUnsavedChanges();
    }
}
