using (FileStream fs = new FileStream("test.txt", FileMode.Open, FileAccess.Read))
{
    using (StreamReader sr = new StreamReader(fs))
    {
        long position = sr.BaseStream.Position; // 현재 파일 스트림의 위치 저장
        string line = sr.ReadLine(); // 줄 읽기
        Console.WriteLine(line);
        
        // 나중에 같은 위치에서 다시 읽을 수 있도록 위치를 저장해둠
    }
}

// 스트림 재열기
using (FileStream fs = new FileStream("test.txt", FileMode.Open, FileAccess.Read))
{
    using (StreamReader sr = new StreamReader(fs))
    {
        sr.BaseStream.Seek(position, SeekOrigin.Begin); // 저장된 위치로 이동
        sr.DiscardBufferedData(); // 버퍼 초기화. 중요!
        string line = sr.ReadLine(); // 같은 줄을 다시 읽기
        Console.WriteLine(line); 
    }
}
