using System;
using System.Diagnostics;
using System.Threading;

namespace ScheduledExecution
{
    class Program
    {
        static void Main(string[] args)
        {
            // 10초 대기
            Thread.Sleep(10000);

            // c:\aaa\bbb.bat 실행
            ExecuteFile(@"c:\aaa\bbb.bat");

            // 추가로 10초 대기 (총 20초 후)
            Thread.Sleep(10000);

            // c:\fdd\gsg\g1.exe 실행
            ExecuteFile(@"c:\fdd\gsg\g1.exe");
        }

        static void ExecuteFile(string filePath)
        {
            try
            {
                Process process = new Process
                {
                    StartInfo = new ProcessStartInfo
                    {
                        FileName = filePath,
                        RedirectStandardOutput = true,
                        UseShellExecute = false,
                        CreateNoWindow = true,
                    }
                };

                process.Start();
            }
            catch (Exception ex)
            {
                Console.WriteLine("파일 실행 중 오류 발생: " + ex.Message);
            }
        }
    }
}
