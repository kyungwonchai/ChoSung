 // 클라이언트 연결 시 호출되는 메서드
        private void OnClientConnected()
        {
            Application.Current.Dispatcher.Invoke(() =>
            {
                ConnectionStatus = "클라이언트 연결됨"; // UI 업데이트는 UI 스레드에서만 수행
            });
        }

        // 클라이언트 연결 해제 시 호출되는 메서드
        private void OnClientDisconnected()
        {
            Application.Current.Dispatcher.Invoke(() =>
            {
                ConnectionStatus = "클라이언트 연결 해제됨"; // UI 업데이트는 UI 스레드에서만 수행
            });
        }

        // 메시지 수신 시 호출되는 메서드 (수신된 메시지를 리스트에 추가)
        private void OnMessageReceived(string message)
        {
            Application.Current.Dispatcher.Invoke(() =>
            {
                // 리스트에 수신된 메시지를 추가 (최대 30개까지 유지)
                if (Messages.Count >= 30)
                {
                    Messages.RemoveAt(0); // 오래된 메시지 삭제
                }
                Messages.Add(message); // 새로운 메시지 추가
            });
        }