private List<string> lista; // DB에서 가져온 값들을 저장할 리스트

private void UpdateListFromDB()
{
    // DB에서 값을 가져와 lista를 업데이트하는 코드
    // 이 부분을 DB와 연동하여 구현해주세요.
}

// 버튼 클릭 등의 신호를 받아서 리스트를 업데이트하고 그리드를 리프레시합니다.
private void OnSignalReceived(object sender, EventArgs e)
{
    UpdateListFromDB();
    gridControl1.RefreshData(); // GridControl을 리프레시하여 CellStyle 이벤트를 다시 호출합니다.
}

private void gridControl1_CellStyle(object sender, DevExpress.XtraGrid.Views.Grid.RowStyleEventArgs e)
{
    if (e.RowHandle < 0) return;

    if (e.Column.FieldName == "key1")
    {
        object cellValue = gridView1.GetRowCellValue(e.RowHandle, "key1");
        if (cellValue != null && lista.Contains(cellValue.ToString()))
        {
            e.Appearance.BackColor = Color.Yellow;
            e.Appearance.ForeColor = Color.Black;
        }
    }
}
