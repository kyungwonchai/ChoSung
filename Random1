  // string을 생성합니다.
        string str = "Hello, world!";

        // string을 UTF-8로 인코딩합니다.
        byte[] bytes = Encoding.UTF8.GetBytes(str);

        // stream을 생성합니다.
        FileStream stream = new FileStream("c:\\test.txt", FileMode.Create);

        // stream에 bytes를 씁니다.
        stream.Write(bytes, 0, bytes.Length);

        // stream을 닫습니다.
        stream.Close();