private void btnLoadFiles_Click(object sender, EventArgs e)
{
    // 이전 코드 생략

    foreach (string file in files)
    {
        // 이전 코드 생략

        MemoEdit memoEdit = new MemoEdit();
        memoEdit.Dock = DockStyle.Fill;
        memoEdit.Properties.ScrollBars = ScrollBars.Both; // 스크롤바 설정
        memoEdit.Properties.Appearance.BackColor = Color.LightYellow; // 배경 색상 설정
        memoEdit.Properties.Appearance.ForeColor = Color.Black; // 텍스트 색상 설정
        memoEdit.Properties.Appearance.Font = new Font(memoEdit.Properties.Appearance.Font.FontFamily, 12); // 글꼴 설정
        tabPage.Controls.Add(memoEdit);

        // 이전 코드 생략
    }
}
