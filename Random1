string[] columns = new string[] { /* 50개의 컬럼 */ };
string keys = "N_datek, C_Site_Name, C_Resource_Name, C_Basic_Name__Fix_";
string updateSetClause = string.Join(", ", columns) + " = VALUES(" + string.Join(", ", columns) + ")";
string insertQuery = $"INSERT INTO T_메인확정 ({string.Join(",", columns)}) VALUES (@Value1, @Value2, /* ... */)";

string onDuplicateKeyUpdateQuery = $"ON DUPLICATE KEY UPDATE {updateSetClause}";

using (SqlConnection conn = new SqlConnection(connectionString))
{
    conn.Open();
    using (SqlCommand cmd = new SqlCommand($"{insertQuery} {onDuplicateKeyUpdateQuery}", conn))
    {
        cmd.Parameters.AddWithValue("@Value1", value1);
        cmd.Parameters.AddWithValue("@Value2", value2);
        // 나머지 값들도 이렇게 추가합니다.

        cmd.ExecuteNonQuery();
    }
    conn.Close();
}
