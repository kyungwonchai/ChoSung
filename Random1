// GridView를 얻어옵니다.
GridView view = gridControl1.MainView as GridView;

// 모든 셀을 가운데 정렬합니다.
view.Appearance.Row.TextOptions.HAlignment = DevExpress.Utils.HorzAlignment.Center;

// 모든 헤더를 가운데 정렬합니다.
view.Appearance.HeaderPanel.TextOptions.HAlignment = DevExpress.Utils.HorzAlignment.Center;

// inputtime과 modtime 컬럼의 날짜 형식을 지정합니다.
view.Columns["inputtime"].DisplayFormat.FormatType = DevExpress.Utils.FormatType.DateTime;
view.Columns["inputtime"].DisplayFormat.FormatString = "yy-MM-dd HH:mm:ss";

view.Columns["modtime"].DisplayFormat.FormatType = DevExpress.Utils.FormatType.DateTime;
view.Columns["modtime"].DisplayFormat.FormatString = "yy-MM-dd HH:mm:ss";
