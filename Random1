// 밴드의 뒤에서부터 보이는 대로 틀 고정을 해제하는 메서드
private void UnfixVisibleBandsFromEnd(GridControl grid)
{
    // 화면에 보이는 순서대로 밴드 목록을 가져옵니다.
    List<GridBand> visibleBands = grid.Bands.OrderBy(b => b.VisibleIndex).ToList();

    // 뒤에서부터 고정 해제
    for (int i = visibleBands.Count - 1; i >= 0; i--)
    {
        GridBand band = visibleBands[i];
        if (band.Fixed != FixedStyle.None)
        {
            // 밴드의 고정 해제
            band.Fixed = FixedStyle.None;
        }
    }
}

// 사용 예시
private void UnfixAllVisibleBands()
{
    UnfixVisibleBandsFromEnd(gridControl1);
}
