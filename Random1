// MainForm.cs 파일

using DevExpress.XtraTabbedMdi;

public partial class MainForm : Form
{
    private XtraTabbedMdiManager xtraTabbedMdiManager;

    public MainForm()
    {
        InitializeComponent();
        xtraTabbedMdiManager = new XtraTabbedMdiManager();
        xtraTabbedMdiManager.MdiParent = this; // MainForm를 부모로 설정
    }

    private void btnNewWindow1_Click(object sender, EventArgs e)
    {
        // 새로운 창 생성
        Form childForm = new ChildForm();
        childForm.MdiParent = this;
        childForm.Show();
    }
}

// ChildForm.cs 파일

public partial class ChildForm : Form
{
    public ChildForm()
    {
        InitializeComponent();
    }
}
