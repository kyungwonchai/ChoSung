using WindowsInput;
using WindowsInput.Native;

// ...

private void btnInput1_Click(object sender, EventArgs e)
{
    string content = textBox1.Text;
    Clipboard.SetText(content);
    Point position = f2Form.Location;

    // 마우스를 F2Form 위치로 옮기고 클릭합니다.
    SetCursorPos(position.X + 5, position.Y + 5);
    mouse_event(MOUSEEVENTF_LEFTDOWN, position.X + 5, position.Y + 5, 0, 0);
    mouse_event(MOUSEEVENTF_LEFTUP, position.X + 5, position.Y + 5, 0, 0);

    // 텍스트를 붙여넣고 Ctrl+Enter 키를 누릅니다.
    InputSimulator inputSimulator = new InputSimulator();
    inputSimulator.Keyboard.ModifiedKeyStroke(VirtualKeyCode.CONTROL, VirtualKeyCode.VK_V);
    inputSimulator.Keyboard.ModifiedKeyStroke(VirtualKeyCode.CONTROL, VirtualKeyCode.RETURN);
}
