using MySql.Data.MySqlClient;
using System;

namespace YourNamespace
{
    class Program
    {
        static void Main(string[] args)
        {
            string connStr = "Server=localhost;Database=your_database;User ID=your_user;Password=your_password;";
            using (MySqlConnection conn = new MySqlConnection(connStr))
            {
                conn.Open();

                string query = "SELECT p1 FROM your_table WHERE p1 = @p1Value;";
                MySqlCommand cmd = new MySqlCommand(query, conn);
                cmd.Parameters.AddWithValue("@p1Value", textbox1.Text.Trim());

                using (MySqlDataReader reader = cmd.ExecuteReader())
                {
                    if (reader.Read())
                    {
                        Console.WriteLine("일치합니다.");
                    }
                    else
                    {
                        Console.WriteLine("불일치합니다.");
                    }
                }
            }
        }
    }
}
