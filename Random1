using DevExpress.XtraCharts;
using System;
using System.Windows.Forms;

// ...

private void chartControl_ObjectHotTracked(object sender, HotTrackEventArgs e)
{
    if (e.HitInfo.InSeries && e.HitInfo.SeriesPoint != null)
    {
        Series series = e.HitInfo.Series;
        SeriesPoint seriesPoint = e.HitInfo.SeriesPoint;

        string seriesName = series.Name;
        string argument = seriesPoint.Argument;

        MessageBox.Show($"시리즈명: {seriesName}\n과제명: {argument}");
    }
}
