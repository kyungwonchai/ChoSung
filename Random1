// PivotGridControl의 CustomDrawFieldHeaderCell 이벤트 핸들러 등록
pivotGridControl1.CustomDrawFieldHeaderCell += PivotGridControl1_CustomDrawFieldHeaderCell;

// PivotGridControl의 CustomDrawCell 이벤트 핸들러 등록
pivotGridControl1.CustomDrawCell += PivotGridControl1_CustomDrawCell;

// CustomDrawFieldHeaderCell 이벤트 핸들러 구현
private void PivotGridControl1_CustomDrawFieldHeaderCell(object sender, PivotCustomDrawFieldHeaderCellEventArgs e)
{
    e.Appearance.TextAlignment = ContentAlignment.MiddleCenter;
    e.Appearance.TextOptions.HAlignment = DevExpress.Utils.HorzAlignment.Center;
}

// CustomDrawCell 이벤트 핸들러 구현
private void PivotGridControl1_CustomDrawCell(object sender, PivotCustomDrawCellEventArgs e)
{
    e.Appearance.TextAlignment = ContentAlignment.MiddleCenter;
    e.Appearance.TextOptions.HAlignment = DevExpress.Utils.HorzAlignment.Center;
}
