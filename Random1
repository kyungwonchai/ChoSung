// 사용자 정의 필드 생성
PivotGridField customField = new PivotGridField("CustomField", PivotArea.DataArea);
customField.Caption = "Grand Total";
customField.UnboundType = DevExpress.Data.UnboundColumnType.String;
pivotGridControl1.Fields.Add(customField);

// 사용자 정의 요약 생성
PivotGridSummary customSummary = new PivotGridSummary();
customSummary.FieldName = "CustomField";
customSummary.Type = DevExpress.Data.PivotGrid.PivotSummaryType.Custom;
pivotGridControl1.CustomSummary += PivotGridControl1_CustomSummary;

// CustomSummary 이벤트 핸들러 구현
private void PivotGridControl1_CustomSummary(object sender, PivotGridCustomSummaryEventArgs e)
{
    if (e.DataField == customField && e.SummaryProcess == DevExpress.Data.CustomSummaryProcess.Finalize)
    {
        int countA = 0;
        int countB = 0;
        int countC = 0;

        foreach (PivotDrillDownDataRow row in e.CreateDrillDownDataSource().Cast<PivotDrillDownDataRow>())
        {
            string cellValue = row["YourFieldName"].ToString();
            if (cellValue == "A")
                countA++;
            else if (cellValue == "B")
                countB++;
            else if (cellValue == "C")
                countC++;
        }

        e.TotalValue = string.Format("A: {0}, B: {1}, C: {2}", countA, countB, countC);
    }
}
