using System.Windows;
using DevExpress.Xpf.Core; // DevExpress 라이브러리를 사용하기 위해 필요

namespace YourNamespace
{
    public partial class MainWindow : DXWindow // DXWindow를 사용합니다
    {
        public MainWindow()
        {
            InitializeComponent();
            this.Loaded += MainWindow_Loaded;
        }

        private void MainWindow_Loaded(object sender, RoutedEventArgs e)
        {
            // 컨텍스트 메뉴 구성
            var contextMenu = new DXPopupMenu();
            var menuItem = new DXMenuItem("값 입력", MenuItem_Click);
            contextMenu.Items.Add(menuItem);
            this.ContextMenu = contextMenu.CreateFrameworkContextMenu();
        }

        private void MenuItem_Click(object sender, RoutedEventArgs e)
        {
            // 입력 창을 팝업으로 표시
            var inputDialog = new InputDialog(); // InputDialog는 사용자가 만든 대화 상자입니다.
            if (inputDialog.ShowDialog() == true)
            {
                var inputValue = inputDialog.InputValue; // InputDialog에서 입력 값을 가져옵니다.
                // 이곳에서 inputValue 변수를 사용할 수 있습니다.
                MessageBox.Show($"입력된 값: {inputValue}");
            }
        }
    }
}
