using System.IO;

// 캐시 폴더 경로를 가져옵니다.
string cacheFolderPath = webView2.CoreWebView2Environment.BrowserExecutableFolder;

// 폴더 내의 모든 파일을 삭제합니다.
foreach (var file in new DirectoryInfo(cacheFolderPath).GetFiles())
{
    file.Delete(); 
}

// 폴더 내의 모든 서브 폴더를 삭제합니다.
foreach (var dir in new DirectoryInfo(cacheFolderPath).GetDirectories())
{
    dir.Delete(true); 
}
