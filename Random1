Sub CopyDataToMainMapping()
    Dim wsSource As Worksheet, wsTarget As Worksheet
    Dim sourceRange As Range, targetRange As Range
    Dim i As Integer, j As Integer
    Dim lastRow As Integer

    ' 워크시트 설정
    Set wsSource = ThisWorkbook.Sheets("[요일별]")
    Set wsTarget = ThisWorkbook.Sheets("[MAIN Mapping]")

    ' 기존 값을 클리어
    For i = 9 To 51 Step 7  ' I부터 AY까지 7칸 간격
        wsTarget.Cells(2, i).Resize(, 3).ClearContents
    Next i

    ' 데이터 복사
    For i = 1 To 19 Step 3  ' A부터 S까지 3칸 간격
        Set sourceRange = wsSource.Cells(3, i).Resize(, 3)
        lastRow = wsSource.Cells(wsSource.Rows.Count, i).End(xlUp).Row
        Set sourceRange = sourceRange.Resize(lastRow - 2)

        j = 9 + (i - 1) / 3 * 7 ' 타겟 열 계산 (I부터 시작)
        Set targetRange = wsTarget.Cells(2, j).Resize(sourceRange.Rows.Count, 3)

        ' 값 복사
        sourceRange.Copy
        targetRange.PasteSpecial Paste:=xlPasteValues
        Application.CutCopyMode = False
    Next i
End Sub
