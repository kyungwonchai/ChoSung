// PivotGridControl의 CustomDrawCell 이벤트 핸들러 등록
pivotGridControl1.CustomDrawCell += PivotGridControl1_CustomDrawCell;

// CustomDrawCell 이벤트 핸들러 구현
private void PivotGridControl1_CustomDrawCell(object sender, PivotCustomDrawCellEventArgs e)
{
    if (e.DataField.FieldName == "YourFieldName" && Convert.ToInt32(e.Value) == -1)
    {
        e.Appearance.BackColor = Color.Gray; // 셀의 배경색을 회색으로 설정
        e.Appearance.ForeColor = Color.White; // 셀의 전경색(텍스트 색상)을 흰색으로 설정
    }
}
