        <Style x:Key="LightBlueHeaderStyle" TargetType="dxg:BaseGridHeader">
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
