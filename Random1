FlowLayoutPanel flowLayoutPanel = new FlowLayoutPanel();
flowLayoutPanel.FlowDirection = FlowDirection.TopDown;

Label label1 = new Label();
label1.AutoSize = true;
label1.Text = "Label 1";
TextBox textBox1 = new TextBox();
textBox1.Multiline = true;
textBox1.ScrollBars = ScrollBars.Vertical;
textBox1.ReadOnly = true;
textBox1.TextChanged += TextBox_TextChanged;
textBox1.SizeChanged += TextBox_HeightChanged;

Label label2 = new Label();
label2.AutoSize = true;
label2.Text = "Label 2";
TextBox textBox2 = new TextBox();
textBox2.Multiline = true;
textBox2.ScrollBars = ScrollBars.Vertical;
textBox2.ReadOnly = true;
textBox2.TextChanged += TextBox_TextChanged;
textBox2.SizeChanged += TextBox_HeightChanged;

// FlowLayoutPanel에 라벨과 텍스트박스 추가
flowLayoutPanel.Controls.Add(label1);
flowLayoutPanel.Controls.Add(textBox1);
flowLayoutPanel.Controls.Add(label2);
flowLayoutPanel.Controls.Add(textBox2);

// 부모 컨트롤에 FlowLayoutPanel 추가
Controls.Add(flowLayoutPanel);

private void TextBox_TextChanged(object sender, EventArgs e)
{
    TextBox textBox = (TextBox)sender;
    textBox.Height = textBox.GetPreferredSize(new Size(textBox.Width, int.MaxValue)).Height;
}

private void TextBox_HeightChanged(object sender, EventArgs e)
{
    flowLayoutPanel.SuspendLayout();
    flowLayoutPanel.PerformLayout();
    flowLayoutPanel.ResumeLayout();
}
