using System;
using System.Runtime.InteropServices;

public class ResolutionChanger
{
    // Win32 API 함수를 C#으로 가져오기 (DllImport)
    [DllImport("user32.dll")]
    public static extern int EnumDisplaySettings(string deviceName, int modeNum, ref DEVMODE devMode);

    [DllImport("user32.dll")]
    public static extern int ChangeDisplaySettings(ref DEVMODE devMode, int flags);

    // ChangeDisplaySettings 함수의 반환 값 정의
    public const int DISP_CHANGE_SUCCESSFUL = 0;
    public const int DISP_CHANGE_RESTART = 1;
    public const int DISP_CHANGE_FAILED = -1;

    // 기타 상수
    public const int ENUM_CURRENT_SETTINGS = -1;
    public const int CDS_UPDATEREGISTRY = 0x01;
    public const int CDS_TEST = 0x02;


    // 디스플레이 장치 정보를 담는 DEVMODE 구조체 정의
    [StructLayout(LayoutKind.Sequential)]
    public struct DEVMODE
    {
        [MarshalAs(UnmanagedType.ByValTStr, SizeConst = 32)]
        public string dmDeviceName;
        public short dmSpecVersion;
        public short dmDriverVersion;
        public short dmSize;
        public short dmDriverExtra;
        public int dmFields;
        public int dmPositionX;
        public int dmPositionY;
        public int dmDisplayOrientation;
        public int dmDisplayFixedOutput;
        public short dmColor;
        public short dmDuplex;
        public short dmYResolution;
        public short dmTTOption;
        public short dmCollate;
        [MarshalAs(UnmanagedType.ByValTStr, SizeConst = 32)]
        public string dmFormName;
        public short dmLogPixels;
        public int dmBitsPerPel;
        public int dmPelsWidth;      // 화면 가로 해상도 (Pixel Width)
        public int dmPelsHeight;     // 화면 세로 해상도 (Pixel Height)
        public int dmDisplayFlags;
        public int dmDisplayFrequency;
        public int dmICMMethod;
        public int dmICMIntent;
        public int dmMediaType;
        public int dmDitherType;
        public int dmReserved1;
        public int dmReserved2;
        public int dmPanningWidth;
        public int dmPanningHeight;
    }

    /// <summary>
    /// 주 모니터의 해상도를 변경합니다.
    /// </summary>
    /// <param name="width">원하는 가로 해상도</param>
    /// <param name="height">원하는 세로 해상도</param>
    public static void ChangeResolution(int width, int height)
    {
        // DEVMODE 구조체 초기화
        DEVMODE devMode = new DEVMODE();
        devMode.dmSize = (short)Marshal.SizeOf(devMode);

        // 현재 디스플레이 설정 가져오기
        if (EnumDisplaySettings(null, ENUM_CURRENT_SETTINGS, ref devMode) == 0)
        {
            Console.WriteLine("현재 디스플레이 설정 정보를 가져오는 데 실패했습니다.");
            return;
        }

        // DEVMODE 구조체의 해상도 값 변경
        devMode.dmPelsWidth = width;
        devMode.dmPelsHeight = height;

        // 변경된 설정으로 디스플레이 해상도 적용
        int result = ChangeDisplaySettings(ref devMode, CDS_UPDATEREGISTRY);

        switch (result)
        {
            case DISP_CHANGE_SUCCESSFUL:
                Console.WriteLine($"해상도가 {width}x{height}으로 성공적으로 변경되었습니다.");
                break;
            case DISP_CHANGE_RESTART:
                Console.WriteLine("해상도 변경을 위해 컴퓨터를 재부팅해야 합니다.");
                break;
            default:
                Console.WriteLine("해상도 변경에 실패했습니다. 하드웨어가 해당 해상도를 지원하지 않을 수 있습니다.");
                break;
        }