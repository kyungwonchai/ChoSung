chartControl1.CustomDrawSeriesPoint += ChartControl1_CustomDrawSeriesPoint;

private void ChartControl1_CustomDrawSeriesPoint(object sender, CustomDrawSeriesPointEventArgs e)
{
    GanttSeriesView view = e.SeriesView as GanttSeriesView;

    if (view != null)
    {
        SeriesPoint point = e.SeriesPoint;

        string taskName = point.Argument.ToString();
        DateTime startTime = view.StartValues.DateTimeValue(point);
        DateTime endTime = view.EndValues.DateTimeValue(point);

        e.LabelText = string.Format("{0}; {1:yyyy-MM-dd HH:mm:ss} - {2:yyyy-MM-dd HH:mm:ss}", taskName, startTime, endTime);
    }
}
