// 차트 객체 생성
ChartControl chartControl = new ChartControl();

// 차트 옵션 설정
chartControl.CrosshairEnabled = true;
chartControl.Legend.Visibility = DevExpress.Utils.DefaultBoolean.False;

// 데이터 생성 및 설정
Series series = new Series("Series", ViewType.Bar);
series.ArgumentScaleType = ScaleType.Qualitative;
series.ValueScaleType = ScaleType.Numerical;

// 데이터 추가
series.Points.Add(new SeriesPoint("Category 1", new double[] { 10 }));
series.Points.Add(new SeriesPoint("Category 2", new double[] { 20 }));
series.Points.Add(new SeriesPoint("Category 3", new double[] { 30 }));

// 차트에 시리즈 추가
chartControl.Series.Add(series);

// X축과 Y축을 맞바꾸기
chartControl.Diagram = new XYDiagram();
((XYDiagram)chartControl.Diagram).Rotated = true;

// 차트 컨트롤을 폼에 추가하거나 화면에 표시
this.Controls.Add(chartControl);
