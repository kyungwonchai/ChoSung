// 특정 열의 부모 밴드의 VisibleIndex를 가져오는 메서드
private int GetParentBandVisibleIndex(GridControl grid, string columnName)
{
    // 해당 열을 찾습니다.
    GridColumn column = grid.Columns[columnName];

    if (column != null)
    {
        // 열의 부모 밴드를 찾습니다.
        GridBand parentBand = column.OwnerBand;

        if (parentBand != null)
        {
            // 부모 밴드의 VisibleIndex를 반환합니다.
            return parentBand.VisibleIndex;
        }
        else
        {
            throw new InvalidOperationException("The column does not belong to any band.");
        }
    }
    else
    {
        throw new InvalidOperationException("The column was not found.");
    }
}

// 사용 예시
private void ExampleUsage()
{
    try
    {
        int visibleIndex = GetParentBandVisibleIndex(gridControl1, "모델");
        MessageBox.Show($"The visible index of the parent band is: {visibleIndex}");
    }
    catch (Exception ex)
    {
        MessageBox.Show(ex.Message);
    }
}
