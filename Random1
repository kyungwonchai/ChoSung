# --- [Updated] Smart Git Logic ---
@api_bp.route('/git/commit', methods=['POST'])
def git_commit():
    data = request.json
    project_path = data.get('path')
    message = data.get('message') or "Update via AI Bridge"
    
    if not os.path.exists(project_path):
        return jsonify({'status': 'error', 'message': 'Path not found'}), 404

    logs = []
    try:
        # 1. ÏÉÅÌô© ÌåêÎã®: .git Ìè¥ÎçîÍ∞Ä ÏûàÎäîÍ∞Ä?
        is_repo = os.path.exists(os.path.join(project_path, '.git'))
        
        if not is_repo:
            # [ÏÉÅÌô© A] ÍπÉ Ï¥àÍ∏∞ÌôîÍ∞Ä Ïïà Îêú Í≤ΩÏö∞ -> Init & Commit ÍπåÏßÄÎßå ÏàòÌñâ
            logs.append("‚ú® New project detected. Initializing Git...")
            subprocess.run(['git', 'init'], cwd=project_path, check=True)
            
            # (ÏòµÏÖò) ÏÇ¨ÎÇ¥Îßù SSL Í≤ÄÏ¶ù ÎÅÑÍ∏∞ ÏÑ§Ï†ï ÏûêÎèô Ï†ÅÏö©
            subprocess.run(['git', 'config', 'http.sslVerify', 'false'], cwd=project_path)
            
            subprocess.run(['git', 'add', '.'], cwd=project_path, check=True)
            subprocess.run(['git', 'commit', '-m', 'Initial commit by AI Bridge'], cwd=project_path, check=True)
            
            logs.append("‚úÖ Git Initialized & Committed successfully.")
            logs.append("‚ö†Ô∏è NOTE: Remote URL is not set yet.")
            logs.append("üëâ Run 'git remote add origin <URL>' in terminal to push.")
            
            return jsonify({'status': 'success', 'output': '\n'.join(logs)})

        else:
            # [ÏÉÅÌô© B] Ïù¥ÎØ∏ ÍπÉ ÌîÑÎ°úÏ†ùÌä∏Ïù∏ Í≤ΩÏö∞ -> Add & Commit & Push ÏàòÌñâ
            
            # 1. SSL Í≤ÄÏ¶ù ÎÅÑÍ∏∞ (ÌòπÏãú Î™®Î•¥Îãà ÌïúÎ≤à Îçî)
            subprocess.run(['git', 'config', 'http.sslVerify', 'false'], cwd=project_path)
            
            # 2. Add
            subprocess.run(['git', 'add', '.'], cwd=project_path, check=True)
            
            # 3. Commit (Î≥ÄÍ≤ΩÏÇ¨Ìï≠ ÏóÜÏúºÎ©¥ Ìå®Ïä§)
            commit_res = subprocess.run(
                ['git', 'commit', '-m', message], 
                cwd=project_path, capture_output=True, text=True, encoding='utf-8'
            )
            
            if commit_res.returncode == 0:
                logs.append(f"‚úÖ Committed: {message}")
            elif "nothing to commit" in commit_res.stdout:
                logs.append("‚ÑπÔ∏è Nothing new to commit.")
            else:
                logs.append(f"‚ö†Ô∏è Commit Check: {commit_res.stdout}")

            # 4. Push (Î¶¨Î™®Ìä∏Í∞Ä ÏûàÏùÑ ÎïåÎßå)
            # Î¶¨Î™®Ìä∏ ÌôïÏù∏
            remote_check = subprocess.run(['git', 'remote'], cwd=project_path, capture_output=True, text=True)
            
            if remote_check.stdout.strip():
                logs.append("üöÄ Pushing to server...")
                push_res = subprocess.run(
                    ['git', 'push'], 
                    cwd=project_path, capture_output=True, text=True, encoding='utf-8'
                )
                
                if push_res.returncode == 0:
                    logs.append("‚úÖ Push Successful!")
                else:
                    logs.append(f"‚ùå Push Failed:\n{push_res.stderr}")
            else:
                logs.append("‚ö†Ô∏è Committed, but NOT Pushed (No remote configured).")
            
            return jsonify({'status': 'success', 'output': '\n'.join(logs)})
        
    except Exception as e:
        return jsonify({'status': 'error', 'message': str(e)}), 500

