using System;
using System.Runtime.InteropServices;

public class Program
{
    [DllImport("user32.dll", SetLastError = true)]
    public static extern IntPtr FindWindow(string lpClassName, string lpWindowName);

    public static IntPtr GetWindowHandle(string className, string windowName)
    {
        return FindWindow(className, windowName);
    }

    public static void Main()
    {
        // 윈도우 클래스 이름과 캡션(제목)을 이용하여 핸들을 얻습니다.
        IntPtr hWnd = GetWindowHandle("NotePad", "Untitled - Notepad");
        
        if(hWnd == IntPtr.Zero)
        {
            Console.WriteLine("Window not found.");
        }
        else
        {
            Console.WriteLine("Window handle obtained: " + hWnd.ToString());
        }
    }
}
