using DevExpress.XtraCharts;

// ...

// 조회한 테이블 데이터 예시
DataTable table = new DataTable();
table.Columns.Add("과제명", typeof(string));
table.Columns.Add("수행횟수", typeof(int));
table.Columns.Add("실패횟수", typeof(int));

// 데이터 추가 예시
table.Rows.Add("과제1", 10, 2);
table.Rows.Add("과제2", 15, 5);
table.Rows.Add("과제3", 8, 1);

// ChartControl 초기화
ChartControl chartControl = new ChartControl();

// Series 생성 및 데이터 추가
Series series = new Series("과제", ViewType.Bar);
series.ArgumentDataMember = "과제명";
series.ValueDataMembers.AddRange(new string[] { "수행횟수", "실패횟수" });
series.DataSource = table;

// 시리즈에 대한 시각적인 설정
series.LabelsVisibility = DevExpress.Utils.DefaultBoolean.True; // 막대에 값을 표시할지 여부
series.Label.TextPattern = "{V}"; // 막대에 표시될 값 형식

// ChartControl에 시리즈 추가
chartControl.Series.Add(series);

// 막대 차트 옵션 설정
chartControl.Legend.Visibility = DevExpress.Utils.DefaultBoolean.False; // 범례 숨김
chartControl.Titles.Add(new ChartTitle() { Text = "과제별 수행횟수 및 실패횟수" }); // 차트 제목

// ChartControl을 폼에 추가하거나 다른 컨테이너 컨트롤에 추가하여 표시
this.Controls.Add(chartControl);
