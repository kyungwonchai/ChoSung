CREATE TRIGGER trg_AfterUpdate
ON YourTable
AFTER UPDATE
AS
BEGIN
    SET NOCOUNT ON;

    -- corr_value 값이 변경되었는지 확인
    IF (UPDATE(corr_value))
    BEGIN
        -- 변경된 모든 행에 대해 루프를 돌면서 확인
        INSERT INTO AnotherTable (YourColumn, corr_value)
        SELECT i.YourPrimaryKey, i.corr_value
        FROM INSERTED i
        INNER JOIN DELETED d ON i.YourPrimaryKey = d.YourPrimaryKey
        WHERE i.corr_value != d.corr_value;
    END
END
GO
