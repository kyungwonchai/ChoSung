 for (int i = 0; i < gridView.VisibleRowCount; i++)
        {
            var rowData = gridView.GetRow(i);
            int abcValue = Convert.ToInt32(gridView.GetCellValue(rowData, "ColumnABC"));

            foreach (GridColumn column in gridView.Columns)
            {
                if (column.FieldName != "ColumnABC")
                {
                    int columnValue = Convert.ToInt32(gridView.GetCellValue(rowData, column.FieldName));
                    int result = columnValue - abcValue;
                    
                    // 결과 출력 혹은 기타 처리
                    Console.WriteLine($"Row {i}, Column {column.FieldName}: {result}");
                }
            }
        }