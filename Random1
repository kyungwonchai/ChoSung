public MainWindow()
{
    InitializeComponent();
    gridControl.PreviewKeyDown += GridControl_PreviewKeyDown;
}

private void GridControl_PreviewKeyDown(object sender, KeyEventArgs e)
{
    if ((Keyboard.Modifiers & ModifierKeys.Control) == ModifierKeys.Control && e.Key == Key.V)
    {
        var grid = sender as DevExpress.Xpf.Grid.GridControl;
        if (grid != null)
        {
            var focusedColumn = grid.CurrentColumn;
            if (focusedColumn != null && (focusedColumn.FieldName == "복붙금지A" || focusedColumn.FieldName == "복1"))
            {
                e.Handled = true;
            }
        }
    }
}
