using System;
using System.Text;
using System.Windows;
using Microsoft.Web.WebView2.Core;

namespace YourNamespace
{
    public partial class MainWindow : Window
    {
        public MainWindow()
        {
            InitializeComponent();
            MyWebView.Source = new Uri("https://www.example.com"); // 사용할 URL로 변경
            MyWebView.CoreWebView2InitializationCompleted += MyWebView_CoreWebView2InitializationCompleted;
        }

        private async void MyWebView_CoreWebView2InitializationCompleted(object? sender, EventArgs e)
        {
            // JavaScript 이벤트 리스너를 등록하여 textarea 요소의 변화를 감지
            string script = @"
                (function() {
                    function checkTextArea() {
                        let container = document.querySelector('div.Box-sc-g0xbh4-0.iJOeCH');
                        if (container) {
                            let textArea = container.querySelector('#read-only-cursor-text-area');
                            if (textArea && textArea.value) {
                                window.chrome.webview.postMessage(btoa(unescape(encodeURIComponent(textArea.value))));
                            } else {
                                setTimeout(checkTextArea, 1000); // 1초 후 다시 확인
                            }
                        } else {
                            setTimeout(checkTextArea, 1000); // 1초 후 다시 확인
                        }
                    }
                    checkTextArea(); // 초기 호출
                })();";
            
            await MyWebView.ExecuteScriptAsync(script);

            // 메시지 수신 이벤트 핸들러 등록
            MyWebView.CoreWebView2.WebMessageReceived += CoreWebView2_WebMessageReceived;
        }

        private void CoreWebView2_WebMessageReceived(object? sender, CoreWebView2WebMessageReceivedEventArgs e)
        {
            // JavaScript에서 전송된 Base64 인코딩된 문자열을 디코딩
            string base64Text = e.TryGetWebMessageAsString();
            byte[] data = Convert.FromBase64String(base64Text);
            string decodedText = Encoding.UTF8.GetString(data); // 원본 텍스트로 변환

            if (!string.IsNullOrEmpty(decodedText))
            {
                Clipboard.SetText(decodedText);
                MessageBox.Show("텍스트가 클립보드에 자동으로 복사되었습니다.", "복사 완료");
            }
            else
            {
                MessageBox.Show("텍스트를 찾을 수 없습니다.", "오류");
            }
        }
    }
}
