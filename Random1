public static void SetButtonImage(BarButtonItem button, string fileName)
{
    string imagePath = Path.Combine(AppDomain.CurrentDomain.BaseDirectory, "Images", fileName);
    if (File.Exists(imagePath))
    {
        button.ImageOptions.LargeImage = new Bitmap(imagePath);
    }
    else
    {
        Console.WriteLine("ì´ë¯¸ì§€ íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤: " + imagePath);
    }
}
