using DevExpress.XtraPivotGrid;
using DevExpress.Utils;

// PivotGridControl 생성 및 설정
PivotGridControl pivotGridControl1 = new PivotGridControl();
// PivotGridControl에 필드 및 데이터 설정
// ...

// 조건부 서식 생성 및 설정
PivotGridField field = pivotGridControl1.Fields["VISA_IP"];
PivotGridStyleFormatCondition formatCondition = new PivotGridStyleFormatCondition();
formatCondition.FieldName = field.FieldName;
formatCondition.Condition = FormatCondition.Custom;
formatCondition.Expression = $"[VISA_IP] = '0'"; // 여기서 '0'은 예시로 사용된 값입니다.
formatCondition.Appearance.BackColor = Color.Red;

field.StyleFormatConditions.Add(formatCondition);

// PivotGridControl 출력
pivotGridControl1.RefreshData();
