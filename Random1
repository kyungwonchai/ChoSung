import subprocess

from flask import Flask

app = Flask(__name__)

@app.route('/')
def index():
    # 서브 파이썬 프로그램 실행
    result = subprocess.run(['python', 'sub_program.py'], capture_output=True, text=True)
    
    # 실행 결과 출력
    output = result.stdout
    error = result.stderr
    
    return f"Output: {output}\nError: {error}"

if __name__ == '__main__':
    app.run()
