using System;
using System.Globalization;
using System.Windows.Forms;

public class LanguageForm : Form
{
    Label languageLabel;

    public LanguageForm()
    {
        languageLabel = new Label();
        languageLabel.Text = "현재 언어: ";
        languageLabel.Location = new System.Drawing.Point(10, 10);
        this.Controls.Add(languageLabel);

        this.KeyDown += new KeyEventHandler(LanguageForm_KeyDown);
    }

    private void LanguageForm_KeyDown(object sender, KeyEventArgs e)
    {
        if (e.KeyCode == Keys.HanguelMode || e.KeyCode == Keys.HangulMode)
        {
            UpdateLanguageLabel();
        }
    }

    private void UpdateLanguageLabel()
    {
        InputLanguage currentLanguage = InputLanguage.CurrentInputLanguage;
        string languageName = currentLanguage.Culture.TwoLetterISOLanguageName;

        if (languageName == "ko")
        {
            languageLabel.Text = "현재 언어: 한글";
        }
        else if (languageName == "en")
        {
            languageLabel.Text = "현재 언어: 영어";
        }
        else
        {
            languageLabel.Text = "현재 언어: 기타";
        }
    }
}
