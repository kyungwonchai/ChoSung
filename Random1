private void gridView1_FocusedRowChanged(object sender, DevExpress.XtraGrid.Views.Base.FocusedRowChangedEventArgs e)
{
    // 선택된 과제의 ID 가져오기
    selectedTaskID = GetSelectedTaskID();
    if (selectedTaskID != -1)
    {
        // TaskDetails 데이터 가져오기
        DataRow taskDetailsRow = taskManager.GetTaskDetails(selectedTaskID);
        if (taskDetailsRow != null)
        {
            string title = taskDetailsRow["Title"].ToString();
            string content = taskDetailsRow["Content"].ToString();

            // 제목과 본문 표시
            txtTaskName.Text = title;
            rtbTaskContent.Text = content;
        }
        else
        {
            // 선택된 과제의 TaskDetails가 없을 경우 초기화
            txtTaskName.Text = "";
            rtbTaskContent.Text = "";
        }
    }
}
