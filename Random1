private void Form1_Load(object sender, EventArgs e)
{
    // RadioGroup에 SimpleButton 추가
    radioGroup1.Properties.Items.Add(new DevExpress.XtraEditors.Controls.RadioGroupItem("btn1", new DevExpress.XtraEditors.SimpleButton() { Text = "입고" }));
    radioGroup1.Properties.Items.Add(new DevExpress.XtraEditors.Controls.RadioGroupItem("btn2", new DevExpress.XtraEditors.SimpleButton() { Text = "출고" }));
    radioGroup1.Properties.Items.Add(new DevExpress.XtraEditors.Controls.RadioGroupItem("btn3", new DevExpress.XtraEditors.SimpleButton() { Text = "신청" }));

    // 각 버튼에 Click 이벤트 핸들러 추가
    ((DevExpress.XtraEditors.SimpleButton)radioGroup1.Properties.Items[0].Value).Click += RadioGroupButton_Click;
    ((DevExpress.XtraEditors.SimpleButton)radioGroup1.Properties.Items[1].Value).Click += RadioGroupButton_Click;
    ((DevExpress.XtraEditors.SimpleButton)radioGroup1.Properties.Items[2].Value).Click += RadioGroupButton_Click;
}

private void RadioGroupButton_Click(object sender, EventArgs e)
{
    DevExpress.XtraEditors.SimpleButton button = (DevExpress.XtraEditors.SimpleButton)sender;

    if (button.Text == "입고")
    {
        // 입고 버튼 클릭 시 처리
    }
    else if (button.Text == "출고")
    {
        // 출고 버튼 클릭 시 처리
    }
    else if (button.Text == "신청")
    {
        // 신청 버튼 클릭 시 처리
    }
}
