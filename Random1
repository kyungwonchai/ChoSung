private void Form1_Load(object sender, EventArgs e)
{
    // 버튼 초기화
    InitializeButtons();
}

private void InitializeButtons()
{
    // 버튼 1
    SimpleButton button1 = new SimpleButton();
    button1.Text = "입고";
    button1.Location = new Point(10, 10);
    button1.Click += Button_Click;
    Controls.Add(button1);

    // 버튼 2
    SimpleButton button2 = new SimpleButton();
    button2.Text = "출고";
    button2.Location = new Point(120, 10);
    button2.Click += Button_Click;
    Controls.Add(button2);

    // 버튼 3
    SimpleButton button3 = new SimpleButton();
    button3.Text = "신청";
    button3.Location = new Point(230, 10);
    button3.Click += Button_Click;
    Controls.Add(button3);
}

private void Button_Click(object sender, EventArgs e)
{
    // 모든 버튼을 기본 색상으로 초기화
    foreach (Control control in Controls)
    {
        if (control is SimpleButton button)
        {
            button.Appearance.BackColor = Color.Empty;
        }
    }

    // 선택된 버튼의 색상 변경
    if (sender is SimpleButton selectedButton)
    {
        selectedButton.Appearance.BackColor = Color.Yellow;
    }
}
