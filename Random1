using System;
using System.Windows.Forms;

public class NumericTextBox : TextBox
{
    protected override void OnMouseWheel(MouseEventArgs e)
    {
        if (int.TryParse(Text, out int currentValue))
        {
            int delta = Math.Sign(e.Delta);
            int step = 1; // 숫자 업다운 단위 설정

            if (delta > 0)
            {
                // 마우스 휠을 위로 스크롤할 때 실행될 코드
                currentValue += step;
            }
            else if (delta < 0)
            {
                // 마우스 휠을 아래로 스크롤할 때 실행될 코드
                currentValue -= step;
            }

            // 값을 업데이트하고 TextBox에 반영
            Text = currentValue.ToString();
        }

        base.OnMouseWheel(e);
    }
}
