<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Number Mapping" Height="200" Width="400">

    <Window.DataContext>
        <!-- MainViewModel을 DataContext로 설정 -->
        <local:MainViewModel />
    </Window.DataContext>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">

            <!-- 매핑된 문자열을 표시하는 TextBlock -->
            <TextBlock Width="200" Height="30"
                       Text="{Binding NumberMapping.MappedString}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Padding="10">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <!-- Number 값이 0보다 클 때 배경색을 주황색으로 설정 -->
                            <DataTrigger Binding="{Binding NumberMapping.Number}" Value="1">
                                <Setter Property="Background" Value="Orange" />
                            </DataTrigger>
                            <!-- Number 값이 0보다 작거나 같을 때 배경색을 흰색으로 설정 -->
                            <DataTrigger Binding="{Binding NumberMapping.Number}" Value="0">
                                <Setter Property="Background" Value="White" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
