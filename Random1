private void RibbonK_MouseDown(object sender, MouseEventArgs e)
{
    // 리본 컨트롤에서 우클릭 이벤트 처리
    if (e.Button == MouseButtons.Right)
    {
        // 클릭한 위치에 대한 히트 정보 가져오기
        var hitInfo = ribbonK.CalcHitInfo(e.Location);

        // 히트 테스트가 버튼인지 확인
        if (hitInfo.HitTest == RibbonHitTest.Item)
        {
            if (hitInfo.Item is BarButtonItem button)
            {
                ShowCustomContextMenu(button, e.Location);
            }
        }
    }
}
