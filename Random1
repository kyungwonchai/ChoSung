using System;
using System.Diagnostics;
using System.Windows.Forms;

namespace KillPythonProcesses
{
    public partial class MainForm : Form
    {
        public MainForm()
        {
            InitializeComponent();
        }

        private void btnKillPythonProcesses_Click(object sender, EventArgs e)
        {
            // "python" 프로세스 이름을 가진 모든 프로세스를 가져옵니다.
            Process[] pythonProcesses = Process.GetProcessesByName("python");

            // 각 프로세스를 종료합니다.
            foreach (Process process in pythonProcesses)
            {
                try
                {
                    process.Kill();
                }
                catch (Exception ex)
                {
                    // 예외 처리 코드
                    MessageBox.Show("An error occurred: " + ex.Message);
                }
            }

            MessageBox.Show("All Python processes have been terminated.");
        }
    }
}
