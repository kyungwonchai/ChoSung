var requestData = new
{
    subject,
    contents,
    sender = new
    {
        emailAddress = senderEmailAddress,
        recipientType = "TO"
    },
    recipients = new[]
    {
        new
        {
            emailAddress = recipientEmailAddress,
            recipientType = "TO"
        }
    }
};

var formDataContent = new MultipartFormDataContent();
formDataContent.Headers.ContentType = MediaTypeHeaderValue.Parse("multipart/form-data");

var mailContent = new StringContent(JsonConvert.SerializeObject(requestData));
mailContent.Headers.ContentDisposition = new ContentDispositionHeaderValue("form-data")
{
    Name = "mail"
};

formDataContent.Add(mailContent);

var requestUrl = $"{apiUrl}/mails/send?userId={userId}";

var response = await client.PostAsync(requestUrl, formDataContent);
