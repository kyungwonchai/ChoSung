private void StartUIUpdate()
{
    DispatcherTimer uiTimer = new DispatcherTimer();
    uiTimer.Interval = TimeSpan.FromSeconds(1);
    uiTimer.Tick += (s, e) => UpdateTimerUI();
    uiTimer.Start();
}
