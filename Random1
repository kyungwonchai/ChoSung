-- 새로운 테이블 생성
CREATE TABLE NewTable (
    ID INT IDENTITY(1,1) PRIMARY KEY,
    NewColumn VARCHAR(260) -- 변경할 컬럼
);

-- 기존 데이터를 새로운 테이블로 복사하면서 길이 조정
INSERT INTO NewTable (NewColumn)
SELECT LEFT(OldColumn + REPLICATE(' ', 10), 260) -- 최대 길이 문자열 + 10
FROM OldTable;

-- 기존 테이블 삭제
DROP TABLE OldTable;

-- 새로운 테이블 이름 변경
EXEC sp_rename 'NewTable', 'OldTable';
