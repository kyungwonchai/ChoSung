/* 전반적인 폰트와 배경 설정 */
body {
    font-family: 'Arial', sans-serif;
    background-color: #ffffff; /* 전체 배경 흰색 */
    color: #333333; /* 기본 텍스트 색상: 짙은 회색 */
}

/* 헤더 스타일 */
h1 {
    color: #01579b; /* 짙은 파랑색 텍스트 */
    font-weight: bold;
}

/* 테이블 스타일 */
.table {
    background-color: #ffffff; /* 테이블 배경 흰색 */
    border: 1px solid #01579b; /* 테이블 경계 짙은 파랑색 */
}

.table th {
    background-color: #0288d1; /* 테이블 헤더 파란색 */
    color: #ffffff; /* 헤더 텍스트 흰색 */
    text-align: center;
}

.table td {
    color: #333333; /* 테이블 셀 텍스트 색상: 짙은 회색 */
}

/* 테이블 행 배경색 설정 */
.table-striped > tbody > tr:nth-of-type(odd) {
    background-color: #f1f8e9; /* 연한 녹색 행 배경 */
}

.table-striped > tbody > tr:nth-of-type(even) {
    background-color: #e3f2fd; /* 연한 하늘색 행 배경 */
}

/* 링크 스타일 */
.table a {
    color: #0277bd; /* 링크 색상 파란색 */
    text-decoration: none;
}

.table a:hover {
    text-decoration: underline; /* 링크 호버 시 밑줄 */
}

/* 버튼 스타일 */
.btn-primary {
    background-color: #0288d1; /* 기본 버튼 파란색 */
    border-color: #0288d1;
    color: #ffffff; /* 버튼 텍스트 흰색 */
}

.btn-primary:hover {
    background-color: #01579b; /* 버튼 호버 시 짙은 파랑색 */
    border-color: #01579b;
}

.btn-edit {
    background-color: #0288d1; /* 편집 버튼 파란색 */
    color: #ffffff; /* 흰색 글자 */
    border-color: #0288d1;
}

.btn-edit:hover {
    background-color: #01579b; /* 호버 시 짙은 파랑색 */
    color: #ffffff; /* 흰색 글자 */
    border-color: #01579b;
}

.btn-dedit {
    background-color: #4fc3f7; /* 설명 수정 버튼 연한 파란색 */
    color: #ffffff; /* 흰색 글자 */
    border-color: #4fc3f7;
}

.btn-dedit:hover {
    background-color: #29b6f6; /* 호버 시 진한 연한 파란색 */
