using System;
using System.Linq;
using System.Windows.Forms;

namespace YourNamespace
{
    public partial class YourForm : Form
    {
        public YourForm()
        {
            InitializeComponent();
        }

        private void AddHandler(Button button, EventHandler handler)
        {
            var eventHandlerList = button.Click.GetInvocationList();
            if (!eventHandlerList.Contains(handler))
            {
                button.Click += handler;
            }
        }

        private void RemoveHandler(Button button, EventHandler handler)
        {
            button.Click -= handler;
        }

        private void FunctionA(object sender, EventArgs e)
        {
            MessageBox.Show("FunctionA Called");
        }

        private void FunctionB(object sender, EventArgs e)
        {
            MessageBox.Show("FunctionB Called");
        }

        private void OtherMethod()
        {
            // ButtonA에 FunctionA 이벤트 핸들러를 추가
            AddHandler(ButtonA, FunctionA);
            // ButtonB에 FunctionB 이벤트 핸들러를 추가
            AddHandler(ButtonB, FunctionB);
            // ButtonA에 FunctionB 이벤트 핸들러를 추가
            AddHandler(ButtonA, FunctionB);
            // ButtonB에 FunctionA 이벤트 핸들러를 제거
            RemoveHandler(ButtonB, FunctionA);
        }
    }
}
