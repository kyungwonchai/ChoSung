public Form1()
{
    InitializeComponent();
    webView1.Navigate("https://example.com"); // 원하는 URL로 설정
    webView1.DocumentCompleted += WebView1_DocumentCompleted;
}

private void WebView1_DocumentCompleted(object sender, WebBrowserDocumentCompletedEventArgs e)
{
    HtmlDocument doc = webView1.Document;
    doc.Body.AttachEventHandler("onkeydown", Body_KeyDown);
}

private void Body_KeyDown(object sender, HtmlElementEventArgs e)
{
    if (e.CtrlKeyPressed && e.KeyPressedCode == 67) // Ctrl + C
    {
        MessageBox.Show("Ctrl+C를 눌렀습니다.");
    }
}
