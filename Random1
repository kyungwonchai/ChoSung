DECLARE @today AS DATETIME = CAST(CONVERT(VARCHAR, GETDATE(), 23) AS DATETIME); -- 오늘 날짜의 00:00:00 가져오기
DECLARE @startTime AS TIME = '13:45:30'; -- 시작시간 설정

-- 오늘 날짜의 00:00:00에 시간을 더하기
DECLARE @startDateTime AS DATETIME;
SET @startDateTime = @today + CAST(@startTime AS DATETIME);

SELECT @startDateTime AS 'StartDateTime';
