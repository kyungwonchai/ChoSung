using AForge.Video;
using AForge.Video.FFMPEG;
using System;
using System.Drawing;
using System.Threading;

namespace ScreenRecorder
{
    class Program
    {
        static void Main(string[] args)
        {
            string path = @"D:\blackbox";
            Rectangle screenBounds = Screen.PrimaryScreen.Bounds;
            VideoFileWriter writer = new VideoFileWriter();

            for (int i = 0; i < 60480; i++) // 1주일 동안 10초 단위로 녹화
            {
                string fileName = Path.Combine(path, DateTime.Now.ToString("yyyyMMddHHmmss") + ".avi");
                writer.Open(fileName, screenBounds.Width, screenBounds.Height);

                for (int j = 0; j < 300; j++) // 10초 동안 녹화
                {
                    using (Bitmap bmp = new Bitmap(screenBounds.Width, screenBounds.Height))
                    {
                        using (Graphics g = Graphics.FromImage(bmp))
                        {
                            g.CopyFromScreen(Point.Empty, Point.Empty, screenBounds.Size);
                        }
                        writer.WriteVideoFrame(bmp);
                    }
                    Thread.Sleep(33); // 약 30fps
                }

                writer.Close();
                Console.WriteLine($"{fileName} 저장 완료");
                Thread.Sleep(10000); // 다음 녹화를 위해 10초 대기
            }
        }
    }
}
