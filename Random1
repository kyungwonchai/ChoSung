private void textEditA_EditValueChanged(object sender, EventArgs e)
{
    string textToHighlight = textEditA.Text; // 텍스트 박스 A의 입력 값을 가져옵니다.
    
    // 텍스트 박스 B의 문서를 가져옵니다.
    Document document = richEditControlB.Document;
    
    // 문서의 전체 텍스트를 가져옵니다.
    string fullText = document.Text;

    // 입력 값이 문서 텍스트에 포함되는지 확인합니다.
    int index = fullText.IndexOf(textToHighlight);

    // 입력 값이 문서 텍스트에 있으면 배경색을 변경합니다.
    if (index >= 0)
    {
        DocumentRange range = document.CreateRange(index, textToHighlight.Length);
        CharacterProperties cp = document.BeginUpdateCharacters(range);
        cp.BackColor = Color.Yellow; // 원하는 배경색으로 설정합니다.
        document.EndUpdateCharacters(cp);
    }
}
