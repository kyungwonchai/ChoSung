using System;
using System.Drawing;
using System.Windows.Forms;
using DevExpress.Utils;
using DevExpress.XtraDiagram;

namespace WinFormsDiagramInsertImage
{
    public partial class MainForm : DevExpress.XtraEditors.XtraForm
    {
        public MainForm()
        {
            InitializeComponent();
        }

        private void MainForm_Load(object sender, EventArgs e)
        {
            // Set up the diagram properties
            diagramControl1.OptionsBehavior.ReadOnly = true; // Make the diagram read-only
        }

        private void btnInsertImage_Click(object sender, EventArgs e)
        {
            try
            {
                string imagePath = @"C:\a\1.jpg"; // Image file path
                Image image = Image.FromFile(imagePath);

                // Create a custom shape to hold the image
                CustomImageShape imageShape = new CustomImageShape();
                imageShape.Image = image;
                imageShape.Position = new Point(100, 100); // Set the position where you want the image to appear on the diagram

                // Add the custom shape to the diagram
                diagramControl1.Items.Add(imageShape);
            }
            catch (Exception ex)
            {
                // Handle any exceptions that may occur while adding the image
                XtraMessageBox.Show("Error inserting image: " + ex.Message);
            }
        }
    }
}
