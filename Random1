private void gridControl1_CustomDrawLine(object sender, CustomDrawLineEventArgs e)
{
    object prevConfirmDate = null;
    object prevLine = null;

    if (e.RowHandle > 0)
    {
        prevConfirmDate = gridControl1.GetCellValue(e.RowHandle - 1, "ConfirmDateColumnName");
        prevLine = gridControl1.GetCellValue(e.RowHandle - 1, "LineColumnName");
    }

    object currentConfirmDate = gridControl1.GetCellValue(e.RowHandle, "ConfirmDateColumnName");
    object currentLine = gridControl1.GetCellValue(e.RowHandle, "LineColumnName");

    if (currentConfirmDate != prevConfirmDate)
    {
        e.BorderBrush = new SolidColorBrush(Colors.Blue);
    }
    else if (currentLine != prevLine)
    {
        e.BorderBrush = new SolidColorBrush(Colors.Purple);
        e.BorderThickness = new Thickness(0, 0, 0, 2);  // 굵은 선
    }
}
