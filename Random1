private bool isExpanded = true; // 패널의 초기 상태를 확장 상태로 설정

private void expandButton_Click(object sender, EventArgs e)
{
    if (isExpanded)
    {
        splitContainer1.Panel1Collapsed = true; // 패널 축소
        isExpanded = false;
        expandButton.Text = "확장";
    }
    else
    {
        splitContainer1.Panel1Collapsed = false; // 패널 확장
        isExpanded = true;
        expandButton.Text = "축소";
    }
}
