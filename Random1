SELECT 
    CASE 
        WHEN CHARINDEX('SMD_S', LINE) > 0 THEN 
            CAST(SUBSTRING(LINE, CHARINDEX('SMD_S', LINE) + LEN('SMD_S'), LEN(LINE)) AS INT)
        WHEN CHARINDEX('SMD_', LINE) > 0 THEN 
            CAST(SUBSTRING(LINE, CHARINDEX('SMD_', LINE) + LEN('SMD_'), LEN(LINE)) AS INT)
        ELSE 
            NULL -- 필요한 경우 기본값을 설정할 수 있습니다.
    END AS LineNumber
FROM 
    TBL1
WHERE
    LINE LIKE 'SMD_%' OR LINE LIKE 'SMD_S%';
