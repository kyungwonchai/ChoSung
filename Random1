using System.Drawing.Printing;
using System.Windows.Forms;

// ...

private void btnPrinterStatus_Click(object sender, EventArgs e)
{
    // 프린터 설정 상태를 보여줄 PrintDialog 생성
    using (PrintDialog printDialog = new PrintDialog())
    {
        // 현재 선택된 프린터 설정을 가져옴
        PrinterSettings printerSettings = printDialog.PrinterSettings;

        // 프린터 설정 상태를 Panel2에 보여주기 위한 TextBox 생성
        TextBox textBox = new TextBox();
        textBox.Multiline = true;
        textBox.ReadOnly = true;
        textBox.ScrollBars = ScrollBars.Both;
        textBox.Width = panel2.ClientSize.Width;
        textBox.Height = panel2.ClientSize.Height;
        textBox.Text = GetPrinterSettingsAsString(printerSettings); // 프린터 설정 정보를 문자열로 변환하여 TextBox에 표시

        // TextBox를 Panel2에 추가
        panel2.BackgroundImage = null;
        panel2.Controls.Clear();
        panel2.Controls.Add(textBox);
    }
}

private string GetPrinterSettingsAsString(PrinterSettings printerSettings)
{
    // 프린터 설정 정보를 문자열로 변환하여 반환하는 메서드
    string printerInfo = "Printer Name: " + printerSettings.PrinterName + "\r\n";
    printerInfo += "Paper Size: " + printerSettings.DefaultPageSettings.PaperSize.PaperName + "\r\n";
    printerInfo += "Orientation: " + (printerSettings.DefaultPageSettings.Landscape ? "Landscape" : "Portrait") + "\r\n";
    printerInfo += "Margins: \r\n";
    printerInfo += "  Top: " + printerSettings.DefaultPageSettings.Margins.Top + "\r\n";
    printerInfo += "  Right: " + printerSettings.DefaultPageSettings.Margins.Right + "\r\n";
    printerInfo += "  Bottom: " + printerSettings.DefaultPageSettings.Margins.Bottom + "\r\n";
    printerInfo += "  Left: " + printerSettings.DefaultPageSettings.Margins.Left + "\r\n";
    printerInfo += "Printer Resolution: " + printerSettings.PrinterResolutions[printerSettings.DefaultPageSettings.PrinterResolution.Kind].X + " x " +
                   printerSettings.PrinterResolutions[printerSettings.DefaultPageSettings.PrinterResolution.Kind].Y + " dpi" + "\r\n";
    // 필요한 추가 정보를 더해주면 됩니다.

    return printerInfo;
}
