using DevExpress.XtraGrid.Columns;
using DevExpress.XtraGrid.Views.Grid;
using System;
using System.Drawing;
using System.Windows.Forms;

private void SetColumnWidthBasedOnHeaderText(GridControl gridControl, string headerText, int width)
{
    GridView gridView = gridControl.MainView as GridView;

    if (gridView != null)
    {
        GridColumn column = gridView.Columns.ColumnByFieldName(headerText);
        if (column != null)
        {
            column.Width = width;
        }
    }
}
