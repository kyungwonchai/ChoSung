DECLARE @input NVARCHAR(MAX) = 'a,b,c';
DECLARE @output NVARCHAR(MAX) = '';
DECLARE @pos INT;
DECLARE @piece NVARCHAR(MAX);

WHILE CHARINDEX(',', @input, 0) > 0
BEGIN
    SELECT @pos  = CHARINDEX(',', @input, 0)  
    SELECT @piece = LEFT(@input, @pos - 1)

    SET @output = @output + QUOTENAME(@piece, '''') + ','
    SET @input = STUFF(@input, 1, @pos, '')
END

SET @output = @output + QUOTENAME(@input, '''')

-- 결과 출력
PRINT @output
