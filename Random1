// RepositoryItemPictureEdit을 사용하여 이미지 컨트롤을 호스팅하는 예시
RepositoryItemPictureEdit pictureEdit = new RepositoryItemPictureEdit();
pictureEdit.SizeMode = PictureSizeMode.Zoom; // 이미지 크기 조정 모드를 줌으로 설정
pictureEdit.AllowScrollViaMouseWheel = DevExpress.Utils.DefaultBoolean.True; // 마우스 휠로 이미지 스크롤 허용
pictureEdit.NullText = ""; // 이미지 없을 때 표시되는 텍스트를 지정 (optional)

gridView1.Columns["ImageColumnName"].ColumnEdit = pictureEdit;
gridView1.Columns["ImageColumnName"].Width = 300; // 컬럼의 너비를 300으로 설정
