using System;
using System.Windows.Forms;
using DevExpress.XtraEditors; // DevExpress 라이브러리를 사용

namespace TimerExample
{
    public partial class MainForm : XtraForm // XtraForm을 상속
    {
        Timer timerA = new Timer();
        Timer timerB = new Timer();

        public MainForm()
        {
            InitializeComponent();
            
            // 타이머 설정
            timerA.Interval = 10000; // 10초
            timerA.Tick += TimerA_Tick;
            
            timerB.Interval = 10000; // 10초
            timerB.Tick += TimerB_Tick;
        }

        // 체크박스 A에 대한 이벤트 핸들러
        private void checkBoxA_CheckedChanged(object sender, EventArgs e)
        {
            if (checkBoxA.Checked)
            {
                timerA.Start(); // 체크되면 타이머 A 시작
            }
            else
            {
                timerA.Stop(); // 체크 해제하면 타이머 A 정지
            }
        }

        // 체크박스 B에 대한 이벤트 핸들러
        private void checkBoxB_CheckedChanged(object sender, EventArgs e)
        {
            if (checkBoxB.Checked)
            {
                timerB.Start(); // 체크되면 타이머 B 시작
            }
            else
            {
                timerB.Stop(); // 체크 해제하면 타이머 B 정지
            }
        }

        // 타이머 A가 동작할 때 실행되는 함수
        private void TimerA_Tick(object sender, EventArgs e)
        {
            FunctionA(); // 함수 A 호출
        }

        // 타이머 B가 동작할 때 실행되는 함수
        private void TimerB_Tick(object sender, EventArgs e)
        {
            FunctionB(); // 함수 B 호출
        }

        // 함수 A
        private void FunctionA()
        {
            // 여기에 로직 구현
            MessageBox.Show("함수 A 실행");
        }

        // 함수 B
        private void FunctionB()
        {
            // 여기에 로직 구현
            MessageBox.Show("함수 B 실행");
        }
    }
}
