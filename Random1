using System.Windows;
using System.Windows.Input;

namespace WpfApp
{
    public partial class MainWindow : Window
    {
        public MainWindow()
        {
            InitializeComponent();
            // 마우스 휠 이벤트 핸들러 등록
            MainGrid.PreviewMouseWheel += new MouseWheelEventHandler(OnMouseWheel);
        }

        // 마우스 휠 이벤트 처리
        private void OnMouseWheel(object sender, MouseWheelEventArgs e)
        {
            if ((Keyboard.Modifiers & ModifierKeys.Control) == ModifierKeys.Control)
            {
                // 확대 축소 비율 설정
                double scale = 1.1;

                // 마우스 휠을 위로 굴리면 확대, 아래로 굴리면 축소
                if (e.Delta > 0)
                {
                    MainGrid.LayoutTransform = new System.Windows.Media.ScaleTransform(MainGrid.LayoutTransform.Value.M11 * scale, MainGrid.LayoutTransform.Value.M22 * scale);
                }
                else
                {
                    MainGrid.LayoutTransform = new System.Windows.Media.ScaleTransform(MainGrid.LayoutTransform.Value.M11 / scale, MainGrid.LayoutTransform.Value.M22 / scale);
                }

                e.Handled = true;
            }
        }
    }
}
