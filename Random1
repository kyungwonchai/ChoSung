using DevExpress.Xpf.Grid;
using System.Collections.Generic;
using System.Windows;
using System.Windows.Media;

// 클래스 내부 또는 이벤트 핸들러 내에서 다음 함수를 호출합니다.
private void ChangeRowColor(GridControl gridControl, List<string> lista)
{
    TableView view = gridControl.View as TableView;

    // 데이터 테이블의 모든 행을 순회합니다.
    for (int rowHandle = 0; rowHandle < gridControl.VisibleRowCount; rowHandle++)
    {
        // key1 컬럼의 값을 가져옵니다.
        object cellValue = gridControl.GetCellValue(rowHandle, "key1");

        if (cellValue != null && lista.Contains(cellValue.ToString()))
        {
            // 셀 배경색을 노랑으로, 글자색을 검정으로 변경합니다.
            view.SetRowCellValue(rowHandle, "Background", Brushes.Yellow);
            view.SetRowCellValue(rowHandle, "Foreground", Brushes.Black);
        }
    }
}

// 이 함수를 호출하는 방법입니다.
private void SomeEventHandlerOrMethod()
{
    // GridControl 인스턴스와 비교할 값들이 들어있는 리스트를 정의합니다.
    GridControl gridControl = YourGridControl;  // 여기서 YourGridControl은 실제로 사용하는 GridControl의 이름이어야 합니다.
    List<string> lista = new List<string> { "Value1", "Value2", "Value3" };

    // 행의 색을 변경하는 함수를 호출합니다.
    ChangeRowColor(gridControl, lista);
}
