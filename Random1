Sub ChangeYearTo2023ForSpecificSheets()
    Dim ws As Worksheet
    Dim lastCol As Long
    Dim col As Long
    Dim cellDate As Variant

    ' 모든 시트를 순회
    For Each ws In ThisWorkbook.Worksheets
        ' 시트 이름이 4글자 이상인지 확인
        If Len(ws.Name) >= 4 Then
            ' 2행에서 D열부터 마지막 열을 찾기
            lastCol = ws.Cells(2, ws.Columns.Count).End(xlToLeft).Column
            
            ' D열부터 마지막 열까지 반복
            For col = 4 To lastCol ' D열이 4번째 열이므로 시작
                ' 셀 값이 날짜인지 확인
                cellDate = ws.Cells(2, col).Value
                If IsDate(cellDate) Then
                    ' 연도를 2023으로 변경하여 셀에 다시 설정
                    ws.Cells(2, col).Value = DateSerial(2023, Month(cellDate), Day(cellDate))
                End If
            Next col
        End If
    Next ws
    
    MsgBox "시트 이름이 4글자 이상인 시트의 2행 날짜의 연도를 2023으로 변경했습니다.", vbInformation
End Sub