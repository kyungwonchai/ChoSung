using System;
using System.Data.SqlClient;

class Program
{
    static void Main()
    {
        string G_Filder1 = "";
        string myIP = "your_ip_here"; // 여기에 내 IP 입력

        using (SqlConnection conn = new SqlConnection("Data Source=your_server;Initial Catalog=your_database;User ID=your_username;Password=your_password"))
        {
            conn.Open();

            string query = "SELECT folderName FROM Table_IP WHERE ipadd = @ip";
            using (SqlCommand cmd = new SqlCommand(query, conn))
            {
                cmd.Parameters.AddWithValue("@ip", myIP);

                SqlDataReader reader = cmd.ExecuteReader();
                if (reader.Read())
                {
                    G_Filder1 = reader["folderName"].ToString();
                }
                reader.Close();
            }

            conn.Close();
        }

        // G_Filder1 변수 사용
        Console.WriteLine("Folder Name: " + G_Filder1);
    }
}
