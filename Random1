using DevExpress.XtraCharts;
using System;
using System.Windows.Forms;

// ...

private void chartControl_MouseClick(object sender, MouseEventArgs e)
{
    ChartControl chartControl = (ChartControl)sender;
    ChartHitInfo hitInfo = chartControl.CalcHitInfo(e.X, e.Y);

    if (hitInfo.HitTest == HitTest.Series)
    {
        Series series = chartControl.Series[hitInfo.SeriesIndex];
        SeriesPoint seriesPoint = series.Points[hitInfo.PointIndex];

        string seriesName = series.Name;
        string argument = seriesPoint.Argument;
        double value = seriesPoint.Values[0];

        MessageBox.Show($"시리즈명: {seriesName}\n과제명: {argument}\n값: {value}");
    }
}
