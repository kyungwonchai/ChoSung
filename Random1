// 파일 저장 위치를 사용자에게 물어보기
DevExpress.Xpf.Core.DXSaveFileDialog saveFileDialog = new DevExpress.Xpf.Core.DXSaveFileDialog();
saveFileDialog.Filter = "Excel files (*.xlsx)|*.xlsx|All files (*.*)|*.*";
saveFileDialog.FilterIndex = 1;
saveFileDialog.FileName = "Employees.xlsx";

bool? result = saveFileDialog.ShowDialog();
if (result == true) {
    string savePath = saveFileDialog.FileName;
    workbook.SaveDocument(savePath);
    System.Windows.MessageBox.Show("파일이 성공적으로 저장되었습니다: " + savePath, "저장 완료", System.Windows.MessageBoxButton.OK, System.Windows.MessageBoxImage.Information);
}
