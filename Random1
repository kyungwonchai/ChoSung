using DevExpress.XtraEditors;
using System;
using System.Collections.Generic;
using System.Windows.Forms;

namespace WinFormsApp
{
    public partial class MainForm : XtraForm
    {
        private Dictionary<string, SimpleButton> buttonDictionary = new Dictionary<string, SimpleButton>();
        private string currentUser = "user1"; // 현재 사용자 계정

        public MainForm()
        {
            InitializeComponent();
        }

        private void MainForm_Load(object sender, EventArgs e)
        {
            // 버튼 동적 생성 및 초기 상태 설정
            CreateButton("Button1");
            CreateButton("Button2");
            CreateButton("Button3");

            // 권한에 따라 버튼 제어
            SetButtonPermissions();
        }

        private void CreateButton(string buttonName)
        {
            SimpleButton button = new SimpleButton();
            button.Name = buttonName;
            button.Text = buttonName;
            button.Click += Button_Click;
            flowLayoutPanel.Controls.Add(button);

            // 생성된 버튼을 딕셔너리에 추가
            buttonDictionary.Add(buttonName, button);
        }

        private void SetButtonPermissions()
        {
            foreach (var buttonEntry in buttonDictionary)
            {
                string buttonName = buttonEntry.Key;
                SimpleButton button = buttonEntry.Value;

                // 버튼에 대한 권한 체크
                bool hasPermission = CheckPermission(buttonName);

                // 권한이 있을 경우 버튼 활성화
                button.Enabled = hasPermission;
            }
        }

        private bool CheckPermission(string buttonName)
        {
            // 버튼에 대한 권한 체크 로직 구현
            // 예제로 현재 사용자가 "user1"인 경우 "Button2" 버튼에만 권한을 부여하는 예시
            if (currentUser == "user1" && buttonName == "Button2")
            {
                return true;
            }

            return false;
        }

        private void Button_Click(object sender, EventArgs e)
        {
            SimpleButton button = (SimpleButton)sender;
            MessageBox.Show($"Clicked: {button.Name}");
        }
    }
}
