public async Task InitializeAsync()
{
    for (int i = 0; i < 5; i++)
    {
        // UI 스레드에서 속성 업데이트
        Application.Current.Dispatcher.Invoke(() =>
        {
            ProgressText = $"Initializing... Step {i + 1}";
        });

        await Task.Delay(1000);
    }

    Application.Current.Dispatcher.Invoke(() =>
    {
        ProgressText = "Initialization completed!";
    });
}
