        const apps = {};
        logs.forEach(l => {
            if(!apps[l.alias]) apps[l.alias] = {sum:0, count:0, fails:0};
            if(l.status === 'SUCCESS') { apps[l.alias].sum += l.elapsed; apps[l.alias].count++; }
            else { apps[l.alias].fails++; }
        });
        let html = '<table class="table"><thead><tr><th>APP</th><th>AVG SEC</th><th>FAILS</th><th>STATUS</th></tr></thead><tbody>';
        Object.keys(apps).forEach(a => {
            const avg = (apps[a].sum / (apps[a].count || 1)).toFixed(2);
            html += `<tr><td>${a}</td><td>${avg}s</td><td>${apps[a].fails}</td><td>${apps[a].fails > 0 ? 'RISK':'OK'}</td></tr>`;
        });
