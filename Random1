import os

def check_path_access(path):
    if os.access(path, os.R_OK):
        print("읽기 권한 확인: 가능")
    else:
        print("읽기 권한 확인: 불가능")

    if os.access(path, os.W_OK):
        print("쓰기 권한 확인: 가능")
    else:
        print("쓰기 권한 확인: 불가능")

    if os.access(path, os.X_OK):
        print("실행 권한 확인: 가능")
    else:
        print("실행 권한 확인: 불가능")

# 예시 사용법
path = '/path/to/file'  # 실제 경로로 변경해야 합니다.
check_path_access(path)
