using DevExpress.XtraGrid;
using DevExpress.XtraGrid.Views.Grid;

private GridControl gridControl1;
private GridView gridView1;

private void Form1_Load(object sender, EventArgs e)
{
    // GridControl 생성
    gridControl1 = new GridControl();
    gridControl1.Dock = DockStyle.Fill;

    // GridView 생성 및 GridControl에 연결
    gridView1 = new GridView();
    gridControl1.MainView = gridView1;

    // GridControl을 Form에 추가
    this.Controls.Add(gridControl1);

    // GridView에 컬럼 추가
    gridView1.Columns.Add(new GridColumn() { FieldName = "Image", Caption = "이미지" });
    gridView1.Columns.Add(new GridColumn() { FieldName = "Caption", Caption = "제목" });

    // GridView의 컬럼 속성 설정
    gridView1.Columns["Image"].ImageOptions.ImageAlignment = DevExpress.Utils.HorzAlignment.Center;
    gridView1.Columns["Image"].ImageOptions.ImageLayout = DevExpress.Utils.Drawing.ImageLayoutMode.Zoom;
    gridView1.Columns["Image"].OptionsColumn.AllowEdit = false;
    gridView1.Columns["Caption"].OptionsColumn.AllowEdit = false;

    // GridView에 데이터 바인딩
    gridControl1.DataSource = GetDataSource(); // 적절한 데이터 소스 메소드를 구현하여 사용해주세요
}
