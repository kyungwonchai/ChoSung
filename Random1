using System;
using System.Drawing;
using System.Windows.Forms;

namespace ColorReadExample
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void GetColorButton_Click(object sender, EventArgs e)
        {
            int x = 100; // 읽어올 좌표의 X 값
            int y = 200; // 읽어올 좌표의 Y 값

            Bitmap screenCapture = new Bitmap(Screen.PrimaryScreen.Bounds.Width, Screen.PrimaryScreen.Bounds.Height);

            using (Graphics g = Graphics.FromImage(screenCapture))
            {
                g.CopyFromScreen(0, 0, 0, 0, screenCapture.Size);
            }

            Color pixelColor = screenCapture.GetPixel(x, y);

            MessageBox.Show($"좌표 ({x}, {y})의 색상 정보: RGB({pixelColor.R}, {pixelColor.G}, {pixelColor.B})");
        }
    }
}
