Function AvgTime(rng As Range) As Double
    Dim sumTime As Double
    Dim countTime As Long
    Dim cell As Range
    
    sumTime = 0
    countTime = 0
    
    For Each cell In rng
        If cell.Value <> "" Then
            sumTime = sumTime + TimeValue(cell.Value)
            countTime = countTime + 1
        End If
    Next cell
    
    If countTime > 0 Then
        AvgTime = sumTime / countTime
    Else
        AvgTime = 0
    End If
End Function
