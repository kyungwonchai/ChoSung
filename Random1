using DevExpress.Xpf.Charts;
// ...

// 차트 생성 및 초기화
ChartControl chart = new ChartControl();

// Line Series 생성
LineSeries2D series = new LineSeries2D();

// 데이터 추가 (예시)
series.Points.Add(new SeriesPoint("A", 10));
series.Points.Add(new SeriesPoint("B", 20));
series.Points.Add(new SeriesPoint("C", 30));

// 데이터 포인트 라벨 활성화
series.LabelsVisibility = DevExpress.Utils.DefaultBoolean.True;

// 라벨 설정
PointSeriesLabel label = new PointSeriesLabel();
label.Position = PointLabelPosition.Above;  // 라벨 위치 설정
series.Label = label;

// 축 설정
XYDiagram2D diagram = new XYDiagram2D();
chart.Diagram = diagram;

// 최소/최대 값 설정
diagram.AxisY.WholeRange.MinValue = 0;   // Y축 최소 값
diagram.AxisY.WholeRange.MaxValue = 50;  // Y축 최대 값

// 차트에 시리즈 추가
chart.Series.Add(series);

// 차트를 UI에 추가하는 코드 필요 (예: this.Content = chart;)
