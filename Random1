@echo off

REM 이벤트 로그 설정을 변경할 로그 이름 목록
set "logs=Application,Security,System"

REM 최대 로그 크기 설정 (1GB = 1073741824 바이트)
set "maxSize=1073741824"

REM 보존 기간 설정 (30일)
set "retentionDays=30"

REM 레지스트리 값을 변경하는 부분
for %%A in (%logs%) do (
    reg add "HKLM\SYSTEM\CurrentControlSet\Services\EventLog\%%A" /v MaxSize /t REG_DWORD /d %maxSize% /f
    reg add "HKLM\SYSTEM\CurrentControlSet\Services\EventLog\%%A" /v Retention /t REG_DWORD /d %retentionDays% /f
)

echo 이벤트 로그 설정이 변경되었습니다.

pause
