int value = 0;

// 'a' 컬럼의 값이 DBNull이거나 null이 아니라면
if (row["a"] != DBNull.Value && row["a"] != null)
{
    // 값이 int 형식이면 그대로 사용
    if (int.TryParse(row["a"].ToString(), out value))
    {
        // value 변수는 이미 int로 변환된 값을 갖게 됩니다.
    }
    else
    {
        // int로 변환할 수 없으면 0을 사용
        value = 0;
    }
}
else
{
    // 값이 DBNull이거나 null이면 0을 사용
    value = 0;
}

// 이제 value 변수를 사용하여 원하는 작업을 수행할 수 있습니다.
