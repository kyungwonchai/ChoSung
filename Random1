@echo off
setlocal

:: 로그 파일이 저장된 디렉터리 지정
set "LOG_DIR=C:\inetpub\logs\LogFiles"

:: 현재 날짜와 시간 정보 가져오기
for /f "tokens=2 delims==" %%I in ('"wmic os get localdatetime /value"') do set "datetime=%%I"
set "YY=%datetime:~2,2%" & set "MM=%datetime:~4,2%" & set "DD=%datetime:~6,2%"

:: 파일이 마지막으로 수정된 날짜와 현재 날짜를 비교
forfiles -p "%LOG_DIR%" -s -m *.* -d -30 -c "cmd /c del @path"

endlocal
