private F2Form f2Form; // F2Form의 인스턴스 참조를 저장하기 위한 변수

public FormInputClips(F2Form f2FormInstance)
{
    InitializeComponent();
    f2Form = f2FormInstance; // F2Form의 인스턴스를 저장
    this.Resize += new EventHandler(FormInputClips_Resize); // 리사이즈 이벤트에 핸들러 연결
}

private void FormInputClips_Resize(object sender, EventArgs e)
{
    if (this.WindowState == FormWindowState.Minimized)
    {
        f2Form.WindowState = FormWindowState.Minimized; // FormInputClips 최소화 시 F2Form도 최소화
    }
    else if (this.WindowState == FormWindowState.Maximized)
    {
        f2Form.WindowState = FormWindowState.Maximized; // FormInputClips 최대화 시 F2Form도 최대화
    }
    else if (this.WindowState == FormWindowState.Normal)
    {
        f2Form.WindowState = FormWindowState.Normal; // FormInputClips 정상 크기 시 F2Form도 정상 크기로
    }
}
