public bool UpdateTaskDetails(int taskID, string taskName, string taskContent)
{
    try
    {
        sqlConnection.Open();

        string updateQuery = "UPDATE TaskDetails SET Title = @Title, Content = @Content WHERE ID = @ID";

        using (SqlCommand command = new SqlCommand(updateQuery, sqlConnection))
        {
            command.Parameters.AddWithValue("@Title", taskName);
            command.Parameters.AddWithValue("@Content", taskContent);
            command.Parameters.AddWithValue("@ID", taskID);

            int rowsAffected = command.ExecuteNonQuery();

            return rowsAffected > 0;
        }
    }
    catch (Exception ex)
    {
        MessageBox.Show("과제 수정에 실패했습니다. 오류 메시지: " + ex.Message);
        return false;
    }
    finally
    {
        sqlConnection.Close();
    }
}
