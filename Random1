using VncSharp;

public partial class MainForm : Form
{
    public MainForm()
    {
        InitializeComponent();
    }

    private void connectButton_Click(object sender, EventArgs e)
    {
        ConnectVncViewer(panel1, "host1:5900", "12345");
        ConnectVncViewer(panel2, "host2:5900", "12345");
        ConnectVncViewer(panel3, "host3:5900", "12345");
    }

    private void ConnectVncViewer(Panel panel, string host, string password)
    {
        VncClient vnc = new VncClient();
        vnc.Connect(host, true, true, password); // Assuming the VncClient has a method like this, adjust based on actual API
        vnc.Dock = DockStyle.Fill;
        panel.Controls.Add(vnc);
    }
}
