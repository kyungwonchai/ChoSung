using DevExpress.XtraBars.Navigation;
using System.Drawing;
using System.Windows.Forms;

// Form 또는 사용자 정의 컨트롤 내에서 선언된 AccordionControl
private AccordionControl accordionControl1;

// 햄버거 메뉴를 생성하는 메서드
private void CreateHamburgerMenu()
{
    // AccordionControl 생성
    accordionControl1 = new AccordionControl();
    accordionControl1.Dock = DockStyle.Left;

    // 아이템 생성 및 설정
    AccordionControlElement group1 = new AccordionControlElement();
    group1.Text = "Menu Group 1";

    AccordionControlElement item1 = new AccordionControlElement();
    item1.Text = "Item 1";
    item1.Style = ElementStyle.Item;

    AccordionControlElement item2 = new AccordionControlElement();
    item2.Text = "Item 2";
    item2.Style = ElementStyle.Item;

    // 그룹에 아이템 추가
    group1.Elements.AddRange(new[] { item1, item2 });

    // AccordionControl에 그룹 추가
    accordionControl1.Elements.AddRange(new[] { group1 });

    // 컨트롤에 AccordionControl 추가
    Controls.Add(accordionControl1);
}
