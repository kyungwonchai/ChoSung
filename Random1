// GridView 설정
GridView gridView = gridControl1.MainView as GridView;

// ProgressBar 설정
RepositoryItemProgressBar riprog = new RepositoryItemProgressBar();
riprog.Minimum = 0;
riprog.Maximum = 100;
riprog.ShowTitle = true;
riprog.PercentView = false;
riprog.StartColor = Color.FromArgb(128, 255, 105, 180); // 반투명한 핑크색
riprog.EndColor = Color.FromArgb(128, 255, 105, 180); // 반투명한 핑크색

// "Rate"라는 컬럼에 대해 ProgressBar를 설정
gridView.Columns["Rate"].ColumnEdit = riprog;
