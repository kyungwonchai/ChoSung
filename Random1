Sub CustomizeScatterChart()
    Dim ws As Worksheet
    Dim dataRange As Range
    Dim modelRange As Range
    Dim valueRange As Range
    Dim chtObj As ChartObject
    Dim cht As Chart
    Dim modelCell As Range
    Dim valueCell As Range
    Dim seriesIndex As Integer
    
    ' 데이터가 있는 시트명과 범위를 설정합니다.
    Set ws = ThisWorkbook.Sheets("Sheet1") ' 시트 이름에 맞게 변경
    Set dataRange = ws.Range("A1:B10") ' 데이터 범위에 맞게 변경
    Set modelRange = dataRange.Columns(1)
    Set valueRange = dataRange.Columns(2)
    
    ' 새로운 차트를 만들고 데이터를 추가합니다.
    Set chtObj = ws.ChartObjects.Add(Left:=10, Top:=10, Width:=400, Height:=300)
    Set cht = chtObj.Chart
    
    With cht
        ' 분산 차트로 설정합니다.
        .ChartType = xlXYScatter
        .HasTitle = True
        .ChartTitle.Text = "Model Distribution"
        
        ' 모델별로 데이터 시리즈를 추가합니다.
        seriesIndex = 1 ' 초기 시리즈 인덱스
        For Each modelCell In modelRange
            ' 시리즈의 범위 설정
            Set valueCell = valueRange.Cells(modelCell.Row)
            Set valueRange = valueRange.Resize(1, 1)
            
            ' 시리즈 추가
            .SeriesCollection.NewSeries
            With .SeriesCollection(seriesIndex)
                .Name = CStr(modelCell.Value) ' 모델명을 문자열로 변환하여 사용
                .XValues = modelCell
                .Values = valueRange
                .MarkerStyle = seriesIndex ' 시리즈 인덱스에 따라 마커 스타일 변경
            End With
            
            seriesIndex = seriesIndex + 1 ' 다음 시리즈 인덱스
        Next modelCell
        
        ' 범례 추가
        .HasLegend = True
        .Legend.Position = xlLegendPositionBottom
    End With
End Sub
