private void TableView_CellValueChanged(object sender, DevExpress.Xpf.Grid.CellValueChangedEventArgs e)
{
    if (e.Column.FieldName == "편짐A")
    {
        var rowHandle = e.RowHandle;
        var newValue = e.Value;

        if (newValue is int intValue)
        {
            if (intValue > 50)
            {
                tableView.UpdateRowAppearance(rowHandle, new DevExpress.Xpf.Grid.RowStyle() { Background = Brushes.Green });
            }
            else
            {
                tableView.UpdateRowAppearance(rowHandle, new DevExpress.Xpf.Grid.RowStyle() { Background = Brushes.Red });
            }
        }
    }
}
