 // 분할기 컨트롤 생성
        SplitContainerControl splitter = new SplitContainerControl();
        splitter.Dock = DockStyle.Fill;
        splitter.BorderStyle = DevExpress.XtraEditors.Controls.BorderStyles.NoBorder;

        // 분할기 컨트롤을 테이블 패널에 추가합니다.
        tablePanel.Controls.Add(splitter, 0, 2); // 2번째 행에 추가
        tablePanel.SetRowSpan(splitter, 2); // 2번째 행과 3번째 행을 합침
