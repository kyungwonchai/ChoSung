    BarButtonItem btnItem = new BarButtonItem();
    btnItem.Caption = "ì•„ì´ì½˜ ë²„íŠ¼";
    btnItem.ImageOptions.LargeImage = myIcon;  // ë²„íŠ¼ì— ì•„ì´ì½˜ ì„¤ì •

