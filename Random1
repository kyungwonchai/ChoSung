Sub CopyMatchingRows()
    Dim wsABC As Worksheet
    Dim wsZZZ As Worksheet
    Dim lastRowABC As Long
    Dim lastRowZZZ As Long
    Dim i As Long, j As Long
    Dim matchFound As Boolean
    
    ' 시트 설정
    Set wsABC = ThisWorkbook.Sheets("abc")
    Set wsZZZ = ThisWorkbook.Sheets("zzz")
    
    ' 마지막 행 찾기
    lastRowABC = wsABC.Cells(wsABC.Rows.Count, "A").End(xlUp).Row
    lastRowZZZ = wsZZZ.Cells(wsZZZ.Rows.Count, "C").End(xlUp).Row
    
    ' abc 시트의 2행부터 마지막 행까지 반복
    For i = 2 To lastRowABC
        matchFound = False
        
        ' zzz 시트의 2행부터 마지막 행까지 반복
        For j = 2 To lastRowZZZ
            If wsABC.Cells(i, 1).Value = wsZZZ.Cells(j, 3).Value And _
               wsABC.Cells(i, 2).Value = wsZZZ.Cells(j, 6).Value And _
               wsABC.Cells(i, 3).Value = wsZZZ.Cells(j, 8).Value Then
               
               ' 일치하는 행 발견
               matchFound = True
               
               ' abc 시트의 D부터 H까지 값을 zzz 시트의 L부터 P까지에 복사
               wsZZZ.Cells(j, 12).Resize(1, 8).Value = wsABC.Cells(i, 4).Resize(1, 8).Value
               Exit For
            End If
        Next j
    Next i
End Sub
