// 유저 컨트롤 내부
public partial class MediaPlayerControl : UserControl
{
    public MediaPlayerControl()
    {
        InitializeComponent();
    }

    public void PlayFile(string filePath)
    {
        // 파일 재생 로직
        videoView1.SourceProvider.MediaPlayer.Play(new Uri(filePath));
    }

    // 기타 필요한 메서드와 이벤트
}

// 메인 폼 내부
public partial class MainForm : Form
{
    public MainForm()
    {
        InitializeComponent();
        
        MediaPlayerControl mediaPlayerControl = new MediaPlayerControl();
        Controls.Add(mediaPlayerControl);

        mediaPlayerControl.PlayFile("경로");
    }
}
