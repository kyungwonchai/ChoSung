public class MyHub : Hub
{
    public async Task 함수22(string message)
    {
        // 이벤트 처리기
        Console.WriteLine(message);
    }

    public async Task SendAsync(string connectionId, string methodName, object[] args)
    {
        // 이벤트를 발생시킵니다.
        await Clients.Others.SendAsync(connectionId, methodName, args);
    }
}