using DevExpress.Xpf.Grid;

// ...

private void OnBandLoaded(object sender, RoutedEventArgs e)
{
    GridControlBand band = sender as GridControlBand;
    if (band != null)
    {
        foreach (GridColumn column in band.Columns)
        {
            Style headerStyle = new Style(typeof(GridColumnHeader));
            headerStyle.Setters.Add(new Setter(BackgroundProperty, new SolidColorBrush(Colors.Red))); // 빨간색 배경
            headerStyle.Setters.Add(new Setter(HorizontalContentAlignmentProperty, HorizontalAlignment.Center)); // 글자 가운데 정렬

            column.HeaderStyle = headerStyle;
        }
    }
}
