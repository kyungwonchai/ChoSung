richEditControl1.Document.BeginUpdate();

// 이미지를 파일에서 가져와서 삽입합니다.
string imagePath = "이미지 파일 경로";
DocumentImage docImage = richEditControl1.Document.Images.InsertPicture(richEditControl1.Document.Range.End, Image.FromFile(imagePath));

// 필요에 따라 이미지 크기를 조정할 수 있습니다.
docImage.ScaleX = 0.5f;
docImage.ScaleY = 0.5f;

// 이미지와 텍스트 사이에 공백을 추가할 수 있습니다.
richEditControl1.Document.AppendText(" ");

richEditControl1.Document.EndUpdate();
