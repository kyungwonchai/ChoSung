TextEdit textEdit = new TextEdit();
textEdit.Properties.Appearance.Options.UseTextOptions = true;
textEdit.Properties.Appearance.TextOptions.WordWrap = DevExpress.Utils.WordWrap.Wrap;
textEdit.Properties.ScrollBars = ScrollBars.Vertical;
textEdit.Properties.ReadOnly = true;
textEdit.Multiline = true;
textEdit.AutoSize = false;
textEdit.Height = textEdit.PreferredHeight;  // 텍스트의 크기에 맞게 높이 설정
