CREATE TABLE ManagementItems (
    ItemId INT PRIMARY KEY IDENTITY(1,1),
    UserId UNIQUEIDENTIFIER,
    Name NVARCHAR(100),
    Floor NVARCHAR(50),
    Zone NVARCHAR(50),
    SubPart NVARCHAR(100),
    Manager NVARCHAR(100)
);
