using System.Drawing;

public partial class MySkinableForm : DevExpress.XtraEditors.XtraForm
{
    public MySkinableForm()
    {
        InitializeComponent();

        // ìŠ¤í‚¨ ìƒ‰ìƒ ìˆ˜ì •
        var skin = SkinManager.Default[SkinProductId.Form];
        if (skin != null)
        {
            var titleElement = skin["FormTitle"]; // íƒ€ì´í‹€ë°” ìš”ì†Œ
            if (titleElement != null)
            {
                titleElement.BackColor = Color.SkyBlue; // íƒ€ì´í‹€ë°” ë°°ê²½ìƒ‰
                titleElement.ForeColor = Color.White;   // í…ìŠ¤íŠ¸ ìƒ‰ìƒ
            }
        }
    }
}
