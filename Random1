private void SetFocusToRow(int taskID)
{
    int rowIndex = -1;
    for (int i = 0; i < gridView1.RowCount; i++)
    {
        DataRowView row = (DataRowView)gridView1.GetRow(i);
        if (row != null && Convert.ToInt32(row["ID"]) == taskID)
        {
            rowIndex = i;
            break;
        }
    }

    if (rowIndex != -1)
    {
        gridView1.FocusedRowHandle = rowIndex;
    }
}
