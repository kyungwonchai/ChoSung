import os
import random

# 데이터 폴더 생성
data_dir = "data"
train_dir = os.path.join(data_dir, "train")
test_dir = os.path.join(data_dir, "test")

os.makedirs(train_dir, exist_ok=True)
os.makedirs(test_dir, exist_ok=True)

# 랜덤한 문장 생성 함수
def generate_text(number):
    templates = [
        f"이 파일의 값은 {number} 입니다.",
        f"{number} 번 데이터에 해당하는 내용입니다.",
        f"여기에 적힌 숫자는 {number} 입니다.",
        f"이 문서는 {number} 값을 포함하고 있습니다."
    ]
    return random.choice(templates)

# 훈련 데이터 생성 (1~500 사이의 랜덤 숫자 400개)
train_numbers = random.sample(range(1, 501), 400)
for num in train_numbers:
    file_path = os.path.join(train_dir, f"{num}.txt")
    with open(file_path, "w", encoding="utf-8") as f:
        f.write(generate_text(num))

# 테스트 데이터 생성 (나머지 100개 숫자)
test_numbers = list(set(range(1, 501)) - set(train_numbers))
for num in test_numbers:
    file_path = os.path.join(test_dir, f"{num}.txt")
    with open(file_path, "w", encoding="utf-8") as f:
        f.write(generate_text(num))

print(f"? 데이터 생성 완료: {len(train_numbers)}개의 훈련 데이터, {len(test_numbers)}개의 테스트 데이터")
