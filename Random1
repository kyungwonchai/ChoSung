import pandas as pd
import pymssql

# 데이터베이스 연결 설정
conn = pymssql.connect(
    server='<서버주소>',
    database='<데이터베이스이름>',
    user='<사용자이름>',
    password='<비밀번호>'
)

# 쿼리 실행
sql_query = "<SQL 쿼리>"
cursor = conn.cursor()
cursor.execute(sql_query)

# 결과 가져오기
rows = cursor.fetchall()

# 결과를 DataFrame으로 변환
data = pd.DataFrame(rows, columns=<컬럼명리스트>)

# 데이터 확인
print(data.head())

# 연결 종료
cursor.close()
conn.close()
