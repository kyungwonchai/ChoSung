using DevExpress.XtraCharts;
using System;
using System.Windows.Forms;

// ...

private void chartControl_MouseClick(object sender, MouseEventArgs e)
{
    DevExpress.XtraCharts.ChartControl chartControl = sender as DevExpress.XtraCharts.ChartControl;
    if (chartControl == null) return;

    DevExpress.XtraCharts.ChartHitInfo hitInfo = chartControl.CalcHitInfo(e.X, e.Y);
    if (hitInfo.InSeries && hitInfo.SeriesPoint != null)
    {
        DevExpress.XtraCharts.Series series = hitInfo.Series as DevExpress.XtraCharts.Series;
        DevExpress.XtraCharts.SeriesPoint seriesPoint = hitInfo.SeriesPoint as DevExpress.XtraCharts.SeriesPoint;

        string seriesName = series.Name;
        string argument = seriesPoint.Argument;

        MessageBox.Show($"시리즈명: {seriesName}\n과제명: {argument}");
    }
}
