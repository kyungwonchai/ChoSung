Sub Generate10YearSchedule()
    Dim ws As Worksheet
    Set ws = ThisWorkbook.Sheets(1) ' 첫 번째 시트를 선택합니다.
    
    Dim startDate As Date
    Dim endDate As Date
    Dim currentRow As Long
    Dim weekPattern As String
    Dim dayOffset As Integer
    
    ' 시작 날짜와 종료 날짜 설정
    startDate = DateValue("2024-11-01")
    endDate = DateAdd("yyyy", 10, startDate)
    
    ' 초기화
    currentRow = 2 ' 첫 번째 행은 헤더로 사용합니다.
    
    ' 헤더 추가
    ws.Cells(1, 1).Value = "날짜"
    ws.Cells(1, 2).Value = "요일"
    ws.Cells(1, 3).Value = "조"
    ws.Cells(1, 4).Value = "D"
    
    ' 초기 주차 패턴 설정 (11/3일 일요일부터 CA 시작)
    weekPattern = "CA"
    dayOffset = 3 ' 2024-11-03 일요일을 기준으로 주차 시작
    
    ' 데이터 생성
    Dim d As Date
    For d = startDate To endDate
        ' 날짜와 요일 입력
        ws.Cells(currentRow, 1).Value = d
        ws.Cells(currentRow, 2).Value = Weekday(d, vbSunday)
        
        ' 조 입력 (1조와 2조)
        ws.Cells(currentRow, 3).Value = 1
        ws.Cells(currentRow + 1, 3).Value = 2
        
        ' 주차에 따른 D 값 설정
        Dim currentWeek As Long
        currentWeek = Application.WorksheetFunction.WeekNum(d) - Application.WorksheetFunction.WeekNum(startDate) + 1
        
        If currentWeek Mod 2 = 1 Then
            If weekPattern = "CA" Then
                ws.Cells(currentRow, 4).Value = "A"