using System;
using System.Drawing;
using DevExpress.XtraDiagram;

private void Button_Click(object sender, EventArgs e)
{
    string imagePath = @"c:\a\1.jpg";
    
    if(System.IO.File.Exists(imagePath))
    {
        Image image = Image.FromFile(imagePath);
        DiagramImage diagramImage = new DiagramImage()
        {
            Position = new DevExpress.Utils.PointFloat(10, 10), // Set the image position
            Size = new SizeF(image.Width, image.Height) // Set the size to match the image
        };
        diagramImage.BeginUpdate(); // start updating the image
        diagramImage.Content = image; // set the image content
        diagramImage.EndUpdate(); // finalize the update

        diagramControl1.Items.Add(diagramImage);
    }
    else
    {
        MessageBox.Show("Image not found at the specified path");
    }
}
