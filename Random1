public partial class MainForm : Form
{
    [DllImport("user32.dll")]
    static extern bool SetCursorPos(int X, int Y);
    [DllImport("user32.dll")]
    public static extern void mouse_event(int dwFlags, int dx, int dy, int cButtons, int dwExtraInfo);
    public const int MOUSEEVENTF_LEFTDOWN = 0x02;
    public const int MOUSEEVENTF_LEFTUP = 0x04;

    private F2Form f2Form;

    public MainForm()
    {
        InitializeComponent();
        f2Form = new F2Form();
    }

    private void btnOpen3_Click(object sender, EventArgs e)
    {
        f2Form.Show();
    }

    private void btnClose3_Click(object sender, EventArgs e)
    {
        f2Form.Hide();
    }

    private void btnInput1_Click(object sender, EventArgs e)
    {
        string content = textBox1.Text;
        Clipboard.SetText(content);
        Point position = f2Form.Location;

        // 마우스를 F2Form 위치로 옮기고 클릭합니다.
        SetCursorPos(position.X + 5, position.Y + 5); // 적절한 위치를 선택합니다.
        mouse_event(MOUSEEVENTF_LEFTDOWN, position.X + 5, position.Y + 5, 0, 0);
        mouse_event(MOUSEEVENTF_LEFTUP, position.X + 5, position.Y + 5, 0, 0);

        // 텍스트를 붙여넣고 엔터 키를 누릅니다.
        SendKeys.SendWait("^v");
        SendKeys.SendWait("{ENTER}");
    }
}
