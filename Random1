private void SwitchToCardView()
{
    // CardView 생성
    CardView cardView = new CardView(gridControl);

    // CardView 설정
    cardView.CardWidth = 200;
    cardView.OptionsView.CardAutoHeight = true;

    // 이미지 컬럼 설정
    GridColumn imageColumn = cardView.Columns["이미지컬럼"];
    imageColumn.OptionsColumn.AllowSize = false;
    imageColumn.ImageOptions.SvgImageSize = new Size(150, 100);
    imageColumn.ImageOptions.SvgImageAlignment = HorzAlignment.Center;

    // CardView를 GridControl의 메인 뷰로 설정
    gridControl.MainView = cardView;
    gridControl.LevelTree.Nodes.Clear();
}
