StringBuilder rtfContent = new StringBuilder();

// RTF 헤더
rtfContent.AppendLine(@"{\rtf1\ansi\deff0");

// RTF 바디
rtfContent.AppendLine(@"{\colortbl ;\red255\green255\blue0;}"); // 노란색 추가

// 컬럼 헤더
rtfContent.AppendLine(@"\pard\plain\cf1\b\ul");

foreach (DataColumn column in dataTable.Columns)
{
    rtfContent.AppendLine(column.ExtendedProperties["RtfColumnHeader"].ToString());
}

rtfContent.AppendLine(@"\par\plain\cf0\b0\ulnone");

// 테이블 데이터
foreach (DataRow row in dataTable.Rows)
{
    foreach (DataColumn column in dataTable.Columns)
    {
        rtfContent.Append(row[column].ToString());
        rtfContent.Append("\t");
    }
    rtfContent.AppendLine();
}

// RTF 마지막 부분
rtfContent.AppendLine("}");

// RTF 문자열 출력
Console.WriteLine(rtfContent.ToString());
