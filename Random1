using DevExpress.XtraGrid.Views.Grid;
using DevExpress.XtraGrid.Views.Base;

private void gridView1_CustomDrawCell(object sender, DevExpress.XtraGrid.Views.Base.RowCellCustomDrawEventArgs e)
{
    GridView view = sender as GridView;
    if (e.Column.FieldName == "mcnt")
    {
        int mcntValue = Convert.ToInt32(view.GetRowCellValue(e.RowHandle, "mcnt"));
        if (mcntValue <= 6)
        {
            e.Appearance.ForeColor = Color.Red;
        }
    }
}

private void gridView1_CustomColumnDisplayText(object sender, DevExpress.XtraGrid.Views.Base.CustomColumnDisplayTextEventArgs e)
{
    GridView view = sender as GridView;
    if (e.Column.FieldName == "RemainingDays")
    {
        double remainingDaysValue = Convert.ToDouble(e.Value);
        if (remainingDaysValue == 99.73)
        {
            e.DisplayText = ""; // 값 숨기기
        }
    }
}
