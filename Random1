from PIL import Image
import glob

# PNG 파일을 불러오기
frames = [Image.open(image) for image in glob.glob("C:/temp/frames/*.png")]

# GIF 파일 생성 (투명 배경 유지)
frames[0].save("C:/temp/animation.gif", format="GIF", append_images=frames[1:],
               save_all=True, duration=100, loop=0, transparency=0)

print("GIF 생성 완료!")
