import smtplib
from email.mime.multipart import MIMEMultipart
from email.mime.text import MIMEText

def send_email(user_id, system_id, access_token, recipient_email, subject, contents):
    # SMTP 서버 설정
    smtp_server = 'your-smtp-server'
    smtp_port = 587
    smtp_username = 'your-smtp-username'
    smtp_password = 'your-smtp-password'

    # 이메일 정보 설정
    sender_email = 'your-sender-email'
    recipient_email = recipient_email

    # 이메일 내용 설정
    message = MIMEMultipart()
    message['Subject'] = subject
    message['From'] = sender_email
    message['To'] = recipient_email

    # 이메일 본문 설정
    body = MIMEText(contents, 'html')
    message.attach(body)

    # 이메일 발송
    try:
        server = smtplib.SMTP(smtp_server, smtp_port)
        server.starttls()
        server.login(smtp_username, smtp_password)
        server.sendmail(sender_email, recipient_email, message.as_string())
        server.quit()
        print("이메일이 발송되었습니다.")
    except Exception as e:
        print("이메일 발송 중 오류가 발생했습니다:", str(e))

# 예시 사용법
user_id = 'your-user-id'
system_id = 'your-system-id'
access_token = 'your-access-token'
recipient_email = 'recipient@example.com'
subject = '이메일 제목'
contents = '<h1>안녕하세요!</h1><p>이메일 본문입니다.</p>'

send_email(user_id, system_id, access_token, recipient_email, subject, contents)
