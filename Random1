#에서 10분마다 실행되는 타이머 코드만 제공하겠습니다. async도 없이, 단순하게 10분마다 실행되는 순수한 타이머 코드입니다.

✅ 10분마다 실행되는 타이머 코드 (async 없음)
csharp
코드 복사
using System;
using System.Threading;

class Program
{
    private Timer _timer;

    public Program()
    {
        _timer = new Timer(TimerCallback, null, 0, 600000); // 10분(600,000ms)마다 실행
    }

    private void TimerCallback(object state)
    {
        Console.WriteLine($"{DateTime.Now:HH:mm:ss} - 타이머 실행");
        // 여기에 실행할 함수 호출
    }

    static void Main()
    {
        Console.WriteLine("타이머 시작...");
        new Program(); // 인스턴스 생성하여 타이머 시작

        Thread.Sleep(Timeout.Infinite); // 프로그램 유지 (Ctrl+C로 종료)
    }
}
✅ 설명
Timer 객체 사용
10분(600,000ms)마다 TimerCallback() 실행