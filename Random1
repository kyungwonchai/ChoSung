import spidev
import time

class LEDStrip:
    def __init__(self, spi_bus, spi_device, num_leds):
        self.num_leds = num_leds
        self.spi = spidev.SpiDev()
        self.spi.open(spi_bus, spi_device)
        self.spi.max_speed_hz = 1000000  # í•„ìš”ì‹œ ì¡°ì ˆ

    def set_color(self, r, g, b):
        data = []
        for _ in range(self.num_leds):
            data.extend([g, r, b])  # ì¼ë¶€ ì¹©ì€ GRB ë˜ëŠ” RGB ë°©ì‹
        self.spi.xfer2(data)

    def off(self):
        self.set_color(0, 0, 0)

# LED1: SPI0.0, 10ê°œ LED
led1 = LEDStrip(0, 0, 10)  
# LED2: SPI1.0, 10ê°œ LED
led2 = LEDStrip(1, 0, 10)  

try:
    while True:
        print("LED1 RED")
        led1.set_color(255, 0, 0)
        lead2 off
        led2.off()
        time.sleep(1)

        print("LED2 BLUE")
        led2.set_color(0, 0, 255)
        led1.off()
        time.sleep(1)

except KeyboardInterrupt:
    led1.off()
    led2.off()
    print("ì¢…ë£Œí•©ë‹ˆë‹¤.")

