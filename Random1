using System;
using System.Data.SqlClient;

namespace ReadDatabaseExample
{
    class Program
    {
        static void Main(string[] args)
        {
            string connectionString = "your_connection_string_here";
            string query = "SELECT * FROM YourTable WHERE YourCondition";

            using (SqlConnection connection = new SqlConnection(connectionString))
            {
                connection.Open();
                using (SqlCommand command = new SqlCommand(query, connection))
                {
                    using (SqlDataReader reader = command.ExecuteReader())
                    {
                        if (reader.Read())  // 첫 번째 레코드로 이동
                        {
                            string column1Value = reader["Column1"].ToString();
                            string column2Value = reader["Column2"].ToString();
                            // ... 기타 컬럼 값들을 변수에 담기

                            Console.WriteLine($"{column1Value}, {column2Value}");
                        }
                    }
                }
                connection.Close();
            }
        }
    }
}
