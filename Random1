using System;
using System.Runtime.InteropServices;

namespace FindWindowExample
{
    class Program
    {
        // Win32 API 함수 선언
        [DllImport("user32.dll", SetLastError = true)]
        public static extern IntPtr FindWindow(string lpClassName, string lpWindowName);

        static void Main(string[] args)
        {
            // 찾고자 하는 윈도우의 클래스 이름과 타이틀을 지정합니다.
            string className = "Notepad";  // 예시입니다, 실제 클래스 이름으로 교체해주세요.
            string windowTitle = "Untitled - Notepad";  // 예시입니다, 실제 윈도우 타이틀로 교체해주세요.

            // 윈도우 핸들 찾기
            IntPtr hWnd = FindWindow(className, windowTitle);

            if (hWnd == IntPtr.Zero)
            {
                Console.WriteLine("윈도우를 찾을 수 없습니다.");
            }
            else
            {
                Console.WriteLine("찾은 윈도우의 핸들: " + hWnd.ToString());
                // 여기에서 추가 작업을 수행합니다.
            }
        }
    }
}
