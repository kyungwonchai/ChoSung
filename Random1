using System;
using DevExpress.Xpf.Grid;

namespace GridColumnEditDetection
{
    public partial class MainWindow : Window
    {
        public MainWindow()
        {
            InitializeComponent();
            
            // GridControl의 ColumnView에 이벤트 핸들러 등록
            gridView.CellValueChanging += GridView_CellValueChanging;
            gridView.CellValueChanged += GridView_CellValueChanged;
        }

        private void GridView_CellValueChanging(object sender, CellValueChangedEventArgs e)
        {
            // 셀 값이 변경되기 전에 호출되는 이벤트
            // 이곳에서 변경 전의 값을 확인하거나, 특정 조건을 체크할 수 있습니다.
        }

        private void GridView_CellValueChanged(object sender, CellValueChangedEventArgs e)
        {
            // 셀 값이 변경된 후에 호출되는 이벤트
            // 이곳에서 변경된 값을 확인하고 필요한 작업을 수행할 수 있습니다.
            
            // 변경된 값을 로그로 출력
            Console.WriteLine("변경된 값: " + e.Value);
        }
    }
}
