using System.Diagnostics;

// 버튼 클릭 이벤트 핸들러
private void buttonOpenOpera_Click(object sender, EventArgs e)
{
    string url = "http://www.example.com"; // 특정 웹 페이지 URL을 입력해주세요.

    try
    {
        Process.Start("opera.exe", url); // 오페라 브라우저를 실행하고 특정 웹 페이지를 엽니다.
    }
    catch (Exception ex)
    {
        // 예외 처리 코드를 추가하면 좋습니다.
        // ex.Message를 사용하여 오류 메시지를 확인할 수 있습니다.
    }
}
