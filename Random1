using System;
using System.Reflection;

class Program
{
    static void Main(string[] args)
    {
        TestMethod();
    }

    static void TestMethod()
    {
        // 현재 메서드의 이름을 가져옴
        string methodName = MethodBase.GetCurrentMethod().Name;
        
        // 메서드 이름의 마지막 1글자를 추출
        string lastChar = methodName.Length > 0 ? methodName[^1].ToString() : string.Empty;

        Console.WriteLine($"현재 메서드의 이름: {methodName}");
        Console.WriteLine($"마지막 1글자: {lastChar}");
    }
}
