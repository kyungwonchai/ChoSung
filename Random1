private string GetUrlFromShortcutFile(string shortcutFilePath)
{
    if (File.Exists(shortcutFilePath))
    {
        using (StreamReader reader = new StreamReader(shortcutFilePath))
        {
            string fileContents = reader.ReadToEnd();
            string firstLine = GetFirstLine(fileContents);

            int urlStartIndex = firstLine.IndexOf("URL=") + 4; // URL= 다음 문자열부터 URL이 시작됨
            string url = firstLine.Substring(urlStartIndex); // URL 추출

            return url;
        }
    }

    return null;
}
