private void RepositoryButtonEdit_ButtonClick(object sender, ButtonPressedEventArgs e)
{
    if (e.Button.Tag == null || e.Button.Tag.ToString() == string.Empty)
        return;

    int rowHandle = gridView1.FocusedRowHandle;
    string columnName = e.Button.Tag.ToString();

    switch (columnName)
    {
        case "Request":
            // 신청 버튼 클릭 시 동작
            // 해당 행의 물품 신청 처리 로직 작성
            break;
        case "Receipt":
            // 입고 버튼 클릭 시 동작
            // 해당 행의 물품 입고 처리 로직 작성
            break;
        case "Shipment":
            // 출고 버튼 클릭 시 동작
            // 해당 행의 물품 출고 처리 로직 작성
            break;
        default:
            break;
    }
}
