cpp
ì½”ë“œ ë³µì‚¬
#include <iostream>
#include <list>
#include <vector>

class HashTable {
private:
    static const int TABLE_SIZE = 10;
    std::vector<std::list<int>> table; // ì²´ì´ë‹ ë°©ì‹ (ë§í¬ë“œ ë¦¬ìŠ¤íŠ¸)

    int hashFunction(int key) {
        return key % TABLE_SIZE;
    }

public:
    HashTable() : table(TABLE_SIZE) {}

    void insert(int key) {
        int index = hashFunction(key);
        table[index].push_back(key);
    }

    bool search(int key) {
        int index = hashFunction(key);
        for (int value : table[index]) {
            if (value == key) return true;
        }
        return false;
    }
};

int main() {
    HashTable ht;
    ht.insert(10);
    ht.insert(20);
    ht.insert(30);
    std::cout << ht.search(20); // 1 (true)
}
