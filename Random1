using System;
using System.Drawing;
using System.IO;
using System.Runtime.InteropServices;
using System.Windows.Forms;
using DevExpress.XtraEditors;

public partial class MainForm : Form
{
    // ...
    // 이전의 필드 및 코드는 동일하게 유지합니다.
    private Panel coverPanel;  // 컨트롤 잠금을 위한 패널

    public MainForm()
    {
        InitializeComponent();

        // 패널을 생성하고 설정합니다.
        coverPanel = new Panel();
        coverPanel.Dock = DockStyle.Fill;
        coverPanel.Visible = false;
        coverPanel.BackColor = Color.Transparent;  // 패널이 투명하게 보이도록 합니다.

        this.Controls.Add(coverPanel);  // 폼에 패널을 추가합니다.
        this.Controls.SetChildIndex(coverPanel, 0);  // 패널을 최상위 Z-Order로 설정합니다.
    }

    private void LockOrUnlockControls(bool locked)
    {
        // 잠금 상태에 따라 패널의 가시성을 변경합니다.
        coverPanel.Visible = locked;
    }

    private void btnLock_Click(object sender, EventArgs e)
    {
        if (btnLock.Text == "Lock")
        {
            btnLock.Text = "Unlock";
            LockOrUnlockControls(true);  // 모든 컨트롤을 비활성화합니다.
        }
        else
        {
            btnLock.Text = "Lock";
            LockOrUnlockControls(false);  // 모든 컨트롤을 활성화합니다.
        }
    }

    // 나머지 코드는 이전과 동일합니다.
}
