private void CalendarControl_SelectedDatesChanged(object sender, SelectionChangedEventArgs e)
{
    foreach (var date in e.AddedItems.OfType<DateTime>())
    {
        ViewModel.ToggleHoliday(date);  // í´ë¦­ëœ ë‚ ì§œë¥¼ í† ê¸€
    }
    HighlightHolidays();
}
