public class MyClass
{
    public MyClass()
    {
        // 생성자에서 비동기 메서드를 호출하고 완료될 때까지 기다림
        Task.Run(() => MyAsyncMethod()).Wait();
    }

    private async Task MyAsyncMethod()
    {
        // 예시 비동기 작업 (2초 대기)
        await Task.Delay(2000);
        Console.WriteLine("비동기 작업 완료");
    }
}
