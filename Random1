    <script>
        const brilliantBlues = {
            strong: '#0077B6',
            medium: '#00B4D8',
            light: '#90E0EF',
            veryLight: '#CAF0F8'
        };

        const processLabel = (label) => {
            if (label.length > 16) {
                const words = label.split(' ');
                const lines = [];
                let currentLine = '';
                for (const word of words) {
                    if ((currentLine + word).length > 16) {
                        lines.push(currentLine.trim());
                        currentLine = '';
                    }
                    currentLine += word + ' ';
                }
                lines.push(currentLine.trim());
                return lines;
            }
            return label;
        };
        
        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            }
            return label;
        };

        const commonChartOptions = {
            maintainAspectRatio: false,
            responsive: true,
            plugins: {
                legend: {
                    display: false
                },
                tooltip: {
                    callbacks: {
                        title: tooltipTitleCallback
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        color: '#E0E0E0'
                    },
                    ticks: {
                        color: '#666'
                    }
                },
                x: {
                    grid: {
                        display: false
                    },
                    ticks: {
                        color: '#666'
                    }
                }
            }
        };

        new Chart(document.getElementById('intelligenceChart'), {
            type: 'line',
            data: {
                labels: ['Q1', 'Q2', 'Q3', 'Q4', 'Next Q1', 'Next Q2'],
                datasets: [{
                    label: 'Insight Score',
                    data: [12, 19, 25, 33, 45, 60],
                    fill: true,
                    backgroundColor: 'rgba(0, 180, 216, 0.2)',
                    borderColor: brilliantBlues.medium,
                    tension: 0.4,
                    pointBackgroundColor: brilliantBlues.strong,
                    pointRadius: 5
                }]
            },
            options: commonChartOptions
        });

        new Chart(document.getElementById('predictionChart'), {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug'],
                datasets: [{
                    label: 'Actual Demand',
                    data: [100, 120, 110, 130, 145, 135, null, null],
                    borderColor: brilliantBlues.strong,
                    tension: 0.1,
                    pointRadius: 5
                }, {
                    label: 'Predicted Demand',
                    data: [null, null, null, null, null, 135, 155, 160],
                    borderColor: brilliantBlues.medium,
                    borderDash: [5, 5],
                    tension: 0.1,
                    pointRadius: 5,
                    pointStyle: 'rect'
                }]
            },
            options: { ...commonChartOptions, plugins: { legend: { display: true, position: 'bottom' }, tooltip: { callbacks: { title: tooltipTitleCallback } } } }
        });
        
        new Chart(document.getElementById('autonomyChart'), {
            type: 'radar',
            data: {
                labels: ['Efficiency', 'Cost Reduction', 'Speed', 'Accuracy', 'Scalability'],
                datasets: [{
                    label: 'Autonomous System Performance',
                    data: [95, 85, 90, 98, 88],
                    fill: true,
                    backgroundColor: 'rgba(0, 120, 182, 0.2)',
                    borderColor: brilliantBlues.strong,
                    pointBackgroundColor: brilliantBlues.strong,
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: brilliantBlues.strong
                }]
            },
            options: {
                maintainAspectRatio: false,
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            title: tooltipTitleCallback
                        }
                    }
                },
                scales: {
                    r: {
                        angleLines: {
                            color: '#E0E0E0'
                        },
                        grid: {
                            color: '#E0E0E0'
                        },
                        pointLabels: {
                            color: '#333',
                            font: {
                                size: 12
                            }
                        },
                        ticks: {
                            backdropColor: 'transparent',
                            color: '#666'
                        }
                    }
                }
            }
        });

    </script>
