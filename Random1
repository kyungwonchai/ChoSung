const config = {
  user: 'your_username',
  password: 'your_password',
  server: 'your_server', 
  database: 'your_database',
  options: {
    trustServerCertificate: true // 이 부분을 추가하세요.
  }
};

sql.connect(config)
  .then(() => {
    console.log('DB 연결 성공!');
  })
