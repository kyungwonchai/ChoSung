using System;

class Program
{
    static string ReverseAndConvert(string hexString)
    {
        // 문자열의 길이가 4인지 확인
        if (hexString.Length != 4)
        {
            return "Error: 입력 문자열의 길이는 반드시 4글자여야 합니다.";
        }

        // 문자열 리버스
        char[] reversedHex = hexString.ToCharArray();
        Array.Reverse(reversedHex);

        // 결과 문자열을 저장할 변수 초기화
        string result = "";

        // 리버스된 문자열에서 각 글자를 10진수로 변환하고 이어 붙이기
        foreach (char c in reversedHex)
        {
            int decimalValue = Convert.ToInt32(c.ToString(), 16); // 16진수를 10진수로 변환
            result += decimalValue.ToString(); // 변환된 값을 문자열로 변환하여 이어붙임
        }

        return result;
    }

    static void Main(string[] args)
    {
        string hexString = "1A3F";
        string result = ReverseAndConvert(hexString);
        Console.WriteLine(result);  // 예상 출력: "15310"
    }
}
