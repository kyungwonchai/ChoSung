private void gridView1_Click(object sender, EventArgs e)
{
    // 클릭된 셀의 행 및 컬럼 정보를 가져옵니다.
    var focusedRowHandle = gridView1.FocusedRowHandle;
    var focusedColumn = gridView1.FocusedColumn;

    if (focusedRowHandle >= 0 && focusedColumn != null)
    {
        // 선택한 행의 특정 컬럼의 값을 가져옵니다.
        var columnValue = gridView1.GetRowCellValue(focusedRowHandle, focusedColumn);

        // 가져온 값을 사용하여 추가적인 작업을 수행합니다.
        if (columnValue != null)
        {
            // 예시: 가져온 값 출력
            Console.WriteLine("선택한 셀 값: " + columnValue.ToString());
        }
    }
}
