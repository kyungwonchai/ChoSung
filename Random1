private void gridView_ShowingEditor(object sender, DevExpress.XtraGrid.Views.Base.CancelEventArgs e)
{
    var view = sender as DevExpress.XtraGrid.Views.Grid.GridView;
    if (view != null)
    {
        int row = view.FocusedRowHandle;
        int column = view.FocusedColumn.AbsoluteIndex;

        var cellInfo = cellInfos.FirstOrDefault(c => c.Row == row && c.Column == column);
        if (cellInfo != null && cellInfo.IsLocked)
        {
            e.Cancel = true;  // 셀이 잠겨 있으면 편집을 취소
        }
    }
}
