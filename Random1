private void TableView_PreviewMouseDown(object sender, MouseButtonEventArgs e)
{
    var tableView = sender as TableView;
    var grid = tableView.Grid as GridControl;
    var hitInfo = tableView.CalcHitInfo(e.OriginalSource as DependencyObject);

    if (hitInfo.InRowCell)
    {
        grid.CurrentColumn = hitInfo.Column;
        tableView.FocusedRowHandle = hitInfo.RowHandle;
        tableView.ShowEditor();
    }
}
