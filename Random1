 <!-- 부모 데이터 바인딩 -->
        <ItemsControl ItemsSource="{Binding ItemsA}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <!-- 부모 항목 (Name) 표시 -->
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="5"/>
                        
                        <!-- 자식 데이터 ItemsB 바인딩 -->
                        <ItemsControl ItemsSource="{Binding ItemsB}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DetailName}" Margin="5"/>
                                        <TextBlock Text="{Binding Value}" Margin="5"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>