private void ribbonK_Manager_ItemDraw(object sender, DevExpress.XtraBars.ViewInfo.DrawItemEventArgs e)
{
    // BarButtonItemì—ë§Œ ì ìš©
    if (e.Item is BarButtonItem button)
    {
        // í…Œë‘ë¦¬ ìƒ‰ìƒê³¼ ë‘ê»˜ ì„¤ì •
        Color borderColor = Color.Blue; // ì›í•˜ëŠ” í…Œë‘ë¦¬ ìƒ‰ìƒ
        int borderWidth = 2; // ì›í•˜ëŠ” í…Œë‘ë¦¬ ë‘ê»˜

        using (var pen = new Pen(borderColor, borderWidth))
        {
            e.Graphics.DrawRectangle(pen, e.Bounds);
        }

        // ê¸°ë³¸ ë²„íŠ¼ ê·¸ë¦¬ê¸°
        e.DefaultDraw();
    }
}
