                        <TextBlock Text="{Binding ResponseTime}" Width="70"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- 우측 프로그레스바 (세로형) -->
        <ProgressBar Grid.Column="1" VerticalAlignment="Stretch" Margin="10"
