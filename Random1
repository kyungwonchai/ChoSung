import streamlit as st
import pymssql
import pandas as pd

# MSSQL ì„œë²„ ì—°ê²° ì„¤ì • í•¨ìˆ˜
def get_connection():
    return pymssql.connect(
        server="YOUR_SERVER",
        user="YOUR_USER",
        password="YOUR_PASSWORD",
        database="YOUR_DATABASE"
    )

# Get_min_bestdifferent í”„ë¡œì‹œì € í˜¸ì¶œ í•¨ìˆ˜ (cursor.fetchall() ë°©ì‹)
def fetch_main_data():
    conn = get_connection()
    cursor = conn.cursor()
    cursor.execute("EXEC Get_min_bestdifferent")
    rows = cursor.fetchall()
    conn.close()
    return rows

# DataFrame ìƒì„± ë° ìŠ¤íƒ€ì¼ ì ìš© í•¨ìˆ˜
def create_dataframe(rows):
    # ì›ë˜ ë°ì´í„°ë² ì´ìŠ¤ì—ì„œ ì˜¨ ì»¬ëŸ¼ (ACT2_1 ~ ACT2_8 í¬í•¨)
    original_columns = [
        "group1", "line1", "model1", "type1", "ecn1", "edition1",
        "ACT2_1", "ACT2_2", "ACT2_3", "ACT2_4",
        "ACT2_5", "ACT2_6", "ACT2_7", "ACT2_8"
    ]
    
    # ìƒˆë¡œìš´ DataFrame ì»¬ëŸ¼ëª… (MC1 ~ MC8ìœ¼ë¡œ ë³€ê²½)
    new_columns = [
        "group1", "line1", "model1", "type1", "ecn1", "edition1",
        "MC1", "MC2", "MC3", "MC4", "MC5", "MC6", "MC7", "MC8"
    ]

    # DataFrame ìƒì„± (ì›ë˜ ì»¬ëŸ¼ìœ¼ë¡œ)
    df = pd.DataFrame(rows, columns=original_columns)

    # ì»¬ëŸ¼ ì´ë¦„ì„ MC1 ~ MC8ë¡œ ë³€ê²½
    df.columns = new_columns

    # MC1 ~ MC8 ì—´ ë¦¬ìŠ¤íŠ¸
    mc_columns = [f"MC{i}" for i in range(1, 9)]

    # ìˆ«ìê°’ì„ ì†Œìˆ˜ì  2ìë¦¬ë¡œ ë°˜ì˜¬ë¦¼
    df[mc_columns] = df[mc_columns].astype(float).round(2)

    return df

# Streamlit ì•± êµ¬ì„±
def main():
    # ì „ì²´ í™”ë©´ ì‚¬ìš© ì„¤ì •
    st.set_page_config(page_title="MC1 ~ MC8 Data Table", layout="wide")
    st.title("MC1 ~ MC8 Data Table with Styling")

    # CSS ìŠ¤íƒ€ì¼ ì¶”ê°€ (ì „ì²´ í™”ë©´ ìµœëŒ€í™”)
    st.markdown("""
        <style>
        .css-1oe6wy4 {  /* í˜ì´ì§€ ì „ì²´ ë„ˆë¹„ ì‚¬ìš© */
            max-width: 100%;
            margin-top: 0px;
        }
        .css-18e3th9 {  /* ìƒë‹¨ ì—¬ë°± ì œê±° */
            padding-top: 0rem;
            padding-bottom: 0rem;
        }
        .stTabs [role="tablist"] {  /* íƒ­ì„ ì „ì²´ ë„ˆë¹„ë¡œ í™•ì¥ */
            display: flex;
            justify-content: space-between;
            width: 100%;
        }
        .stTabs {
            height: 100vh;  /* íƒ­ ë†’ì´ë¥¼ í™”ë©´ ì „ì²´ë¡œ ì„¤ì • */
            overflow: hidden;  /* ìŠ¤í¬ë¡¤ ì œê±° */
        }
        table {
            width: 100%;  /* í…Œì´ë¸” ê°€ë¡œ í™•ì¥ */
            border-collapse: collapse;
        }
        th, td {
            padding: 8px;
            border: 1px solid #ddd;
        }
        </style>
    """, unsafe_allow_html=True)

    # ë°ì´í„° ê°€ì ¸ì˜¤ê¸°
    rows = fetch_main_data()

    if not rows:
        st.error("ë°ì´í„°ë¥¼ ê°€ì ¸ì˜¤ì§€ ëª»í–ˆìŠµë‹ˆë‹¤. í”„ë¡œì‹œì € ë˜ëŠ” ë°ì´í„°ë² ì´ìŠ¤ ì—°ê²°ì„ í™•ì¸í•˜ì„¸ìš”.")
    else:
        # DataFrame ìƒì„±
        df = create_dataframe(rows)

        # íƒ­ ë§Œë“¤ê¸°
        tabs = st.tabs(["ë©”ì¸ í…Œì´ë¸”", "íƒ­2", "íƒ­3"])

        with tabs[0]:
            st.subheader("ë©”ì¸ í…Œì´ë¸” - ì „ì²´ í–‰ í‘œì‹œ")
            st.write(df)  # st.write() ì‚¬ìš©í•˜ì—¬ ì „ì²´ í…Œì´ë¸” í‘œì‹œ

        with tabs[1]:
            st.subheader("íƒ­ 2 ë‚´ìš©")
            st.write("ì—¬ê¸°ëŠ” íƒ­ 2 ì…ë‹ˆë‹¤.")

        with tabs[2]:
            st.subheader("íƒ­ 3 ë‚´ìš©")
            st.write("ì—¬ê¸°ëŠ” íƒ­ 3 ì…ë‹ˆë‹¤.")

if __name__ == "__main__":
    main()
