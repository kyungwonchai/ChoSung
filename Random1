import requests
import json

# 요청 URL
url = "https://agent.sec.samsung.net/api/v1/run/9dba307d-2ba3-44f0-a0ed-79d47b2f4de8?stream=false"

# 헤더 설정
headers = {
    "Content-Type": "application/json",
    "x-api-key": "<your api key>"  # 실제 API 키로 교체해야 합니다.
}

# 전송할 데이터 (JSON)
data = {
    "input_value": "<input your message>",  # 실제 메시지로 교체해야 합니다.
    "input_type": "chat",
    "output_type": "chat",
    "component_inputs": {}
}

# POST 요청 보내기
try:
    response = requests.post(url, headers=headers, data=json.dumps(data))

    # 응답 상태 코드 확인
    print(f"Status Code: {response.status_code}")

    # 응답 내용 (JSON) 출력 (성공적인 경우)
    if response.status_code == 200:
        print("Response JSON:", response.json())
    else:
        print("Error Response:", response.text)

except requests.exceptions.RequestException as e:
    print(f"An error occurred: {e}")