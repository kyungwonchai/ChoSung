using System;
using System.Runtime.InteropServices;

public class APIs
{
    public const int GWL_STYLE = -16; // 윈도우 스타일을 조회하기 위한 nIndex 값

    // GetWindowLongPtr 함수는 32비트와 64비트 양쪽을 지원하기 위한 함수입니다.
    // 64비트 환경에서는 GetWindowLongPtr를 사용해야 합니다.
    [DllImport("user32.dll", EntryPoint = "GetWindowLong")]
    public static extern IntPtr GetWindowLong(IntPtr hWnd, int nIndex);

    // 사용 예제
    public static void Main()
    {
        // hWnd에 유효한 윈도우 핸들이 필요합니다.
        IntPtr hWnd = SomeMethodToGetAWindowHandle();

        // 윈도우의 스타일을 조회합니다.
        IntPtr style = GetWindowLong(hWnd, GWL_STYLE);

        Console.WriteLine($"Window style: {style.ToInt32()}");
    }

    // SomeMethodToGetAWindowHandle의 구현은 여기서는 생략됩니다.
    // 실제로는 윈도우 핸들을 얻는 구체적인 방법이 필요합니다.
}
