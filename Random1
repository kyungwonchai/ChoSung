// 이메일 첨부 파일 추가
byte[] fileBytes = System.IO.File.ReadAllBytes("path/to/attachment.jpg");
var fileContent = new ByteArrayContent(fileBytes);
fileContent.Headers.Add("Content-Disposition", "form-data; name=\"attachments\"; filename=\"dg1.jpg\"");
formDataContent.Add(fileContent, "attachments", "dg1.jpg");
