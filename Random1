using DevExpress.Diagram.Core;
using DevExpress.XtraDiagram;
using System.Drawing;

private void Button_Click(object sender, EventArgs e)
{
    string imagePath = @"c:\a\1.jpg";
    var image = Image.FromFile(imagePath);
    
    var diagramImage = new DiagramImageItem()
    {
        Image = image,
        Position = new DiagramPoint(10, 10),  // This will put the image at position (10,10). Adjust as necessary.
    };

    diagramControl1.Items.Add(diagramImage);
}
