private void barLineChart_ObjectSelected(object sender, HotTrackEventArgs e)
{
    if (e.HitInfo.InSeries)
    {
        SeriesPoint point = e.HitInfo.SeriesPoint;
        MessageBox.Show($"클릭한 날짜: {point.Argument}");
    }
}

// 이전 코드...

barLineChart.ObjectSelected += barLineChart_ObjectSelected;
