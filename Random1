                                        <Setter TargetName="PART_Border" Property="BorderThickness" Value="2"/>
                                    </DataTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </dxg:TableView.Resources>