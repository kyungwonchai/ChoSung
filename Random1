<dxg:CircularGauge x:Name="Gauge">
    <dxg:CircularGaugeScale>
        <dxg:CircularScaleRange x:Name="Range" EndValue="50"/>
    </dxg:CircularGaugeScale>
</dxg:CircularGauge>

<Button Click="Button_Click">
    <Button.Content>Animate</Button.Content>
</Button>

private void Button_Click(object sender, RoutedEventArgs e)
{
    DoubleAnimation animation = new DoubleAnimation();
    animation.From = Range.EndValue;
    animation.To = 80;
    animation.Duration = TimeSpan.FromSeconds(1);
    animation.EasingFunction = new SineEase();
    Range.BeginAnimation(CircularScaleRange.EndValueProperty, animation);
}
