import os
import threading
import json
import time
from datetime import datetime, timedelta
from flask import Flask, render_template, jsonify, request
import pymssql
from kafka import KafkaConsumer

# ==========================================
# 1. ì„¤ì • ë° í™˜ê²½ ë³€ìˆ˜
# ==========================================
DB_CONFIG = {
    'server': '10.222.222.222',
    'port': 1633,
    'user': 'YOUR_ID',       # ì„¤ì • í•„ìš”
    'password': 'YOUR_PASSWORD', # ì„¤ì • í•„ìš”
    'database': 'YOUR_DB'    # ì„¤ì • í•„ìš”
}

KAFKA_CONFIG = {
    'bootstrap_servers': ['10.222.222.222:1633'], # ì‹¤ì œ ì£¼ì†Œë¡œ ìˆ˜ì •
    'topic': 'YOUR_TOPIC_NAME',                  # ì‹¤ì œ í† í”½ëª…
    'group_id': 'smd-agvbmsinfo',
    'auto_offset_reset': 'earliest'
}

ADMIN_PASSWORD = "smd1234!"

app = Flask(__name__)

# ==========================================
# 2. ë°ì´í„°ë² ì´ìŠ¤ í…Œì´ë¸” ìƒì„± í•¨ìˆ˜ (ì´ˆê¸°í™”ìš©)
# ==========================================
def init_db():
    conn = pymssql.connect(**DB_CONFIG)
    cursor = conn.cursor()
    
    # 1. AGV ë§ˆìŠ¤í„° í…Œì´ë¸” (ìˆ˜ì§‘ ëŒ€ìƒ ë¦¬ìŠ¤íŠ¸)
    cursor.execute("""
    IF NOT EXISTS (SELECT * FROM sysobjects WHERE name='agv_master' AND xtype='U')
    CREATE TABLE agv_master (
        agvName NVARCHAR(50) PRIMARY KEY
    )
    """)
    
    # 2. AGV í˜„ì¬ ìƒíƒœ í…Œì´ë¸”
    cursor.execute("""
    IF NOT EXISTS (SELECT * FROM sysobjects WHERE name='agv_current' AND xtype='U')
    CREATE TABLE agv_current (
        agvId NVARCHAR(50),
        agvName NVARCHAR(50) PRIMARY KEY,
        batterySoH FLOAT,
        batteryLevel FLOAT,
        batteryCurrent FLOAT,
        batteryVoltage FLOAT,
        batteryTemperature FLOAT,
        lastReceived DATETIME
    )
    """)
    
    # 3. AGV ë¡œê·¸ í…Œì´ë¸” (ë³€í™” ì‹œ ì¸ì„œíŠ¸)
    cursor.execute("""
    IF NOT EXISTS (SELECT * FROM sysobjects WHERE name='agv_logs' AND xtype='U')
    CREATE TABLE agv_logs (
        id INT IDENTITY(1,1) PRIMARY KEY,
        agvName NVARCHAR(50),
        batterySoH FLOAT,
        batteryLevel FLOAT,
        batteryCurrent FLOAT,
        batteryVoltage FLOAT,
        batteryTemperature FLOAT,
        logTime DATETIME
    )
    """)
    
    # 4. ì„ê³„ì¹˜(Spec) ì„¤ì • í…Œì´ë¸”
    cursor.execute("""
    IF NOT EXISTS (SELECT * FROM sysobjects WHERE name='agv_specs' AND xtype='U')
    CREATE TABLE agv_specs (
        columnName NVARCHAR(50) PRIMARY KEY,
        minValue FLOAT,
        maxValue FLOAT
    )
    """)
    
    # ê¸°ë³¸ ìŠ¤í™ê°’ ì‚½ì…
    cursor.execute("IF NOT EXISTS (SELECT * FROM agv_specs) BEGIN "
                   "INSERT INTO agv_specs VALUES ('batteryLevel', 20.0, 100.0), "
                   "('batteryTemperature', 0.0, 50.0), "
                   "('batterySoH', 80.0, 100.0) END")
    
    conn.commit()
    conn.close()

# ==========================================
# 3. Kafka ì»¨ìŠˆë¨¸ ìŠ¤ë ˆë“œ (ë°±ê·¸ë¼ìš´ë“œ ì‹¤í–‰)
# ==========================================
def kafka_worker():
    print("Kafka Consumer Thread Started...")
    consumer = KafkaConsumer(
        KAFKA_CONFIG['topic'],
        bootstrap_servers=KAFKA_CONFIG['bootstrap_servers'],
        group_id=KAFKA_CONFIG['group_id'],
        auto_offset_reset=KAFKA_CONFIG['auto_offset_reset'],
        value_deserializer=lambda x: json.loads(x.decode('utf-8'))
    )

    conn = pymssql.connect(**DB_CONFIG)
    cursor = conn.cursor(as_dict=True)

    for message in consumer:
        data = message.value
        name = data.get('agvName')
        if not name: continue

        # í˜„ì¬ DBì— ì €ì¥ëœ ë§ˆì§€ë§‰ ê°’ ê°€ì ¸ì˜¤ê¸° (ë¹„êµìš©)
        cursor.execute("SELECT * FROM agv_current WHERE agvName = %s", (name,))
        last_state = cursor.fetchone()
        
        current_time = datetime.now()
        vals = (
            data.get('agvId'), name, 
            float(data.get('batterySoH', 0)), 
            float(data.get('batteryLevel', 0)),
            float(data.get('batteryCurrent', 0)), 
            float(data.get('batteryVoltage', 0)),
            float(data.get('batteryTemperature', 0)), 
            current_time
        )

        # 1. í˜„ì¬ ìƒíƒœ ì—…ë°ì´íŠ¸ (UPSERT)
        cursor.execute("""
            IF EXISTS (SELECT 1 FROM agv_current WHERE agvName = %s)
                UPDATE agv_current SET 
                    agvId=%s, batterySoH=%s, batteryLevel=%s, batteryCurrent=%s, 
                    batteryVoltage=%s, batteryTemperature=%s, lastReceived=%s
                WHERE agvName=%s
            ELSE
                INSERT INTO agv_current VALUES (%s, %s, %s, %s, %s, %s, %s, %s)
        """, (name, vals[0], vals[2], vals[3], vals[4], vals[5], vals[6], vals[7], name, 
              vals[0], name, vals[2], vals[3], vals[4], vals[5], vals[6], vals[7]))

        # 2. ë³€í™” ê°ì§€ ë¡œì§ (ê°’ì´ ë°”ë€Œì—ˆì„ ë•Œë§Œ ë¡œê·¸ ì €ì¥)
        should_log = False
        if not last_state:
            should_log = True
        else:
            # ìˆ˜ì¹˜í˜• ì»¬ëŸ¼ë“¤ ë¹„êµ
            for col in ['batterySoH', 'batteryLevel', 'batteryCurrent', 'batteryVoltage', 'batteryTemperature']:
                if abs(float(last_state[col]) - float(data.get(col, 0))) > 0.001:
                    should_log = True
                    break
        
        if should_log:
            cursor.execute("""
                INSERT INTO agv_logs (agvName, batterySoH, batteryLevel, batteryCurrent, batteryVoltage, batteryTemperature, logTime)
                VALUES (%s, %s, %s, %s, %s, %s, %s)
            """, (name, vals[2], vals[3], vals[4], vals[5], vals[6], current_time))

        conn.commit()

