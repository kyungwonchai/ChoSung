public MainWindow()
{
    InitializeComponent();
    this.tableView.RowDoubleClick += TableView_RowDoubleClick;
}

private void TableView_RowDoubleClick(object sender, DevExpress.Xpf.Grid.RowDoubleClickEventArgs e)
{
    if (e.HitInfo.InRow)
    {
        var rowHandle = e.HitInfo.RowHandle;
        var value = gridControl.GetCellValue(rowHandle, "abc");
        MessageBox.Show($"Value in 'abc' column: {value}");
    }
}
