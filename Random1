using DevExpress.XtraEditors;

// ...

ListBoxControl[] listBoxControls = new ListBoxControl[] { ListBoxControl1, ListBoxControl2, ListBoxControl3, ListBoxControl4, ListBoxControl5 };

foreach (ListBoxControl listBoxControl in listBoxControls)
{
    // ListBoxControl에 원하는 작업 수행
    listBoxControl.Appearance.BackColor = System.Drawing.Color.Yellow;
    listBoxControl.Appearance.Options.UseBackColor = true;
    listBoxControl.Appearance.ForeColor = System.Drawing.Color.Black;
    listBoxControl.Appearance.Font = new System.Drawing.Font("굴림체", 11);
    listBoxControl.Appearance.Options.UseBorderColor = true;
    listBoxControl.Appearance.BorderColor = System.Drawing.Color.Red;
    // 필요한 다른 작업 수행
    
    // 추가적인 반복 작업
}
