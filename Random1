import pandas as pd
from datetime import datetime

# 엑셀 파일 읽기
df = pd.read_excel('input.xlsx')

# 날짜/시간 값 변환 함수
def format_datetime(value):
    # 원하는 형식으로 날짜/시간 값을 변환
    datetime_obj = datetime.strptime(value, '%Y-%m-%d %p %I:%M:%S')
    formatted_datetime = datetime_obj.strftime('%Y-%m-%d %H:%M:%S')
    return formatted_datetime

# 'datetime_column' 열에 있는 값을 변환하여 'formatted_datetime_column' 열에 저장
df['formatted_datetime_column'] = df['datetime_column'].apply(format_datetime)

# 변환된 데이터프레임을 새로운 엑셀 파일로 저장
df.to_excel('output.xlsx', index=False)
