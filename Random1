function checkTimeDifference(timeString, row) {
    // 시간 문자열을 JavaScript Date 객체로 변환
    const time = new Date(timeString);
    const currentTime = new Date();
    const timeDifference = Math.floor((currentTime - time) / 1000);

    // 현재 시간 대비 30초 이상 차이가 나면 모든 도형을 회색으로 변경
    if (timeDifference > 30) {
        const circles = row.querySelectorAll('.circle');
        circles.forEach(circle => {
            circle.classList.remove('red', 'green'); // 기존 색상 제거
            circle.classList.add('gray'); // 회색으로 설정
        });
    } else {
        // 30초 이하일 때는 원래 색상 유지
        const sensor1 = row.querySelector('.circle-container').dataset.sensor1;
        const circles = row.querySelectorAll('.circle');
        sensor1.split('').forEach((value, index) => {
            const circle = circles[index];
            if (circle) {
                circle.className = 'circle ' + (value === '1' ? 'red' : 'green');
            }
        });
    }
}
