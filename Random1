    <!-- 컬럼 헤더 스타일 -->
    <Style x:Key="CustomColumnHeaderStyle" TargetType="dxg:GridColumnHeader">
        <!-- 배경색을 파랑으로 설정 -->
        <Setter Property="Background" Value="Blue"/>
        <!-- 글자색을 흰색으로 설정 -->
        <Setter Property="Foreground" Value="White"/>
        <!-- 텍스트 정렬을 가운데로 설정 -->
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>
</Window.Resources>
