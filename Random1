<Window x:Class="MessageApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    
    <Grid>
        <!-- 메시지를 표시할 DataGrid -->
        <DataGrid ItemsSource="{Binding Messages}" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <!-- 메시지 텍스트 열 -->
                <DataGridTextColumn Header="Message" Binding="{Binding Text}" Width="*"/>
                <!-- 메시지 생성 시간 열, 정확한 날짜 형식 설정 -->
                <DataGridTextColumn Header="Timestamp">
                    <DataGridTextColumn.Binding>
                        <Binding Path="Timestamp" StringFormat="{}{0:yyyy-MM-dd HH:mm:ss.fff}" />
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
