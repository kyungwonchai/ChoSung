using System;
using System.Linq;
using System.Windows.Forms;

namespace YourNamespace
{
    public partial class YourForm : Form
    {
        public YourForm()
        {
            InitializeComponent();
        }

        private void AddHandler(EventHandler handler)
        {
            var eventHandlerList = Button1.Click.GetInvocationList();
            if (!eventHandlerList.Contains(handler))
            {
                Button1.Click += handler;
            }
        }

        private void RemoveHandler(EventHandler handler)
        {
            Button1.Click -= handler;
        }

        private void FunctionA(object sender, EventArgs e)
        {
            // FunctionA의 코드를 여기에 작성합니다.
            MessageBox.Show("FunctionA Called");
        }

        private void FunctionB(object sender, EventArgs e)
        {
            // FunctionB의 코드를 여기에 작성합니다.
            MessageBox.Show("FunctionB Called");
        }

        private void OtherMethod()
        {
            // 이벤트 핸들러를 추가하거나 제거합니다.
            AddHandler(FunctionA);
            AddHandler(FunctionB);
            AddHandler(FunctionA);  // FunctionA는 이미 추가되었으므로 무시됩니다.
            RemoveHandler(FunctionB);
        }
    }
}
