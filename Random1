using System;
using System.Windows.Forms;
using WindowsDesktop;

namespace YourWinFormsApp
{
    public partial class MainForm : Form
    {
        public MainForm()
        {
            InitializeComponent();
            VirtualDesktop.CurrentChanged += VirtualDesktop_CurrentChanged;
        }

        private void VirtualDesktop_CurrentChanged(object sender, EventArgs e)
        {
            // 현재 데스크탑 변경 시 WinForms 프로그램도 이동시키는 로직을 추가합니다.
            VirtualDesktop currentDesktop = VirtualDesktop.Current;
            if (currentDesktop != null)
            {
                VirtualDesktopHelper.MoveToDesktop(Handle, currentDesktop);
            }
        }
    }
}
