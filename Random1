using DevExpress.XtraGrid.Views.Grid;
using DevExpress.XtraGrid.Views.Card;
using DevExpress.XtraGrid;

// Form 클래스 내부에서 필요한 멤버 변수 선언
private GridView gridView;
private CardView cardView;
private GridControl gridControl;
private Button switchButton;

// Form 생성자 또는 Load 이벤트 핸들러에서 컨트롤 초기화 및 이벤트 핸들러 등록
public Form1()
{
    InitializeComponent();
    
    // GridControl 생성
    gridControl = new GridControl();
    gridControl.Dock = DockStyle.Fill;

    // GridView 생성 및 이벤트 핸들러 등록
    gridView = new GridView(gridControl);
    gridView.OptionsView.ShowGroupPanel = false;
    gridView.OptionsView.ShowIndicator = false;

    // CardView 생성 및 이벤트 핸들러 등록
    cardView = new CardView(gridControl);
    cardView.CardWidth = 300;
    cardView.CardHeight = 200;

    // Switch 버튼 생성
    switchButton = new Button();
    switchButton.Text = "Switch View";
    switchButton.Dock = DockStyle.Bottom;
    switchButton.Click += SwitchButton_Click;

    // GridControl에 초기로 GridView 연결
    gridControl.MainView = gridView;
    gridControl.ViewCollection.AddRange(new BaseView[] { gridView, cardView });

    // 컨트롤을 Form에 추가
    Controls.Add(gridControl);
    Controls.Add(switchButton);
}

// Switch 버튼 클릭 이벤트 핸들러
private void SwitchButton_Click(object sender, EventArgs e)
{
    // 현재 보여지고 있는 뷰 확인
    if (gridControl.MainView == gridView)
    {
        // 현재 GridView이면 CardView로 전환
        gridControl.MainView = cardView;
    }
    else if (gridControl.MainView == cardView)
    {
        // 현재 CardView이면 GridView로 전환
        gridControl.MainView = gridView;
    }
}
