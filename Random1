using DevExpress.XtraCharts;
using DevExpress.XtraPivotGrid;

// PivotGridControl 생성 및 설정
PivotGridControl pivotGrid = new PivotGridControl();
// PivotGrid 설정 코드 생략

// DataTable 생성
DataTable dataTable = new DataTable();
foreach (PivotGridField field in pivotGrid.Fields)
{
    dataTable.Columns.Add(field.FieldName, typeof(object));
}
for (int i = 0; i < pivotGrid.RowCount; i++)
{
    DataRow dataRow = dataTable.NewRow();
    foreach (PivotGridField field in pivotGrid.Fields)
    {
        dataRow[field.FieldName] = pivotGrid.GetCellValue(field, i);
    }
    dataTable.Rows.Add(dataRow);
}

// ChartControl 생성
ChartControl chartControl = new ChartControl();

// Series 생성
Series series = new Series("성공횟수", ViewType.Bar);
series.ArgumentDataMember = "날짜";
series.ValueDataMembers.AddRange("성공횟수");

// Series 추가
chartControl.Series.Add(series);

// 데이터 바인딩
chartControl.DataSource = dataTable;

// ChartControl 표시
chartControl.Dock = DockStyle.Fill;
this.Controls.Add(chartControl);
