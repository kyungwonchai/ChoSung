using DevExpress.XtraEditors;

// OverlayPanel 생성
OverlayPanel overlayPanel = new OverlayPanel();
overlayPanel.ShowCloseButton = false; // 닫기 버튼 숨김

// Label 생성
LabelControl label = new LabelControl();
label.Text = "Your Text"; // 표시할 텍스트 설정
label.Appearance.Font = new Font("Arial", 10, FontStyle.Bold); // 글자 스타일 설정
label.Appearance.ForeColor = Color.White; // 글자 색상 설정
label.AutoSizeMode = LabelAutoSizeMode.None; // 자동 크기 조정 비활성화
label.Dock = DockStyle.Fill; // 전체 영역에 표시되도록 설정
label.Appearance.TextOptions.HAlignment = DevExpress.Utils.HorzAlignment.Center; // 가운데 정렬

// OverlayPanel에 Label 추가
overlayPanel.Controls.Add(label);

// OverlayPanel을 부모 컨트롤에 추가
// 부모 컨트롤.Controls.Add(overlayPanel);
