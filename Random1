private void Form1_Load(object sender, EventArgs e)
{
    // MouseClick 이벤트 핸들러를 등록합니다.
    this.chartControl1.MouseClick += chartControl1_MouseClick;
}

private void chartControl1_MouseClick(object sender, MouseEventArgs e)
{
    ChartHitInfo hi = chartControl1.CalcHitInfo(e.X, e.Y);

    if (hi.InSeries || hi.InSeriesLabel || hi.InSeriesPoint)
    {
        SeriesPoint point = hi.SeriesPoint;
        MessageBox.Show($"클릭된 시리즈: {hi.Series.Name}, X값: {point.Argument}, Y값: {point.Values[0]}");
    }
}
