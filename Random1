private void chartControl1_ChartClick(object sender, ChartClickEventArgs e)
{
    // Get the series that was clicked.
    ChartSeries series = chartControl1.Series[e.SeriesIndex];

    // Get the value of the bar that was clicked.
    double value = series.Values[e.BarIndex];

    // Display the value and series name in a message box.
    MessageBox.Show("Value: " + value + ", Series Name: " + series.Name);
}
