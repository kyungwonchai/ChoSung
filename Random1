public partial class MainForm : Form
{
    public MainForm()
    {
        InitializeComponent();

        // 여기서 TrackBar의 속성을 설정할 수 있습니다.
        trackBarControl1.Properties.Minimum = 0;
        trackBarControl1.Properties.Maximum = 1000; // 예를 들어, 1000으로 설정
    }

    private void trackBarControl1_EditValueChanged(object sender, EventArgs e)
    {
        double position = trackBarControl1.Value / (double)trackBarControl1.Properties.Maximum;
        videoView1.SourceProvider.MediaPlayer.Position = (float)position;

        // 시간 표시
        TimeSpan time = TimeSpan.FromMilliseconds(videoView1.SourceProvider.MediaPlayer.Length * position);
        lblTime.Text = time.ToString(@"hh\:mm\:ss");
    }
}
