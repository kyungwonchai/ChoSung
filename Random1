<dxg:GridControl x:Name="gridControl1">
    <dxg:GridControl.Columns>
        <dxg:GridColumn FieldName="ConfirmDate">
            <dxg:GridColumn.CellStyle>
                <Style TargetType="dxg:CellContentPresenter">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding RowData.Row.ConfirmDate}" Value="YourFirstCondition">
                            <Setter Property="Background" Value="LightBlue"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding RowData.Row.ConfirmDate}" Value="YourSecondCondition">
                            <Setter Property="Background" Value="LightGreen"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </dxg:GridColumn.CellStyle>
        </dxg:GridColumn>
    </dxg:GridControl.Columns>
</dxg:GridControl>
