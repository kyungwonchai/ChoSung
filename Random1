using DevExpress.XtraGrid.Columns;
using DevExpress.XtraGrid.Views.Grid;

// GridControl의 GridView 설정
GridView gridView = gridView1; // GridView1은 GridControl에 바인딩된 GridView 객체를 가정합니다.

// 컬럼 헤더 정렬 설정
gridView.ColumnPanelRowHeight = 30; // 컬럼 헤더 높이 설정
gridView.Appearance.HeaderPanel.TextOptions.HAlignment = DevExpress.Utils.HorzAlignment.Center; // 헤더 텍스트 가운데 정렬

// 컬럼 셀값 정렬 설정
gridView.Appearance.Row.TextOptions.HAlignment = DevExpress.Utils.HorzAlignment.Center; // 셀 텍스트 가운데 정렬

// 모든 컬럼에 대해 텍스트 정렬 설정
foreach (GridColumn column in gridView.Columns)
{
    column.AppearanceCell.TextOptions.HAlignment = DevExpress.Utils.HorzAlignment.Center; // 셀 텍스트 가운데 정렬
}
