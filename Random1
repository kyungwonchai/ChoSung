private void pivotGridControl1_CellClick(object sender, DevExpress.XtraPivotGrid.PivotCellEventArgs e)
{
    if (e.HitInfo.HitTest == DevExpress.XtraPivotGrid.PivotGridHitTest.Cell)
    {
        PivotDrillDownDataSource ds = e.CreateDrillDownDataSource();
        if (ds.RowCount > 0)
        {
            // Here 'VISA_IP' is the name of the field.
            object value = ds[0]["VISA_IP"];
            MessageBox.Show(value.ToString(), "Cell Click");
        }
    }
}
