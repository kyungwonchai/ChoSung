using DevExpress.XtraEditors;
using System.Drawing;
using System.Windows.Forms;

private void radioGroup1_SelectedIndexChanged(object sender, EventArgs e)
{
    RadioGroup radioGroup = (RadioGroup)sender;

    foreach (RadioGroupItem item in radioGroup.Properties.Items)
    {
        // 선택된 옵션에 대한 커스텀 스타일 적용
        if (item.Value.Equals(radioGroup.EditValue))
        {
            item.Appearance.BackColor = Color.Yellow; // 선택된 옵션의 배경색을 노란색으로 설정
            item.Appearance.ForeColor = Color.Red; // 선택된 옵션의 글자색을 빨간색으로 설정
        }
        else
        {
            // 선택되지 않은 옵션에 대한 기본 스타일 적용
            item.Appearance.Reset();
        }
    }
}
