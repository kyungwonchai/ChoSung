using System;
using System.Threading;
using System.Windows.Forms;

namespace YourWinFormsApp
{
    static class Program
    {
        static Mutex mutex = new Mutex(true, "{5C6A81C2-1A05-4B8E-8339-80B2F4AEFD8B}");

        [STAThread]
        static void Main()
        {
            if (mutex.WaitOne(TimeSpan.Zero, true))
            {
                Application.EnableVisualStyles();
                Application.SetCompatibleTextRenderingDefault(false);
                Application.Run(new MainForm());
                mutex.ReleaseMutex();
            }
            else
            {
                // 이미 다른 인스턴스가 실행 중이므로 중복 실행 방지
                MessageBox.Show("프로그램은 이미 실행 중입니다.", "경고", MessageBoxButtons.OK, MessageBoxIcon.Warning);
            }
        }
    }
}
