using DevExpress.XtraGrid.Views.BandedGrid;
// ...

private void Form1_Load(object sender, EventArgs e)
{
    // GridControl 설정
    gridControl1.DataSource = // 여기에 데이터 소스 설정;

    // BandedGridView 인스턴스 생성
    BandedGridView view = new BandedGridView();
    gridControl1.ViewCollection.Add(view);
    gridControl1.MainView = view;

    // 그룹 제목 설정
    GridBand band1 = view.Bands.AddBand("제목 1");
    GridBand band2 = view.Bands.AddBand("제목 2");

    // 열 추가
    BandedGridColumn column1 = view.Columns.AddField("열1");
    column1.Visible = true;
    column1.OwnerBand = band1;
  
    BandedGridColumn column2 = view.Columns.AddField("열2");
    column2.Visible = true;
    column2.OwnerBand = band2;
  
    // 합계 열 설정
    BandedGridColumn totalColumn = view.Columns.AddField("합계");
    totalColumn.Visible = true;
    totalColumn.OwnerBand = band1; // 합계 열을 band1과 연결
    totalColumn.SummaryItem.SummaryType = DevExpress.Data.SummaryItemType.Sum; // 합계 계산 방법 설정

    // 그룹과 연결
    band1.Children.Add(totalColumn);
}
