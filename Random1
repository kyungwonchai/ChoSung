public partial class MainForm : Form
{
    public MainForm()
    {
        InitializeComponent();

        // 유저 컨트롤 인스턴스 생성
        MediaPlayerControl mediaPlayerControl = new MediaPlayerControl();

        // Panel 안에 도킹 설정
        mediaPlayerControl.Dock = DockStyle.Fill;

        // Panel에 유저 컨트롤 추가
        panel1.Controls.Add(mediaPlayerControl);

        // 필요한 파일 재생
        mediaPlayerControl.PlayFile("경로");
    }
}
