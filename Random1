private void GridView1_CustomButtonCallback(object sender, CustomButtonCallbackEventArgs e)
{
    GridView view = sender as GridView;
    int rowHandle = e.RowHandle;

    if (view == null || rowHandle < 0)
        return;

    string columnName = view.Columns[e.Button.Tag.ToString()].FieldName;

    switch (columnName)
    {
        case "Request":
            // 신청 버튼 클릭 시 동작
            string productCodeRequest = view.GetRowCellValue(rowHandle, "ProductCode").ToString();
            // 신청 처리 로직 작성
            break;
        case "Receipt":
            // 입고 버튼 클릭 시 동작
            string productCodeReceipt = view.GetRowCellValue(rowHandle, "ProductCode").ToString();
            // 입고 처리 로직 작성
            break;
        case "Shipment":
            // 출고 버튼 클릭 시 동작
            string productCodeShipment = view.GetRowCellValue(rowHandle, "ProductCode").ToString();
            // 출고 처리 로직 작성
            break;
        default:
            break;
    }
}
