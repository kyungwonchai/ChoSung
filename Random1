using System;
using System.IO;

// WebView2 컨트롤이 사용하는 캐시 폴더 경로
string cacheFolder = @"your_cache_folder_path_here";  // 실제 경로로 대체해주세요

try
{
    if (Directory.Exists(cacheFolder))
    {
        Directory.Delete(cacheFolder, true);
    }

    // WebView2 컨트롤 초기화
    webView2.EnsureCoreWebView2Async(null, cacheFolder);
}
catch (IOException e)
{
    Console.WriteLine("An I/O error occurred: {0}", e.Message);
}
catch (UnauthorizedAccessException e)
{
    Console.WriteLine("You don't have the required permission: {0}", e.Message);
}
