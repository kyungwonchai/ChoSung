public class Program
{
    public static async Task Main(string[] args)
    {
        var producer = new KafkaProducer("your_kafka_broker:9092", "your_topic_name");
        
        // 예시 데이터 테이블 생성
        DataTable dataTable = new DataTable();
        dataTable.Columns.Add("Column1", typeof(int));
        dataTable.Columns.Add("Column2", typeof(string));
        dataTable.Rows.Add(1, "row1");
        dataTable.Rows.Add(2, "row2");

        // 데이터 테이블을 문자열로 변환
        string dataTableString = DataTableConverter.ConvertDataTableToString(dataTable);

        // Kafka로 데이터 테이블 문자열 전송
        await producer.SendDataTableAsync(dataTableString); // 이전 예시의 메서드를 적절히 수정하여 문자열을 처리하도록 해야 합니다.
    }
}
