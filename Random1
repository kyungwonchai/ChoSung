using DevExpress.Xpf.Grid;
using System.Windows;

namespace WpfApp1
{
    public partial class MainWindow : Window
    {
        public MainWindow()
        {
            InitializeComponent();
        }

        private void Button_Click(object sender, RoutedEventArgs e)
        {
            if (gridControl1.GetFocusedRow() is YourDataRowType row)
            {
                MessageBoxResult result = MessageBox.Show("행을 추가하시겠습니까?", "행 추가", MessageBoxButton.YesNo);
                if (result == MessageBoxResult.Yes)
                {
                    // 바로 윗 행의 값 가져오기
                    string columnA = row.ColumnA;
                    int newColumnA = int.Parse(columnA) + 1;

                    // DB에 Insert (데이터베이스 코드는 예시입니다.)
                    // SqlConnection conn = new SqlConnection("your_connection_string_here");
                    // SqlCommand cmd = new SqlCommand($"INSERT INTO your_table (ColumnA) VALUES ({newColumnA})", conn);
                    // cmd.ExecuteNonQuery();

                    // 그리드에 행 추가
                    YourDataRowType newRow = new YourDataRowType
                    {
                        ColumnA = newColumnA.ToString(),
                        // ... (확정일, 구분, 라인 등 다른 필드 설정)
                    };
                    yourDataList.Add(newRow);
                }
            }
        }
    }
    
    public class YourDataRowType
    {
        public string ColumnA { get; set; }
        // 여기에 확정일, 구분, 라인 등의 프로퍼티를 추가하세요.
    }
}
