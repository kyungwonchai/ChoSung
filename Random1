// GridControl의 뷰를 TableView로 캐스팅
TableView tableView = gridControl.View as TableView;

if (tableView != null)
{
    // 컬럼 이름으로 컬럼 객체를 찾습니다.
    string columnName = "YourColumnName"; // 여기에 실제 컬럼 이름을 입력합니다.
    GridColumn column = tableView.Columns.FirstOrDefault(c => c.FieldName == columnName);

    if (column != null)
    {
        // 컬럼의 인덱스를 찾습니다.
        int columnIndex = tableView.Columns.IndexOf(column);
        
        // 인덱스를 활용하는 코드 (예: 출력)
        Console.WriteLine($"Column '{columnName}' is at index {columnIndex}.");
    }
    else
    {
        // 컬럼을 찾을 수 없는 경우
        Console.WriteLine($"Column '{columnName}' not found.");
    }
}
