<dxg:GridControl x:Name="gridControl1">
    <!-- GridControl 설정 -->
    <dxg:GridControl.Columns>
        <!-- 기타 열 설정 -->
        <dxg:GridColumn FieldName="YourFieldName">
            <dxg:GridColumn.CellTemplate>
                <DataTemplate>
                    <TextBlock x:Name="cellText" Text="{Binding Value}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsFocusedCell, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=dxg:CellControl}}" Value="True">
                                        <Setter Property="Foreground" Value="Blue" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </DataTemplate>
            </dxg:GridColumn.CellTemplate>
        </dxg:GridColumn>
    </dxg:GridControl.Columns>
</dxg:GridControl>
