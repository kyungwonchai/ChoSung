using System;
using System.Drawing;
using System.Windows.Forms;
using DevExpress.XtraEditors;

namespace MouseColorPicker
{
    public partial class Form1 : XtraForm
    {
        private bool colorPickerMode = false;

        public Form1()
        {
            InitializeComponent();
        }

        private void Form1_Load(object sender, EventArgs e)
        {
            MouseMove += Form1_MouseMove;
        }

        private void btnToggleMode_Click(object sender, EventArgs e)
        {
            colorPickerMode = !colorPickerMode;
            btnToggleMode.Text = colorPickerMode ? "해제 모드" : "표시 모드";

            if (!colorPickerMode)
            {
                txtRed.EditValue = "";
                txtGreen.EditValue = "";
                txtBlue.EditValue = "";
            }
        }

        private void Form1_MouseMove(object sender, MouseEventArgs e)
        {
            if (colorPickerMode)
            {
                Color pixelColor = GetPixelColor(e.Location);
                txtRed.EditValue = pixelColor.R;
                txtGreen.EditValue = pixelColor.G;
                txtBlue.EditValue = pixelColor.B;
            }
        }

        private Color GetPixelColor(Point location)
        {
            using (Bitmap bitmap = new Bitmap(1, 1))
            {
                using (Graphics graphics = Graphics.FromImage(bitmap))
                {
                    graphics.CopyFromScreen(location, Point.Empty, bitmap.Size);
                }

                return bitmap.GetPixel(0, 0);
            }
        }
    }
}
