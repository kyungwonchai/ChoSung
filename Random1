private void tableView_CellStyle(object sender, DevExpress.Xpf.Grid.GridCellStyleEventArgs e)
{
    if (e.RowHandle < 0)
        return;

    if (e.Column.FieldName == "Key1")
    {
        object value = gridControl.GetCellValue(e.RowHandle, e.Column);
        if (lista.Contains(value))
        {
            e.Appearance = new DevExpress.Xpf.Grid.GridCellStateAppearance()
            {
                Background = Brushes.Yellow,
                Foreground = Brushes.Black
            };
        }
    }
}
