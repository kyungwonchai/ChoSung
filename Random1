            // TODO: 필요한 작업 수행
            break;

        case "Option2":
            // Option2를 선택한 경우
            // TODO: 필요한 작업 수행
            break;

        // 추가적인 옵션들에 대한 처리도 동일한 방식으로 진행
    }
}
