using System;
using System.Threading;
using System.Windows.Forms;

public class MyForm : Form
{
    private Label lblStatus;
    private Thread backgroundThread;

    public MyForm()
    {
        lblStatus = new Label { Text = "ì´ˆê¸° ìƒíƒœ", Dock = DockStyle.Top };
        Controls.Add(lblStatus);

        // ì°½ ìµœì†Œí™” ì´ë²¤íŠ¸ í•¸ë“¤ëŸ¬ ì¶”ê°€
        this.Resize += Form_Resize;

        // ë°±ê·¸ë¼ìš´ë“œ ì‘ì—… ì‹œì‘
        backgroundThread = new Thread(UpdateLabel);
        backgroundThread.IsBackground = true;
        backgroundThread.Start();
    }

    private void Form_Resize(object sender, EventArgs e)
    {
        if (this.WindowState == FormWindowState.Minimized)
        {
            // ìµœì†Œí™” ì‹œ UI ì—…ë°ì´íŠ¸ (Invoke ì‚¬ìš©)
            lblStatus.Invoke((MethodInvoker)(() => lblStatus.Text = "ì°½ ìµœì†Œí™”ë¨"));
        }
    }

    private void UpdateLabel()
    {
        while (true)
        {
            Thread.Sleep(2000); // 2ì´ˆë§ˆë‹¤ ì‹¤í–‰
            lblStatus.Invoke((MethodInvoker)(() => lblStatus.Text = $"ì—…ë°ì´íŠ¸ ì‹œê°„: {DateTime.Now}"));
        }
    }

    [STAThread]
    static void Main()
    {
        Application.EnableVisualStyles();
        Application.SetCompatibleTextRenderingDefault(false);
        Application.Run(new MyForm());
    }
}
