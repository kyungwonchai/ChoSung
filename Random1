                    <th>Sensors</th>
                    <th>Time</th>
                    <th>Duration (2nd Sensor)</th>
                </tr>
            </thead>
            <tbody>
                {% for item in data %}
                <tr data-ip="{{ item.ip }}">
                    <td>{{ item.ip }}</td>
                    <td>
                        <div class="circle-container">
                            {% for char in item.sensor1 %}
                            <span class="circle {% if char == '1' %}red{% else %}green{% endif %}"
                                  {% if loop.index0 == 1 %}class="second-sensor"{% endif %}>
                            </span>
                            {% endfor %}
                        </div>
                    </td>
                    <td class="time-cell">{{ item.time1 }}</td>
                    <td id="duration-{{ item.ip }}">Not active yet</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
