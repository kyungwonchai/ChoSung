using System;
using System.IO;

class Program
{
    static void Main()
    {
        string folderPath = @"C:\11";

        // 폴더가 존재하는지 확인
        if (Directory.Exists(folderPath))
        {
            // 폴더 내의 모든 파일 가져오기
            string[] files = Directory.GetFiles(folderPath);

            // 각 파일을 순회하며 삭제
            foreach (string filePath in files)
            {
                File.Delete(filePath);
            }

            Console.WriteLine("폴더 내의 파일이 모두 삭제되었습니다.");
        }
        else
        {
            Console.WriteLine("지정된 폴더가 존재하지 않습니다.");
        }
    }
}
