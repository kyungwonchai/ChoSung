using System;
using System.IO;

class Program
{
    static void Main()
    {
        string downloadFolder = Environment.GetFolderPath(Environment.SpecialFolder.UserProfile) + @"\Downloads";

        try
        {
            string[] excelFiles = Directory.GetFiles(downloadFolder, "*.xlsx");

            if (excelFiles.Length == 0)
            {
                Console.WriteLine("ë‹¤ìš´ë¡œë“œ í´ë”ì— .xlsx íŒŒì¼ì´ ì—†ìŠµë‹ˆë‹¤.");
            }
            else
            {
                Console.WriteLine(".xlsx íŒŒì¼ ëª©ë¡:");
