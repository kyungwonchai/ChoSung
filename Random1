public void DeleteRecipient(int recipientID)
{
    DataRow[] recipientRows = dataSet.Tables["Recipients"].Select($"ID = {recipientID}");
    if (recipientRows.Length > 0)
    {
        DataRow recipientRow = recipientRows[0];
        recipientRow.Delete();
        recipientsDataAdapter.Update(dataSet, "Recipients");
    }
}
