string value = tb_record_now.Rows[0][3].ToString(); // 값 가져오기
string result = "ng"; // 결과를 'ng'로 초기화
string[] parts = value.Split(':'); // ':'로 나누기

// 첫 번째 부분이 있는지 확인하고 숫자로 변환할 수 있는지 확인
if (parts.Length > 0 && double.TryParse(parts[0], out double number))
{
    // 숫자가 0~5 사이인지 확인
    if (number >= 0 && number <= 5)
    {
        result = "ok"; // 조건을 만족하면 'ok'로 변경
    }
}

Console.WriteLine(result); // 결과 출력
