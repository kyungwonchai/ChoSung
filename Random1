                     </dxc:ChartControl>
                </GroupBox>

                <GroupBox Grid.Row="1" Grid.Column="0" Header="층별 현황" Margin="0,5,5,5">
                     <dxg:GridControl ItemsSource="{Binding StatusByFloor}" AutoGenerateColumns="None">
