string connString = "your_connection_string";
string query = "SELECT * FROM your_table";

DataTable dt = new DataTable();

using(SqlConnection conn = new SqlConnection(connString))
{
    conn.Open();
    using(SqlCommand cmd = new SqlCommand(query, conn))
    {
        SqlDataAdapter da = new SqlDataAdapter(cmd);
        da.Fill(dt);
    }
}

// 도넛 차트 생성
ChartControl doughnutChart = new ChartControl();
doughnutChart.Location = new Point(50, 50); // 도넛 차트의 위치를 설정
Series DDSeries1 = new Series("DDSeries1", ViewType.Doughnut);

// '수행횟수'를 전체로 보고, '실패횟수'를 '수행횟수'로 나눈 값을 사용합니다.
double totalCount = Convert.ToDouble(dt.Rows[0]["수행횟수"]);
double failCount = Convert.ToDouble(dt.Rows[0]["실패횟수"]);

DDSeries1.Points.Add(new SeriesPoint("수행", totalCount));
DDSeries1.Points.Add(new SeriesPoint("실패", failCount / totalCount * 100));

doughnutChart.Series.Add(DDSeries1);
this.Controls.Add(doughnutChart);

// 라벨 컨트롤 생성
LabelControl label = new LabelControl();
label.Text = $"수행: {totalCount}회\n실패: {failCount}회";
label.Location = new Point(doughnutChart.Location.X + doughnutChart.Width / 2, doughnutChart.Location.Y + doughnutChart.Height / 2); // 라벨의 위치를 도넛 차트의 중앙으로 설정
label.BringToFront(); // 라벨을 차트 위에 오버레이합니다.

this.Controls.Add(label);

// 나머지 차트 작업...
