private void gridControl1_FocusedRowChanged(object sender, FocusedRowChangedEventArgs e)
{
    int rowHandle = view.FocusedRowHandle;  // 여기서 'view'는 GridControl의 GridView입니다.
  
    object key1Value = gridControl1.GetCellValue(rowHandle, "Key1");
  
    if (key1Value != null)
    {
        OnEdit(key1Value.ToString(), "someColumn");
    }
}
