using System;
using System.Collections.Generic;
using System.Windows.Forms;

namespace AddressList
{
    public partial class MainForm : Form
    {
        private Dictionary<string, string> addressList;

        public MainForm()
        {
            InitializeComponent();
            addressList = new Dictionary<string, string>();

            // 주소 목록 초기화
            addressList.Add("Address1", "mssc1");
            addressList.Add("Address2", "mssc2");
            addressList.Add("Address3", "mssc3");
            addressList.Add("Address4", "mssc4");
            addressList.Add("Address5", "mssc5");

            // ListView에 주소 목록 추가
            foreach (var item in addressList)
            {
                ListViewItem listItem = new ListViewItem(item.Key);
                listItem.SubItems.Add(item.Value);
                listView1.Items.Add(listItem);
            }

            // 이벤트 핸들러 등록
            listView1.DoubleClick += ListViewDoubleClick;
            textBox1.KeyUp += TextBoxKeyUp;
        }

        private void ListViewDoubleClick(object sender, EventArgs e)
        {
            if (listView1.SelectedItems.Count > 0)
            {
                string selectedID = listView1.SelectedItems[0].SubItems[1].Text;
                ConnectToMssc(selectedID);
            }
        }

        private void TextBoxKeyUp(object sender, KeyEventArgs e)
        {
            if (e.KeyCode == Keys.Enter)
            {
                string enteredID = textBox1.Text;
                ConnectToMssc(enteredID);
            }
        }

        private void ConnectToMssc(string id)
        {
            // "mssc"로 접속하는 로직을 구현하세요.
            // 예를 들어, 다른 프로세스나 웹 브라우저를 실행하여 해당 ID로 접속하는 등의 방식으로 구현할 수 있습니다.
            // 여기서는 간단히 메시지 박스로 ID를 출력하는 예시를 보여드리겠습니다.
            MessageBox.Show("Connecting to mssc with ID: " + id);
        }
    }
}
