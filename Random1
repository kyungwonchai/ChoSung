private void PrintButton_Click(object sender, RoutedEventArgs e)
{
    PrintDialog printDialog = new PrintDialog();
    if (printDialog.ShowDialog() == true)
    {
        // DrawingVisual을 생성하여 인쇄할 내용을 준비
        DrawingVisual drawingVisual = new DrawingVisual();
        using (DrawingContext drawingContext = drawingVisual.RenderOpen())
        {
            // 여백 설정: 여기서는 좌상단에 96단위(1인치) 여백을 추가
            VisualBrush visualBrush = new VisualBrush(grid1);
            drawingContext.DrawRectangle(visualBrush, null, new Rect(96, 96, grid1.ActualWidth, grid1.ActualHeight));
            
            // QR 코드 추가
            if (qrCodeImage.Source != null)
            {
                drawingContext.DrawImage(qrCodeImage.Source, new Rect(96 + grid1.ActualWidth - 19, 96 + grid1.ActualHeight - 19, 19, 19));
            }
        }

        // 설정된 DrawingVisual을 인쇄
        printDialog.PrintVisual(drawingVisual, "Printing with Margin");
    }
}
