import pandas as pd
from datetime import datetime

# Sample data
assignments = [
    {'Assignment': 'Homework 1', 'Start Date': '2023-07-10'},
    {'Assignment': 'Project 2', 'Start Date': '2023-07-12'},
    {'Assignment': 'Quiz 3', 'Start Date': '2023-07-15'}
]

# Create the DataFrame
df = pd.DataFrame(assignments)

# Convert the 'Start Date' column to datetime
df['Start Date'] = pd.to_datetime(df['Start Date'])

# Calculate the elapsed days
df['Elapsed Days'] = (datetime.now() - df['Start Date']).dt.days

# Initialize the 'Status' column with a default value
df['Status'] = 'In Progress'

# Print the resulting DataFrame
print(df)
