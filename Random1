Sub SplitCommaToRows()
    Dim inputString As String
    Dim stringParts() As String
    Dim i As Integer
    Dim targetRow As Integer

    ' 분할할 문자열 설정
    inputString = "홍길동>gsds@ggsdgsg>, 홍길이<gsdgsg@gsgs125g>"
    
    ' 쉼표(,)로 문자열 분리
    stringParts = Split(inputString, ",")
    
    ' 결과를 출력할 시작 행 번호
    targetRow = 1
    
    ' 분리된 문자열을 행별로 출력
    For i = LBound(stringParts) To UBound(stringParts)
        Cells(targetRow, 1).Value = Trim(stringParts(i))
        targetRow = targetRow + 1
    Next i
End Sub
