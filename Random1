// 차트 컨트롤 초기화
ChartControl chart = new ChartControl();

// 데이터 소스 설정
chart.DataSource = dt;

// 도넛 차트 시리즈 생성
Series series1 = new Series("Series 1", ViewType.Doughnut);

// 시리즈의 인수와 값을 설정합니다.
series1.ArgumentDataMember = "IPAddress";
series1.ValueDataMembers.AddRange(new string[] { "수행횟수" , "실패횟수"});

// 차트에 도넛 차트 시리즈 추가
chart.Series.Add(series1);

// 막대 그래프와 선 그래프를 생성합니다.
Series series2 = new Series("Series 2", ViewType.Bar);
Series series3 = new Series("Series 3", ViewType.Line);

// 시리즈의 인수와 값을 설정합니다.
series2.ArgumentDataMember = "날짜";
series2.ValueDataMembers.AddRange(new string[] { "시도횟수" });

series3.ArgumentDataMember = "날짜";
series3.ValueDataMembers.AddRange(new string[] { "성공율" });

// 차트에 막대 그래프와 선 그래프 추가
chart.Series.Add(series2);
chart.Series.Add(series3);

// 각 시리즈에 대한 축을 설정합니다.
((XYDiagram)chart.Diagram).SecondaryAxesY.Add(new SecondaryAxisY("성공율"));
((LineSeriesView)series3.View).AxisY = ((XYDiagram)chart.Diagram).SecondaryAxesY[0];

// 차트를 컨트롤에 추가
this.Controls.Add(chart);
