import bpy

# Cycles 엔진과 Freestyle 활성화
bpy.context.scene.render.engine = 'CYCLES'  # Cycles 엔진 설정
bpy.context.scene.view_layers["ViewLayer"].use_freestyle = True  # Freestyle 활성화

# Freestyle 라인 스타일 추가
if not bpy.data.linestyles:
    bpy.ops.scene.freestyle_lineset_add()  # 기본 Freestyle 라인 스타일이 없을 경우 새로 추가

# Freestyle 라인 스타일 설정
line_style = bpy.data.linestyles[0]
line_style.thickness = 2.0  # 선 두께 설정
line_style.use_thickness_absolute = True  # 두께를 절대값으로 설정하여 선이 일정한 두께를 유지

# SVG 파일 경로 설정
output_path = "C:/router_acr_middleware_text.svg"  # C 드라이브 루트에 저장

# 렌더링 수행 및 SVG로 내보내기
bpy.context.scene.render.filepath = output_path  # 저장 경로 지정
bpy.context.scene.render.image_settings.file_format = 'SVG'  # 파일 형식을 SVG로 설정
bpy.ops.render.render(animation=False, write_still=True)  # 렌더링 및 파일 저장
