using DevExpress.XtraGrid.Views.Grid; // GridView 사용을 위해 추가

// GridControl의 도킹을 해제합니다.
gridControl1.Dock = DockStyle.None;

// GridView의 DataRowCount를 가져와서 높이를 계산합니다.
GridView gridView = gridControl1.MainView as GridView;
int rowCount = gridView.DataRowCount;
int rowHeight = gridView.RowHeight;
int headerHeight = gridView.ViewRect.Height - gridView.DataRowCount * gridView.RowHeight;
int totalHeight = headerHeight + rowCount * rowHeight;

// GridControl의 높이를 설정합니다.
gridControl1.Height = totalHeight;
