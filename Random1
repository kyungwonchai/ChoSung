using System;
using DevExpress.Xpf.Grid;

namespace GridColumnEditLog
{
    public partial class MainWindow : Window
    {
        public MainWindow()
        {
            InitializeComponent();
            
            // GridControl의 ColumnView에 이벤트 핸들러 등록
            gridView.ShownEditor += GridView_ShownEditor;
        }

        private void GridView_ShownEditor(object sender, EditorEventArgs e)
        {
            // 편집이 시작되면 로그를 출력
            Console.WriteLine("GridColumn 편집이 시작되었습니다.");
            
            // 여기서부터 원하는 작업을 수행할 수 있습니다.
            // 예를 들어, 현재 편집 중인 행 및 열 정보를 가져오거나, 특정 조건을 체크하는 등의 작업을 할 수 있습니다.
        }
    }
}
