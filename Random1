using DevExpress.XtraEditors;
using DevExpress.XtraEditors.Controls;
using DevExpress.XtraEditors.Drawing;
using DevExpress.XtraEditors.ViewInfo;
using System.Drawing;
using System.Windows.Forms;

private void radioGroup1_CustomDrawItem(object sender, CustomDrawItemEventArgs e)
{
    RadioGroup radioGroup = (RadioGroup)sender;

    if (e.State == DrawItemState.Selected)
    {
        // 선택된 항목에 대한 커스텀 스타일 적용
        e.Appearance.BackColor = Color.Yellow; // 선택된 옵션의 배경색을 노란색으로 설정
        e.Appearance.ForeColor = Color.Red; // 선택된 옵션의 글자색을 빨간색으로 설정
    }
    else
    {
        // 선택되지 않은 항목에 대한 기본 스타일 적용
        e.Appearance.Reset();
    }

    // 항목 텍스트 그리기
    ButtonEditViewInfo viewInfo = (ButtonEditViewInfo)radioGroup.GetViewInfo();
    Rectangle itemRect = viewInfo.Items[e.Index].Bounds;
    itemRect.Offset(e.Bounds.Location);
    e.Cache.DrawText(e.Cache.Graphics, e.Item.ToString(), itemRect, e.Appearance);
}
