    일:

csharp

using System;
using System.Windows.Forms;

public partial class NewWindowForm : Form
{
    public NewWindowForm()
    {
        InitializeComponent();
    }

    // 새로운 윈도우에 UserControlA를 추가하여 보여주는 메서드
    public void ShowUserControlA()
    {
        UserControlA userControlA = new UserControlA();
        userControlA.Dock = DockStyle.Fill;
        this.Controls.Add(userControlA);
    }
}

    MainForm.cs 파일:

csharp

using System;
using System.Windows.Forms;

public partial class MainForm : Form
{
    public MainForm()
    {
        InitializeComponent();
    }

    // 버튼 클릭 이벤트 핸들러
    private void btnShowNewWindow_Click(object sender, EventArgs e)
    {
        NewWindowForm newWindowForm = new NewWindowForm();
        newWindowForm.Text = "새 윈도우 제목"; // 새 윈도우의 타이틀 설정
        newWindowForm.ShowUserControlA(); // 새 윈도우에 UserControlA 추가하여 보여주기
        newWindowForm.Show(); // 새 윈도우 보여주기