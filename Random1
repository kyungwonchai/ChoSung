DECLARE @tableList NVARCHAR(MAX)
DECLARE @sqlQuery NVARCHAR(MAX)

-- 테이블 이름을 변수에 저장합니다.
SET @tableList = 'LOG_01_20230802,LOG_01_20230803,LOG_01_20230805,LOG_01_20230807'

-- 동적 쿼리를 생성합니다.
SET @sqlQuery = ''

SELECT @sqlQuery = @sqlQuery + 'SELECT * FROM ' + TableName + ' UNION '
FROM STRING_SPLIT(@tableList, ',')

-- 맨 마지막에 추가된 'UNION'을 제거합니다.
SET @sqlQuery = LEFT(@sqlQuery, LEN(@sqlQuery) - 6)

-- 동적 쿼리를 실행합니다.
EXEC sp_executesql @sqlQuery
