public partial class MainWindow : Window
{
    public MainWindow()
    {
        InitializeComponent();
        
        // 1. DataContext로부터 MainViewModel을 가져옵니다.
        MainViewModel viewModel = this.DataContext as MainViewModel;
        
        if (viewModel != null)
        {
            // 2. MainViewModel의 이벤트에 추가로 구독 (예: OnLogAdded)
            viewModel.OnLogAdded += ViewModel_OnLogAdded;

            // 3. 필요 시 ViewModel의 메서드 호출
            viewModel.SomeMethod();
        }
    }

    // 4. 이벤트 핸들러 메서드
    private void ViewModel_OnLogAdded(object sender, EventArgs e)
    {
        // 로그가 추가되었을 때 처리할 코드
        Console.WriteLine("로그가 추가되었습니다.");
    }
}
