using System;
using System.Drawing;
using DevExpress.XtraDiagram;

private void Button_Click(object sender, EventArgs e)
{
    string imagePath = @"c:\a\1.jpg";

    if(System.IO.File.Exists(imagePath))
    {
        var image = Image.FromFile(imagePath);
    
        var diagramImage = new DevExpress.XtraDiagram.DiagramImageItem()
        {
            Image = image,
            Position = new DevExpress.Diagram.Core.DiagramPoint(10, 10),
        };

        this.diagramControl1.Items.Add(diagramImage);
    }
    else
    {
        MessageBox.Show("Image not found at the specified path");
    }
}
