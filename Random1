Sub UpdateWeeklyPlanAndCopyColumns()
    Dim fd As FileDialog
    Dim filePath As String
    Dim wb As Workbook
    Dim ws As Worksheet, tempSheet As Worksheet
    Dim cell As Range
    Dim startDate As Date
    Dim endDate As Date
    Dim cellDate As Date
    Dim dateStr As String
    Dim dateParts() As String
    Dim bracketPos As Integer
    Dim destCol As Integer

    ' 파일 선택 대화상자 생성
    Set fd = Application.FileDialog(msoFileDialogFilePicker)
    
    ' 파일 선택 대화상자 표시
    If fd.Show = -1 Then
        filePath = fd.SelectedItems(1)
    Else
        Exit Sub
    End If
    
    ' 선택된 파일 열기
    Set wb = Workbooks.Open(filePath)
    Set ws = wb.Sheets("당주계획")

    ' 기존 '임시1' 시트가 있으면 삭제
    On Error Resume Next
    Application.DisplayAlerts = False
    wb.Sheets("임시1").Delete
    Application.DisplayAlerts = True
    On Error GoTo 0

    ' 새 시트 '임시1' 생성
    Set tempSheet = Sheets.Add(After:=wb.Sheets(wb.Sheets.Count))
    tempSheet.Name = "임시1"
    destCol = 3 ' C열부터 시작

    ' 이번 주 시작일과 종료일 계산
    startDate = Date - Weekday(Date, vbMonday) + 1
    endDate = startDate + 6

    ' 2행의 모든 셀을 순회
    For Each cell In ws.Rows(2).Cells
        dateStr = cell.Value

        ' '/' 또는 '('가 포함된 셀만 처리
        If InStr(dateStr, "/") > 0 And InStr(dateStr, "(") > 0 Then
            ' 괄호 위치 찾기
            bracketPos = InStr(dateStr, "(")
            If bracketPos > 0 Then
                ' 날짜 부분만 추출
                dateStr = Left(dateStr, bracketPos - 1)
                dateParts = Split(dateStr, "/")
                
                If UBound(dateParts) = 1 Then
                    ' 날짜 객체 생성
                    cellDate = DateSerial(Year(Date), dateParts(0), dateParts(1))
                    
                    ' 셀의 날짜가 이번 주에 해당하는지 확인
                    If cellDate >= startDate And cellDate <= endDate Then
                        ' 배경색을 노랑색으로 변경
                        ws.Columns(cell.Column).Interior.Color = vbYellow
                        ' 해당 컬럼과 다음 컬럼을 '임시1' 시트에 복사
                        ws.Columns(cell.Column).Copy Destination:=tempSheet.Columns(destCol)
                        ws.Columns(cell.Column + 1).Copy Destination:=tempSheet.Columns(destCol + 1)
                        destCol = destCol + 3 ' 다음 목적지 열 설정 (요일마다 열 하나 띄움)
                    End If
                End If
            End If
        End If
    Next cell

    ' 파일을 닫지 않고 열어둔 상태로 둠
End Sub
