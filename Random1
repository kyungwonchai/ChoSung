from flask import Flask, request, abort

app = Flask(__name__)

# 허용된 IP 주소 리스트
allowed_ips = ['10.244.44.44']

@app.before_request
def restrict_ips():
    client_ip = request.remote_addr
    if client_ip not in allowed_ips:
        abort(403)  # Forbidden 에러 반환

@app.route('/')
def index():
    return 'Hello, world!'

if __name__ == '__main__':
    app.run(port=5000)
