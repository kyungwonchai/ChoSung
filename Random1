private void gridView1_MouseDown(object sender, MouseEventArgs e)
{
    GridView view = sender as GridView;
    if (view == null) return;

    // 마우스 오른쪽 버튼 클릭 시에만 동작하도록 조건 추가
    if (e.Button != MouseButtons.Right) return;

    // 클릭한 셀 가져오기
    GridHitInfo hitInfo = view.CalcHitInfo(e.Location);
    if (!hitInfo.InRowCell) return;

    // 클릭한 셀의 행 가져오기
    int rowHandle = hitInfo.RowHandle;
    if (rowHandle < 0) return;

    // 컬럼 이름과 과제명 컬럼의 값을 가져오기
    string columnName = hitInfo.Column.FieldName;
    object columnNameValue = view.GetRowCellValue(rowHandle, "ColumnName"); // "ColumnName"은 실제 컬럼 이름으로 변경해야 합니다.
    object assignmentValue = view.GetRowCellValue(rowHandle, "AssignmentName"); // "AssignmentName"은 실제 컬럼 이름으로 변경해야 합니다.

    // 가져온 값 사용하기
    MessageBox.Show($"컬럼 이름: {columnName}\nColumnName 컬럼 값: {columnNameValue}\nAssignmentName 컬럼 값: {assignmentValue}");
}
