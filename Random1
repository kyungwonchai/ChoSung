using System;
using System.Collections.Generic;
using System.Drawing;
using System.IO;
using System.Runtime.Serialization.Formatters.Binary;
using System.Windows.Forms;

public partial class MainForm : Form
{
    private string folderPath = @"C:\agent1";
    private PrintDocument printDocument = new PrintDocument();
    private PrintDialog printDialog = new PrintDialog();

    public MainForm()
    {
        InitializeComponent();

        // 이벤트 핸들러 등록
        printDocument.PrintPage += PrintDocument_PrintPage;

        // 폴더가 없으면 폴더를 생성
        if (!Directory.Exists(folderPath))
        {
            Directory.CreateDirectory(folderPath);
        }

        // 저장된 파일들을 ListBox에 표시
        RefreshListBox();
    }

    private void RefreshListBox()
    {
        // 폴더에 있는 .dat 파일들을 가져와서 ListBox에 표시
        listBox1.Items.Clear();
        string[] files = Directory.GetFiles(folderPath, "*.dat");
        listBox1.Items.AddRange(files);
    }

    private void btnSavePrintSetting_Click(object sender, EventArgs e)
    {
        try
        {
            // PrintDialog의 PrinterSettings와 TextBox1의 값을 함께 직렬화하여 파일에 저장
            using (FileStream fs = new FileStream(printSettingFilePath, FileMode.Create))
            {
                BinaryFormatter formatter = new BinaryFormatter();

                // PrinterSettings와 TextBox1의 값을 함께 저장하기 위해 Tuple로 묶어서 직렬화
                var dataToSerialize = new Tuple<PrinterSettings, int>(printDialog.PrinterSettings, int.Parse(txtBox1.Text));
                formatter.Serialize(fs, dataToSerialize);
            }
            MessageBox.Show("Print settings saved successfully.", "Success", MessageBoxButtons.OK, MessageBoxIcon.Information);

            // 저장 후 파일 목록을 업데이트
            RefreshListBox();
        }
        catch (Exception ex)
        {
            MessageBox.Show("Error saving print settings: " + ex.Message, "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
        }
    }

    private void btnApplyPrintSetting_Click(object sender, EventArgs e)
    {
        try
        {
            if (File.Exists(printSettingFilePath))
            {
                // 파일에서 직렬화된 데이터를 역직렬화하여 PrinterSettings와 TextBox1의 값을 복원
                using (FileStream fs = new FileStream(printSettingFilePath, FileMode.Open))
                {
                    BinaryFormatter formatter = new BinaryFormatter();
                    var dataToDeserialize = (Tuple<PrinterSettings, int>)formatter.Deserialize(fs);

                    printDialog.PrinterSettings = dataToDeserialize.Item1;
                    txtBox1.Text = dataToDeserialize.Item2.ToString();
                }
                MessageBox.Show("Print settings applied successfully.", "Success", MessageBoxButtons.OK, MessageBoxIcon.Information);
            }
            else
            {
                MessageBox.Show("Print settings file does not exist.", "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }
        catch (Exception ex)
        {
            MessageBox.Show("Error loading print settings: " + ex.Message, "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
        }
    }

    private void btnPrint_Click(object sender, EventArgs e)
    {
        // PrintDialog를 통해 사용자가 설정한 인쇄 설정 가져오기
        if (printDialog.ShowDialog() == DialogResult.OK)
        {
            // PrintDocument에 인쇄 설정 적용
            printDocument.PrinterSettings = printDialog.PrinterSettings;

            // 다른 작업이 필요하다면 여기에 추가
            // ...

            // 실제 인쇄 수행
            printDocument.Print();
        }
    }

    private void PrintDocument_PrintPage(object sender, PrintPageEventArgs e)
    {
        // 실제 인쇄할 내용을 여기에 구현합니다.
        string contentToPrint = "Sample Print Content";
        Font printFont = new Font("Arial", 12);
        e.Graphics.DrawString(contentToPrint, printFont, Brushes.Black, 10, 10);
    }

    private void listBox1_DoubleClick(object sender, EventArgs e)
    {
        // ListBox에서 선택한 파일을 읽어와서 설정을 적용
        string selectedFile = listBox1.SelectedItem as string;
        if (selectedFile != null && File.Exists(selectedFile))
        {
            try
            {
                using (FileStream fs = new FileStream(selectedFile, FileMode.Open))
                {
                    BinaryFormatter formatter = new BinaryFormatter();
                    var dataToDeserialize = (Tuple<PrinterSettings, int>)formatter.Deserialize(fs);

                    printDialog.PrinterSettings = dataToDeserialize.Item1;
                    txtBox1.Text = dataToDeserialize.Item2.ToString();
                }
                MessageBox.Show("Print settings loaded from file.", "Success", MessageBoxButtons.OK, MessageBoxIcon.Information);
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error loading print settings from file: " + ex.Message, "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }
    }
}
