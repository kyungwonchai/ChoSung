// 데이터 모델에 새로운 프로퍼티 추가
public class YourDataModel
{
    public int Key1 { get; set; }
    public string OtherProperty { get; set; }
    public Brush RowColor { get; set; } = Brushes.White;
}

// XAML에서 행 스타일을 바인딩
<!-- XAML 코드 -->
<dxg:GridControl Name="gridControl1">
    <dxg:GridControl.View>
        <dxg:TableView Name="tableView">
            <dxg:TableView.RowStyle>
                <Style TargetType="dxg:RowControl">
                    <Setter Property="Background" Value="{Binding Row.RowData.Data.RowColor}" />
                </Style>
            </dxg:TableView.RowStyle>
        </dxg:TableView>
    </dxg:GridControl.View>
</dxg:GridControl>
