using System;
using System.Collections.Generic;
using System.IO;

namespace FolderTraversalExample
{
    public class FolderTraversal
    {
        public static List<string> GetAllFiles(string folderPath)
        {
            List<string> files = new List<string>();

            // 현재 폴더의 파일 가져오기
            string[] currentFiles = Directory.GetFiles(folderPath);
            files.AddRange(currentFiles);

            // 현재 폴더의 하위 폴더 가져오기
            string[] subDirectories = Directory.GetDirectories(folderPath);

            // 각 하위 폴더에서 파일 가져오기 (재귀 호출)
            foreach (string subDirectory in subDirectories)
            {
                List<string> subFiles = GetAllFiles(subDirectory);
                files.AddRange(subFiles);
            }

            return files;
        }
    }

    public class Program
    {
        public static void Main(string[] args)
        {
            string folderPath = @"C:\YourFolderPath";
            List<string> allFiles = FolderTraversal.GetAllFiles(folderPath);

            foreach (string file in allFiles)
            {
                Console.WriteLine(file);
            }
        }
    }
}
