private void gridView1_RowCellStyle(object sender, DevExpress.XtraGrid.Views.Grid.RowCellStyleEventArgs e)
{
    // "집계시간"이라는 컬럼의 인덱스 또는 필드명 확인
    int columnIndex = e.Column.VisibleIndex; // 또는 e.Column.FieldName을 사용
    if (columnIndex == 집계시간_컬럼_인덱스)
    {
        // 현재 행의 "집계시간" 값 가져오기
        int aggregateTime = Convert.ToInt32(gridView1.GetRowCellValue(e.RowHandle, "집계시간"));

        // 집계시간 값이 5 이상인 경우 행의 바탕색을 진한 마젠타로 설정
        if (aggregateTime >= 5)
        {
            e.Appearance.BackColor = Color.Magenta;
        }
    }
}
