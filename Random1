private void gridControl1_Loaded(object sender, RoutedEventArgs e)
{
    var tableView = gridControl1.View as TableView;

    if (tableView != null)
    {
        tableView.RowStyle += (s, eventArgs) =>
        {
            if (eventArgs.Row != null)
            {
                var row = eventArgs.Row as YourRowType; // YourRowType은 실제 row의 데이터 타입입니다.
                if (row != null)
                {
                    var key1Value = row.Key1;  // 여기서 Key1은 해당 row의 Key1 컬럼 값을 가져옵니다.

                    if (lista.Contains(key1Value))
                    {
                        eventArgs.Appearance.Background = new SolidColorBrush(Colors.Yellow);
                        eventArgs.Appearance.Foreground = new SolidColorBrush(Colors.Black);
                    }
                }
            }
        };
    }
}
