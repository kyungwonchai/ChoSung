import bpy
import os

# íŒŒì¼ ê²½ë¡œ ì„¤ì •
input_file_path = r"C:\agent\1234.txt"
output_folder = r"C:\agent\111"

# ì¶œë ¥ í´ë”ê°€ ì—†ìœ¼ë©´ ìƒì„±
if not os.path.exists(output_folder):
    os.makedirs(output_folder)

# í…ìŠ¤íŠ¸ ì˜¤ë¸Œì íŠ¸ ê°€ì ¸ì˜¤ê¸°
text_obj = bpy.data.objects.get("Text.001")
if text_obj is None:
    print("ì˜¤ë¥˜: 'Text.001' ì˜¤ë¸Œì íŠ¸ë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.")
    exit()

# í…ìŠ¤íŠ¸ íŒŒì¼ ì½ê¸°
with open(input_file_path, "r", encoding="utf-8") as file:
    lines = file.readlines()

# í•œ ì¤„ì”© ì²˜ë¦¬
for line in lines:
    line = line.strip()  # ì¤„ë°”ê¿ˆ ì œê±°
    if not line:
        continue  # ë¹ˆ ì¤„ì€ ê±´ë„ˆë›°ê¸°

    # í…ìŠ¤íŠ¸ ì˜¤ë¸Œì íŠ¸ì˜ ë‚´ìš© ë³€ê²½
    text_obj.data.body = line

    # ì¶œë ¥ íŒŒì¼ ì´ë¦„ ì„¤ì •
    output_file = os.path.join(output_folder, f"P_{line}.png")

    # ë Œë” ì¶œë ¥ ê²½ë¡œ ì„¤ì •
    bpy.context.scene.render.filepath = output_file

    # ë Œë”ë§ ì‹¤í–‰
    bpy.ops.render.render(write_still=True)

print("ëª¨ë“  ë Œë”ë§ì´ ì™„ë£Œë˜ì—ˆìŠµë‹ˆë‹¤.")
