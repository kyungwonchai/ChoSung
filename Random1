using System;
using System.Threading;
using System.Threading.Tasks;

class Program
{
    private Timer _timer;
    private DateTime _nextExecutionTime;

    public Program()
    {
        _nextExecutionTime = DateTime.Now.AddMinutes(10);
        _timer = new Timer(async state => await OnTimedEvent(), null, TimeSpan.Zero, TimeSpan.FromMinutes(10));
    }

    private async Task OnTimedEvent()
    {
        Console.WriteLine($"í•¨ìˆ˜ ì‹¤í–‰ë¨: {DateTime.Now}");
        _nextExecutionTime = DateTime.Now.AddMinutes(10);
        await ExecuteFunction();
    }

    private async Task ExecuteFunction()
    {
        Console.WriteLine("10ë¶„ë§ˆë‹¤ ì‹¤í–‰ë˜ëŠ” async í•¨ìˆ˜ ì‹œì‘...");
        await Task.Delay(2000);
        Console.WriteLine("ë¹„ë™ê¸° ì‘ì—… ì™„ë£Œ!");
    }

    public TimeSpan GetRemainingTime()
    {
        return _nextExecutionTime - DateTime.Now;
    }

    static void Main()
    {
        Program program = new Program();

        while (true)
        {
            Console.WriteLine($"ë‚¨ì€ ì‹œê°„: {program.GetRemainingTime().TotalSeconds:F0} ì´ˆ");
            Task.Delay(1000).Wait();
        }
    }
}
