<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl>
            <TabControl.Resources>
                <!-- Tab Header 스타일 -->
                <Style TargetType="TabItem">
                    <Setter Property="Height" Value="40"/> <!-- 탭 헤더 높이 -->
                    <Setter Property="FontWeight" Value="Bold"/> <!-- 글자 굵게 -->
                    <Setter Property="FontSize" Value="16"/> <!-- 글자 크기 -->
                    <Setter Property="Margin" Value="5"/> <!-- 탭 간 간격 -->
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" Background="{TemplateBinding Background}" 
                                        CornerRadius="10" Padding="10" BorderThickness="0">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="LightGray"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                    <!-- DataTrigger로 조건에 따른 배경 그라데이션 스타일링 적용 -->
                    <Style.Triggers>
                        <!-- "file"이 포함된 경우 주황/노랑 그라데이션 -->
                        <DataTrigger Binding="{Binding Header}" Value="file">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="Orange" Offset="0.0"/>
                                        <GradientStop Color="Yellow" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>

                        <!-- "file"이 포함되지 않은 경우 회색/푸른색 그라데이션 -->
                        <DataTrigger Binding="{Binding Header}" Value="{x:Null}">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="LightGray" Offset="0.0"/>
                                        <GradientStop Color="LightBlue" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TabControl.Resources>

            <!-- 탭 항목들 -->
            <TabItem Header="file1">
                <TextBlock Text="Content for file tab" />
            </TabItem>
            <TabItem Header="Tab 2">
                <TextBlock Text="Content for Tab 2" />
            </TabItem>
            <TabItem Header="file3">
                <TextBlock Text="Content for file tab 3" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
