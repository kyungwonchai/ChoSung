<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <dxdo:DockLayoutManager x:Name="dockLayoutManager"
                                DockItemEndDocking="dockLayoutManager_DockItemEndDocking"
                                DockItemEndFloating="dockLayoutManager_DockItemEndFloating">
            <dxdo:LayoutGroup>
                <!-- 도킹 패널들 -->
            </dxdo:LayoutGroup>
        </dxdo:DockLayoutManager>
        <!-- 추가적인 UI 컴포넌트 (예: 버튼) -->
    </Grid>
</Window>
Code-Behind:

csharp
Copy code
public partial class MainWindow : Window
{
    private HashSet<DocumentPanel> panelSet = new HashSet<DocumentPanel>();

    public MainWindow()
    {
        InitializeComponent();
    }

    private void dockLayoutManager_DockItemEndDocking(object sender, DevExpress.Xpf.Docking.Base.ItemEventArgs e)
    {
        var panel = e.Item as DocumentPanel;
        if (panel != null)
        {
            panelSet.Add(panel); // 패널 추가
        }
    }

    private void dockLayoutManager_DockItemEndFloating(object sender, DevExpress.Xpf.Docking.Base.ItemEventArgs e)
    {
        var panel = e.Item as DocumentPanel;
        if (panel != null)
        {
            panelSet.Add(panel); // 패널 추가
        }
    }

    public void RemovePanel(string caption)
    {
        var panelToRemove = panelSet.FirstOrDefault(p => p.Caption == caption);
        if (panelToRemove != null)
        {
            panelSet.Remove(panelToRemove); // 패널 제거
        }
    }

    public void ProcessStoredPanels()
    {
        foreach(var panel in panelSet)
        {
            // 패널을 처리 (예: 로그 출력)
            Console.WriteLine("패널 처리: " + panel.Caption);
            // 필요한 추가 작업 수행
        }
    }
}