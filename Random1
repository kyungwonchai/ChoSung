public partial class F2Form : Form
{
    TextBox textBox;
    Button button;

    public F2Form()
    {
        InitializeComponent();
        this.Width = 200; // 폭과 높이를 적절히 조정하세요.
        this.Height = 100;
        this.TopMost = true;
        this.Opacity = 0.5;
        this.FormBorderStyle = FormBorderStyle.None;

        textBox = new TextBox();
        textBox.Width = 150;
        textBox.Location = new Point(10, 10);
        this.Controls.Add(textBox);

        button = new Button();
        button.Text = "입력1";
        button.Location = new Point(10, 40);
        button.Click += Button_Click;
        this.Controls.Add(button);
    }

    private void Button_Click(object sender, EventArgs e)
    {
        // Main폼의 textBox1에서 텍스트를 가져옵니다.
        string content = (this.Owner as MainForm).textBox1.Text;

        // 텍스트를 클립보드에 복사합니다.
        Clipboard.SetText(content);

        // 텍스트 박스의 위치로 커서를 옮깁니다.
        textBox.Focus();

        // 클립보드의 내용을 붙여넣고 엔터 키를 누릅니다.
        SendKeys.SendWait("^v");
        SendKeys.SendWait("{ENTER}");
    }
}
