GridView gridView1 = gridControl1.MainView as GridView;

// 검색일시 컬럼의 형식 지정하기
GridColumn dateTimeColumn = gridView1.Columns["SearchDateTime"]; // 컬럼 이름에 맞게 변경해야 함
dateTimeColumn.DisplayFormat.FormatType = FormatType.DateTime;
dateTimeColumn.DisplayFormat.FormatString = "yyyy-MM-dd HH:mm:ss";

// 유사도 컬럼의 형식 지정하기
GridColumn similarityColumn = gridView1.Columns["Similarity"]; // 컬럼 이름에 맞게 변경해야 함
similarityColumn.DisplayFormat.FormatType = FormatType.Numeric;
similarityColumn.DisplayFormat.FormatString = "N1";
