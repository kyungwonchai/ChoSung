using DevExpress.Utils;
using DevExpress.XtraEditors;
using DevExpress.XtraEditors.Controls;
using DevExpress.XtraEditors.ViewInfo;
using System.Drawing;
using System.Windows.Forms;

namespace YourNamespace
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();

            // Step 1: Create a custom theme and set the header colors
            CustomLookAndFeel customLookAndFeel = new CustomLookAndFeel();
            customLookAndFeel.SkinName = "DevExpress Style"; // You can change this to your preferred DevExpress skin
            customLookAndFeel.PaintStyleName = "Skin";
            customLookAndFeel.SetSkinStyle("DevExpress Style");
            customLookAndFeel.SkinMaskColor = Color.Blue; // Set the header color to blue
            customLookAndFeel.SkinMaskColor2 = Color.Yellow; // Set the header text color to yellow
            xtraTabControl1.LookAndFeel.Assign(customLookAndFeel);

            // Step 2: Attach the TabHeaderClick event to call FunctionA
            xtraTabControl1.TabHeaderClick += XtraTabControl1_TabHeaderClick;
        }

        private void XtraTabControl1_TabHeaderClick(object sender, TabHeaderClickEventArgs e)
        {
            // FunctionA will be called when a tab header is clicked
            FunctionA();
        }

        private void FunctionA()
        {
            // Implement your logic for FunctionA here
            // This function will be executed when a tab header is clicked
            MessageBox.Show("Tab Header Clicked! FunctionA is executed!");
        }
    }

    // CustomLookAndFeel class to customize the tab header appearance
    public class CustomLookAndFeel : DevExpress.LookAndFeel.DefaultLookAndFeel
    {
        protected override void UpdateColors()
        {
            base.UpdateColors();
            SkinElement element = CommonSkins.GetSkin(UserLookAndFeel.Default.ActiveLookAndFeel)[CommonSkins.SkinTabHeader];
            element.Color.BackColor = SkinMaskColor;
            element.Color.ForeColor = SkinMaskColor2;
        }

        public Color SkinMaskColor { get; set; } = Color.Blue;
        public Color SkinMaskColor2 { get; set; } = Color.Yellow;
    }
}
