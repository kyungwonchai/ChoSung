using System;
using System.Windows.Forms;

public class LanguageForm : Form
{
    Label languageLabel;

    public LanguageForm()
    {
        languageLabel = new Label();
        languageLabel.Text = "현재 언어: ";
        languageLabel.Location = new Point(10, 10);
        this.Controls.Add(languageLabel);

        // Timer를 사용해서 일정 간격으로 현재 언어를 확인
        Timer timer = new Timer();
        timer.Interval = 1000; // 1초마다
        timer.Tick += Timer_Tick;
        timer.Start();
    }

    private void Timer_Tick(object sender, EventArgs e)
    {
        InputLanguage currentLanguage = InputLanguage.CurrentInputLanguage;
        if (currentLanguage.Culture.TwoLetterISOLanguageName == "ko")
        {
            languageLabel.Text = "현재 언어: 한글";
        }
        else if (currentLanguage.Culture.TwoLetterISOLanguageName == "en")
        {
            languageLabel.Text = "현재 언어: 영어";
        }
        else
        {
            languageLabel.Text = "현재 언어: 기타";
        }
    }
}
