using DevExpress.XtraRichEdit;
using System;
using System.Drawing;
using System.Windows.Forms;

// ...

private void PasteImageToRichTextEdit(RichTextEdit richTextEdit)
{
    if (Clipboard.ContainsImage())
    {
        Image clipboardImage = Clipboard.GetImage();

        // 클립보드 이미지를 RichTextEdit 컨트롤에 붙여넣기
        richTextEdit.Document.Images.Append(clipboardImage);

        // 이미지 크기 조정 (선택 사항)
        DocumentImage insertedImage = richTextEdit.Document.Images.Get(richTextEdit.Document.Images.Count - 1);
        Size imageSize = insertedImage.Size;
        double scaleFactor = 1.0;
        if (imageSize.Width > richTextEdit.Width)
            scaleFactor = (double)richTextEdit.Width / imageSize.Width;
        else if (imageSize.Height > richTextEdit.Height)
            scaleFactor = (double)richTextEdit.Height / imageSize.Height;
        if (scaleFactor < 1.0)
        {
            insertedImage.ScaleX = (float)scaleFactor;
            insertedImage.ScaleY = (float)scaleFactor;
        }
    }
}

// 사용 예시
private void btnPasteImage_Click(object sender, EventArgs e)
{
    PasteImageToRichTextEdit(richTextEdit1);
}
