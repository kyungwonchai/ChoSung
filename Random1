using System;
using System.Globalization;
using System.Windows;
using System.Windows.Data;

namespace YourNamespace
{
    public partial class MainWindow : Window
    {
        public MainWindow()
        {
            InitializeComponent();
            
            // Assuming otherWindow is the other window you want to bind to
            Window otherWindow = new Window();
            otherWindow.Show();

            Binding heightBinding = new Binding("Height");
            heightBinding.Source = otherWindow;
            heightBinding.Converter = new HeightConverter();

            grid1.SetBinding(Grid.HeightProperty, heightBinding);
        }
    }

    public class HeightConverter : IValueConverter
    {
        public object Convert(object value, Type targetType, object parameter, CultureInfo culture)
        {
            double originalHeight = (double)value;
            return originalHeight - 50;
        }

        public object ConvertBack(object value, Type targetType, object parameter, CultureInfo culture)
        {
            throw new NotImplementedException();
        }
    }
}
