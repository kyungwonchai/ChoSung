using DevExpress.XtraPivotGrid;
using System.Drawing;

// PivotGridControl 생성 및 설정
PivotGridControl pivotGridControl1 = new PivotGridControl();
// PivotGridControl에 필드 및 데이터 설정
// ...

// 연결여부에 따라 셀 스타일 설정
PivotGridField connectivityField = pivotGridControl1.Fields["Connectivity"];
connectivityField.CellStyle = new PivotCellStyle()
{
    Condition = FormatCondition.Equal,
    ConditionValue = 1,
    BackColor = Color.Yellow
};

// PivotGridControl 출력
pivotGridControl1.RefreshData();
