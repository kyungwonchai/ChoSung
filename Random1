import bpy

# 조명을 추가
bpy.ops.object.light_add(type='POINT', location=(0, 0, 2))
light = bpy.context.object

# 애니메이션 설정
bpy.context.scene.frame_end = 50  # 애니메이션의 마지막 프레임

# 프레임 1에서 조명의 초기 위치 설정
bpy.context.scene.frame_set(1)
light.location = (0, 0, 2)
light.keyframe_insert(data_path="location", frame=1)

# 프레임 25에서 조명의 중간 위치 설정
bpy.context.scene.frame_set(25)
light.location = (1, 1, 3)
light.keyframe_insert(data_path="location", frame=25)

# 프레임 50에서 조명의 마지막 위치 설정
bpy.context.scene.frame_set(50)
light.location = (0, 0, 2)
light.keyframe_insert(data_path="location", frame=50)
