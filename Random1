using DevExpress.Xpf.Grid;

// GridControl의 뷰를 BandedGridView로 캐스팅
var bandedView = gridControl.View as BandedGridView;

if (bandedView != null)
{
    // Bands 컬렉션을 순회합니다.
    foreach (var band in bandedView.Bands)
    {
        // 여기에서 원하는 조건을 확인합니다. 예를 들어, Band의 Header가 "MyBandHeader"인 경우
        if (band.Header?.ToString() == "MyBandHeader")
        {
            // Fixed 속성을 Left로 설정
            band.Fixed = FixedStyle.Left;
            break; // 조건에 맞는 첫 번째 Band를 찾으면 반복을 중단
        }
    }
}
