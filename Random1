DECLARE @sqlQuery NVARCHAR(MAX) = N''

SELECT @sqlQuery = @sqlQuery + N'SELECT * FROM ' + QUOTENAME(TABLE_NAME) + N' UNION '
FROM DB1.INFORMATION_SCHEMA.TABLES
WHERE TABLE_TYPE = 'BASE TABLE' AND TABLE_NAME LIKE 'LOGG_%'

-- Remove the last 'UNION' from the dynamic query
SET @sqlQuery = LEFT(@sqlQuery, LEN(@sqlQuery) - 6)

-- Execute the dynamic query
EXEC sp_executesql @sqlQuery
