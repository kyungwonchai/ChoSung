// 차트 축 설정
DevExpress.XtraCharts.XYDiagram diagram = (DevExpress.XtraCharts.XYDiagram)chart.Diagram;
DevExpress.XtraCharts.DateTimeScaleOptions scaleOptions = (DevExpress.XtraCharts.DateTimeScaleOptions)diagram.AxisX.DateTimeScaleOptions;
scaleOptions.MeasureUnit = DevExpress.XtraCharts.DateTimeMeasureUnit.Hour;
scaleOptions.GridAlignment = DevExpress.XtraCharts.DateTimeGridAlignment.Hour;
diagram.AxisX.WholeRange.AutoSideMargins = false;

// 시간 값은 날짜 값 없이 설정할 수 없으므로, 임의의 날짜를 선택하고 시간만 조절
DateTime today = DateTime.Today;
diagram.AxisX.WholeRange.SetMinMaxValues(today, today.AddHours(24));

// 축 레이블 포맷 설정
diagram.AxisX.Label.TextPattern = "{A:HH:mm}";
