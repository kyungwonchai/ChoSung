string connStr = "데이터베이스 연결 문자열";
using (SqlConnection conn = new SqlConnection(connStr))
{
    conn.Open();

    using (SqlCommand cmd = new SqlCommand("SELECT Column1, Column2, Column3 FROM YourTable WHERE 조건", conn))
    {
        using (SqlDataReader reader = cmd.ExecuteReader())
        {
            if (reader.Read())
            {
                string column1Value = reader.GetString(0); // 첫 번째 컬럼 값
                int column2Value = reader.GetInt32(1); // 두 번째 컬럼 값
                double column3Value = reader.GetDouble(2); // 세 번째 컬럼 값

                // 값을 사용하는 코드
            }
        }
    }
}
