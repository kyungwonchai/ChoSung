using System;
using System.Windows;
using System.Windows.Media;
using DevExpress.Xpf.Grid;

namespace LockRowAndChangeColor
{
    public partial class MainWindow : Window
    {
        public MainWindow()
        {
            InitializeComponent();
        }

        private void LockAndChangeColor(int keyValue)
        {
            TableView tableView = gridControl1.View as TableView;
            if (tableView != null)
            {
                for (int rowHandle = 0; rowHandle < tableView.Grid.VisibleRowCount; rowHandle++)
                {
                    // "key1" 컬럼의 값을 가져옵니다.
                    object cellValue = tableView.Grid.GetCellValue(rowHandle, "key1");

                    // 가져온 값이 keyValue와 동일한지 검사합니다.
                    if (cellValue != null && (int)cellValue == keyValue)
                    {
                        // 이부분은 행을 잠그거나 배경색을 변경하는 코드로 채워야 합니다.
                        // 예를 들어, 다음과 같이 배경색을 변경할 수 있습니다.
                        // tableView.Grid.SetCellValue(rowHandle, "YourBackgroundColorColumn", new SolidColorBrush(Colors.Yellow));
                    }
                }
            }
        }

        private void Button_Click(object sender, RoutedEventArgs e)
        {
            LockAndChangeColor(511162);
        }
    }
}
