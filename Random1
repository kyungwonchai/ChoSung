public MainWindow()
{
    InitializeComponent();

    DataTable dataTable = GetDataFromDatabase();
    gridControl.ItemsSource = dataTable;

    // GridControl의 View를 TableView로 캐스팅
    var tableView = gridControl.View as DevExpress.Xpf.Grid.TableView;
    
    if (tableView != null)
    {
        // Line1 컬럼을 기준으로 정렬
        tableView.SortBy("Line1", DevExpress.Data.ColumnSortOrder.Ascending);
    }
}
