private void gridControl_CellValueChanging(object sender, DevExpress.Xpf.Grid.CellValueChangedEventArgs e) {
    if (e.Column.FieldName == "YourDateField") {  // 'YourDateField'는 해당 날짜 필드 이름으로 변경
        if (e.Value != null && e.Value is DateTime) {
            DateTime newValue = (DateTime)e.Value;
            if (newValue.Year < 2000) {
                // 연도가 2000년 이전이면 2024년으로 변경
                gridControl.SetCellValue(e.RowHandle, e.Column, new DateTime(2024, newValue.Month, newValue.Day));
            }
        }
    }
}
