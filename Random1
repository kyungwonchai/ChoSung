using System.IO;
using System.Diagnostics;

// ListBox의 내용을 텍스트 파일로 저장하는 메서드
public void SaveListBoxContent(ListBox listBox, string fileName)
{
    using (StreamWriter sw = new StreamWriter(fileName))
    {
        foreach (var item in listBox.Items)
        {
            sw.WriteLine(item);
        }
    }

    // 저장된 파일을 기본 텍스트 편집기로 연다
    Process.Start(fileName);
}

// 사용 예:
// listBox1의 내용을 "listbox1.txt"로 저장
SaveListBoxContent(listbox1, "listbox1.txt");

// listBox2의 내용을 "listbox2.txt